class 'EldarVehicleTactic' (VehicleTactic)

function EldarVehicleTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Eldar Vehicle Tactic")
end

-- Check if the vehicle should dance away in melee
function EldarVehicleTactic:CheckVehicleDance(sName)

	if (sName == "eldar_squad_grav_platform" or
		sName == "eldar_squad_grav_platform_brightlance" or
		sName == "eldar_squad_falcon_grav_tank" or
		sName == "eldar_squad_wave_serpent" or
		sName == "eldar_squad_vypers" or
		sName == "eldar_squad_vypers_serpent" or
		sName == "eldar_squad_jetbike" or
		sName == "eldar_squad_shroud_runner" or
		sName == "eldar_squad_war_walker" or
		sName == "eldar_squad_firestorm" or
		sName == "eldar_squad_wraithlord" or
		sName == "eldar_squad_warp_hunter" or
		sName == "eldar_squad_fire_prism" or
		sName == "eldar_squad_lynx" or
		sName == "eldar_squad_cobra" or
		sName == "eldar_squad_deathstalker" or
		sName == "eldar_squad_scorpion" or
		sName == "eldar_squad_storm_serpent" or
		sName == "eldar_squad_void_spinner" or
		sName == "eldar_squad_wraithknight" or
		sName == "eldar_squad_revenant_titan" or
		sName == "eldar_squad_phantom_titan") then
			return true
	elseif sName == "eldar_squad_yrrthilien_mournsong_jetbike" then
		if self.squad_ai:GetHealthPercentage() < 0.4 then
			return true
		end
	end
	return false
end