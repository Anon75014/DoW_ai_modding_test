class 'WraithTactic' (EldarInfantryTactic)

Wraith = {}

function WraithTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Wraith Blade and Guard Tactic")
end

function WraithTactic:InitAbilities()

	-- Init ability ID's
	if (Wraith.entanglement_id == nil) then
		Wraith.entanglement_id = cpu_manager.stats:GetAbilityID( "eldar_entanglement" )
	end
end

function WraithTactic:DoAbilities()

	-- Warlock entanglement
	if (self.squad_ai:CanDoAbility( Wraith.entanglement_id )) then
	
		local range = self.squad_ai:GetAbilityRange( Wraith.entanglement_id )
		local squad_pos = self.squad_ai:GetPosition()
		local target = nil
		
		melee = function( squad )
		
		 	local is_cc = false    
			if (squad:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
				is_cc = true   
			end
			return is_cc and squad:GetNumTroopers() >= 4
		end
		
		local target = cpu_manager:FindClosestEnemy( squad_pos, range, melee )
		
		if (target ~= nil) then
			self.squad_ai:DoSpecialAbilitySquad( Wraith.entanglement_id, target:GetSquad() )
		end
	end
	
	-- Call basic DoAbilities methods
	EldarInfantryTactic.DoAbilities(self)
end