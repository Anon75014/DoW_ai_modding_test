class 'DarkReaperKtgmTactic' (EldarInfantryTactic)

DarkReaperKtgm = {}

function DarkReaperKtgmTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Reaper Ktgm Tactic")
end

function DarkReaperKtgmTactic:InitAbilities()

	-- Init ability ID's
	if (DarkReaperKtgm.warshout_id == nil) then
		DarkReaperKtgm.warshout_id = cpu_manager.stats:GetAbilityID( "eldar_warshout" )
	end
end

function DarkReaperKtgmTactic:DoAbilities()

	-- Check if I can warshout
	Ability.DoAbilityArea( self.squad_ai, DarkReaperKtgm.warshout_id, Ability.Filters.CloseInfantryEnemy, 10, 5 )
	
	-- Call basic DoAbilities methods
	EldarInfantryTactic.DoAbilities(self)
end

function DarkReaperKtgmTactic:Reinforce()

	-- Check if we are reinforcing
	if (not self.squad_ai:IsReinforcing()) then

		-- try for different types of squad members
		local darkreaperIndex = 0
		local bansheeIndex = 1
		local firedragonIndex = 2
		local warpspiderIndex = 3

		local numDarkreapers = self.squad_ai:GetLeaderCount( darkreaperIndex )
		local numBanshees = self.squad_ai:GetLeaderCount( bansheeIndex )	
		local numFiredragons = self.squad_ai:GetLeaderCount( firedragonIndex )	
		local numWarpspiders = self.squad_ai:GetLeaderCount( warpspiderIndex )	

		-- Desired number of each leader type
		local desiredDarkreapers = math.random(0,2)
		local desiredBanshees = math.random(0,2) 
		local desiredFiredragons = math.random(0,2) 
		local desiredWarpspiders = math.random(0,2) 

		-- Desired order of reinforcing
		if (numDarkreapers < desiredDarkreapers) then
			if (self.squad_ai:CanReinforce( true, darkreaperIndex )) then
				self.squad_ai:DoReinforce( true, darkreaperIndex )
			end
		elseif (numBanshees < desiredBanshees) then
			if (self.squad_ai:CanReinforce( true, bansheeIndex )) then
				self.squad_ai:DoReinforce( true, bansheeIndex )
			end
		elseif (numFiredragons < desiredFiredragons) then
			if (self.squad_ai:CanReinforce( true, firedragonIndex )) then
				self.squad_ai:DoReinforce( true, firedragonIndex )
			end
		elseif (numWarpspiders < desiredWarpspiders) then
			if (self.squad_ai:CanReinforce( true, warpspiderIndex )) then
				self.squad_ai:DoReinforce( true, warpspiderIndex )
			end
		else
			if (self.squad_ai:CanReinforce( false, 0 )) then
				self.squad_ai:DoReinforce( false, 0 )
			end			
		end
	end
end