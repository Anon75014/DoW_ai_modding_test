class 'MachaTactic' (EldarInfantryTactic)

Macha = {}

function MachaTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Farseer Macha Tactic")
	self.dance_time = 0

	-- Init AoE abilities delay time
	Macha.NextAbilityCheck = 0
end


function MachaTactic:InitAbilities()

	-- Re-init delay, in case we are attached when AI re-initiates
	if Macha.NextAbilityCheck == nil then 
		Macha.NextAbilityCheck = 0
	end

	-- Init ability ID's
	if Macha.storm_id == nil then
		Macha.fleetoffoot_id = cpu_manager.stats:GetAbilityID( "eldar_fleetoffoot" )
		Macha.eldritchstorm_id = cpu_manager.stats:GetAbilityID( "eldar_eldrad_eldritchstorm" )
		Macha.guide_id = cpu_manager.stats:GetAbilityID( "eldar_guide" )
		Macha.psychic_blast_id = cpu_manager.stats:GetAbilityID( "eldar_macha_psychic_blast" )
	end
end


function MachaTactic:DoAbilities()

	-- Make sure no other ability will be attempted, if we have performed Eldritch Storm
	if g_iGMT < Macha.NextAbilityCheck + 10 then
		return
	end

	if self.squad_ai:IsInCombat() then

		if self.squad_ai:CanDoAbility(Macha.guide_id) then
			local range = self.squad_ai:GetAbilityRange(Macha.guide_id)	
			local squad_filter = function( squad_ai )		
				return squad_ai:IsInCombat() and squad_ai:IsInStateAttackMove() and 
					squad_ai:GetNumTroopers() >= 4 and not squad_ai:IsBroken() and
					not squad_ai:IsCapturing()
			end	
			local target_squad = cpu_manager:GetClosestSquad( self.squad_ai:GetPosition(), range, squad_filter )
			if (target_squad ~= nil) then
				self.squad_ai:DoSpecialAbilitySquad(Macha.guide_id, target_squad:GetSquad())
			end
		end

		if self.squad_ai:CanDoAbility(Macha.psychic_blast_id) then
			if Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 10, 6) ~= nil then
				self.squad_ai:DoSpecialAbility(Macha.psychic_blast_id)
			end
		end

		if self.squad_ai:CanDoAbility(Macha.eldritchstorm_id) then
			-- If we are dying, lower requisites for attacks
			if self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4 then
				if Ability.DoAbilityPos( self.squad_ai, Macha.eldritchstorm_id, Ability.Filters.CloseEnemy, 6 ) then
					Macha.NextAbilityCheck = g_iGMT
					return
				end
			else
				if Ability.DoAbilityPos( self.squad_ai, Macha.eldritchstorm_id, Ability.Filters.CloseEnemy, 12 ) then
					Macha.NextAbilityCheck = g_iGMT
					return
				end
			end
		end
	end

	-- Check if I should enable/disable fleet of foot
	if (not self.squad_ai:IsAttached()) then
		self:DoAbilityFoF()
	end
end


function MachaTactic:Update()

	if (self:IsComplete()) then
		return
	end

	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end

	-- Check health for dancing, else always use assault stance
	if self.squad_ai:GetHealthPercentage() < 0.2 then
		self.dance_time = 0
	else
		self.squad_ai:DoSetDefaultMeleeStance()
		self.squad_ai:DoSetMeleeStance(SquadAI.MSTANCE_Assault)
		self.dance_time = g_iGMT
	end

	-- Attach in melee
    if self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault then
        if self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt() then
            if self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil then
                self:TryAttachSquadMelee()
            end
        end
    end
end
