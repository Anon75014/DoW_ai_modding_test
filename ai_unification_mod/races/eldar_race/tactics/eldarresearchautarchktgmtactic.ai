class 'EldarResearchAutarchKtgmTactic' (BaseTactic)

EldarResearchAutarchKtgm = {}

function EldarResearchAutarchKtgmTactic:__init( base_ai ) super( base_ai )

	self:SetName("Eldar Research Autarch Kill Team Tactic")

	-- The name of the squad to target
	self.squad1_name = "eldar_squad_autarch_kayleth_ktgm"
end

function EldarResearchAutarchKtgmTactic:AutoBuildTurretAddOn( addonSlot, iID )
	local buildChannelLP = build_manager:GetBuildChannelFromID(iID)
	if (buildChannelLP ~= nil) then
		local addOnID = buildChannelLP:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
		if (buildChannelLP:IsBuilding() == 0 and buildChannelLP:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
			buildChannelLP:BuildAddOn(addOnID)
		end
	end
end

function EldarResearchAutarchKtgmTactic:InitAbilities()
	
	-- Init abilities
	if (EldarResearchAutarchKtgm.StronghealAutarch_id == nil) then
		EldarResearchAutarchKtgm.StronghealAutarch_id = cpu_manager.stats:GetAbilityID( "eldar_ls_kayleth_healing_1000" )
	end

	if (EldarResearchAutarchKtgm.LighthealAutarch_id == nil) then
		EldarResearchAutarchKtgm.LighthealAutarch_id = cpu_manager.stats:GetAbilityID( "eldar_ls_kayleth_healing_500" )
	end
end

