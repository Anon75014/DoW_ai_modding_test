class 'FarSeerKtgmTactic' (EldarInfantryTactic)

FarSeerKtgm = {}

function FarSeerKtgmTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Far Seer Kill Team Tactic")

	self.dance_time = 0
end

-- Assassinate win condition -- never attack
function FarSeerKtgmTactic:IsAttacker()	
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function FarSeerKtgmTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

function FarSeerKtgmTactic:InitAbilities()

	-- Init ability ID's
	if (FarSeerKtgm.storm_id == nil) then
		FarSeerKtgm.storm_id = cpu_manager.stats:GetAbilityID( "eldar_ls_farseer_psychic_storm" )
	end
	if (FarSeerKtgm.eldritchstorm_id == nil) then
		FarSeerKtgm.eldritchstorm_id = cpu_manager.stats:GetAbilityID( "eldar_ls_farseer_eldritchstorm" )
	end
	if (FarSeerKtgm.mind_war_id == nil) then
		FarSeerKtgm.mind_war_id = cpu_manager.stats:GetAbilityID( "eldar_ls_farseer_mind_war" )
	end
	if (FarSeerKtgm.mind_war_b == nil) then
		FarSeerKtgm.mind_war_b = cpu_manager.stats:GetAbilityID( "eldar_ls_farseer_mind_war_1" )
	end
	if (FarSeerKtgm.guide_id == nil) then
		FarSeerKtgm.guide_id = cpu_manager.stats:GetAbilityID( "eldar_ls_farseer_guide" )
	end
	if (FarSeerKtgm.fleetoffoot_id == nil) then
		FarSeerKtgm.fleetoffoot_id = cpu_manager.stats:GetAbilityID( "eldar_ls_farseer_fleetoffoot" )
	end
	if (FarSeerKtgm.soulstone_id == nil) then
		FarSeerKtgm.soulstone_id = cpu_manager.stats:GetAbilityID( "eldar_ls_farseer_soulstone_skirmish" )
	end
	if (FarSeerKtgm.embolden_id == nil) then
		FarSeerKtgm.embolden_id = cpu_manager.stats:GetAbilityID( "eldar_ls_farseer_embolden" )
	end
	if (FarSeerKtgm.turret_id == nil) then
		FarSeerKtgm.turret_id = cpu_manager.stats:GetAbilityID( "eldar_ls_farseer_turret" )
	end
end

function FarSeerKtgmTactic:DoAbilities()
	
	if (self.squad_ai:CanDoAbility(FarSeerKtgm.guide_id)) then
		local range = self.squad_ai:GetAbilityRange( FarSeerKtgm.guide_id )	
		local squad_filter = function( squad_ai )		
			return squad_ai:IsInCombat() and squad_ai:IsInStateAttackMove() and 
					squad_ai:GetNumTroopers() >= 4 and not squad_ai:IsBroken() and
					not squad_ai:IsCapturing()
		end	
   		local target_squad = cpu_manager:GetClosestSquad( self.squad_ai:GetPosition(), range, squad_filter )
		if (target_squad ~= nil) then
			self.squad_ai:DoSpecialAbilitySquad( FarSeerKtgm.guide_id, target_squad:GetSquad() )
 		end
	end
	
	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
--[[			
	   Ability.DoAbilityPos( self.squad_ai, FarSeerKtgm.eldritchstorm_id, Ability.Filters.CloseEnemy, 6 ) 	
	   Ability.DoAbilityTarget( self.squad_ai, FarSeerKtgm.storm_id, Ability.Filters.CloseInfantryEnemy, 4 ) 
	   Ability.DoAbilityTarget( self.squad_ai, FarSeerKtgm.mind_war_id, Ability.Filters.CloseInfantryEnemy, 3 )
	   Ability.DoAbilityTarget( self.squad_ai, FarSeerKtgm.mind_war_b, Ability.Filters.CloseSquadEnemy, 2 )
	   Ability.DoAbilityPos( self.squad_ai, FarSeerKtgm.turret_id, Ability.Filters.CloseEnemy, 3 ) 	
]]
	   if (self.squad_ai:CanDoAbility(FarSeerKtgm.guide_id)) then
			local range = self.squad_ai:GetAbilityRange( FarSeerKtgm.guide_id )	
			local squad_filter = function( squad_ai )		
				return squad_ai:IsInCombat() and squad_ai:IsInStateAttackMove() and 
						squad_ai:GetNumTroopers() >= 2 and not squad_ai:IsBroken() and
						not squad_ai:IsCapturing()
			end	
   			local target_squad = cpu_manager:GetClosestSquad( self.squad_ai:GetPosition(), range, squad_filter )
			if (target_squad ~= nil) then
				self.squad_ai:DoSpecialAbilitySquad( FarSeerKtgm.guide_id, target_squad:GetSquad() )
 			end
 		end
 	else
--[[
		Ability.DoAbilityPos( self.squad_ai, FarSeerKtgm.eldritchstorm_id, Ability.Filters.CloseEnemy, 12 ) 
		Ability.DoAbilityTarget( self.squad_ai, FarSeerKtgm.storm_id, Ability.Filters.CloseInfantryEnemy, 8 ) 
		Ability.DoAbilityTarget( self.squad_ai, FarSeerKtgm.mind_war_id, Ability.Filters.CloseInfantryEnemy, 6 )
		Ability.DoAbilityTarget( self.squad_ai, FarSeerKtgm.mind_war_b, Ability.Filters.CloseSquadEnemy, 4 )
		Ability.DoAbilityPos( self.squad_ai, FarSeerKtgm.turret_id, Ability.Filters.CloseEnemy, 6 ) 
]]			
	end

	-- Try to summon a Eldritch Storm (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(FarSeerKtgm.eldritchstorm_id)) then 

		-- Search for a nearby enemy squad
		local iRange = self.squad_ai:GetAbilityRange(FarSeerKtgm.eldritchstorm_id)
		local oUnit = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 8)
		if (oUnit ~= nil) then
			--print("Using Eldritch Storm Ability for player "..tostring(cpu_manager.player_id).."")
			self.squad_ai:DoSpecialAbilitySquad(FarSeerKtgm.eldritchstorm_id, oUnit:GetSquad())
			return
		end
	end

	-- Try to summon a Psyker Storm (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(FarSeerKtgm.storm_id)) then 

		-- Search for a nearby enemy squad
		local iRange = self.squad_ai:GetAbilityRange(FarSeerKtgm.storm_id)
		local oUnit = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 6)
		if (oUnit ~= nil) then
			--print("Using Psyker Storm ability Ability for player "..tostring(cpu_manager.player_id).."")
			self.squad_ai:DoSpecialAbilitySquad(FarSeerKtgm.storm_id, oUnit:GetSquad())
			return
		end
	end

	-- Try to sconjure Mind War (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(FarSeerKtgm.mind_war_id)) then 

		-- Search for a nearby enemy squad
		local iRange = self.squad_ai:GetAbilityRange(FarSeerKtgm.mind_war_id)
		local oUnit = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil) then
			--print("Using Mind War ability Ability for player "..tostring(cpu_manager.player_id).."")
			self.squad_ai:DoSpecialAbilitySquad(FarSeerKtgm.mind_war_id, oUnit:GetSquad())
			return
		end
	end

	-- Try to sconjure Mind War 2 (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(FarSeerKtgm.mind_war_b)) then 

		-- Search for a nearby enemy squad
		local iRange = self.squad_ai:GetAbilityRange(FarSeerKtgm.mind_war_b)
		local oUnit = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil) then
			--print("Using Mind War B ability Ability for player "..tostring(cpu_manager.player_id).."")
			self.squad_ai:DoSpecialAbilitySquad(FarSeerKtgm.mind_war_b, oUnit:GetSquad())
			return
		end
	end

	-- Try to summon a Turret Emplacement (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(FarSeerKtgm.turret_id)) then 

		-- Search for a nearby enemy squad
		local iRange = self.squad_ai:GetAbilityRange(FarSeerKtgm.turret_id)
		local oUnit = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 4)
		if (oUnit ~= nil) then
			--print("Using Turret ability Ability for player "..tostring(cpu_manager.player_id).."")
			self.squad_ai:DoSpecialAbilitySquad(FarSeerKtgm.turret_id, oUnit:GetSquad())
			return
		end
	end

	if self.squad_ai:CanDoAbility(FarSeerKtgm.soulstone_id) then
		local health = self.squad_ai:GetHealthPercentage()
		if (self.squad_ai:IsInCombat() and health < 0.4) or (self.squad_ai:WasRecentlyHurt() and health < 0.25) then
			self.squad_ai:DoSpecialAbility(FarSeerKtgm.soulstone_id)
		end
	end

	-- Embolden if low morale
	if self.squad_ai:CanDoAbility(FarSeerKtgm.embolden_id) and self.squad_ai:GetMoralePercentage() < 0.6 then
		self.squad_ai:DoSpecialAbility(FarSeerKtgm.embolden_id)
	end

	-- Check if I should enable/disable fleet of foot
	if (not self.squad_ai:IsAttached()) then
		self:DoAbilityFoF()
	end
end

function FarSeerKtgmTactic:Update()

    if (self:IsComplete()) then
        return
    end
    
    -- State machine
    if (not InfantryTactic.Update( self )) then
        return
    end
    
 	-- Check for close commander
    local bSetRanged = false
    local bSetMelee = false
	local vSquadPos = self.squad_ai:GetPosition()
	local eStance = self.squad_ai:GetMeleeStance()
	local oEnemyCommander = Ability.Filters.CloseCommanderEnemy(vSquadPos, 20, 1)
    if (oEnemyCommander ~= nil) then
       
        -- Check health
        if (self.squad_ai:GetHealthPercentage() > 0.8 and oEnemyCommander:GetHealthPercentage() < 0.3) then
            bSetMelee = (eStance == SquadAI.MSTANCE_Ranged)
            self.dance_time = 0
		else
            bSetRanged = (eStance == SquadAI.MSTANCE_Assault)
        end
	else
    
    	-- Check for close attached commander
    	local oSquad = Ability.Filters.CloseInfantryEnemy(vSquadPos, 20, 4)
    	if (oSquad ~= nil and oSquad:IsAttached()) then
    		bSetRanged = (eStance == SquadAI.MSTANCE_Assault)
    	else
    		bSetMelee = (eStance == SquadAI.MSTANCE_Ranged)
    	end
    end

    -- At leat 10 secs ranged stance/dancing
    if (bSetRanged) then
        self.squad_ai:DoSetMeleeStance( SquadAI.MSTANCE_Ranged )
        self.dance_time = g_iGMT
    elseif (bSetMelee and self.stateID ~= Tactic.StateID.DoDance and g_iGMT > self.dance_time + 10) then
        self.squad_ai:DoSetDefaultMeleeStance()
        self.dance_time = 0
    end
    
    -- Assassinate win condition -- never attach to a squad / do not attach while dancing
    if (not cpu_manager.assassinate and self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then          
        if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
            if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                self:TryAttachSquadMelee()
            end
        end
    end
end


