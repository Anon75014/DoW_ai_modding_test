class 'RavenGuardLandspeederTactic' (RavenGuardSpaceMarineVehicleTactic)

RavenGuardLandspeeder = {}

function RavenGuardLandspeederTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Raven Guard Landspeeder Tactic")

	-- Used for the stuck check code for the squads that can jump
	self.initialPosition = self.squad_ai:GetPosition()

	-- Vehicle is a very light transport
	self.m_iTransportVehicle = 2
	self.m_iTransportSlots = 1
end

function RavenGuardLandspeederTactic:DoAbilities()

	-- New code to unstuck units with pathing issues, that can jump.
	-- Call it with [true], only for multi-membered squads.
	self:SolveStuckCase(false)
end

function RavenGuardLandspeederTactic:Upgrade()

	-- Do best upgrade
	local class_type = cpu_manager:FindClosestEnemyPlayer():GetMajorityClassType()
	self.squad_ai:DoBestUpgrade( class_type )
end
