class 'RavenGuardForceCommanderTactic' (RavenGuardSpaceMarineInfantryTactic)

RavenGuardForceCommander = {}

function RavenGuardForceCommanderTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Force Commander Tactic")
end

-- Assassinate win condition -- never attack
function RavenGuardForceCommanderTactic:IsAttacker()
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function RavenGuardForceCommanderTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

-- Commander is allowed to retreat even directly after a jump
function RavenGuardForceCommanderTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

-- Assassinate win condition -- never jump into combat
function RavenGuardForceCommanderTactic:JumpAttack()
	if (not cpu_manager.assassinate) then
		Tactic.JumpAttack(self)
	end
end

function RavenGuardForceCommanderTactic:InitAbilities()

	-- Init ability ID's
	if (RavenGuardForceCommanderorbital_b == nil) then
		RavenGuardForceCommanderorbital_b = cpu_manager.stats:GetAbilityID( "raven_guard_orbital_bombardment" )
		RavenGuardForceCommanderbattlecry = cpu_manager.stats:GetAbilityID( "raven_guard_battlecry" )
	end
end

function RavenGuardForceCommanderTactic:DoAbilities()

	if self.squad_ai:IsInCombat() then
		-- Try to use battlecry
		if self.squad_ai:CanDoAbility(RavenGuardForceCommanderbattlecry) then
			if Ability.DoAbilityArea(self.squad_ai, RavenGuardForceCommanderbattlecry, Ability.Filters.CloseInCombat, 10, 1) then
				return
			end
		end
		-- Try to use orbital bombardement
		if self.squad_ai:CanDoAbility(RavenGuardForceCommanderorbital_b) then
			if Ability.DoAbilityPos(self.squad_ai, RavenGuardForceCommanderorbital_b, Ability.Filters.CloseEnemy, 24)
			or Ability.DoAbilityPos(self.squad_ai, RavenGuardForceCommanderorbital_b, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
				return
			end
		end
	end
end

function RavenGuardForceCommanderTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Assassinate win condition -- never attach to a squad
    	if (not cpu_manager.assassinate and self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end

	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end
