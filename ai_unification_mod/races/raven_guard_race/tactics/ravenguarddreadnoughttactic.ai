class 'RavenGuardDreadnoughtTactic' (RavenGuardSpaceMarineVehicleTactic)

function RavenGuardDreadnoughtTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Raven Guard Dreadnought Tactic")
end

function RavenGuardDreadnoughtTactic:Upgrade()

	-- Do best upgrade
	local class_type = cpu_manager:FindClosestEnemyPlayer():GetMajorityClassType()
	self.squad_ai:DoBestUpgrade( class_type )
end
