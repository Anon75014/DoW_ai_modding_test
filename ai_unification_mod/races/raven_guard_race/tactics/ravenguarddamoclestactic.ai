class 'RavenGuardDamoclesTactic' (RavenGuardSpaceMarineVehicleTactic)

RavenGuardDamocles = {}

function RavenGuardDamoclesTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Raven Guard Damocles Tactic")
end

function RavenGuardDamoclesTactic:InitAbilities()

	-- Init ability ID's
	if (RavenGuardDamocles.smoke_id == nil) then
		RavenGuardDamocles.smoke_id = cpu_manager.stats:GetAbilityID( "raven_guard_smoke_launchers" )	
	end

	if (RavenGuardDamocles.detection_id == nil) then
		RavenGuardDamocles.detection_id = cpu_manager.stats:GetAbilityID( "raven_guard_sensormap" )	
	end
end

function RavenGuardDamoclesTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(RavenGuardDamocles.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(RavenGuardDamocles.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(RavenGuardDamocles.smoke_id, oUnit:GetSquad())
		end
	end

	-- Try to activate detection field
	if (self.squad_ai:CanDoAbility(RavenGuardDamocles.detection_id)) then
	
		local iRange = self.squad_ai:GetAbilityRange(RavenGuardDamocles.detection_id)
		local oSquad = Ability.Filters.CloseInfiltratedEnemy(self.squad_ai:GetPosition(), iRange, 1)
		if (oSquad ~= nil) then
			
			-- Only try to detect if the infiltrated unit is attacking
			if (oSquad:IsAttacking()) then
				self.squad_ai:DoSpecialAbilitySquad(RavenGuardDamocles.detection_id, oSquad:GetSquad())
			end
		end
	end
end


