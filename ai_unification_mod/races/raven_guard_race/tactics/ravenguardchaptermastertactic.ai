class 'RavenGuardChapterMasterTactic' (RavenGuardSpaceMarineInfantryTactic)

RavenGuardChapterMaster = {}

function RavenGuardChapterMasterTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Raven Guard ChapterMaster Tactic")
end

function RavenGuardChapterMasterTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function RavenGuardChapterMasterTactic:IsDefender()
	return self:IsCommanderDefender()
end

-- Commander is allowed to retreat even directly after a jump
function RavenGuardChapterMasterTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function RavenGuardChapterMasterTactic:JumpAttack()
	Tactic.JumpAttack(self)
end

function RavenGuardChapterMasterTactic:InitAbilities()

	-- Init ability ID's
	if (RavenGuardChapterMaster.battlecry == nil) then
		RavenGuardChapterMaster.battlecry = cpu_manager.stats:GetAbilityID( "raven_guard_battlecry" )
	end
	if (RavenGuardChapterMaster.brood == nil) then
		RavenGuardChapterMaster.brood = cpu_manager.stats:GetAbilityID( "raven_guard_brood" )
	end
	if (RavenGuardChapterMaster.glower == nil) then
		RavenGuardChapterMaster.glower = cpu_manager.stats:GetAbilityID( "raven_guard_glower" )
	end
	if (RavenGuardChapterMaster.infiltration == nil) then
		RavenGuardChapterMaster.infiltration = cpu_manager.stats:GetAbilityID( "raven_guard_infantry_infiltration_shrike" )
	end
end

function RavenGuardChapterMasterTactic:DoAbilities()

	-- Fix our broken morale or health when low and while not in combat
	if not (self.squad_ai:IsInCombat()) and not (self.squad_ai:IsUnderAttack()) then
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) or (self.squad_ai:IsBroken()) then
			if (self.squad_ai:CanDoAbility( RavenGuardChapterMaster.brood )) then
				self.squad_ai:DoSpecialAbility( RavenGuardChapterMaster.brood )
			end
		end
	end

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget( self.squad_ai, RavenGuardChapterMaster.glower, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, RavenGuardChapterMaster.glower, Ability.Filters.CloseMonsterEnemy, 2 )
		Ability.DoAbilityTarget( self.squad_ai, RavenGuardChapterMaster.glower, Ability.Filters.CloseCommanderEnemy, 1 )
	else
		Ability.DoAbilityTarget( self.squad_ai, RavenGuardChapterMaster.glower, Ability.Filters.CloseInfantryEnemy, 8 )
		Ability.DoAbilityTarget( self.squad_ai, RavenGuardChapterMaster.glower, Ability.Filters.CloseMonsterEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, RavenGuardChapterMaster.glower, Ability.Filters.CloseCommanderEnemy, 1 )
	end

	-- Check to make sure if threats are nearby
	if self.squad_ai:IsInCombat() then

		-- Try to use battlecry
		if self.squad_ai:CanDoAbility(RavenGuardChapterMaster.battlecry) then
			if Ability.DoAbilityArea(self.squad_ai, RavenGuardChapterMaster.battlecry, Ability.Filters.CloseInCombat, 10, 1) then
				return
			end
		end

		-- If I can infiltrate when enemies are close
		local iPos = self.squad_ai:GetPosition()
		local oTarget = Ability.Filters.CloseEnemy(iPos, 10, 1)
		if oTarget ~= nil and oTarget:IsValid() then
			if (self.squad_ai:CanDoAbility( RavenGuardChapterMaster.infiltration )) then
				self.squad_ai:DoSpecialAbility( RavenGuardChapterMaster.infiltration )
			end
		end
	end
end

function RavenGuardChapterMasterTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
    	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end

	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end
