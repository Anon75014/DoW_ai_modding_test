class 'RavenGuardOrbitalRelayTactic' (BaseTactic)

function RavenGuardOrbitalRelayTactic:__init( base_ai ) super( base_ai )

	self:SetName("Raven Guard Orbital Relay Tactic")

	self.m_iArmouryID = cpu_manager.stats:GetBuildingID("raven_guard_space_marine_armoury")
end

function RavenGuardOrbitalRelayTactic:CanDeepStrikeTroops()
	return (cpu_manager.player_stats:GetNumBasesByBPID(self.m_iArmouryID, true) > 0)
end