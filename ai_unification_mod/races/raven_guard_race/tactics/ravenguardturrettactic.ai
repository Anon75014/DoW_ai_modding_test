class 'RavenGuardTurretTactic' (BaseTactic)

RavenGuardTurret = {}

function RavenGuardTurretTactic:__init( base_ai ) super( base_ai )

	self:SetName("Raven Guard Turret Tactic")

	self.Addon = math.random( 0, 1 )	  -- Choose either to leave turret as bolter or choose either missiles or cloak field addons
	self.Upgrade = math.random( 0, 1 )	  -- Choose either missiles or cloak field
end

function RavenGuardTurretTactic:AutoBuildTurretAddOn( addonSlot, iID )
	local buildChannelLP = build_manager:GetBuildChannelFromID(iID)
	if (buildChannelLP ~= nil) then
		local addOnID = buildChannelLP:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
		if (buildChannelLP:IsBuilding() == 0 and buildChannelLP:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
			buildChannelLP:BuildAddOn(addOnID)
		end
	end
end

function RavenGuardTurretTactic:DoAbilities()

	if self.Addon == 0 then
		-- Choose to remain turret bolter and not build any addons
		return
	else
   		if (cpu_manager:GetTierLevel() >= 3) then 
			local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
			local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
			if (iRequisition >= 250 and iPower >= 250) then
				self:AutoBuildTurretAddOn(self.Upgrade, self.base_ai:GetEntity():GetID())	-- Build either missiles or cloak field
			end
		end
	end
end
