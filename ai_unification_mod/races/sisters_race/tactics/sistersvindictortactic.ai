class 'SistersVindictorTactic' (SistersInfantryTactic)

function SistersVindictorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Sisters Vindictor Tactic")
end

function SistersVindictorTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end

	-- Attach to squad
	self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth)
end
