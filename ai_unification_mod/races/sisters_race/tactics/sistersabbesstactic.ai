class 'SistersAbbessTactic' (SistersInfantryTactic)

SistersAbbess = {}

function SistersAbbessTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Sisters Abbess Tactic")
end

-- Assassinate win condition -- never attack
function SistersAbbessTactic:IsAttacker()
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end


-- Assassinate win condition -- never defend
function SistersAbbessTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

function SistersAbbessTactic:InitAbilities()

	-- Init ability ID's
	if SistersAbbess.divinelight_id == nil then
		SistersAbbess.divinelight_id = cpu_manager.stats:GetAbilityID( "sisters_act_of_faith_divine_light" )
		SistersAbbess.ascension_id = cpu_manager.stats:GetAbilityID( "sisters_act_of_faith_ascension" )
	end
end

function SistersAbbessTactic:DoAbilities()

	if self.squad_ai:IsInCombat() then
		if self.squad_ai:CanDoAbility(SistersAbbess.divinelight_id) then
			-- reduces enemy weapon accuracy and increases own weapon damage (Faith cost: 30)
			if Ability.DoAbilityArea( self.squad_ai, SistersAbbess.divinelight_id, Ability.Filters.CloseEnemy, 10, 1) then
				return
			end
		end
	
		if self.squad_ai:CanDoAbility(SistersAbbess.ascension_id) then
			-- summons non-player controlled angels to fight for a short period (Faith cost: 90)
			if Ability.DoAbilityArea( self.squad_ai, SistersAbbess.ascension_id, Ability.Filters.CloseEnemy, 10, 1) then
				return
			end
		end
	end
end

function SistersAbbessTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Assassinate win condition -- never attach to a squad
    	if (not cpu_manager.assassinate and self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end
end
