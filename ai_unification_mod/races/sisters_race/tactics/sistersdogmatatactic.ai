class 'SistersDogmaTatactic' (SistersInfantryTactic)

SistersDogmata = {}

function SistersDogmaTatactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Sisters Dogmata Tactic")
end

function SistersDogmaTatactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function SistersDogmaTatactic:IsDefender()
	return self:IsCommanderDefender()
end

function SistersDogmaTatactic:InitAbilities()

	-- Init ability ID's
	if SistersDogmata.demoralize == nil then
		SistersDogmata.demoralize = cpu_manager.stats:GetAbilityID( "sisters_demoralize_dogmata" )
	end
end

function SistersDogmaTatactic:DoAbilities()

	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget( self.squad_ai, SistersDogmata.demoralize, Ability.Filters.CloseInfantryEnemy, 4 )
	else
		Ability.DoAbilityTarget( self.squad_ai, SistersDogmata.demoralize, Ability.Filters.CloseInfantryEnemy, 8 )
	end
end

function SistersDogmaTatactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end

	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end
