class 'ServitorTactic' (EngineerTactic)

function ServitorTactic:__init( squad_ai ) super( squad_ai )
	self:SetName( "Servitor Tactic" )
end

function ServitorTactic:IsAttacker()
	return true
end

function ServitorTactic:IsDefender()
	return true
end

function ServitorTactic:IsAffectedByMorale()
	return true
end

function ServitorTactic:DoAbilities()
	MechInfantryTactic.DoAbilities( self )
end

function ServitorTactic:CheckForBroken()
	if (self.squad_ai:IsBroken()) then
		local rally_id = cpu_manager.stats:GetAbilityID( "mechanicus_reload" )
		if (self.squad_ai:CanDoAbility( rally_id )) then
			self.squad_ai:DoSpecialAbility( rally_id )
		end
	end
	InfantryTactic.CheckForBroken(self)
end
