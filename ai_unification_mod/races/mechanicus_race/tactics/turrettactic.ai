class 'TurretTactic' (BaseTactic)

AdMechTurret = {}

function TurretTactic:__init( base_ai ) super( base_ai )

	self:SetName("Turret Tactic")
	self.upgradeChance = math.random(1, 100)
	AM_Turret_TMR = g_iGMT
end


function TurretTactic:AutoBuildTurretAddOn( addonSlot, iID )
	local buildChannelLP = build_manager:GetBuildChannelFromID(iID)
	if (buildChannelLP ~= nil) then
		local addOnID = buildChannelLP:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
		if (buildChannelLP:IsBuilding() == 0 and buildChannelLP:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
			AM_Turret_TMR = g_iGMT
			buildChannelLP:BuildAddOn(addOnID)
		end
	end
end


function TurretTactic:InitAbilities()

	-- Init Ability ID's and Addon ID's
	--Turret.flamerAddonID = cpu_manager.stats:GetAddOnID( "addon_mechanicus_turret_heavy_flamer" )
	AdMechTurret.flamerAddonID = cpu_manager.stats:GetAddOnID( "addon_mechanicus_turret_cryogun" )
	AdMechTurret.laserAddonID =  cpu_manager.stats:GetAddOnID( "addon_mechanicus_turret" )
end


function TurretTactic:DoAbilities()

	-- Do not try to build any Addon, if there is no reason to.
	if self.upgradeChance < 25 then
		return
	end
	if (self.base_ai:HasAddOn(AdMechTurret.flamerAddonID) or self.base_ai:HasAddOn(AdMechTurret.laserAddonID) or g_iGMT - AM_Turret_TMR < 6) then
		return
	end

--	self:AutoBuildAddOn(0) -- Lascannon		-- addon_mechanicus_turret
--	self:AutoBuildAddOn(1) -- Flamers		-- addon_mechanicus_turret_heavy_flamer

	-- Figure out my enemy's favourite class
	local enemy = cpu_manager:FindClosestEnemyPlayer()
	if (enemy == nil) then
		return
	end
	
	local class_type = enemy:GetMajorityClassType()
	
	-- Larkins hard counter upgrade for infantry
	if (class_type == UnitStatsAI.UC_LightInfantryLow) or 
		(class_type == UnitStatsAI.UC_LightInfantryMed) or 
		(class_type == UnitStatsAI.UC_LightInfantryHigh) or
		--(class_type == UnitStatsAI.UC_HeavyInfantryMed) or
		--(class_type == UnitStatsAI.UC_HeavyInfantryHigh) or
		(class_type == UnitStatsAI.UC_MonsterMed) then 
   		if (cpu_manager:GetTierLevel() >= 2) then 
			self:AutoBuildTurretAddOn(1, self.base_ai:GetEntity():GetID())	-- Flamers
		end
	-- Larkins hard counter upgrade for Vehicles
	elseif (class_type == UnitStatsAI.UC_VehicleLow) or 
		(class_type == UnitStatsAI.UC_VehicleMed) or
		(class_type == UnitStatsAI.UC_VehicleHigh) or
		(class_type == UnitStatsAI.UC_MonsterHigh) then
   		if (cpu_manager:GetTierLevel() >= 2) then 
			self:AutoBuildTurretAddOn(0, self.base_ai:GetEntity():GetID())	 -- Lascannons
		end
	end
end
