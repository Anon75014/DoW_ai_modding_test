class 'HoverSkitariiTactic' (MechInfantryTactic)

function HoverSkitariiTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Hover Skitarii tactic")
end


function HoverSkitariiTactic:IsAttacker()
	return true
end


function HoverSkitariiTactic:InitAbilities()
	if (self.m_infiltrateID == nil) then
		self.m_infiltrateID = cpu_manager.stats:GetAbilityID( "mechanicus_hover_skitarii_inflatration" )
	end
end

function HoverSkitariiTactic:DoAbilities()
	Ability.DoAbilityArea(self.squad_ai, self.m_infiltrateID, Ability.Filters.CloseInCombat, 10, 1)

	MechInfantryTactic.DoAbilities( self )
end
