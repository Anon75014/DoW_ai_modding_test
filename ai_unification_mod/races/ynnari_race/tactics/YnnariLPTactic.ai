class 'YnnariLPTactic' (BaseTactic)

YnnariLP = {}

function YnnariLPTactic:__init( base_ai ) super( base_ai )

	self:SetName("Listening Post Tactic")

	-- Not used, not necessary
end

function YnnariLPTactic:InitAbilities()

	if YnnariLP.overload_id == nil then
		YnnariLP.overload_id = cpu_manager.stats:GetAbilityID( "ynnari_requisition" )
	end
end

function YnnariLPTactic:DoAbilities()

	if self.base_ai:CanDoAbility(YnnariLP.overload_id) then
		self.base_ai:DoSpecialAbility(YnnariLP.overload_id)
	end
end