class 'YnnariWraithSeerTactic' (YnnariInfantryTactic)

YnnariWraithSeer = {}

function YnnariWraithSeerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Ynnari WraithSeer Tactic")

	self.dance_time = 0
end

function YnnariWraithSeerTactic:IsAttacker()	
	return self:IsCommanderAttacker()
end

function YnnariWraithSeerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function YnnariWraithSeerTactic:InitAbilities()

	-- Init ability ID's
	if (YnnariWraithSeer.storm_id == nil) then
		YnnariWraithSeer.storm_id = cpu_manager.stats:GetAbilityID( "ynnari_psychic_storm" )
	end
	if (YnnariWraithSeer.eldritchstorm_id == nil) then
		YnnariWraithSeer.eldritchstorm_id = cpu_manager.stats:GetAbilityID( "ynnari_eldritchstorm" )
	end
	if (YnnariWraithSeer.mind_war_id == nil) then
		YnnariWraithSeer.mind_war_id = cpu_manager.stats:GetAbilityID( "ynnari_mind_war" )
	end
	if (YnnariWraithSeer.guide_id == nil) then
		YnnariWraithSeer.guide_id = cpu_manager.stats:GetAbilityID( "ynnari_guide" )
	end
	if (YnnariWraithSeer.fleetoffoot_id == nil) then
		YnnariWraithSeer.fleetoffoot_id = cpu_manager.stats:GetAbilityID( "ynnari_fleetoffoot" )
	end
end

function YnnariWraithSeerTactic:DoAbilities()
	
	if (self.squad_ai:CanDoAbility(YnnariWraithSeer.guide_id)) then
		local range = self.squad_ai:GetAbilityRange( YnnariWraithSeer.guide_id )	
		local squad_filter = function( squad_ai )		
			return squad_ai:IsInCombat() and squad_ai:IsInStateAttackMove() and 
					squad_ai:GetNumTroopers() >= 4 and not squad_ai:IsBroken() and
					not squad_ai:IsCapturing()
		end	
   		local target_squad = cpu_manager:GetClosestSquad( self.squad_ai:GetPosition(), range, squad_filter )
		if (target_squad ~= nil) then
			self.squad_ai:DoSpecialAbilitySquad( YnnariWraithSeer.guide_id, target_squad:GetSquad() )
 		end
	end
	
	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
			
	   Ability.DoAbilityPos( self.squad_ai, YnnariWraithSeer.eldritchstorm_id, Ability.Filters.CloseEnemy, 6 ) 	
	   Ability.DoAbilityTarget( self.squad_ai, YnnariWraithSeer.storm_id, Ability.Filters.CloseInfantryEnemy, 4 ) 
	   Ability.DoAbilityTarget( self.squad_ai, YnnariWraithSeer.mind_war_id, Ability.Filters.CloseInfantryEnemy, 1 )

	   if (self.squad_ai:CanDoAbility(YnnariWraithSeer.guide_id)) then
			local range = self.squad_ai:GetAbilityRange( YnnariWraithSeer.guide_id )	
			local squad_filter = function( squad_ai )		
				return squad_ai:IsInCombat() and squad_ai:IsInStateAttackMove() and 
						squad_ai:GetNumTroopers() >= 2 and not squad_ai:IsBroken() and
						not squad_ai:IsCapturing()
			end	
   			local target_squad = cpu_manager:GetClosestSquad( self.squad_ai:GetPosition(), range, squad_filter )
			if (target_squad ~= nil) then
				self.squad_ai:DoSpecialAbilitySquad( YnnariWraithSeer.guide_id, target_squad:GetSquad() )
 			end
 		end
 	else
		Ability.DoAbilityPos( self.squad_ai, YnnariWraithSeer.eldritchstorm_id, Ability.Filters.CloseEnemy, 12 ) 
		Ability.DoAbilityTarget( self.squad_ai, YnnariWraithSeer.storm_id, Ability.Filters.CloseInfantryEnemy, 8 ) 
		Ability.DoAbilityTarget( self.squad_ai, YnnariWraithSeer.mind_war_id, Ability.Filters.CloseCommanderEnemy, 1 )		
	end

end

function YnnariWraithSeerTactic:Update()

    if (self:IsComplete()) then
        return
    end
    
    -- State machine
    if (not InfantryTactic.Update( self )) then
        return
    end
    
 	-- Check for close commander
    local bSetRanged = false
    local bSetMelee = false
	local vSquadPos = self.squad_ai:GetPosition()
	local eStance = self.squad_ai:GetMeleeStance()
	local oEnemyCommander = Ability.Filters.CloseCommanderEnemy(vSquadPos, 20, 1)
    if (oEnemyCommander ~= nil) then
       
        -- Check health
        if (self.squad_ai:GetHealthPercentage() > 0.8 and oEnemyCommander:GetHealthPercentage() < 0.3) then
            bSetMelee = (eStance == SquadAI.MSTANCE_Ranged)
            self.dance_time = 0
		else
            bSetRanged = (eStance == SquadAI.MSTANCE_Assault)
        end
	else
    
    	-- Check for close attached commander
    	local oSquad = Ability.Filters.CloseInfantryEnemy(vSquadPos, 20, 4)
    	if (oSquad ~= nil and oSquad:IsAttached()) then
    		bSetRanged = (eStance == SquadAI.MSTANCE_Assault)
    	else
    		bSetMelee = (eStance == SquadAI.MSTANCE_Ranged)
    	end
    end

    -- At leat 10 secs ranged stance/dancing
    if (bSetRanged) then
        self.squad_ai:DoSetMeleeStance( SquadAI.MSTANCE_Ranged )
        self.dance_time = g_iGMT
    elseif (bSetMelee and self.stateID ~= Tactic.StateID.DoDance and g_iGMT > self.dance_time + 10) then
        self.squad_ai:DoSetDefaultMeleeStance()
        self.dance_time = 0
    end
    
end


