-- Creates build base strategy
function ynnari_race:CreateBuildBaseStrategy()
	return YnnariBuildBaseStrategy(BuildBaseStrategyInfo)
end

-- Creates a special tactic for units
-- GAMBIT: Updated version, with no IFs at all, much faster and reliable. CPU utilization nigh zero
function ynnari_race:CreateTactic(oSquadAI)

    	-- Get unit name, and see if there is an attached tactic to it
    	local sUnitName = oSquadAI:GetSquadName()    
	if sUnitName ~= nil and YN_Race_Squad_Tactic[sUnitName] ~= nil then
		if YN_Race_Squad_Tactic[sUnitName] == "NONE" then
            		-- The squad must have NO tactic. Return nil.
            		return nil
        	else
            		return YN_Race_Squad_Tactic[sUnitName](oSquadAI)
        	end
    	end

	-- Get class
	local eClass = oSquadAI:GetStats():GetClass()

	-- Check if there is a special tactic for the unit available
	local bVehicle = (eClass == UnitStatsAI.UC_VehicleLow or eClass == UnitStatsAI.UC_VehicleMed or eClass == UnitStatsAI.UC_VehicleHigh)
	local bAirPlane = (eClass == UnitStatsAI.UC_AirLow or eClass == UnitStatsAI.UC_AirMed or eClass == UnitStatsAI.UC_AirHigh)

	if (bVehicle or bAirPlane) then
		return YnnariVehicleTactic(oSquadAI)
	end
	return YnnariInfantryTactic(oSquadAI)
end

-- Creates a special tactic for buildings
-- GAMBIT: Updated version, with no IFs at all, much faster and reliable. CPU utilization nigh zero
function ynnari_race:CreateBaseTactic(oBuilding)

	-- Get building name
	local sBuildingName = oBuilding:GetBaseName()
	if sBuildingName ~= nil and YN_Race_Base_Tactic[sBuildingName] ~= nil then
		if YN_Race_Base_Tactic[sBuildingName] == "NONE" then
            		-- The building must have NO tactic. Return nil.
            		return nil
        	else
            		return YN_Race_Base_Tactic[sBuildingName](oBuilding)
        	end
    	end
	return nil
end

-- Returns a specific information
function ynnari_race:GetInfo(sType)

	-- Check info type
	if (sType == "TurretPower") then
		return 400
	elseif (sType == "SupportAllyFactor") then
		return 10 / 4
	elseif (sType == "AttackModifier") then
		return -10
	elseif (sType == "CriticalRangeIncreasePerTier") then
		return 10
	elseif (sType == "MinArmyStrengthPerTier") then
		return 750
	elseif (sType == "AttackRatio") then
		return 4 / 5
	elseif (sType == "RetreatRatio") then
		return 3 / 5
	elseif (sType == "InvisibleBuildings") then
		return true
	elseif (sType == "HarassingLeader") then
		return "ynnari_squad_yvainne"
	elseif (sType == "AutoConstructBuildings") then
		return false
	end
	return nil
end

-- Returns the building type and threat
function ynnari_race:GetBuildingType(sBuildingName)

	-- Return race specific object string
	if (sBuildingName == "ynnari_hq") then
		return "HQ", 0
		
	elseif (sBuildingName == "ynnari_warp_generator") then
		return "Generator", 0
		
	elseif (sBuildingName == "ynnari_advanced_warp_generator") then
		return "BiggerGenerator", 0
		
	elseif (sBuildingName == "ynnari_support_portal") then
		return "VehicleBuilding", 0
		
	elseif (sBuildingName == "ynnari_armory") then
		return "Armoury", 0
		
	elseif (sBuildingName == "ynnari_listening_post") then
		return "ListeningPost", 0
		
	elseif (sBuildingName == "ynnari_platform_scatterlaser") then
		return "Turret", 300
		
	elseif (sBuildingName == "ynnari_mine_field") then
		return "Mine", 100
	end
	return nil, 0
end