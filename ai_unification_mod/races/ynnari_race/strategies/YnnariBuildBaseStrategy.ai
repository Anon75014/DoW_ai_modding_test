function YnnariBuildBaseStrategy:UpdateTierLevel() 

	-- Reset tier level
	self.tierLevel = 1
	
	-- Check researches
	if cpu_manager.cpu_player:IsResearchComplete("ynnari_tier2_research") then
		self.tierLevel = 2
	end

	if cpu_manager.cpu_player:IsResearchComplete("ynnari_tier3_research") then
		self.tierLevel = 3
	end
	
	if cpu_manager.cpu_player:IsResearchComplete("ynnari_tier4_research") then
		self.tierLevel = 4
	end
end

