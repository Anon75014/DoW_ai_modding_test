class 'TemplarVindicatorTactic' (TemplarVehicleTactic)

TemplarVindicator = {}
         
function TemplarVindicatorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Templar Vindicator Tactic")
  	self.hurt_level = 0.35
end

function TemplarVindicatorTactic:InitAbilities()

	-- Init ability ID's
	if (TemplarVindicator.spirit_id == nil) then
		TemplarVindicator.spirit_id = cpu_manager.stats:GetAbilityID( "templar_machine_spirit_vindicator" )
	end
end

function TemplarVindicatorTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(TemplarVindicator.spirit_id)) then
			self.squad_ai:DoSpecialAbility(TemplarVindicator.spirit_id)
		end	  
	end

	-- Do basic abilities
	TemplarVehicleTactic.DoAbilities(self)
end

function TemplarVindicatorTactic:Update()

	-- Call standard method
	local bResult = TemplarVehicleTactic.Update(self)
  
	-- Check if vehicle needs repair
	if (bResult) and (self.m_bNeedRepair) then
			
		-- Check if vehicle is repaired
    		if (self.squad_ai:GetHealthPercentage() > 0.75) then
        		self.m_bNeedRepair = false
        		self.hurt_level = 0.35
    		end
	end
	return bResult 
end
