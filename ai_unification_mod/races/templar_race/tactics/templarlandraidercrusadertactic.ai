class 'TemplarLandRaiderCrusaderTactic' (TemplarVehicleTactic)

TemplarLandRaiderCrusader = {}

function TemplarLandRaiderCrusaderTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Templar Land Raider Crusader Tactic")
	
	-- Vehicle is a heavy transport
	self.m_iTransportVehicle = 2
	self.m_iTransportSlots = 2
   	self.hurt_level = 0.35
end

function TemplarLandRaiderCrusaderTactic:InitAbilities()

	-- Init ability ID's
	if (TemplarLandRaiderCrusader.spirit_id == nil) then
		TemplarLandRaiderCrusader.spirit_id = cpu_manager.stats:GetAbilityID( "templar_machine_spirit" )
	end
  
	if (TemplarLandRaiderCrusader.hkmissiles_id == nil) then
		TemplarLandRaiderCrusader.hkmissiles_id = cpu_manager.stats:GetAbilityID( "templar_hk_missile_land_raider" )	
	end
end

function TemplarLandRaiderCrusaderTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(TemplarLandRaiderCrusader.spirit_id)) then
			self.squad_ai:DoSpecialAbility(TemplarLandRaiderCrusader.spirit_id)
		end	  
	end
  
	-- Check if we are attacking and not in home base
	if (self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(TemplarLandRaiderCrusader.hkmissiles_id)) then

		-- Launch HK Missile at either Vehicles or Buildings
		Ability.DoAbilityTarget(self.squad_ai, TemplarLandRaiderCrusader.hkmissiles_id, Templar_Ability.Filters.CloseVehicleHighEnemy, 1)  
		Ability.DoAbilityTarget(self.squad_ai, TemplarLandRaiderCrusader.hkmissiles_id, Templar_Ability.Filters.CloseVehicleMedEnemy, 1)
		Ability.DoAbilityTargetEntity( self.squad_ai, TemplarLandRaiderCrusader.hkmissiles_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
	end  

	-- Check if we can launch smoke
	local iSmokeID = cpu_manager.stats:GetAbilityID( "templar_smoke_launchers" )
	if (self.squad_ai:CanDoAbility(iSmokeID)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(iSmokeID)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 200) then
			self.squad_ai:DoSpecialAbilitySquad(iSmokeID, oUnit:GetSquad())
		end
	end
	
	-- Do basic abilities
	TemplarVehicleTactic.DoAbilities(self)
end

function TemplarLandRaiderCrusaderTactic:Update()

	-- Call standard method
	local bResult = TemplarVehicleTactic.Update(self)
  
	-- Check if vehicle needs repair
	if (bResult) and (self.m_bNeedRepair) then
			
		-- Check if vehicle is repaired
		if (self.squad_ai:GetHealthPercentage() > 0.75) then
        		self.m_bNeedRepair = false
        		self.hurt_level = 0.35
    		end
	end
	return bResult 
end