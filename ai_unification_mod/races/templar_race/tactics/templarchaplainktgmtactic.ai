class 'TemplarChaplainKtgmTactic' (TemplarInfantryTactic)

TemplarChaplainKtgm = {}

function TemplarChaplainKtgmTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Templar Chaplain Kill Team Tactic")
end

function TemplarChaplainKtgmTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function TemplarChaplainKtgmTactic:IsDefender()
	return self:IsCommanderDefender()
end

function TemplarChaplainKtgmTactic:IsAffectedByMorale()
	return false
end

function TemplarChaplainKtgmTactic:InitAbilities()

	-- Init ability ID's
	if (TemplarChaplainKtgm.zeal_id == nil) then
		TemplarChaplainKtgm.zeal_id = cpu_manager.stats:GetAbilityID( "templar_righteous_zeal_chaplain" )
	end
end

function TemplarChaplainKtgmTactic:DoAbilities()

	if (self.squad_ai:IsAttached() and self.squad_ai:IsInCombat()) then

		if (self.squad_ai:CanDoAbility(TemplarChaplainKtgm.zeal_id)) then

 	 		-- If we are dying, lower requisites for attacks
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

				-- Search for a nearby enemy squad
				local oSquad = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), 5, 5)
				if ( oSquad ~= nil ) then
					--print("Using Righteous Zeal with Poor Health against the enemy for player "..tostring(cpu_manager.player_id).."")
					self.squad_ai:DoSpecialAbility(TemplarChaplainKtgm.zeal_id)
				end
			else
				-- Search for a nearby enemy squad
				local oSquad = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), 5, 10)
				if ( oSquad ~= nil ) then
					--print("Using Righteous Zeal with Good Health against the enemy for player "..tostring(cpu_manager.player_id).."")
					self.squad_ai:DoSpecialAbility(TemplarChaplainKtgm.zeal_id)
				end
			end
		end
	end
 end

function TemplarChaplainKtgmTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end
