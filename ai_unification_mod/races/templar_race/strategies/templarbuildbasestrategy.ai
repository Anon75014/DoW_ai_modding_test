    	G_KTGM_Commander_WG_Choice_Made = false
end

function TemplarBuildBaseStrategy:ChooseBuildProgram()

	-- Check build program count
	if (table.getn(self.info.BuildPrograms) ~= 4) then
		return BuildBaseStrategy.ChooseBuildProgram(self)
	end

	-- Maintain the same strategy, on AI re-initiation (Save->Load, Change Players, etc.)
	if cpu_manager.cpu_player:IsResearchComplete("templar_vow_accept_challenge") then
		return 1
	elseif cpu_manager.cpu_player:IsResearchComplete("templar_vow_abhor_witch") then
		return 2
	elseif cpu_manager.cpu_player:IsResearchComplete("templar_vow_suffer_not") then
		return 3
	elseif cpu_manager.cpu_player:IsResearchComplete("templar_vow_uphold_honour") then
		return 4
	end

	-- Get map size and closest enemy distance
	local sMapSize, iClosestEnemyDistance = self:GetMapSize()

	-- Set probabilities of the strategies according to the map size
	local iBuildProgram1	-- Accept the Challenge			--Anti-Ork
	local iBuildProgram2	-- Abhor the Witch, Destroy the Witch	--Anti-Eldar/Chaos
	local iBuildProgram3	-- Suffer Not the Unclean to Live	--Anti-SM/Chaos
	local iBuildProgram4	-- Uphold the Honour of the Emperor	--Anti-Tau/IG/SM/Chaos/or Everyone!

	if (sMapSize == "small" or iClosestEnemyDistance <= 70 or cpu_manager.iPlayerCount == 2) then

		iBuildProgram1 = 25
		iBuildProgram2 = 25
		iBuildProgram3 = 25
		iBuildProgram4 = 25

	elseif (sMapSize == "large" and cpu_manager.iPlayerCount >= 6) then

		iBuildProgram1 = 25
		iBuildProgram2 = 25
		iBuildProgram3 = 25
		iBuildProgram4 = 25
	else

		iBuildProgram1 = 25
		iBuildProgram2 = 25
		iBuildProgram3 = 25
		iBuildProgram4 = 25
	end

	-- Modify probabilities according to the closest enemy player
	local oEnemy = cpu_manager:FindClosestEnemyPlayer(false)
	local sEnemy = oEnemy:GetPlayerRaceName()
	if (sEnemy == "ork_race"  or sEnemy == "tyranid_race" or sEnemy == "space_marine_race" or sEnemy == "tau_race") then

		iBuildProgram1 = iBuildProgram1 + 25

	elseif (sEnemy == "eldar_race" or sEnemy == "sisters_race") then

		iBuildProgram2 = iBuildProgram2 + 25

	elseif (sEnemy == "chaos_marine_race" or sEnemy == "dark_eldar_race") then

		iBuildProgram3 = iBuildProgram3 + 25

	elseif (sEnemy == "guard_race" or sEnemy == "templar_race" or sEnemy == "necron_race") then

		iBuildProgram4 = iBuildProgram4 + 25
	end

	-- Now choose a program
	iBuildProgram2 = iBuildProgram1 + iBuildProgram2
	iBuildProgram3 = iBuildProgram2 + iBuildProgram3
	iBuildProgram4 = iBuildProgram3 + iBuildProgram4

	local iRandom = math.random(1, iBuildProgram4)
	if (iRandom <= iBuildProgram1) then
		return 1
	elseif (iRandom <= iBuildProgram2) then
		return 2
	elseif (iRandom <= iBuildProgram3) then
		return 3
	elseif (iRandom <= iBuildProgram4) then
		return 4
	end
end

function TemplarBuildBaseStrategy:EvaluateSquadCap()

	if (self:CheckSquadCap(150, 0)) then -- and (self:GetSquadCap() > 7) then

		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research

		if (not cpu_manager.cpu_player:IsResearchComplete( "templar_squad_cap_research" )) then
			tBuildType.name = "templar_squad_cap_research"
		elseif not cpu_manager.cpu_player:IsResearchComplete( "templar_squad_cap_research_1" ) then
			tBuildType.name = "templar_squad_cap_research_1"
		else
			return
		end

		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end

	-- Check support cap
	if (self:CheckSupportCap(150, 300)) then

		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research


		if (not cpu_manager.cpu_player:IsResearchComplete( "templar_support_cap_research" )) then
			tBuildType.name = "templar_support_cap_research"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "templar_support_cap_research_1" )) then
			tBuildType.name = "templar_support_cap_research_1"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "templar_support_cap_research_2" )) then
			tBuildType.name = "templar_support_cap_research_2"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "templar_support_cap_research_3" )) then
			tBuildType.name = "templar_support_cap_research_3"
		else
			return
		end

		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
end

function TemplarBuildBaseStrategy:GetBuildingName( sType )

	-- Return race specific object string
	if (sType == "HQ") then
		return "templar_hq"

	elseif (sType == "Generator") then
		return "templar_generator"

	elseif (sType == "BiggerGenerator") then
		return "templar_thermo_generator"

	elseif (sType == "VehicleBuilding") then
		return "templar_vehicle_building"

	elseif (sType == "ListeningPost") then
		return "templar_listening_post"

	elseif (sType == "Turret") then
		return "templar_turret_bolter"

	elseif (sType == "Mine") then
		return "templar_mine_field"
	end

	return nil
end

