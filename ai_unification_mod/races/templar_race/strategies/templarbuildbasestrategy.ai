function TemplarBuildBaseStrategy:UpdateTierLevel()

	-- Reset tier level
	self.tierLevel = 1

	-- Prepare
	local iHQAddon1ID = cpu_manager.stats:GetAddOnID("templar_hq_addon_1")
	local iHQAddon2ID = cpu_manager.stats:GetAddOnID("templar_hq_addon_2")
	local oStats = cpu_manager.stats:GetPlayerStatsFromID( cpu_manager.player_id )

	-- Check HQ's for addons
	for oBase in oStats:GetBases() do

		-- Check for valid building
		if (oBase:IsValid() and not oBase:IsListeningPost()) then

			-- Check for HQ addon 2
			if (oBase:HasAddOn(iHQAddon2ID)) then

				-- We still have the proper add-on
				if (cpu_manager.cpu_player:IsResearchComplete("templar_heavy_armor_deployment")) then
					self.tierLevel = 4
					return
				else
					self.tierLevel = 3
					return
				end

			-- Check for HQ addon 1
			elseif (oBase:HasAddOn(iHQAddon1ID)) then
				self.tierLevel = 2
			end
		end
	end
end

function TemplarBuildBaseStrategy:BuildFlexible()

	-- Always test first to see if there is at least one existing HQ
	if self:GetBuildingCountByName(self:GetBuildingName("HQ")) < 1 then
     		self:BuildFirstHQ()
	end

	-- Always test first to see if there is at least one existing builder unit
	self:BuildFirstBuilder("templar_squad_techmarine_builder")

	-- Black Templar Last Standing Hero Wargear
	local iHeroLSCommanderSquads = self:CountSquads("templar_squad_champion_ktgm")
	if iHeroLSCommanderSquads > 0 then

		self:DynamicResearch("templar_ls_health_upgrade", 1, 125, 125, 0, 0, nil, 0)
		self:DynamicResearch("templar_ls_health_upgrade2", 1, 125, 125, 0, 0, nil, 0)

		if not G_KTGM_Commander_WG_Choice_Made then
			 -- WARNING: Below, ALWAYS insert numbers <= of the total in each table!
           		 -- I used the actual total of each table, so that ALL will be randomly available
            		i_WG_Selection_number1 = 17	-- The number of researches to randomize, from the 1st table
            		i_WG_Selection_number2 = 11	-- The number of researches to randomize, from the 2nd table

            		i_WG_Selections1 = {
			{"templar_ls_champion_equipment", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_chosen_aura", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_commander_upgrade", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_commander_upgrade2", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_dropod_assist", 1, 50, 50, 0, 0, nil, 0},
			{"templar_ls_dropod_cooldown1", 1, 75, 75, 0, 0, nil, 0},
			{"templar_ls_dropod_cooldown2", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_holy_orb", 1, 200, 200, 0, 0, nil, 0},
			{"templar_ls_honours1", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_honours2", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_melee_upgrade", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_melee_upgrade2", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_melee_upgrade3", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_orbital_strike", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_range_upgrade", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_relic1", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_relic2", 1, 125, 125, 0, 0, nil, 0}}

            		i_WG_Selections2 = {
			{"templar_ls_vow1", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_vow2", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_vow3", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_vow4", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_assist1", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_assist2", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_assist3", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_assist4", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_legendary_upgrade", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_dropod_boost", 1, 125, 125, 0, 0, nil, 0},
			{"templar_ls_marine_zeal", 1, 125, 125, 0, 0, nil, 0}}

            		-- The switch ensures we make the choice only ONCE
            		G_KTGM_Commander_WG_Choice_Made = true
            		i_WG_Rdm1 = {}          -- The random Selections from the 1st table
            		i_WG_Rdm2 = {}          -- The random Selections from the 2nd table

            		-- Populate the two random tables with the number of researches we need for each
            		for i = 1, i_WG_Selection_number1 do
                		local selection = math.random(1, table.getn(i_WG_Selections1))
                		table.insert(i_WG_Rdm1, i_WG_Selections1[selection])
                		table.remove(i_WG_Selections1, selection)
            		end

            		for i = 1, i_WG_Selection_number2 do
                		local selection = math.random(1, table.getn(i_WG_Selections2))
                		table.insert(i_WG_Rdm2, i_WG_Selections2[selection])
                		table.remove(i_WG_Selections2, selection)
            		end
		end

       		-- We are done. Perform the Researches
        	for i = 1, table.getn(i_WG_Rdm1) do
            		self:DynamicResearch(i_WG_Rdm1[i][1], 0, i_WG_Rdm1[i][3], i_WG_Rdm1[i][4], 0, 0, nil, 0)
        	end

    		for i = 1, table.getn(i_WG_Rdm2) do
       			self:DynamicResearch(i_WG_Rdm2[i][1], 0, i_WG_Rdm2[i][3], i_WG_Rdm2[i][4], 0, 0, nil, 0)
       		end

