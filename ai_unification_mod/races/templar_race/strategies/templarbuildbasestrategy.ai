	self:AddDetectorUnit("templar_squad_damocles")
	self:AddDetectorUnit("templar_squad_champion")
	self:AddDetectorUnit("templar_squad_champion_2")

	CpuPrerequisites2.AddSpecialItem("0titan_building_enable", CpuPrerequisites.BT_Research)
	CpuPrerequisites2.AddSpecialItem("templar_ls_vow1", CpuPrerequisites.BT_Research)
	CpuPrerequisites2.AddSpecialItem("templar_ls_vow2", CpuPrerequisites.BT_Research)
	CpuPrerequisites2.AddSpecialItem("templar_ls_vow3", CpuPrerequisites.BT_Research)
	CpuPrerequisites2.AddSpecialItem("templar_ls_vow4", CpuPrerequisites.BT_Research)
