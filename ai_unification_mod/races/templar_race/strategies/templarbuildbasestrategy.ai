				-- Build the Chaplain Kill Team squad immediately
				local tBuildType = CpuBuildType()
				tBuildType.btype = CpuPrerequisites.BT_Squad
				tBuildType.name = "templar_squad_chaplain_ktgm"
				if (self:TryBuild( tBuildType )) then
					aitrace("BuildController: Dynamic build of "..tBuildType.name)
				end
			end
		end

		-- Force build deployable Sword Brethern Primaris squad to get immediate battlefield presence if research is build
		if (cpu_manager.cpu_player:IsResearchComplete("templar_ls_assist3")) then

			if (self:CountSquads("templar_squad_sword_brethren_primaris_ktgm") < 1) then

				-- Build the Sword Brethern Primaris Kill Team squad immediately
				local tBuildType = CpuBuildType()
				tBuildType.btype = CpuPrerequisites.BT_Squad
				tBuildType.name = "templar_squad_sword_brethren_primaris_ktgm"
				if (self:TryBuild( tBuildType )) then
					aitrace("BuildController: Dynamic build of "..tBuildType.name)
				end
			end
		end

		-- Force build deployable Marshall squad to get immediate battlefield presence if research is build
		if (cpu_manager.cpu_player:IsResearchComplete("templar_ls_assist4")) then

			if (self:CountSquads("templar_squad_marshall_ktgm") < 1) then

				-- Build the Marshall Kill Team squad immediately
				local tBuildType = CpuBuildType()
				tBuildType.btype = CpuPrerequisites.BT_Squad
				tBuildType.name = "templar_squad_marshall_ktgm"
				if (self:TryBuild( tBuildType )) then
					aitrace("BuildController: Dynamic build of "..tBuildType.name)
				end
			end
		end
	end

 	local iArmyStrength = cpu_manager:GetArmyStrength()
  	local num_infantry_squads = self:CountSquads("templar_squad_crusader") + self:CountSquads("templar_squad_assault") + self:CountSquads("templar_squad_combat") 
	local num_terminator_squads = self:CountSquads("templar_squad_terminator") + self:CountSquads("templar_squad_terminator_assault")
  	local num_vehicle_squads = self:CountSquads("templar_squad_razorback") + self:CountSquads("templar_squad_rhino") + self:CountSquads("templar_squad_predator") + self:CountSquads("templar_squad_vindicator")

	-- Dynamic research Item-Syntax: ResearchName, MinTier, RequisitionCost, PowerCost, MinSquadCap, MinSupportCap, SquadName, SquadMinCount

	if (num_infantry_squads > 2) and ( self:GetBuildingCountByBPID(cpu_manager.stats:GetBuildingID("templar_armoury"), true)> 0 ) and (iArmyStrength >= 850) then
    		self:DynamicResearch("templar_health_upgrade_research",     1,  60,  30,  0, 0, nil, 0)
    		self:DynamicResearch("templar_frag_grenade_research",       1,  25,  75,  0, 0, nil, 0)
    		self:DynamicResearch("templar_accuracy_upgrade_research",   1,  60,  30,  6, 0, nil, 0)
   		self:DynamicResearch("templar_power_weapon_upgrade_1",      2,  50,  20,  6, 0, nil, 0)
    		self:DynamicResearch("templar_melta_bomb_research",         2,  75, 100,  0, 0, nil, 0)
    		self:DynamicResearch("templar_health_upgrade_research_2",   2,  80,  40,  0, 0, nil, 0)
    		self:DynamicResearch("templar_accuracy_upgrade_research_2", 2,  80,  40,  6, 0, nil, 0)
	end

	-- Compute tier 2 researches
	if (self.tierLevel >= 2) then

		if (iArmyStrength >= 1500) then 

			-- weapon upgrades
    			self:DynamicResearch("templar_combat_shields", 2, 150, 100, 0, 0, nil, 0)
      			self:DynamicResearch("templar_power_weapon_upgrade_2", 2, 50, 50, 10, 0, nil, 0)

    			-- ranged to plasma
    			self:DynamicResearch("templar_commander_ranged_upgrade_1", 2, 50, 50, 0, 0, nil, 0)
			self:DynamicResearch("templar_commander_health_research_1", 2, 100, 25, 0, 0, nil, 0)
		end

		-- Compute bonus researches
		if (iArmyStrength >= 2000) and (num_vehicle_squads > 2) then
			self:DynamicResearch("templar_smoke_launcher_research", 2, 75, 25, 0, 0, nil, 0)
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("templar_turret_bolter_no_limit", 2, 2, 200, 100, 0, 0)
	end

	-- Compute tier 3 researches
	if (self.tierLevel >= 3) then

		if (iArmyStrength >= 2000) then

			-- commander health research
			self:DynamicResearch("templar_commander_health_research_2", 3, 125, 50, 0, 0, nil, 0)

			-- honours research
    			self:DynamicResearch("templar_terminator_honours_research", 3, 100, 100, 0, 0, nil, 0)
		end

		if (iArmyStrength >= 2500) then

			self:DynamicResearch("templar_sacred_artifacts_research", 3, 150, 150, 0, 0, nil, 0)
			self:DynamicResearch("templar_skull_probe_infiltrate_research", 3, 100, 50, 0, 0, nil, 0)
        
			-- Compute terminator researches
			if (num_terminator_squads  >= 1) then
				self:DynamicResearch("templar_personalteleporter_research", 3, 75, 125, 0, 0, nil, 0)
			end
    		end

		-- Force build additional generators in late game if we can with enough requisition and when low on power
                local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
                local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
                if iReq > 400 and iReq/iPow > 1.6 then

                	-- Check if a plan exists
                	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("Generator"))
                    	if (self:PlanExists("Build Building Plan", iBuildingID)) then
                       		return
                    	end

             		-- Check if any generators are in production
                    	for oBuildChannel in build_manager:GetBuildChannelAIs() do
                        	-- Check building ID
                        	if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
                            		return
                        	end
                    	end

             		-- Build a Generator
                    	local tBuildType = CpuBuildType()
                    	tBuildType.btype = CpuPrerequisites.BT_Building
                    	tBuildType.name = self:GetBuildingName("Generator")
                    	if (self:TryBuild( tBuildType )) then
               			aitrace("BuildController: Dynamic build of "..tBuildType.name)
			end
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("templar_turret_bolter_no_limit", 4, 3, 300, 200, 0, 0)
	end

	-- Compute tier 4 researches
	if (self.tierLevel >= 4) then

		-- Compute Knight researches
		if iArmyStrength >= 1200 then
			self:DynamicResearch("templar_request_knight_research", 4, 300, 300, 0, 0, nil, 0)
		end

		-- Compute HQ Tier2 and Tier3 Addons for future HQs
       		if self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 then
			self:DynamicAddon("templar_hq_addon_1", 100, 4, 500, 500, 0, 0, nil, nil, false)
			self:DynamicAddon("templar_hq_addon_2", 50, 4, 1000, 1000, 0, 0, nil, nil, false)
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("templar_turret_bolter_no_limit", 10, 4, 400, 300, 0, 0)
	end

	-- Restrict dynamic builds to hard difficulty or higher
	if (CpuManager.AISettings.bMultiBuildings) then

		-- Dynamic buildings
		-- Item-Syntax: BuildingName, BuildingCount, MinTier, MinRequisition, MinPower, MinSquadCap, MinSupportCap
		self:DynamicBuild("templar_hq", 2, 3, 700, 300, 0, 0)
		self:DynamicBuild("templar_hq", 3, 4, 1000, 600, 0, 0)
		self:DynamicBuild("templar_barracks", 2, 3, 800, 100, 0, 0)
		self:DynamicBuild("templar_barracks", 3, 4, 1000, 200, 0, 0)
		self:DynamicBuild("templar_vehicle_building", 2, 3, 300, 600, 0, 0)
		self:DynamicBuild("templar_vehicle_building", 3, 4, 600, 1000, 0, 0)
	end
end

-- Force AI to give priority to re-build HQ if lost and none are present
function TemplarBuildBaseStrategy:BuildFirstHQ()

	-- Check if a plan exists
	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))
	if (self:PlanExists("Build Building Plan", iBuildingID)) then
		return
	end

	-- Check if any HQ are in production
	for oBuildChannel in build_manager:GetBuildChannelAIs() do

		-- Check building ID
		if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
			return
		end
	end
		
	-- Build the HQ
	local sHQName = self:GetBuildingName("HQ")
	local tBuildType = CpuBuildType()
	tBuildType.btype = CpuPrerequisites.BT_Building
	tBuildType.name = sHQName
	if (self:TryBuild( tBuildType )) then
		aitrace("BuildController: Dynamic build of "..tBuildType.name)
	end
	return
end

-- Force AI to give priority to recruit a builder unit if none are present
function TemplarBuildBaseStrategy:BuildFirstBuilder(iBuilderName)

	if self:CountSquads(iBuilderName) < 1 then

		-- Recruit a builder squad
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Squad
		tBuildType.name = iBuilderName
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic build of "..tBuildType.name)
		end
		return
	end
end

-- Arkhan 01.2006: Method to check if force tech should be computed
function TemplarBuildBaseStrategy:ForceTech()

	-- Check time
	if (g_iGMT < 60 * CpuManager.ForceTech.StartTier1) then
		return false
	end

	-- Check ressources
	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

	-- Check tier
	local iTierLevel = self:GetTierLevel()
	if (iTierLevel == 1) then

		-- Check resources
		if (iRequisition > 500 and iPower > 200) then
			return false
		end
		return not self.m_bHQAddon1

	elseif (iTierLevel == 2) then

		-- Check build channel for machine cult
		if (self:GetBuildingCountByName("templar_vehicle_building", false) < 1) then
			return true
		end

		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier2 and (iRequisition < 600 or iPower < 600)) then
			return true
		end

	elseif (iTierLevel == 3) then

		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier3 and (iRequisition < 600 or iPower < 600)) then
			return true
		end
	end
	return false
end

-- Arkhan 03.2006: Return placement type for buildings
function TemplarBuildBaseStrategy:GetPlacementType(iBuildingID)

	-- Check building
	if (iBuildingID == cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))) then
        	local count = self:GetBuildingCountByName(self:GetBuildingName("HQ"), false)
		local friend = cpu_manager:FindClosestFriendPlayer()
		if friend == nil then
			-- Lone Player
			if count == 0 and not cpu_manager:HQThreat() then
				return "HQ"
			else
				return "Safeplace"
			end
		else
			-- Has allies
			if count > 0 or cpu_manager:HQThreat() then
				return "HQ"
			else
				return "Safeplace"
			end
		end
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("templar_barracks") or
			iBuildingID == cpu_manager.stats:GetBuildingID("templar_vehicle_building")) then
		return "Military"
	elseif (cpu_manager:IsTurret(iBuildingID) or
			iBuildingID == cpu_manager.stats:GetBuildingID("templar_turret_bolter_no_limit")) then
		return "Front2"
	elseif (cpu_manager:IsMine(iBuildingID)) then
		return "Mine"
	elseif (cpu_manager:IsGenerator(iBuildingID) or
			iBuildingID == cpu_manager.stats:GetBuildingID("templar_armoury")) then
		return "BaseBack"
	end
	return "Basic"
end

-- Arkhan 03.2006: Inherited method to modify squad demand
function TemplarBuildBaseStrategy:ModifySquadDemand(iUnitID)

	-- No more skullprobes then squads
	if (iUnitID == cpu_manager.stats:GetSquadID("templar_squad_skull_probe")) then

		-- Check number of attachable squads
		local skullprobe_attach = function ( squad_ai )
			return (squad_ai:GetTactic():GetUnitStrength() >= 250 and squad_ai:CanReceiveAttachment())
		end
		local num_attach = self:CountSquads("templar_squad_crusader", skullprobe_attach) +
        	-- self:CountSquads("templar_squad_crusader_adv", skullprobe_attach) +
				   self:CountSquads("templar_squad_sword_brethren_cc", skullprobe_attach) +
				   self:CountSquads("templar_squad_terminator", skullprobe_attach)

 		-- Check skullprobe count
		local num_skuprobe = self:CountSquads("templar_squad_skull_probe")
		if (2 * num_skuprobe >= num_attach) then
			return 0
		end
	end

	if (iUnitID == cpu_manager.stats:GetSquadID("templar_squad_rhino")) then

		-- Check army strength
		if (cpu_manager:GetArmyStrength() < 2000) then
			return 0
		end
    
	-- Check, that we need more advanced vehicles
	local num_adv_vehicle_squads = self:CountSquads("templar_squad_dreadnought_codex") +  self:CountSquads("templar_squad_predator") +
	self:CountSquads("templar_squad_vindicator")

		if (num_adv_vehicle_squads == 0) then
			return 0
		end
	end
	return BuildBaseStrategy.ModifySquadDemand(self, iUnitID)
end

