class 'KriegBlazeTactic' (KriegInfantryTactic)

KriegBlaze = {}

function KriegBlazeTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Krieg Blaze Tactic")
	
	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function KriegBlazeTactic:InitAbilities()

	-- Init ability ID's
	if (KriegBlaze.shotgun_id == nil) then
		KriegBlaze.shotgun_id = cpu_manager.stats:GetAbilityID( "krieg_blazetrooper_shotgun_activate" )
	end
end

function KriegBlazeTactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityArea( self.squad_ai, KriegBlaze.shotgun_id, Ability.Filters.CloseInfantryEnemy, 20, 2 )
		Ability.DoAbilityArea( self.squad_ai, KriegBlaze.shotgun_id, Ability.Filters.CloseMonsterEnemy, 20, 2 )
	else
		Ability.DoAbilityArea( self.squad_ai, KriegBlaze.shotgun_id, Ability.Filters.CloseInfantryEnemy, 20, 6 )
		Ability.DoAbilityArea( self.squad_ai, KriegBlaze.shotgun_id, Ability.Filters.CloseMonsterEnemy, 20, 4 )
	end

	-- Call standard method
	KriegInfantryTactic.DoAbilities(self)
end

function KriegBlazeTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
end
