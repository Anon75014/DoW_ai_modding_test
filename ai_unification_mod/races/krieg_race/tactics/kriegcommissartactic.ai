class 'KriegCommissarTactic' (KriegInfantryTactic)

KriegCommissar = {}

function KriegCommissarTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Krieg Commissar Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function KriegCommissarTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function KriegCommissarTactic:IsDefender()
	return self:IsCommanderDefender()
end

function KriegCommissarTactic:InitAbilities()

end

function KriegCommissarTactic:DoAbilities()

end

function KriegCommissarTactic:CheckForBroken()

	if (self.squad_ai:IsBroken()) then
	
		-- Check if I can repair my morale
		local rally_id = cpu_manager.stats:GetAbilityID( "krieg_commissar_rally" )
		if (self.squad_ai:CanDoAbility( rally_id )) then
			self.squad_ai:DoSpecialAbility( rally_id )
		end
	end
	
	-- Call basic broken check method
	InfantryTactic.CheckForBroken(self)
end

function KriegCommissarTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad(false, false, 1000, 60, nil)
end
