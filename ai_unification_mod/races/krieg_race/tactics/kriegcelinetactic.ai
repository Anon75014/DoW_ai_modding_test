class 'KriegCelineTactic' (KriegInfantryTactic)

KriegCeline = {}

function KriegCelineTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Krieg Prioress Celine Tactic")
	
	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function KriegCelineTactic:InitAbilities()

	-- Init ability ID's
	if (KriegCeline.ration_id == nil) then
		KriegCeline.ration_id = cpu_manager.stats:GetAbilityID( "krieg_sirin_ration_delivery" )
	end

	if (KriegCeline.grenade_id == nil) then
		KriegCeline.grenade_id = cpu_manager.stats:GetAbilityID( "krieg_sirin_rifle_grenades" )
	end
end

function KriegCelineTactic:DoAbilities()

	-- Try to send rations to hurt units
	if self.squad_ai:CanDoAbility(KriegCeline.ration_id) then
		local iRange = self.squad_ai:GetAbilityRange(KriegCeline.ration_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(KriegCeline.ration_id, oUnit:GetSquad())
		end
	end

	-- Try to use grenades
	if self.squad_ai:CanDoAbility(KriegCeline.grenade_id) then

		-- We are dying, lower requisites for attacks
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
			Ability.DoAbilityTarget(self.squad_ai, KriegCeline.grenade_id, Ability.Filters.CloseVehicleEnemy, 1)
			Ability.DoAbilityTarget(self.squad_ai, KriegCeline.grenade_id, Ability.Filters.CloseInfantryEnemy, 3)
			Ability.DoAbilityTarget(self.squad_ai, KriegCeline.grenade_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1)
			Ability.DoAbilityTarget(self.squad_ai, KriegCeline.grenade_id, Ability.Filters.CloseMonsterEnemy, 1)
			Ability.DoAbilityTarget(self.squad_ai, KriegCeline.grenade_id, Ability.Filters.CloseCommanderEnemy, 1)
		else
			Ability.DoAbilityTarget(self.squad_ai, KriegCeline.grenade_id, Ability.Filters.CloseVehicleEnemy, 1)
			Ability.DoAbilityTarget(self.squad_ai, KriegCeline.grenade_id, Ability.Filters.CloseInfantryEnemy, 6)
			Ability.DoAbilityTarget(self.squad_ai, KriegCeline.grenade_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1)
			Ability.DoAbilityTarget(self.squad_ai, KriegCeline.grenade_id, Ability.Filters.CloseMonsterEnemy, 2)
			Ability.DoAbilityTarget(self.squad_ai, KriegCeline.grenade_id, Ability.Filters.CloseCommanderEnemy, 1)
		end
	end

	-- Call standard method
	KriegInfantryTactic.DoAbilities(self)
end

function KriegCelineTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
    	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end
end
