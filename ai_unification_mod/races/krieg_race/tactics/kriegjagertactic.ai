class 'KriegJagerTactic' (KriegInfantryTactic)

KriegJager = {}

function KriegJagerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Krieg Jager Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function KriegJagerTactic:InitAbilities()

	-- Init ability ID's
	if (KriegJager.smoke_id == nil) then
		KriegJager.smoke_id = cpu_manager.stats:GetAbilityID( "krieg_smoke_invisibility" )
	end
end

function KriegJagerTactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.6) then

		-- Try to activate smoke invisibility
		if (self.squad_ai:CanDoAbility(KriegJager.smoke_id)) then
	
			local oSquad = Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 20, 1)
			if (oSquad ~= nil) then
			
				-- Only try to use smoke if enemy unit is attacking
				if (oSquad:IsAttacking()) then
					self.squad_ai:DoSpecialAbility(KriegJager.smoke_id)
				end
			end
		end
	end

	-- Call standard method
	KriegInfantryTactic.DoAbilities(self)
end

function KriegJagerTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
end