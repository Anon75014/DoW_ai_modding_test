class 'KriegResearchKtgmTactic' (BaseTactic)

KriegResearchKtgm = {}

function KriegResearchKtgmTactic:__init( base_ai ) super( base_ai )

	self:SetName("Krieg Research Kill Team Tactic")

	-- The name of the squad to target
	self.squad1_name = "krieg_squad_command_squad_ktgm"
end

function KriegResearchKtgmTactic:InitAbilities()
	
	-- Init abilities
	if (KriegResearchKtgm.Strongheal_id == nil) then
		KriegResearchKtgm.Strongheal_id = cpu_manager.stats:GetAbilityID( "krieg_ls_lord_general_healing_1000" )
	end

	if (KriegResearchKtgm.Lightheal_id == nil) then
		KriegResearchKtgm.Lightheal_id = cpu_manager.stats:GetAbilityID( "krieg_ls_lord_general_healing_500" )
	end
end

function KriegResearchKtgmTactic:DoAbilities()
	
	aitrace("KriegResearchKtgmTactic: Do abilities...")

	-- Check if squad is valid
    	for oSquad in military_manager:GetSquads() do
        	if oSquad:IsValid() then
            		if oSquad:GetSquadName() == self.squad1_name then

				-- Try to use Strong Heal ability on squad (restores target's health by 1000 HP)
				if (self.base_ai:CanDoAbility(KriegResearchKtgm.Strongheal_id)) then
	
					-- Check if health needs an energency boost
					if (oSquad:WasRecentlyHurt() and oSquad:GetHealthPercentage() < 0.3) then

						-- Check if we have the needed resources
						local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
						local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
      						if iReq >= 100 and iPower >= 100 then		
		
							-- Use strong heal ability on commander
							self.base_ai:DoSpecialAbility(KriegResearchKtgm.Strongheal_id)
							--print("Using Heavy Heal ability for player "..tostring(cpu_manager.player_id).."")
						end
					end
				end
