class 'KriegVehicleTactic' (VehicleTactic)

function KriegVehicleTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Krieg Vehicle Tactic")
end

-- Check if the vehicle should dance away in melee
function KriegVehicleTactic:CheckVehicleDance(sName)

	if (sName == "krieg_squad_chimera" or
		sName == "krieg_squad_hellhound" or
		sName == "krieg_squad_firewolf" or
		sName == "krieg_squad_centaur" or
		sName == "krieg_squad_fenghuang" or
		sName == "krieg_squad_dragon" or
		sName == "krieg_squad_baihu" or
		sName == "krieg_squad_basilisk" or
		sName == "krieg_squad_bombard" or
		sName == "krieg_squad_colossus" or
		sName == "krieg_squad_lemanruss" or
		sName == "krieg_squad_siegfried" or
	      	sName == "krieg_squad_valdor" or
	      	sName == "krieg_squad_ragnarok" or
	      	sName == "krieg_squad_qilin" or
	      	sName == "krieg_squad_yinglong" or
	      	sName == "krieg_squad_gatling_tank" or
		sName == "krieg_squad_malcador" or
		sName == "krieg_squad_minotaur" or
		sName == "krieg_squad_macharius" or
		sName == "krieg_squad_airship" or
		sName == "krieg_squad_zhurong" or
		sName == "krieg_squad_deathhammer" or
		sName == "krieg_squad_lucius_baneblade") then
		return true
	end
	return false
end

function KriegVehicleTactic:DoAbilities()

	-- New code to unstuck units with pathing issues, that can jump.
	-- Call it with [true], only for multi-membered squads.
	self:SolveStuckCase(false)

	-- Call standard method
	VehicleTactic.DoAbilities(self)
end
