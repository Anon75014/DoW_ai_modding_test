class 'KriegGrenadierTactic' (KriegInfantryTactic)

KriegGrenadier = {}

function KriegGrenadierTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Krieg Grenadier Tactic")
	
	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function KriegGrenadierTactic:InitAbilities()
--[[
	-- Init ability ID's
	if (KriegGrenadier.gas == nil) then
		KriegGrenadier.gas = cpu_manager.stats:GetAbilityID( "krieg_gas_grenades" )
	end

	if (KriegGrenadier.krak == nil) then
		KriegGrenadier.krak = cpu_manager.stats:GetAbilityID( "krieg_krak_grenades" )
	end

	if (KriegGrenadier.smoke == nil) then
		KriegGrenadier.smoke = cpu_manager.stats:GetAbilityID( "krieg_smoke_grenades" )
	end
]]
end

function KriegGrenadierTactic:DoAbilities()
--[[
	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityPos( self.squad_ai, KriegGrenadier.gas, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, KriegGrenadier.krak, Ability.Filters.CloseVehicleEnemy, 1 )
		Ability.DoAbilityPos( self.squad_ai, KriegGrenadier.smoke, Ability.Filters.CloseInfantryEnemy, 4 )
	else
		Ability.DoAbilityPos( self.squad_ai, KriegGrenadier.gas, Ability.Filters.CloseInfantryEnemy, 6 )
		Ability.DoAbilityTarget( self.squad_ai, KriegGrenadier.krak, Ability.Filters.CloseVehicleEnemy, 2 )
		Ability.DoAbilityPos( self.squad_ai, KriegGrenadier.smoke, Ability.Filters.CloseInfantryEnemy, 8 )
	end
]]
	-- Had to declare ability ids locally as for whatever reason they won't get passed from the standard function
	local krieggrenadier_gas = cpu_manager.stats:GetAbilityID( "krieg_gas_grenades" )
	local krieggrenadier_krak = cpu_manager.stats:GetAbilityID( "krieg_krak_grenades" )
	local krieggrenadier_smoke = cpu_manager.stats:GetAbilityID( "krieg_smoke_grenades" )

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityPos( self.squad_ai, krieggrenadier_gas, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, krieggrenadier_krak, Ability.Filters.CloseVehicleEnemy, 1 )
		Ability.DoAbilityPos( self.squad_ai, krieggrenadier_smoke, Ability.Filters.CloseInfantryEnemy, 4 )
	else
		Ability.DoAbilityPos( self.squad_ai, krieggrenadier_gas, Ability.Filters.CloseInfantryEnemy, 6 )
		Ability.DoAbilityTarget( self.squad_ai, krieggrenadier_krak, Ability.Filters.CloseVehicleEnemy, 2 )
		Ability.DoAbilityPos( self.squad_ai, krieggrenadier_smoke, Ability.Filters.CloseInfantryEnemy, 8 )
	end

	-- Call standard method
	KriegInfantryTactic.DoAbilities(self)
end

function KriegGrenadierTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
end
