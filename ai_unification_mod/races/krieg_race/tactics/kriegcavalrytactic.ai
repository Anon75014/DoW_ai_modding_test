class 'KriegCavalryTactic' (KriegInfantryTactic)

KriegCavalry = {}

function KriegCavalryTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Krieg Cavalry Tactic")
end

function KriegCavalryTactic:InitAbilities()

	-- Init ability ID's
	if (KriegCavalry.charge_id == nil) then
		KriegCavalry.charge_id = cpu_manager.stats:GetAbilityID( "krieg_melta_lances_charge" )
	end

	if (KriegCavalry.rally_id == nil) then
		KriegCavalry.rally_id = cpu_manager.stats:GetAbilityID( "krieg_commisar_rally" )
	end
end

function KriegCavalryTactic:DoAbilities()

	-- Charge while in combat
	if ((self.squad_ai:IsInCombat() and self.squad_ai:IsInStateMove()) or self.stateID ~= Tactic.StateID.NoState) then
		if (self.squad_ai:CanDoAbility(KriegCavalry.charge_id)) then
			self.squad_ai:DoSpecialAbility(KriegCavalry.charge_id)
		end
	end

	if (self.squad_ai:IsBroken()) then
	
		-- Check if I can repair my morale
		if (self.squad_ai:CanDoAbility( KriegCavalry.rally_id )) then
			self.squad_ai:DoSpecialAbility( KriegCavalry.rally_id )
		end
	end

	-- Call standard method
	KriegInfantryTactic.DoAbilities(self)
end

function KriegCavalryTactic:CanOnlyDecap()
	return true
end

function KriegCavalryTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end	
end
