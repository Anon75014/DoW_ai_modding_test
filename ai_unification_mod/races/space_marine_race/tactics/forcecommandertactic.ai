	-- Try to use orbital bombardement (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(ForceCommander.orbital_ktgm)) then 

		-- Search for a nearby enemy squad
		local iRange = self.squad_ai:GetAbilityRange(ForceCommander.orbital_ktgm)
		local oUnit = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 12)
		if (oUnit ~= nil) then
			--print("Using Orbital Bombardement ability Ability for player "..tostring(cpu_manager.player_id).."")
			self.squad_ai:DoSpecialAbilitySquad(ForceCommander.orbital_ktgm, oUnit:GetSquad())
			return
		end
