class 'RazrorbackTactic' (SpaceMarineVehicleTactic)

Razrorback = {}

function RazrorbackTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Razrorback Tactic")

	-- Vehicle is a light transport
	self.m_iTransportVehicle = 1
	self.m_iTransportSlots = 1

	self.Chosen_Upgrade = math.random( 0, 5 )	  -- Choose one of the main weapons (addons 0 to 4, 5 is no addon)
	self.lastAddonTry = g_iGMT
end


function RazrorbackTactic:AutoBuildAddOn( addonSlot )
	for e in self.squad_ai:GetEntities() do
		local buildChannel = build_manager:GetBuildChannelFromID(e:GetID())
		if buildChannel ~= nil then
			local addOnID = buildChannel:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
			if (buildChannel:IsBuilding() == 0 and buildChannel:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
				buildChannel:BuildAddOn(addOnID)
				return
			end
		end
	end
	return
end


function RazrorbackTactic:InitAbilities()

	-- Init ability ID's
	if Razrorback.smoke_id == nil then
		Razrorback.smoke_id = cpu_manager.stats:GetAbilityID( "marines_smoke_launchers" )
	end
end


function RazrorbackTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(Razrorback.smoke_id)) then
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(Razrorback.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(Razrorback.smoke_id, oUnit:GetSquad())
		end
	end

	-- Check to addon every 10+ secs
	if self.Chosen_Upgrade < 5 and g_iGMT > self.lastAddonTry + 10 then
		self.lastAddonTry = g_iGMT
		-- Check available resources and health, before performing any upgrade
		local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
		if iReq > 200 and iPow > 200 and self.squad_ai:GetHealthPercentage() > 0.35 then
			self:AutoBuildAddOn(self.Chosen_Upgrade)
		end
	end

	-- Do basic abilities
	SpaceMarineVehicleTactic.DoAbilities(self)
end
