class 'RhinoGravTactic' (SpaceMarineVehicleTactic)

RhinoGrav = {}

function RhinoGravTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Grav Rhino Tactic")
	
	Tactic.AssignStateFunction( self, Tactic.States.Idle, RhinoGravTactic.BeginIdleState )
	Tactic.AssignStateFunction( self, Tactic.States.Hold, RhinoGravTactic.BeginHoldState )
	Tactic.AssignStateFunction( self, Tactic.States.Retreat, RhinoGravTactic.BeginRetreatState )
	Tactic.AssignStateFunction( self, Tactic.States.Attack, RhinoGravTactic.BeginAttackState )
	
	-- Vehicle is a light transport
	self.m_iTransportVehicle = 1
	self.m_iTransportSlots = 2
end

function RhinoGravTactic:IsAttacker()
	return (self.m_iUnloadTries > 0 or self.squad_ai:CanDoAbility(RhinoGrav.smoke_id))
end

function RhinoGravTactic:IsDefender()
	return (self.m_iUnloadTries > 0 or self.squad_ai:CanDoAbility(RhinoGrav.smoke_id))
end

function RhinoGravTactic:BeginIdleState()
	self:TransportMove()
	Tactic.SetSubState(self, self.IdleState, "Holding")
end

function RhinoGravTactic:BeginHoldState()
	self:TransportMove()
	Tactic.SetSubState(self, self.HoldState, "Holding")
end

function RhinoGravTactic:BeginRetreatState()
	self:TransportMove()
	Tactic.SetSubState( self, self.HoldState, "Holding" )
end

function RhinoGravTactic:BeginAttackState()
	self:TransportMove()
	Tactic.SetSubState(self, self.AttackingState, "Attacking")
end

function RhinoGravTactic:TransportMove()

	-- Check if we're busy
	if (self:IsInSubState() or self:CheckGatherMove()) then
		return
	end
	
	-- Check move delay
	if (g_iGMT < self.m_iMoveDelay + 3 and self:IsMoving()) then
		return
	end

	-- Try to unload troops
	local vSquadPos = self.squad_ai:GetPosition()
	local iDistance = distance_sqr(self.target, vSquadPos)	
	if (self:UnloadTroops(iDistance)) then
		self.m_iMoveDelay = g_iGMT
		return
	end
		
	-- Check distance
	if (self.squad_ai:WasRecentlyHurt()) then
		cpu_manager:DoMove(self.squad_ai, cpu_manager.start_pos, false, "RetreatMove")
		self.m_iMoveDelay = g_iGMT
		return
	elseif (iDistance > sqr(35)) then
		cpu_manager:DoMove(self.squad_ai, self.target, false, "TransportMove")
	elseif (iDistance > sqr(20) and not cpu_manager.terrain_analyzer:HasThreat(vSquadPos, 35)) then
		cpu_manager:DoMove(self.squad_ai, self.target, false, "TransportMove")
	else
		self.squad_ai:DoStop()
	end
	self.m_iMoveDelay = g_iGMT
end

function RhinoGravTactic:InitAbilities()

	-- Init ability ID's
	if (RhinoGrav.smoke_id == nil) then
		RhinoGrav.smoke_id = cpu_manager.stats:GetAbilityID( "marines_smoke_launchers" )	
	end

	if (RhinoGrav.repair_id == nil) then
		RhinoGrav.repair_id = cpu_manager.stats:GetAbilityID( "marines_self_repair_rhino" )	
	end
end

function RhinoGravTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(RhinoGrav.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(RhinoGrav.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(RhinoGrav.smoke_id, oUnit:GetSquad())
		end
	end

	-- Rhino Repair when low on health
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

		if (self.squad_ai:CanDoAbility( RhinoGrav.repair_id )) then
			self.squad_ai:DoSpecialAbility( RhinoGrav.repair_id )
		end
	end

	-- Call standard method
	SpaceMarineVehicleTactic.DoAbilities(self)
end


