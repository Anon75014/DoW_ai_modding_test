class 'LandRaiderAnvilarumTactic' (SpaceMarineVehicleTactic)

LandRaiderAnvilarum = {}

function LandRaiderAnvilarumTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Land Raider Anvilarum Tactic")
	
	-- Vehicle is a heavy transport
	self.m_iTransportVehicle = 2
	self.m_iTransportSlots = 2
end

function LandRaiderAnvilarumTactic:InitAbilities()

	-- Init ability ID's
	if (LandRaiderAnvilarum.spirit_id == nil) then
		LandRaiderAnvilarum.spirit_id = cpu_manager.stats:GetAbilityID( "marines_machine_spirit" )
	end
end

function LandRaiderAnvilarumTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(LandRaiderAnvilarum.spirit_id)) then
			self.squad_ai:DoSpecialAbility(LandRaiderAnvilarum.spirit_id)
		end	  
	end
	
	-- Do basic abilities
	SpaceMarineVehicleTactic.DoAbilities(self)
end