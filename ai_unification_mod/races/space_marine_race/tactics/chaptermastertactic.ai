class 'ChapterMasterTactic' (SpaceMarineInfantryTactic)

ChapterMaster = {}

function ChapterMasterTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Chapter Master Tactic")
end

function ChapterMasterTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function ChapterMasterTactic:IsDefender()
	return self:IsCommanderDefender()
end

function ChapterMasterTactic:InitAbilities()

	-- Init ability ID's
	if (ChapterMaster.orbital_b == nil) then
		ChapterMaster.orbital_b = cpu_manager.stats:GetAbilityID( "marines_orbital_bombardment" )
		ChapterMaster.battlecry = cpu_manager.stats:GetAbilityID( "marines_battlecry" )
		ChapterMaster.halo = cpu_manager.stats:GetAbilityID( "marines_iron_halo_chapter_master" )
	end
end

function ChapterMasterTactic:DoAbilities()
	if self.squad_ai:IsInCombat() then
		-- Try to use battlecry
		if self.squad_ai:CanDoAbility(ChapterMaster.battlecry) then
			if Ability.DoAbilityArea(self.squad_ai, ChapterMaster.battlecry, Ability.Filters.CloseInCombat, 10, 1) then
				return
			end
		end
		-- Try to use orbital bombardement
		if self.squad_ai:CanDoAbility(ChapterMaster.orbital_b) then
			if Ability.DoAbilityPos(self.squad_ai, ChapterMaster.orbital_b, Ability.Filters.CloseEnemy, 24)
			or Ability.DoAbilityPos(self.squad_ai, ChapterMaster.orbital_b, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
				return
			end
		end
		-- Try to use the Halo bombardement
		if self.squad_ai:CanDoAbility(ChapterMaster.halo) and self.squad_ai:WasRecentlyHurt() then
			self.squad_ai:DoSpecialAbility(ChapterMaster.halo)
		end
	end
end

function ChapterMasterTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Attach to melee in tier2+
    	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end
end
