class 'StormTalonTactic' (SpaceMarineVehicleTactic)

StormTalon = {}

function StormTalonTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Storm Talon Tactic")

	-- Used for the stuck check code for the squads that can jump
	self.initialPosition = self.squad_ai:GetPosition()

	self.Chosen_Upgrade = math.random( 0, 2 )	  -- Choose one of the main weapons (addons 0 and 1, 3 is no addon)
	self.lastAddonTry = g_iGMT
end


function StormTalonTactic:AutoBuildAddOn( addonSlot )
	for e in self.squad_ai:GetEntities() do
		local buildChannel = build_manager:GetBuildChannelFromID(e:GetID())
		if buildChannel ~= nil then
			local addOnID = buildChannel:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
			if (buildChannel:IsBuilding() == 0 and buildChannel:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
				buildChannel:BuildAddOn(addOnID)
				return
			end
		end
	end
	return
end


function StormTalonTactic:InitAbilities()

	-- Init ability ID's
	if StormTalon.counter_id == nil then
		StormTalon.counter_id = cpu_manager.stats:GetAbilityID( "marines_talon_countermeasures" )
	end
end


function StormTalonTactic:DoAbilities()

	if self.squad_ai:WasRecentlyHurt() then
		if self.squad_ai:CanDoAbility(StormTalon.counter_id) then
			self.squad_ai:DoSpecialAbility(StormTalon.counter_id)
		end	  
	end

	-- New code to unstuck units with pathing issues, that can jump.
	-- Call it with [true], only for multi-membered squads.
	self:SolveStuckCase(false)

	-- Check to addon every 10+ secs
	if self.Chosen_Upgrade < 2 and g_iGMT > self.lastAddonTry + 10 then
		self.lastAddonTry = g_iGMT
		-- Check available resources and health, before performing any upgrade
		local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
		if iReq > 200 and iPow > 200 and self.squad_ai:GetHealthPercentage() > 0.35 then
			self:AutoBuildAddOn(self.Chosen_Upgrade)
		end
	end

	-- Do basic abilities
	SpaceMarineVehicleTactic.DoAbilities(self)
end
