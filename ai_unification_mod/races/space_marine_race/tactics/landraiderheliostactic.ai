class 'LandRaiderHeliosTactic' (SpaceMarineVehicleTactic)

LandRaiderHelios = {}

function LandRaiderHeliosTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Land Raider Helios Tactic")
	
	-- Vehicle is a heavy transport
	self.m_iTransportVehicle = 2
	self.m_iTransportSlots = 1
end

function LandRaiderHeliosTactic:InitAbilities()

	-- Init ability ID's
	if (LandRaiderHelios.spirit_id == nil) then
		LandRaiderHelios.spirit_id = cpu_manager.stats:GetAbilityID( "marines_machine_spirit" )
	end
end

function LandRaiderHeliosTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(LandRaiderHelios.spirit_id)) then
			self.squad_ai:DoSpecialAbility(LandRaiderHelios.spirit_id)
		end	  
	end
	
	-- Do basic abilities
	SpaceMarineVehicleTactic.DoAbilities(self)
end