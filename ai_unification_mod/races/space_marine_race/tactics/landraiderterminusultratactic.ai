class 'LandRaiderTerminusUltraTactic' (SpaceMarineVehicleTactic)

LandRaiderTerminusUltra = {}

function LandRaiderTerminusUltraTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Land Raider Terminus Ultra Tactic")
end

function LandRaiderTerminusUltraTactic:InitAbilities()

	-- Init ability ID's
	if (LandRaiderTerminusUltra.spirit_id == nil) then
		LandRaiderTerminusUltra.spirit_id = cpu_manager.stats:GetAbilityID( "marines_machine_spirit" )
	end
end

function LandRaiderTerminusUltraTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(LandRaiderTerminusUltra.spirit_id)) then
			self.squad_ai:DoSpecialAbility(LandRaiderTerminusUltra.spirit_id)
		end	  
	end
	
	-- Do basic abilities
	SpaceMarineVehicleTactic.DoAbilities(self)
end