function MarineBuildBaseStrategy:UpdateTierLevel()

	-- Reset tier level
	self.tierLevel = 1
	
	-- Prepare
	local iHQAddon1ID = cpu_manager.stats:GetAddOnID("space_marine_hq_addon_1")
	local iHQAddon2ID = cpu_manager.stats:GetAddOnID("space_marine_hq_addon_2")
	local oStats = cpu_manager.stats:GetPlayerStatsFromID( cpu_manager.player_id )
	
	-- Check HQ's for addons
	for oBase in oStats:GetBases() do
	
		-- Check for valid building
		if (oBase:IsValid() and not oBase:IsListeningPost()) then

			-- Check for HQ addon 2
			if (oBase:HasAddOn(iHQAddon2ID)) then
			
				-- We still have the proper add-on
				if (cpu_manager.cpu_player:IsResearchComplete("marine_heavy_armor_deployment")) then
					self.tierLevel = 4
					return
				else
					self.tierLevel = 3
					return
				end
			
			-- Check for HQ addon 1
			elseif (oBase:HasAddOn(iHQAddon1ID)) then
				self.tierLevel = 2
			end
		end
	end
end

function MarineBuildBaseStrategy:BuildFlexible()

	-- Always test first to see if there is at least one existing HQ
	if self:GetBuildingCountByName(self:GetBuildingName("HQ")) < 1 then
     		self:BuildFirstHQ()
	end

	-- Always test first to see if there is at least one existing builder unit
	self:BuildFirstBuilder("space_marine_squad_servitor")

	-- Space Marine Hero Wargear
	local iHeroCommanderSquads = self:CountSquads("space_marine_squad_force_commander_advance_sp_wg")
	if iHeroCommanderSquads > 0 then
		self:DynamicResearch("marine_wargear06", 1, 75, 40, 2, 0, nil, 0)
		self:DynamicResearch("marine_wargear07", 1, 125, 50, 2, 0, nil, 0)
		self:DynamicResearch("marine_wargear10", 1, 50, 75, 2, 0, nil, 0)
		self:DynamicResearch("marine_wargear01", 2, 75, 50, 4, 2, nil, 0)
		self:DynamicResearch("marine_wargear03", 2, 75, 50, 4, 2, nil, 0)
		self:DynamicResearch("marine_wargear09", 2, 75, 100, 4, 2, nil, 0)
		self:DynamicResearch("marine_wargear05", 3, 75, 75, 4, 2, nil, 0)
		self:DynamicResearch("marine_wargear08", 3, 75, 75, 4, 2, nil, 0)
		self:DynamicResearch("marine_wargear02", 4, 125, 50, 4, 2, nil, 0)
		self:DynamicResearch("marine_wargear04", 4, 100, 75, 4, 2, nil, 0)
	end

	-- Space Marine Last Standing Hero Wargear
	local iHeroLSCommanderSquads = self:CountSquads("space_marine_squad_force_commander_ktgm")
	if iHeroLSCommanderSquads > 0 then

		self:DynamicResearch("marine_ls_force_commander_health_research_1", 1, 50, 50, 0, 0, nil, 0)
		self:DynamicResearch("marine_ls_force_commander_health_research_2", 1, 75, 75, 0, 0, nil, 0)

		if self.m_iTSFCResearchPattern == 1 then
			self:DynamicResearch("marine_ls_force_commander_armor_research", 1, 125, 125, 0, 0, nil, 0)
			self:DynamicResearch("marine_ls_force_commander_steel_rain_research", 1, 125, 125, 0, 0, nil, 0)
			self:DynamicResearch("marine_ls_force_commander_steel_rain_terminator_research", 1, 125, 125, 0, 0, nil, 0)

		elseif self.m_iTSFCResearchPattern == 2 then
			self:DynamicResearch("marine_ls_force_commander_orbital_bombardment_research", 1, 125, 125, 0, 0, nil, 0)
			self:DynamicResearch("marine_ls_force_commander_steel_rain_research", 1, 125, 125, 0, 0, nil, 0)
			self:DynamicResearch("marine_ls_force_commander_steel_rain_terminator_research", 1, 125, 125, 0, 0, nil, 0)

		elseif self.m_iTSFCResearchPattern == 3 then
			self:DynamicResearch("marine_ls_force_commander_weapon_research", 1, 125, 125, 0, 0, nil, 0)
			self:DynamicResearch("marine_ls_force_commander_steel_rain_research", 1, 125, 125, 0, 0, nil, 0)
			self:DynamicResearch("marine_ls_force_commander_steel_rain_terminator_research", 1, 125, 125, 0, 0, nil, 0)

		elseif self.m_iTSFCResearchPattern == 4 then
       			if not G_KTGM_Commander1_WG_Choice_Made then
            			-- WARNING: Below, ALWAYS insert numbers <= of the total in each table!
            			-- I used the actual total of each table, so that ALL will be randomly available
            			i_WG_Selection_number1 = 8        -- The number of researches to randomize, from the 1st table
            			i_WG_Selections1 = {
                		{"marine_ls_force_commander_armor_research", 1, 125, 125, 0, 0, nil, 0},
                		{"marine_ls_force_commander_battlecry_research", 1, 125, 125, 0, 0, nil, 0},
                		{"marine_ls_force_commander_inspiring_aura_research", 1, 125, 125, 0, 0, nil, 0},
                		{"marine_ls_force_commander_orbital_bombardment_research", 1, 125, 125, 0, 0, nil, 0},
                		{"marine_ls_force_commander_speech_research", 1, 125, 125, 0, 0, nil, 0},
                		{"marine_ls_force_commander_steel_rain_research", 1, 125, 125, 0, 0, nil, 0},
                		{"marine_ls_force_commander_steel_rain_terminator_research", 1, 125, 125, 0, 0, nil, 0},
                		{"marine_ls_force_commander_weapon_research", 1, 125, 125, 0, 0, nil, 0}}

            			-- The switch ensures we make the choice only ONCE
            			G_KTGM_Commander1_WG_Choice_Made = true
            			i_WG_Rdm1 = {}          -- The random Selections from the 1st table

           			 -- Populate the two random tables with the number of researches we need for each
            			for i = 1, i_WG_Selection_number1 do
                			local selection = math.random(1, table.getn(i_WG_Selections1))
                			table.insert(i_WG_Rdm1, i_WG_Selections1[selection])
                			table.remove(i_WG_Selections1, selection)
            			end
			end

       		 	-- We are done. Perform the Researches
        		for i = 1, table.getn(i_WG_Rdm1) do
            			self:DynamicResearch(i_WG_Rdm1[i][1], 0, i_WG_Rdm1[i][3], i_WG_Rdm1[i][4], 0, 0, nil, 0)
        		end
		end

		-- Randomize Wargear
		if not G_KTGM_Commander2_WG_Choice_Made then
            		i_WG_Selection_number2 = 10        -- The number of researches to randomize, from the 2nd table
            		i_WG_Selections2 = {
                	{"marine_ls_force_commander_wargear01", 1, 125, 125, 0, 0, nil, 0},
                	{"marine_ls_force_commander_wargear02", 1, 150, 150, 0, 0, nil, 0},
