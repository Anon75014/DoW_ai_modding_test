			for i = 1, table.getn(i_WG_Rdm2) do
            			self:DynamicResearch(i_WG_Rdm2[i][1], 0, i_WG_Rdm2[i][3], i_WG_Rdm2[i][4], 0, 0, nil, 0)
    		end

		-- Force build deployable Tactical squads to get immediate battlefield presence if research is build
		if (cpu_manager.cpu_player:IsResearchComplete("marine_ls_force_commander_steel_rain_research")) then

			if (self:CountSquads("space_marine_squad_tactical_ktgm") < 4) then

