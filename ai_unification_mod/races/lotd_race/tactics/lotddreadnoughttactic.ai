class 'LOTDDreadnoughtTactic' (LOTDVehicleTactic)

LOTDDreadnought = {}

function LOTDDreadnoughtTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dreadnought Tactic")
end

function LOTDDreadnoughtTactic:DoAbilities()

	-- Check if we can possess to become the Venerable Dreadnought
	if (self.squad_ai:CanPossess()) then
	
		-- Check if we are in combat
		if (self.squad_ai:IsInCombat() or cpu_manager.terrain_analyzer:HasThreat(self.squad_ai:GetPosition(), 35)) then
			self.squad_ai:DoPossess()
		end
	end
	
	-- Do basic abilities
	LOTDVehicleTactic.DoAbilities(self)
end