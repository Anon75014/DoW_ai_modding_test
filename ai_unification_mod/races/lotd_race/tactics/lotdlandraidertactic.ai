class 'LOTDLandRaiderTactic' (LOTDVehicleTactic)

LOTDLandRaider = {}

function LOTDLandRaiderTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Land Raider Tactic")
	
	-- Vehicle is a heavy transport
	self.m_iTransportVehicle = 2
	self.m_iTransportSlots = 1
end

function LOTDLandRaiderTactic:InitAbilities()

	-- Init ability ID's
	if (LOTDLandRaider.spirit_id == nil) then
		LOTDLandRaider.spirit_id = cpu_manager.stats:GetAbilityID( "lotd_machine_spirit_2" )
	end
end

function LOTDLandRaiderTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(LOTDLandRaider.spirit_id)) then
			self.squad_ai:DoSpecialAbility(LOTDLandRaider.spirit_id)
		end	  
	end
	
	-- Do basic abilities
	LOTDVehicleTactic.DoAbilities(self)
end