class 'LOTDHeroTactic' (LOTDInfantryTactic)

LOTDHero = {}

function LOTDHeroTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("LOTD Hero Tactic")

	self.timedDirectSpawnAbility = Timer( LOTDHeroTactic.DoDirectSpawnAbility, self, 5 )
end

function LOTDHeroTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function LOTDHeroTactic:IsDefender()
	return self:IsCommanderDefender()
end

-- Hero is allowed to retreat even directly after a jump
function LOTDHeroTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function LOTDHeroTactic:JumpAttack()
	Tactic.JumpAttack(self)
end

function LOTDHeroTactic:InitAbilities()

	-- Init ability ID's
	if (LOTDHero.strength_id == nil) then
		LOTDHero.strength_id = cpu_manager.stats:GetAbilityID( "lotd_portal_strength" )
	end

	if (LOTDHero.heal_id == nil) then
		LOTDHero.heal_id = cpu_manager.stats:GetAbilityID( "lotd_portal_health" )
	end

	if (LOTDHero.vision_id == nil) then
		LOTDHero.vision_id = cpu_manager.stats:GetAbilityID( "lotd_portal_vision" )
	end
end

function LOTDHeroTactic:DoAbilities()

	-- The Damned Come From the Warp
	Ability.DoAbilityArea( self.squad_ai, LOTDHero.strength_id, Ability.Filters.CloseEnemy, 10, 1 )

	-- And To the Warp you are Damned
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then 
		
		if (self.squad_ai:CanDoAbility(LOTDHero.heal_id)) then
			self.squad_ai:DoSpecialAbility(LOTDHero.heal_id)
		end	  
	end

	-- Scrye Mode
	if (self.squad_ai:IsInCombat() and self.squad_ai:GetHealthPercentage() > 0.7) then 
		Ability.DoAbilityArea( self.squad_ai, LOTDHero.vision_id, Ability.Filters.CloseEnemy, 20, 10 )
	end

	-- Spawn Muerto
	if (self.timedDirectSpawnAbility ~= nil) then
		self.timedDirectSpawnAbility:Call()
	else
		LOTDHeroTactic.DoDirectSpawnAbility(self)
	end
end

function LOTDHeroTactic:DoDirectSpawnAbility()

	-- Spawn Muerto in combat
	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	end
end

function LOTDHeroTactic:Upgrade()

	-- Figure out my enemy's favourite class
	local enemy = cpu_manager:FindClosestEnemyPlayer()
	if (enemy == nil) then
		return
	end

	-- Do best upgrade
	local class_type = enemy:GetMajorityClassType()
	self.squad_ai:DoBestUpgrade(class_type)
end

function LOTDHeroTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end
