class 'LOTDKnightTactic' (LOTDVehicleTactic)

LOTDKnight = {}

function LOTDKnightTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Hell Knight Tactic")
	
	-- Vehicle is a heavy transport
end

function LOTDKnightTactic:InitAbilities()

	-- Init ability ID's
	if (LOTDKnight.spirit_id == nil) then
		LOTDKnight.spirit_id = cpu_manager.stats:GetAbilityID( "lotd_machine_spirit_2" )
	end
end

function LOTDKnightTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(LOTDKnight.spirit_id)) then
			self.squad_ai:DoSpecialAbility(LOTDKnight.spirit_id)
		end	  
	end
	
	-- Do basic abilities
	LOTDVehicleTactic.DoAbilities(self)
end