        lotd_space_marine_squad_imperial_knight_titan = LOTDKnightTactic,
	}

    	LD_Race_Base_Tactic =
	{
        lotd_space_marine_hq = LOTDHQTactic,
        lotd_space_marine_listening_post = LOTDListeningPostTactic,
	}
