	import( 'Races/lotd_race/Tactics/LOTDVehicleTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDServitorTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDBikeTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDMuertoTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDForceCommanderTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDHeroTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDRhinoTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDHunterTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDDreadnoughtTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDLandRaiderTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDListeningPostTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDKnightTactic.ai' )
	import( 'Races/lotd_race/Tactics/LOTDHQTactic.ai' )

 	-- GAMBIT: New Method of returning a squad or base Tactic (from the CreateTactic function). Indexes.
	-- Here follows a Global List with all the squad names as indexes, and their Tactics as values
	-- The name of the Global List must be unique for each race.
    	LD_Race_Squad_Tactic =
    	{
        -- Insert here SQUAD_NAME or BASE_NAME and the TACTIC NAME (with the comma at the end!)
        -- If a squad must NOT have a Tactic attached to it AT ALL, use "NONE" (with quotes, case sensitive).
        -- Suggestion: Better put all in alphabetical order (sorted by squad names) for easier reference

        lotd_space_marine_squad_servitor = LOTDServitorTactic,
	lotd_space_marine_squad_muerto = LOTDMuertoTactic, 
        lotd_space_marine_squad_force_commander = LOTDForceCommanderTactic,
        lotd_space_marine_squad_hero = LOTDHeroTactic,
        lotd_space_marine_squad_rhino = LOTDRhinoTactic,
