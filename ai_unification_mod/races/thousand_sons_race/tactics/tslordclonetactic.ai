class 'TSLordCloneTactic' (TSInfantryTactic)

TSLordClone = {}

function TSLordCloneTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("TS Lord Clone Tactic")
end

function TSLordCloneTactic:InitAbilities()

	if(self.squad_ai:GetSquadName() == "thousand_sons_squad_lord_clone_lvl3" ) then
		if (TSLordClone.doombolt_id == nil) then
		   	TSLordClone.doombolt_id = cpu_manager.stats:GetAbilityID( "thousand_sons_doombolt_clone" )
		end
	end

end

function TSLordCloneTactic:AlwaysAttack()
	return true
end

function TSLordCloneTactic:DoAbilities()

	if(self.squad_ai:GetSquadName() == "thousand_sons_squad_lord_clone_lvl3" ) then
		Ability.DoAbilityTarget( self.squad_ai, TSLordClone.doombolt_id, Ability.Filters.CloseSquadEnemy, 6 )
	end
end