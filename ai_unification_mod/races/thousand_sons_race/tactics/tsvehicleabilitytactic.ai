class 'TSVehicleAbilityTactic' (TSVehicleTactic)

TSVehicleAbility = {}

function TSVehicleAbilityTactic:__init( squad_ai ) super( squad_ai )

       self:SetName("TS Vehicle Ability Tactic")
end

function TSVehicleAbilityTactic:InitAbilities()

	--[[if (TSVehicleAbility.flame_id == nil) then
	   	TSVehicleAbility.flame_id = cpu_manager.stats:GetAbilityID( "thousand_sons_coruscating_flame" )	
	end]]
end

function TSVehicleAbilityTactic:DoAbilities()

	
	--[[ Can we activate coruscating flame when enemy is nearby
	if (self.squad_ai:IsUsingAbility(TSVehicleAbility.flame_id)) then

	-- Turn flame on only when enemy is nearby
   	if (Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 15, 1) == nil) then
		self.squad_ai:DoSpecialAbility(TSVehicleAbility.flame_id)
	end
	
	elseif (Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 15, 1) ~= nil) then
		self.squad_ai:DoSpecialAbility(TSVehicleAbility.flame_id)
	end]]
end