class 'TSVehicleTactic' (VehicleTactic)

TSVehicleAbility = {}

function TSVehicleTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("TS Vehicle Tactic")
end

function TSVehicleTactic:DoAbilities()

    --self:DoTargetVehicleWeapon()

	-- Call basic DoAbilities methods
	VehicleTactic.DoAbilities(self)
end

-- Check if the vehicle should dance away in melee
function TSVehicleTactic:CheckVehicleDance(sName)

	if (sName == "thousand_sons_squad_rhino") or
	   (sName == "thousand_sons_squad_dreadnought") or
	   (sName == "thousand_sons_squad_grav_raider") or
	   (sName == "thousand_sons_squad_hoverblade") or
	   (sName == "thousand_sons_squad_whirlwind") or
	   (sName == "thousand_sons_squad_predator") then
		return true
	end
	return false
end