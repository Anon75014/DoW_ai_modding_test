class 'TSVehicleDreadTactic' (TSVehicleTactic)

TSVehicleDread = {}

TSVehicleDreadAbility ={}

function TSVehicleDreadTactic:__init( squad_ai ) super( squad_ai )

       self:SetName("TS Vehicle Dread Tactic")
end

function TSVehicleDreadTactic:InitAbilities()

	if (TSVehicleDread.dreadbolt_id == nil) then
	   	TSVehicleDread.dreadbolt_id = cpu_manager.stats:GetAbilityID( "thousand_sons_entropy_bolt_dread" )	
	end

	if (TSVehicleDread.repair_id == nil) then
	   	TSVehicleDread.repair_id = cpu_manager.stats:GetAbilityID( "thousand_sons_sorcerer_dread_repair" )	
	end

	if (TSVehicleDread.flame_id == nil) then
	   	TSVehicleDread.flame_id = cpu_manager.stats:GetAbilityID( "thousand_sons_coruscating_flame" )	
	end

	if (TSVehicleDread.restore_id == nil) then
	   	TSVehicleDread.restore_id = cpu_manager.stats:GetAbilityID( "thousand_sons_vehicle_heal_dread" )	
	end
end

function TSVehicleDreadTactic:DoAbilities()

	if self.squad_ai:CanDoAbility(TSVehicleDread.dreadbolt_id) then
		Ability.DoAbilityTarget(self.squad_ai, TSVehicleDread.dreadbolt_id, Ability.Filters.CloseVehicleEnemy, 3)
	end

	if self.squad_ai:CanDoAbility(TSVehicleDread.repair_id) then
		if ( (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.5) or self.squad_ai:GetHealthPercentage() < 0.2 ) then
			self.squad_ai:DoSpecialAbility(TSVehicleDread.repair_id)
		end
	end

	-- Can we activate coruscating flame when enemy is nearby
	if (self.squad_ai:IsUsingAbility(TSVehicleDread.flame_id)) then
		-- Turn flame on only when enemy is nearby
		if (Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 15, 1) == nil) then
			self.squad_ai:DoSpecialAbility(TSVehicleDread.flame_id)
		end
	elseif (Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 15, 1) ~= nil) then
		self.squad_ai:DoSpecialAbility(TSVehicleDread.flame_id)
	end

	--[[if self.squad_ai:CanDoAbility(TSVehicleDread.restore_id) then
