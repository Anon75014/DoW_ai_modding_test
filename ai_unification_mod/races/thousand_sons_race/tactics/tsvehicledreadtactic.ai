				elseif (eClass == UnitStatsAI.UC_VehicleMed) then
					self.squad_ai:DoSpecialAbilitySquad(TSVehicleDread.restore_id, oSquad:GetSquad())
				elseif (eClass == UnitStatsAI.UC_VehicleLow) then
