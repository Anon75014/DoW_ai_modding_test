function TSLordTactic:DoAbilities()
    --self:DoLordTargetWeapon()

	Ability.DoAbilityTarget( self.squad_ai, TSLord.doombolt1_id, Ability.Filters.CloseSquadEnemy, 8 )
	Ability.DoAbilityTarget( self.squad_ai, TSLord.doombolt2a_id, Ability.Filters.CloseSquadEnemy, 8 )
	Ability.DoAbilityTarget( self.squad_ai, TSLord.doombolt2b_id, Ability.Filters.CloseSquadEnemy, 8 )
	Ability.DoAbilityTarget( self.squad_ai, TSLord.doombolt2c_id, Ability.Filters.CloseSquadEnemy, 8 )
	Ability.DoAbilityTarget( self.squad_ai, TSLord.tainting1_id, Ability.Filters.CloseCommanderEnemy, 8 )
	Ability.DoAbilityTarget( self.squad_ai, TSLord.tainting1_id, Ability.Filters.CloseMonsterHighEnemy, 8 )
	Ability.DoAbilityTarget( self.squad_ai, TSLord.tainting2_id, Ability.Filters.CloseCommanderEnemy, 8 )
	Ability.DoAbilityTarget( self.squad_ai, TSLord.tainting2_id, Ability.Filters.CloseMonsterHighEnemy, 8 )
	Ability.DoAbilityTarget( self.squad_ai, TSLord.tainting3_id, Ability.Filters.CloseCommanderEnemy, 8 )
	Ability.DoAbilityTarget( self.squad_ai, TSLord.tainting3_id, Ability.Filters.CloseMonsterHighEnemy, 8 )
	Ability.DoAbilityTarget( self.squad_ai, TSLord.pavoni1_id, Ability.Filters.CloseInfantryEnemy, 8 )
	Ability.DoAbilityTarget( self.squad_ai, TSLord.pavoni2_id, Ability.Filters.CloseInfantryEnemy, 8 )
	Ability.DoAbility( self.squad_ai, TSLord.shield1_id, Ability.Filters.IsInCombat )
	Ability.DoAbility( self.squad_ai, TSLord.shield2_id, Ability.Filters.IsInCombat )
	Ability.DoAbility( self.squad_ai, TSLord.shield3_id, Ability.Filters.IsInCombat )
	Ability.DoAbilityArea( self.squad_ai, TSLord.tutelary1_id, Ability.Filters.CloseEnemy, 5 )
	Ability.DoAbilityArea( self.squad_ai, TSLord.tutelary2_id, Ability.Filters.CloseEnemy, 5 )
	Ability.DoAbilityArea( self.squad_ai, TSLord.tutelary3_id, Ability.Filters.CloseEnemy, 5 )
	Ability.DoAbilityArea( self.squad_ai, TSLord.spawn1_id, Ability.Filters.CloseEnemy, 15,1 )
	Ability.DoAbilityArea( self.squad_ai, TSLord.spawn2_id, Ability.Filters.CloseEnemy, 15,1 )
	Ability.DoAbilityArea( self.squad_ai, TSLord.spawn3_id, Ability.Filters.CloseEnemy, 15,1 )
	Ability.DoAbility( self.squad_ai, TSLord.clone1_id, Ability.Filters.IsInCombat )
	Ability.DoAbility( self.squad_ai, TSLord.clone2_id, Ability.Filters.IsInCombat )
	Ability.DoAbility( self.squad_ai, TSLord.clone3_id, Ability.Filters.IsInCombat )
	Ability.DoAbilityPos( self.squad_ai, TSLord.confusion1_id, Ability.Filters.CloseInfantryEnemy, 8 )
	Ability.DoAbilityPos( self.squad_ai, TSLord.confusion2_id, Ability.Filters.CloseInfantryEnemy, 8 )

	Ability.DoAbility( self.squad_ai, TSLord.invisibility1_id, Ability.Filters.IsInCombat )
	-- Check if we can cast Invisibility 2 and 3
	if (self.squad_ai:CanDoAbility(TSLord.invisibility2_id)) then
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(TSLord.invisibility2_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(TSLord.invisibility2_id, oUnit:GetSquad())
		end
	end
	if (self.squad_ai:CanDoAbility(TSLord.invisibility3_id)) then
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(TSLord.invisibility3_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 200) then
			self.squad_ai:DoSpecialAbilitySquad(TSLord.invisibility3_id, oUnit:GetSquad())
		end
	end --

	Ability.DoAbilityArea( self.squad_ai, TSLord.skull1_id, Ability.Filters.CloseEnemy, 10 )
	-- Check if we can cast Seeing Skull 2
    if self.squad_ai:CanDoAbility(TSLord.skull2_id) then
    	-- Check for infiltrated enemy
        local oEnemy = Ability.Filters.CloseInfiltratedEnemy(self.squad_ai:GetPosition(), 256, 1)
		if (oEnemy ~= nil) then
			local vEnemyPos = Vector3f(oEnemy:GetPosition())
			self.squad_ai:DoSpecialAbilityPos(TSLord.skull2_id, vEnemyPos)
		end
	end


	InfantryTactic.DoAbilities(self)
end

function TSLordTactic:DoLordTargetWeapon()

    if self.squad_ai:IsInCombat() then
        
        if ( g_iGMT > self.taintingLastUse + 30 ) then
            if Ability.DoAbilityTarget( self.squad_ai, TSLord.tainting1_id, Ability.Filters.CloseCommanderEnemy, 1 )
            then
                self.taintingLastUse = g_iGMT 
            end
        end
        if ( g_iGMT > self.taintingLastUse + 30 ) then
            if Ability.DoAbilityTarget( self.squad_ai, TSLord.tainting2_id, Ability.Filters.CloseCommanderEnemy, 1 )
            then
                self.taintingLastUse = g_iGMT 
            end
        end
        if ( g_iGMT > self.taintingLastUse + 30 ) then
            if Ability.DoAbilityTarget( self.squad_ai, TSLord.tainting3_id, Ability.Filters.CloseCommanderEnemy, 1 )
            then
                self.taintingLastUse = g_iGMT 
            end
        end

        if ( g_iGMT > self.pavoniLastUse + 30 ) then
            if Ability.DoAbilityTarget( self.squad_ai, TSLord.pavoni1_id, Ability.Filters.CloseInfantryEnemy, 5 ) 
	    or Ability.DoAbilityTarget( self.squad_ai, TSLord.pavoni1_id, Ability.Filters.CloseMonsterEnemy, 1 )
            then
                self.pavoniLastUse = g_iGMT 
            end
        end
        if ( g_iGMT > self.pavoniLastUse + 30 ) then
            if Ability.DoAbilityTarget( self.squad_ai, TSLord.pavoni2_id, Ability.Filters.CloseInfantryEnemy, 5 ) 
	    or Ability.DoAbilityTarget( self.squad_ai, TSLord.pavoni3_id, Ability.Filters.CloseMonsterEnemy, 1 )
            then
                self.pavoniLastUse = g_iGMT 
            end
        end

        if ( g_iGMT > self.skullLastUse + 30 ) then
            if Ability.DoAbilityPos( self.squad_ai, TSLord.skull1_id, Ability.Filters.CloseInfiltrator, 1 )
            then
                self.skullLastUse = g_iGMT 
            end
        end
        if ( g_iGMT > self.skullLastUse + 30 ) then
            if Ability.DoAbilityPos( self.squad_ai, TSLord.skull2_id, Ability.Filters.CloseInfiltrator, 1 )
            then
                self.skullLastUse = g_iGMT 
            end
        end

        if ( g_iGMT > self.tutelaryLastUse + 30 ) then
            if Ability.DoAbilityPos( self.squad_ai, TSLord.tutelary1_id, Ability.Filters.CloseEnemy, 5 )
           then
                self.tutelaryLastUse = g_iGMT 
            end
        end
        if ( g_iGMT > self.tutelaryLastUse + 30 ) then
            if Ability.DoAbilityPos( self.squad_ai, TSLord.tutelary2_id, Ability.Filters.CloseEnemy, 5 )
           then
                self.tutelaryLastUse = g_iGMT 
            end
        end
    end
end


function TSLordTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Assassinate win condition -- never attach to a squad
   	if (not cpu_manager.assassinate and self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
   	end
end