class 'TSRhinoTactic' (TSVehicleTactic)

TSRhino = {}

function TSRhinoTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("TSRhino Tactic")
	
	Tactic.AssignStateFunction( self, Tactic.States.Idle, TSRhinoTactic.BeginIdleState )
	Tactic.AssignStateFunction( self, Tactic.States.Hold, TSRhinoTactic.BeginHoldState )
	Tactic.AssignStateFunction( self, Tactic.States.Retreat, TSRhinoTactic.BeginRetreatState )
	Tactic.AssignStateFunction( self, Tactic.States.Attack, TSRhinoTactic.BeginAttackState )
	
	-- Vehicle is a light transport
	self.m_iTransportVehicle = 1
	self.m_iTransportSlots = 2
end

function TSRhinoTactic:IsAttacker()
	return (self.m_iUnloadTries > 0 or self.squad_ai:CanDoAbility(TSRhino.smoke_id))
end

function TSRhinoTactic:IsDefender()
	return (self.m_iUnloadTries > 0 or self.squad_ai:CanDoAbility(TSRhino.smoke_id))
end

function TSRhinoTactic:BeginIdleState()
	self:TransportMove()
	Tactic.SetSubState(self, self.IdleState, "Holding")
end

function TSRhinoTactic:BeginHoldState()
	self:TransportMove()
	Tactic.SetSubState(self, self.HoldState, "Holding")
end

function TSRhinoTactic:BeginRetreatState()
	self:TransportMove()
	Tactic.SetSubState( self, self.HoldState, "Holding" )
end

function TSRhinoTactic:BeginAttackState()
	self:TransportMove()
	Tactic.SetSubState(self, self.AttackingState, "Attacking")
end

function TSRhinoTactic:TransportMove()

	-- Check if we're busy
	if (self:IsInSubState() or self:CheckGatherMove()) then
		return
	end
	
	-- Check move delay
	if (g_iGMT < self.m_iMoveDelay + 3 and self:IsMoving()) then
		return
	end

	-- Try to unload troops
	local vSquadPos = self.squad_ai:GetPosition()
	local iDistance = distance_sqr(self.target, vSquadPos)	
	if (self:UnloadTroops(iDistance)) then
		self.m_iMoveDelay = g_iGMT
		return
	end
		
	-- Check distance
	if (self.squad_ai:WasRecentlyHurt()) then
		cpu_manager:DoMove(self.squad_ai, cpu_manager.start_pos, false, "RetreatMove")
		self.m_iMoveDelay = g_iGMT
		return
	elseif (iDistance > sqr(35)) then
		cpu_manager:DoMove(self.squad_ai, self.target, false, "TransportMove")
	elseif (iDistance > sqr(20) and not cpu_manager.terrain_analyzer:HasThreat(vSquadPos, 35)) then
		cpu_manager:DoMove(self.squad_ai, self.target, false, "TransportMove")
	else
		self.squad_ai:DoStop()
	end
	self.m_iMoveDelay = g_iGMT
end

function TSRhinoTactic:InitAbilities()

	-- Init ability ID's
	if (TSRhino.smoke_id == nil) then
		TSRhino.smoke_id = cpu_manager.stats:GetAbilityID( "thousand_sons_smoke_launchers" )	
	end

	--[[if (TSRhino.flame_id == nil) then
	   	TSRhino.flame_id = cpu_manager.stats:GetAbilityID( "thousand_sons_coruscating_flame" )	
	end]]
end

function TSRhinoTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(TSRhino.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(TSRhino.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(TSRhino.smoke_id, oUnit:GetSquad())
		end
	end

	--[[-- Can we activate coruscating flame when enemy is nearby
	if (self.squad_ai:IsUsingAbility(TSRhino.flame_id)) then

	-- Turn flame on only when enemy is nearby
   	if (Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 15, 1) == nil) then
		self.squad_ai:DoSpecialAbility(TSRhino.flame_id)
	end
	
	elseif (Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 15, 1) ~= nil) then
		self.squad_ai:DoSpecialAbility(TSRhino.flame_id)
	end]]

	-- Call standard method
	VehicleTactic.DoAbilities(self)
end