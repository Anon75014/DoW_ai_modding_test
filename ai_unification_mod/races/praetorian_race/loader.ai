	return praetorianBuildBaseStrategy(BuildBaseStrategyInfo)
end

-- Creates a special tactic for units
-- GAMBIT: Updated version, with no IFs at all, much faster and reliable. CPU utilization nigh zero
function praetorian_race:CreateTactic(oSquadAI)

    	-- Get unit name, and see if there is an attached tactic to it
    	local sUnitName = oSquadAI:GetSquadName()    
	if sUnitName ~= nil and PR_Race_Squad_Tactic[sUnitName] ~= nil then
		if PR_Race_Squad_Tactic[sUnitName] == "NONE" then
            		-- The squad must have NO tactic. Return nil.
            		return nil
        	else
            		return PR_Race_Squad_Tactic[sUnitName](oSquadAI)
        	end
    	end

	-- Get class
	local eClass = oSquadAI:GetStats():GetClass()

	-- Check if there is a special tactic for the unit available
	local bVehicle = (eClass == UnitStatsAI.UC_VehicleLow or eClass == UnitStatsAI.UC_VehicleMed or eClass == UnitStatsAI.UC_VehicleHigh)
	local bAirPlane = (eClass == UnitStatsAI.UC_AirLow or eClass == UnitStatsAI.UC_AirMed or eClass == UnitStatsAI.UC_AirHigh)

	if (bVehicle or bAirPlane) then
		return Praetorian_VehicleTactic(oSquadAI)
	end
	return Praetorian_InfantryTactic(oSquadAI)
end

-- Creates a special tactic for buildings
-- GAMBIT: Updated version, with no IFs at all, much faster and reliable. CPU utilization nigh zero
function praetorian_race:CreateBaseTactic(oBuilding)

	-- Get building name
	local sBuildingName = oBuilding:GetBaseName()
	if sBuildingName ~= nil and PR_Race_Base_Tactic[sBuildingName] ~= nil then
		if PR_Race_Base_Tactic[sBuildingName] == "NONE" then
            		-- The building must have NO tactic. Return nil.
            		return nil
        	else
            		return PR_Race_Base_Tactic[sBuildingName](oBuilding)
        	end
    	end
	return nil
end

-- Returns a specific information
function praetorian_race:GetInfo(sType)

	-- Check info type
	if (sType == "TurretPower") then
		return 400
	elseif (sType == "SupportAllyFactor") then
		return 7 / 4
	elseif (sType == "AttackModifier") then
		return 0
	elseif (sType == "CriticalRangeIncreasePerTier") then
		return 10
	elseif (sType == "MinArmyStrengthPerTier") then
		return 750
	elseif (sType == "AttackRatio") then
		return 4 / 5
	elseif (sType == "RetreatRatio") then
		return 3 / 5
	elseif (sType == "InvisibleBuildings") then
		return false
	elseif (sType == "HarassingLeader") then
		return "praetorian_squad_lieutenant"
	elseif (sType == "AutoConstructBuildings") then
		return false
	end
	return nil
end

-- Returns the building type and threat
function praetorian_race:GetBuildingType(sBuildingName)

	-- Return race specific object string
	if (sBuildingName == "praetorian_hq") then
		return "HQ", 0
		
	elseif (sBuildingName == "praetorian_generator") then
		return "Generator", 0
		
	elseif (sBuildingName == "praetorian_thermo_plasma") then
		return "BiggerGenerator", 0
		
	elseif (sBuildingName == "praetorian_facility") then
		return "VehicleBuilding", 0
		
	elseif (sBuildingName == "praetorian_aid_station") then
		return "Armoury", 0
		
	elseif (sBuildingName == "praetorian_listening_post") then
		return "ListeningPost", 0
		
	elseif (sBuildingName == "praetorian_turret_earthshaker") then
		return "Turret", 300
		
	--elseif (sBuildingName == "praetorian_mines") then
	--	return "Mine", 100
	end
	return nil, 0
end
