class 'Praetorian_InquisitorTactic' (Praetorian_InfantryTactic)

Praetorian_Inquisitor = {}

function Praetorian_InquisitorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Inquisitor Tactic")
end

function Praetorian_InquisitorTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function Praetorian_InquisitorTactic:IsDefender()
	return self:IsCommanderDefender()
end

function Praetorian_InquisitorTactic:InitAbilities()

	-- Init ability ID's
	if ( Praetorian_Inquisitor.healing_id == nil ) then
		Praetorian_Inquisitor.healing_id = cpu_manager.stats:GetAbilityID( "praetorian_dw_healing" )
	end

	if ( Praetorian_Inquisitor.bomb_id == nil ) then
		Praetorian_Inquisitor.bomb_id = cpu_manager.stats:GetAbilityID( "praetorian_stasis_bombs" )
	end

	if ( Praetorian_Inquisitor.wraithtomb_id == nil ) then
		Praetorian_Inquisitor.wraithtomb_id = cpu_manager.stats:GetAbilityID( "praetorian_wraithtomb_dw" )
	end
end

function Praetorian_InquisitorTactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

		Ability.DoAbilityTarget( self.squad_ai, Praetorian_Inquisitor.bomb_id, Ability.Filters.CloseEnemy, 4 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Praetorian_Inquisitor.wraithtomb_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1 ) 

		-- Check if we can heal
		if (self.squad_ai:CanDoAbility(Praetorian_Inquisitor.healing_id)) then
			self.squad_ai:DoSpecialAbility(Praetorian_Inquisitor.healing_id) 
		end
	else
		Ability.DoAbilityTarget( self.squad_ai, Praetorian_Inquisitor.bomb_id, Ability.Filters.CloseEnemy, 8 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Praetorian_Inquisitor.wraithtomb_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1 ) 
	end
end

function Praetorian_InquisitorTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
    	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end
end
