class 'Praetorian_MajorTactic' (Praetorian_InfantryTactic)

Praetorian_Major = {}

function Praetorian_MajorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Praetorian Major Tactic")
end

function Praetorian_MajorTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function Praetorian_MajorTactic:IsDefender()
	return self:IsCommanderDefender()
end

-- Deploy tracking device to enemy infantry/vehicles -- SS 1.20+: Still crashes the game so disabled
--[[
function Praetorian_MajorTactic:InitAbilities()

	-- Init ability ID's
	if Praetorian_Major.track_id == nil then
		Praetorian_Major.track_id = cpu_manager.stats:GetAbilityID( "praetorian_tracking_device" )
	end
end

function Praetorian_MajorTactic:DoAbilities()

	Ability.DoAbilityTarget( self.squad_ai, Praetorian_Major.track_id, Ability.Filters.CloseInfantryEnemy, 1 )
end
]]
