class 'Praetorian_BannerTactic' (Praetorian_InfantryTactic)

function Praetorian_BannerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Banner Tactic")
end

function Praetorian_BannerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function Praetorian_BannerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function Praetorian_BannerTactic:DoAbilities()

	if (self.squad_ai:IsBroken()) then

		local bugle_id = cpu_manager.stats:GetAbilityID( "praetorian_bugle" )
		if (self.squad_ai:CanDoAbility( bugle_id )) then
			self.squad_ai:DoSpecialAbility( bugle_id )
		end
	end

	-- Call basic broken check method
	InfantryTactic.CheckForBroken(self)
end

function Praetorian_BannerTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad(false, false, 1000, 60, nil)
end