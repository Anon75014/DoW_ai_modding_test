class 'Praetorian_SquigTactic' (Praetorian_InfantryTactic)

Praetorian_Squig = {}

function Praetorian_SquigTactic:__init( squad_ai ) super( squad_ai )

	   self:SetName("Squig Tactic")
end

function Praetorian_SquigTactic:AlwaysAttack()
	return true
end

function Praetorian_SquigTactic:InitAbilities()

	if (Praetorian_Squig.detonate_id == nil) then
	    Praetorian_Squig.detonate_id = cpu_manager.stats:GetAbilityID( "praetorian_squig_detonation" )
	end
end

function Praetorian_SquigTactic:DoAbilities()

        --SelfUse: Explodes in Area causing massive damage
 	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityArea( self.squad_ai, Praetorian_Squig.detonate_id, Ability.Filters.CloseSquadEnemy, 10, 2 ) 
		Ability.DoAbilityArea( self.squad_ai, Praetorian_Squig.detonate_id, Ability.Filters.CloseVehicleEnemy, 10, 1 )
		Ability.DoAbilityArea( self.squad_ai, Praetorian_Squig.detonate_id, Ability.Filters.CloseMonsterEnemy, 10, 1 ) 
	else
		Ability.DoAbilityArea( self.squad_ai, Praetorian_Squig.detonate_id, Ability.Filters.CloseSquadEnemy, 10, 5 ) 
		Ability.DoAbilityArea( self.squad_ai, Praetorian_Squig.detonate_id, Ability.Filters.CloseVehicleEnemy, 10, 2 )
		Ability.DoAbilityArea( self.squad_ai, Praetorian_Squig.detonate_id, Ability.Filters.CloseMonsterEnemy, 10, 5 ) 
	end
end
