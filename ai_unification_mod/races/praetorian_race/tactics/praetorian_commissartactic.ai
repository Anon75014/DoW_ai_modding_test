class 'Praetorian_CommissarTactic' (Praetorian_InfantryTactic)

Praetorian_Commissar = {}

function Praetorian_CommissarTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Commissar Tactic")

	-- Init execute delay time
	Praetorian_Commissar.NextExecuteCheck = 0
end

function Praetorian_CommissarTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function Praetorian_CommissarTactic:IsDefender()
	return self:IsCommanderDefender()
end

function Praetorian_CommissarTactic:InitAbilities()

	-- Init ability ID's
	if ( Praetorian_Commissar.grenades_id == nil ) then
		Praetorian_Commissar.grenades_id = cpu_manager.stats:GetAbilityID( "praetorian_commissar_frag_grenades" )
	end

	if (Praetorian_Commissar.execute_id == nil or Praetorian_Commissar.NextExecuteCheck == nil) then
		Praetorian_Commissar.execute_id = cpu_manager.stats:GetAbilityID( "praetorian_commissar_execute" )
		Praetorian_Commissar.NextExecuteCheck = g_iGMT
	end
end

function Praetorian_CommissarTactic:DoAbilities()

	Ability.DoAbilityPos( self.squad_ai, Praetorian_Commissar.grenades_id, Ability.Filters.CloseSquadEnemy, 1 )

	if Praetorian_Commissar.NextExecuteCheck == nil then 
		Praetorian_Commissar.NextExecuteCheck = 0
	end

	-- TargetSelf: When attached to squad, executes one of his own soldiers to increase their fighting potential
	-- GAMBIT: Added one more function (IsNearbySquadsMoraleBelow), for more cases of nearby morale-broken troops
	if g_iGMT > Praetorian_Commissar.NextExecuteCheck and (self.squad_ai:CanDoAbility(Praetorian_Commissar.execute_id))
	and self.squad_ai:IsAttacking() and self.squad_ai:IsAttached() then
		if self.squad_ai:GetNumTroopers() > 6
		or self:IsNearbySquadsMoraleBelow( self.squad_ai:GetPosition(), 30, 0.3, false ) then
			-- Use execute ability
			if self.squad_ai:CanDoAbility(Praetorian_Commissar.execute_id) then
				self.squad_ai:DoSpecialAbility(Praetorian_Commissar.execute_id) 
				Praetorian_Commissar.NextExecuteCheck = g_iGMT + 20
			end
		end
	end
end

function Praetorian_CommissarTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad(false, false, 1000, 60, nil)
end
 