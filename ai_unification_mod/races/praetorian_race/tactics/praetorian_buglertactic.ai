class 'Praetorian_BuglerTactic' (Praetorian_InfantryTactic)

Praetorian_Bugler = {}

function Praetorian_BuglerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Bugler Tactic")
end

function Praetorian_BuglerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function Praetorian_BuglerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function Praetorian_BuglerTactic:InitAbilities()

	-- Init ability ID's
	if ( Praetorian_Bugler.hailers_id == nil ) then
		Praetorian_Bugler.hailers_id = cpu_manager.stats:GetAbilityID( "praetorian_laud_hailers" )
	end
end

function Praetorian_BuglerTactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget( self.squad_ai, Praetorian_Bugler.hailers_id, Ability.Filters.CloseInfantryEnemy, 2 )
		Ability.DoAbilityTarget( self.squad_ai, Praetorian_Bugler.hailers_id, Ability.Filters.CloseCommanderEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, Praetorian_Bugler.hailers_id, Ability.Filters.CloseMonsterEnemy, 2 )
	else
		Ability.DoAbilityTarget( self.squad_ai, Praetorian_Bugler.hailers_id, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, Praetorian_Bugler.hailers_id, Ability.Filters.CloseCommanderEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, Praetorian_Bugler.hailers_id, Ability.Filters.CloseMonsterEnemy, 4 )
	end
end

function Praetorian_BuglerTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad(false, false, 1000, 60, nil)
end
 