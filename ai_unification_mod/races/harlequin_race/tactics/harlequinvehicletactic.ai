class 'HarlequinVehicleTactic' (VehicleTactic)

function HarlequinVehicleTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Harlequin Vehicle Tactic")
end

-- Check if the vehicle should dance away in melee
function HarlequinVehicleTactic:CheckVehicleDance(sName)

	if (sName == "harlequin_squad_venom" or
		sName == "harlequin_squad_void_weavers" or
		sName == "harlequin_squad_mocking_bird") then
		return true
	end
	return false
end

function HarlequinVehicleTactic:DoAbilities()

	-- New code to unstuck units with pathing issues, that can jump
    	-- Can also be used for flying squads with map stuck issues
    	-- Call it with [true], only for multi-membered squads
    	local sSquadName = self.squad_ai:GetSquadName()
    	if (sSquadName == "harlequin_squad_venom") or
        	(sSquadName == "harlequin_squad_void_weavers") or
        	(sSquadName == "harlequin_squad_wraith_lord") or
        	(sSquadName == "harlequin_squad_skathach_wraithknight") or
        	(sSquadName == "harlequin_squad_mocking_bird") then
        	self:SolveStuckCase(false)
    	end

	-- Call basic DoAbilities methods
	VehicleTactic.DoAbilities(self)
end
