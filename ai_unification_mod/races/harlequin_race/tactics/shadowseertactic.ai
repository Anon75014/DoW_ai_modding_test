class 'ShadowSeerTactic' (HarlequinInfantryTactic)

ShadowSeer = {}

function ShadowSeerTactic:__init( squad_ai ) super( squad_ai )
	self:SetName("ShadowSeer Tactic")
end

function ShadowSeerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function ShadowSeerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function ShadowSeerTactic:InitAbilities()

	if (ShadowSeer.tears_id == nil) then
		ShadowSeer.tears_id = cpu_manager.stats:GetAbilityID( "harlequin_shadowseer_veil_of_tears" )
	end
	if (ShadowSeer.daze_id == nil) then
		ShadowSeer.daze_id = cpu_manager.stats:GetAbilityID( "harlequin_shadowseer_daze" )
	end
	if (ShadowSeer.misdirect_id == nil) then
		ShadowSeer.misdirect_id = cpu_manager.stats:GetAbilityID( "harlequin_shadowseer_misdirection" )
	end
	if (ShadowSeer.haunt_id == nil) then
		ShadowSeer.haunt_id = cpu_manager.stats:GetAbilityID( "harlequin_the_hunt" )
	end
end

function ShadowSeerTactic:DoAbilities()

	if (self.squad_ai:IsInCombat()) then
		Ability.DoAbility( self.squad_ai, ShadowSeer.tears_id, Ability.Filters.IsInCombat ) 
	end
	
	--TargetSquad: Target enemy reduced accuracy and combat effectiveness
	Ability.DoAbilityTarget( self.squad_ai, ShadowSeer.misdirect_id, Ability.Filters.CloseInfantryEnemy, 5 )
	Ability.DoAbilityTarget( self.squad_ai, ShadowSeer.misdirect_id, Ability.Filters.CloseCommanderEnemy, 1 )
	Ability.DoAbilityTarget( self.squad_ai, ShadowSeer.misdirect_id, Ability.Filters.CloseMonsterEnemy, 1 )

	Ability.DoAbilityTarget( self.squad_ai, ShadowSeer.daze_id, Ability.Filters.CloseInfantryEnemy, 5 )
	Ability.DoAbilityTarget( self.squad_ai, ShadowSeer.daze_id, Ability.Filters.CloseCommanderEnemy, 1 )

	Ability.DoAbilityPos( self.squad_ai, ShadowSeer.haunt_id, Ability.Filters.CloseInfantryEnemy, 5 )
	Ability.DoAbilityPos( self.squad_ai, ShadowSeer.haunt_id, Ability.Filters.CloseCommanderEnemy, 1 )
	Ability.DoAbilityPos( self.squad_ai, ShadowSeer.haunt_id, Ability.Filters.CloseMonsterEnemy, 1 )
end

function ShadowSeerTactic:Update()
 
	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier2+
	if (cpu_manager:GetTierLevel() > 1) then
	
		if (self:TryAttachSquad(true, false, 1000, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, false, 1000, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end
