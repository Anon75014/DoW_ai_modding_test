class 'VeilWalkerTactic' (HarlequinInfantryTactic)

VeilWalker = {}

function VeilWalkerTactic:__init( squad_ai ) super( squad_ai )

	self.timedDirectSpawnAbility = Timer( VeilWalkerTactic.DoDirectSpawnAbility, self, 5 )

	self:SetName("VeilWalker Tactic")
end

function VeilWalkerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function VeilWalkerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function VeilWalkerTactic:InitAbilities()


	if (VeilWalker.shards_id == nil) then
		VeilWalker.shards_id = cpu_manager.stats:GetAbilityID( "harlequin_shards_of_light" )
	end
	if (VeilWalker.mirror_id == nil) then
		VeilWalker.mirror_id = cpu_manager.stats:GetAbilityID( "harlequin_mirror_of_minds" )
	end
	if (VeilWalker.fog_id == nil) then
		VeilWalker.fog_id = cpu_manager.stats:GetAbilityID( "harlequin_fog_of_dreams_2" )
	end
end

function VeilWalkerTactic:DoAbilities()

	
	--TargetSquad: Target enemy reduced accuracy and combat effectiveness
	Ability.DoAbilityTarget( self.squad_ai, VeilWalker.mirror_id, Ability.Filters.CloseInfantryEnemy, 5 )
	Ability.DoAbilityTarget( self.squad_ai, VeilWalker.mirror_id, Ability.Filters.CloseCommanderEnemy, 1 )
	Ability.DoAbilityTarget( self.squad_ai, VeilWalker.mirror_id, Ability.Filters.CloseMonsterEnemy, 1 )

	Ability.DoAbilityPos( self.squad_ai, VeilWalker.shards_id, Ability.Filters.CloseInfantryEnemy, 5 )
	Ability.DoAbilityPos( self.squad_ai, VeilWalker.shards_id, Ability.Filters.CloseCommanderEnemy, 1 )

	Ability.DoAbilityTarget( self.squad_ai, VeilWalker.fog_id, Ability.Filters.CloseInfantryEnemy, 5 )
	Ability.DoAbilityTarget( self.squad_ai, VeilWalker.fog_id, Ability.Filters.CloseCommanderEnemy, 1 )
	Ability.DoAbilityTarget( self.squad_ai, VeilWalker.fog_id, Ability.Filters.CloseMonsterEnemy, 1 )

	if (self.timedDirectSpawnAbility ~= nil) then
		self.timedDirectSpawnAbility:Call()
	else
		VeilWalkerTactic.DoDirectSpawnAbility(self)
	end
end

function VeilWalkerTactic:DoDirectSpawnAbility()

	-- Spawn honor guards in combat
	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	end
end

function VeilWalkerTactic:Update()
 
	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier2+
	if (cpu_manager:GetTierLevel() > 1) then
	
		if (self:TryAttachSquad(true, false, 1000, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, false, 1000, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end
