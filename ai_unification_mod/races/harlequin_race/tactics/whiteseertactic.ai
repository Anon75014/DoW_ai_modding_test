class 'WhiteSeerTactic' (HarlequinInfantryTactic)

WhiteSeer = {}

function WhiteSeerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("WhiteSeer Tactic")
end

function WhiteSeerTactic:InitAbilities()

	-- Init ability ID's

	if (WhiteSeer.entanglement_id == nil) then
		WhiteSeer.entanglement_id = cpu_manager.stats:GetAbilityID( "harlequin_entanglement" )
	end
end

function WhiteSeerTactic:DoAbilities()

	-- Warlock entanglement
	if (self.squad_ai:CanDoAbility( WhiteSeer.entanglement_id )) then
	
		local range = self.squad_ai:GetAbilityRange( WhiteSeer.entanglement_id )
		local squad_pos = self.squad_ai:GetPosition()
		local target = nil
		
		melee = function( squad )
		
		 	local is_cc = false    
			if (squad:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
				is_cc = true   
			end
			return is_cc and squad:GetNumTroopers() >= 4
		end
		
		local target = cpu_manager:FindClosestEnemy( squad_pos, range, melee )
		
		if (target ~= nil) then
			self.squad_ai:DoSpecialAbilitySquad( WhiteSeer.entanglement_id, target:GetSquad() )
		end
	end
	
	-- Call basic DoAbilities methods
	HarlequinInfantryTactic.DoAbilities(self)
end