class 'HarlequinBuildBaseStrategy' (BuildBaseStrategy)

function HarlequinBuildBaseStrategy:__init( baseinfo ) super( baseinfo )

	-- Add detector units (Best first, worst last)
	self:AddDetectorUnit("harlequin_squad_mime")
	self:AddDetectorUnit("harlequin_squad_shadowseer")
	self:AddDetectorUnit("harlequin_squad_spirit_walker")

	-- Choose one of three research patterns
	self.m_iSaedathResearchPattern = math.random(1, 3)
end

function HarlequinBuildBaseStrategy:ChooseBuildProgram()

	-- Check build program count
	if (table.getn(self.info.BuildPrograms) ~= 4) then
		return BuildBaseStrategy.ChooseBuildProgram(self)
	end

	-- Get map size and closest enemy distance
	local sMapSize, iClosestEnemyDistance = self:GetMapSize()
		
	-- Set probabilities of the strategies according to the map size
	local iBuildProgram1	-- Allround strategy
	local iBuildProgram2	-- Troupe strategy
	local iBuildProgram3	-- Jetbike strategy
	local iBuildProgram4	-- DeathJester strategy
	if (sMapSize == "small" or iClosestEnemyDistance <= 70 or cpu_manager.iPlayerCount == 2) then
	
		iBuildProgram1 = 25
		iBuildProgram2 = 25
		iBuildProgram3 = 25
		iBuildProgram4 = 25
		
	elseif (sMapSize == "large" and cpu_manager.iPlayerCount >= 6) then
	
		iBuildProgram1 = 25
		iBuildProgram2 = 25
		iBuildProgram3 = 25
		iBuildProgram4 = 25
	else
	
		iBuildProgram1 = 25
		iBuildProgram2 = 25
		iBuildProgram3 = 25
		iBuildProgram4 = 25
	end
	
	-- Modify probabilities according to the closest enemy player
	local oEnemy = cpu_manager:FindClosestEnemyPlayer(false)
	local sEnemy = oEnemy:GetPlayerRaceName()		
	if (sEnemy == "ork_race" or sEnemy == "guard_race" or sEnemy == "necron_race") then
	
		iBuildProgram2 = iBuildProgram2 + 10
		iBuildProgram3 = iBuildProgram3 - 10

	elseif (sEnemy == "eldar_race" or sEnemy == "tau_race") then

		iBuildProgram1 = iBuildProgram1 - 10
		iBuildProgram2 = iBuildProgram2 - 10
		iBuildProgram3 = iBuildProgram3 + 20
	end
		
	-- Now choose a program
	iBuildProgram2 = iBuildProgram1 + iBuildProgram2
	iBuildProgram3 = iBuildProgram2 + iBuildProgram3
	iBuildProgram4 = iBuildProgram3 + iBuildProgram4
	local iRandom = math.random(1, 100)
	if (iRandom <= iBuildProgram1) then
		return 1
	elseif (iRandom <= iBuildProgram2) then
		return 2
	elseif (iRandom <= iBuildProgram3) then
		return 3
	elseif (iRandom <= iBuildProgram4) then
		return 4
	end
	return 1
end

function HarlequinBuildBaseStrategy:EvaluateSquadCap()

	-- Check squad cap
	if (self:CheckSquadCap(300, 0)) then
		
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research
		
		if (not cpu_manager.cpu_player:IsResearchComplete( "harlequin_squad_cap_research" )) then
			tBuildType.name = "harlequin_squad_cap_research"
		elseif not cpu_manager.cpu_player:IsResearchComplete( "harlequin_squad_cap_research_1" ) then
			tBuildType.name = "harlequin_squad_cap_research_1"
		else
			return
		end
		
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
	
	-- Check support cap
	if (self:CheckSupportCap(150, 300)) then
		
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research
		
		if (not cpu_manager.cpu_player:IsResearchComplete( "harlequin_support_cap_research" )) then
			tBuildType.name = "harlequin_support_cap_research"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "harlequin_support_cap_research_1" )) then
			tBuildType.name = "harlequin_support_cap_research_1"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "harlequin_support_cap_research_2" )) then
			tBuildType.name = "harlequin_support_cap_research_2"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "harlequin_support_cap_research_3" )) then
			tBuildType.name = "harlequin_support_cap_research_3"
		else
			return
		end
		
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
end

function HarlequinBuildBaseStrategy:GetBuildingName( sType )

	-- Return race specific object string
	if (sType == "HQ") then
		return "harlequin_hq"

	elseif (sType == "Generator") then
		return "harlequin_nil_building"

	elseif (sType == "BiggerGenerator") then
		return "harlequin_warp_generator"

	elseif (sType == "VehicleBuilding") then
		return "harlequin_support_portal"
		
	elseif (sType == "ListeningPost") then
		return "harlequin_listening_post"
		
	elseif (sType == "Turret") then
		return "harlequin_support_platform_scatterlaser"

	elseif (sType == "Mine") then
		return "harlequin_mine"
	end
	return nil
end

function HarlequinBuildBaseStrategy:GetAddonBuilding( sType )

	if (sType == "harlequin_list_post_addon_1") then
		return "harlequin_listening_post"

	elseif (sType == "harlequin_list_post_addon_2") then
		return "harlequin_listening_post"

	elseif (sType == "harlequin_support_platform_addon") then
		return "harlequin_support_platform_scatterlaser"
	end
	return nil
end

function HarlequinBuildBaseStrategy:UpdateTierLevel()

	-- Reset tier level
	self.tierLevel = 1
	
	-- Check for tier research
        if (cpu_manager.cpu_player:IsResearchComplete("harlequin_rhana_dandra_research")) then
		self.tierLevel = 4
		return

	elseif (cpu_manager.cpu_player:IsResearchComplete("harlequin_tier3_research")) then
		self.tierLevel = 3
		return
		
	elseif (cpu_manager.cpu_player:IsResearchComplete("harlequin_tier2_research")) then
		self.tierLevel = 2
		return
	end
end

