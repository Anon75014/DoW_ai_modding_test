function HarlequinBuildBaseStrategy:BuildFlexible()

	-- Always test first to see if there is at least one existing HQ
	if self:GetBuildingCountByName(self:GetBuildingName("HQ")) < 1 then
     		self:BuildFirstHQ()
	end

	-- Always test first to see if there is at least one existing builder unit
	self:BuildFirstBuilder("harlequin_squad_chorus")

	-- Dynamic research
	-- Item-Syntax: ResearchName, MinTier, RequisitionCost, PowerCost, MinSquadCap, MinSupportCap, SquadName, SquadMinCount

	-- Compute tier 1 researches
	if (self.tierLevel >= 1) then

		-- Compute infantry researches
		if (self:CountSquads("harlequin_squad_troupe") >= 2 or self:CountSquads("harlequin_squad_death_jesters") >= 2) then
			self:DynamicResearch("harlequin_holo_suit_research", 1, 50, 50, 0, 0, nil, 0)
		       	self:DynamicResearch("harlequin_leap_dance_research", 1, 50, 50, 0, 0, nil, 0)
			self:DynamicResearch("harlequin_troupe_grenades_research", 1, 25, 75, 0, 0, nil, 0)
		end
	end

	-- Compute tier 2 researches
	if (self.tierLevel >= 2) then
		
		-- Compute shroud researches
		self:DynamicResearch("harlequin_shroud_research", 2, 100, 100, 0, 0, nil, 0)

		-- Compute bonus infantry researches
		if (self:CountSquads("harlequin_squad_troupe") >= 1) then
			self:DynamicResearch("harlequin_holo_suit_research_2", 2, 75, 75, 0, 0, nil, 0)
			self:DynamicResearch("harlequin_capacity_research", 2, 75, 75, 0, 0, nil, 0)
			self:DynamicResearch("harlequin_research_infantryaccuracy_1", 2, 100, 50, 0, 0, nil, 0)	
			self:DynamicResearch("harlequin_disruption_research", 2, 100, 50, 0, 0, nil, 0)
		end
		if (self:CountSquads("harlequin_squad_mime") >= 1) then
			self:DynamicResearch("harlequin_infiltration_research", 2, 50, 50, 0, 0, nil, 0)
		end

		-- Compute bonus commander researches
		if (self:CountSquads("harlequin_squad_shadowseer") >= 1 or self:CountSquads("harlequin_squad_solitaire") >= 1 or self:CountSquads("harlequin_squad_great_harlequin") >= 1) then
			self:DynamicResearch("harlequin_research_hero_health_1", 2, 125, 75, 0, 0, nil, 0)
		end
		if (self:CountSquads("harlequin_squad_great_harlequin") >= 1) then
			self:DynamicResearch("harlequin_mask_of_fear_research", 2, 25, 50, 0, 0, nil, 0)
		end
		if (self:CountSquads("harlequin_squad_shadowseer") >= 1) then
			self:DynamicResearch("harlequin_the_hunt_research", 2, 80, 20, 0, 0, nil, 0)
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("harlequin_support_platform_scatterlaser_no_limit", 2, 2, 200, 100, 0, 0)
	end
	
	-- Compute tier 3 researches
	if (self.tierLevel >= 3) then

		self:DynamicResearch("harlequin_relocation_research", 3, 100, 100, 0, 0, nil, 0)

		-- Compute bonus infantry researches
		if (self:CountSquads("harlequin_squad_troupe") >= 1 or self:CountSquads("harlequin_squad_death_jesters") >= 1) then
			self:DynamicResearch("harlequin_holo_suit_research_3", 3, 100, 100, 0, 0, nil, 0)
			self:DynamicResearch("harlequin_research_infantryaccuracy_2", 3, 100, 100, 0, 0, nil, 0)
		end

		-- Compute library guardian researches
		if (self:CountSquads("harlequin_squad_library_guardians") >= 1) then
       			self:DynamicResearch("harlequin_shadow_mastery_research", 3, 125, 125, 0, 0, nil, 0)
		end
		
		-- Compute troubadur researches
		if (self:CountSquads("harlequin_squad_troubadur") >= 1) then
       			self:DynamicResearch("harlequin_lingering_song_research", 3, 25, 50, 0, 0, nil, 0)
		end
		
		-- Compute bonus commander researches
		if (self:CountSquads("harlequin_squad_shadowseer") >= 1 or self:CountSquads("harlequin_squad_solitaire") >= 1 or self:CountSquads("harlequin_squad_great_harlequin") >= 1) then
			self:DynamicResearch("harlequin_research_hero_health_2", 3, 175, 125, 0, 0, nil, 0)
			self:DynamicResearch("harlequin_benathai_research", 3, 50, 50, 0, 0, nil, 0)
		end
		if self:CountSquads("harlequin_squad_great_harlequin") >= 1 then
			self:DynamicResearch("harlequin_phase_belt_research", 3, 100, 125, 0, 0, nil, 0)
		end

		-- Compute bonus vehicle researches
		if (self:CountSquads("harlequin_squad_venom") >= 1 or self:CountSquads("harlequin_squad_jetbikes") >= 1 or self:CountSquads("harlequin_squad_mocking_bird") >= 1 ) then
			self:DynamicResearch("harlequin_vehicle_holo_field_research", 3, 150, 150, 0, 0, nil, 0)
		end

		if (self:CountSquads("harlequin_squad_mime") >= 1) then
			self:DynamicResearch("harlequin_infiltration_improved_research", 3, 50, 150, 0, 0, nil, 0)
		end

		-- Saedath research pattern
		if (self.m_iSaedathResearchPattern == 1) then
			--Passive: Causes enemies to take damage when our kind are killed
			self:DynamicResearch("harlequin_saedath_dark_research", 3, 200, 100, 0, 0, nil, 0)

		elseif (self.m_iSaedathResearchPattern == 2) then
			--Passive: Greatly increases the speed of our kind causing the enemy to be less accurate in their attacks
			self:DynamicResearch("harlequin_saedath_light_research", 3, 100, 200, 0, 0, nil, 0)

		elseif (self.m_iSaedathResearchPattern == 3) then
			--Passive: Increases speed and accuracy of the harlequin infantry
			self:DynamicResearch("harlequin_saedath_twilight_research", 3, 150, 150, 0, 0, nil, 0)
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("harlequin_support_platform_scatterlaser_no_limit", 4, 3, 300, 200, 0, 0)
	end

	-- Compute tier 4 researches
	if (self.tierLevel >= 4) then

		-- Compute additional bonus tier researches
		self:DynamicResearch("harlequin_tier5_research", 4, 500, 500, 0, 0, nil, 0)

		-- Compute more turrets based on one additional HQ
       		if self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 then
			self:DynamicBuild("harlequin_support_platform_scatterlaser", 12, 4, 300, 200, 0, 0)
		end

		-- Compute even more turrets based on two additional HQs
       		if self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 2 then
			self:DynamicBuild("harlequin_support_platform_scatterlaser", 18, 4, 500, 400, 0, 0)
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("harlequin_support_platform_scatterlaser_no_limit", 10, 4, 400, 300, 0, 0)
	end

	--Restrict dynamic builds to hard difficulty or higher
	if (CpuManager.AISettings.bMultiBuildings) then

		-- Dynamic buildings
                -- Item-Syntax: BuildingName, BuildingCount, MinTier, MinRequisition, MinPower, MinSquadCap, MinSupportCap
		self:DynamicBuild("harlequin_aspect_portal", 2, 3, 500, 0, 0, 0)
		self:DynamicBuild("harlequin_aspect_portal", 3, 4, 1000, 0, 0, 0)
		self:DynamicBuild("harlequin_masque_portal", 2, 2, 600, 100, 0, 0)
		self:DynamicBuild("harlequin_masque_portal", 3, 3, 1000, 200, 0, 0)
		self:DynamicBuild("harlequin_support_portal", 2, 3, 700, 200, 0, 0)
		self:DynamicBuild("harlequin_support_portal", 3, 4, 1000, 300, 0, 0)
		self:DynamicBuild("harlequin_hq", 2, 3, 700, 0, 0, 0)
        	self:DynamicBuild("harlequin_hq", 3, 4, 900, 300, 0, 0)
	end
end

-- Force AI to give priority to re-build HQ if lost and none are present
function HarlequinBuildBaseStrategy:BuildFirstHQ()

	-- Check if a plan exists
	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))
	if (self:PlanExists("Build Building Plan", iBuildingID)) then
		return
	end

	-- Check if any HQ are in production
	for oBuildChannel in build_manager:GetBuildChannelAIs() do

		-- Check building ID
		if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
			return
		end
	end
		
	-- Build the HQ
	local sHQName = self:GetBuildingName("HQ")
	local tBuildType = CpuBuildType()
	tBuildType.btype = CpuPrerequisites.BT_Building
	tBuildType.name = sHQName
	if (self:TryBuild( tBuildType )) then
		aitrace("BuildController: Dynamic build of "..tBuildType.name)
	end
	return
end

-- Force AI to give priority to recruit a builder unit if none are present
function HarlequinBuildBaseStrategy:BuildFirstBuilder(iBuilderName)

	if self:CountSquads(iBuilderName) < 1 then

		-- Recruit a builder squad
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Squad
		tBuildType.name = iBuilderName
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic build of "..tBuildType.name)
		end
		return
	end
end

-- Arkhan 01.2006: Method to check if force tech should be computed
function HarlequinBuildBaseStrategy:ForceTech()

	-- Check time
	if (g_iGMT < 60 * CpuManager.ForceTech.StartTier1) then
		return false
	end

	-- Check ressources
	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

	-- Check tier
	local iTierLevel = self:GetTierLevel()
	if (iTierLevel == 1) then

		-- Check resources
		if (iRequisition > 400 and iPower > 200) then
			return false
		end
	
		-- Check for Tier2 research
                if (cpu_manager.cpu_player:IsResearchComplete("harlequin_tier2_research")) then
				return false
			end

	elseif (iTierLevel == 2) then

		-- Check build channel for support portal
		local iID = cpu_manager.stats:GetBuildingID("harlequin_support_portal")
		local bHasVehicleBuilding = false
		for oBuildChannel in build_manager:GetBuildChannelAIs() do
		
			-- Check building ID
			if (oBuildChannel:GetBlueprintID() == iID) then
				bHasVehicleBuilding = true
				break
			end
		end
		if (not bHasVehicleBuilding) then
			return true
		end
		
		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier2 and (iRequisition < 400 or iPower < 200)) then
			return true
		end
		
	elseif (iTierLevel == 3) then	

		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier3 and (iRequisition < 500 or iPower < 500)) then
			return true
		end
	end
	return false
end

-- Arkhan 03.2006: Return placement type for buildings
function HarlequinBuildBaseStrategy:GetPlacementType(iBuildingID)
	
	-- Check building
	if (cpu_manager:IsHQ(iBuildingID)) then
        local count = self:GetBuildingCountByName("harlequin_hq", false)
        local friend = cpu_manager:FindClosestFriendPlayer()
        if friend == nil then
            -- Lone Player
            if count == 0 and not cpu_manager:HQThreat() then
                return "HQ"
            else
                return "Safeplace"
            end
        else
            -- Has allies
            if count > 0 or cpu_manager:HQThreat() then
                return "HQ"
            else
                return "Safeplace"
            end
        end
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("harlequin_aspect_portal") or
			iBuildingID == cpu_manager.stats:GetBuildingID("harlequin_support_portal") or
			iBuildingID == cpu_manager.stats:GetBuildingID("harlequin_masque_portal")) then
		return "Military"
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("harlequin_armoury") or
			iBuildingID == cpu_manager.stats:GetBuildingID("harlequin_dark_veil")) then
		return "BaseBack"
	elseif (cpu_manager:IsTurret(iBuildingID) or iBuildingID == cpu_manager.stats:GetBuildingID("harlequin_support_platform_scatterlaser_no_limit")) then
		return "Front2"
	elseif (cpu_manager:IsMine(iBuildingID)) then
		return "Mine"
	end
	return "Basic"
end

-- Arkhan 03.2006: Inherited method to modify squad demand
function HarlequinBuildBaseStrategy:ModifySquadDemand(iUnitID)

	-- No more bards then squads 
	if (iUnitID == cpu_manager.stats:GetSquadID("harlequin_squad_troubadur")) then
		
		-- Check number of attachable squads 
		local bard_attach = function ( squad_ai )
			return (squad_ai:GetTactic():GetUnitStrength() >= 250 and squad_ai:CanReceiveAttachment())
		end
		local num_attach = self:CountSquads("harlequin_squad_troupe", bard_attach) +
				   self:CountSquads("harlequin_squad_mime", bard_attach) +
				   self:CountSquads("harlequin_squad_library_guardians", bard_attach) 

 		-- Check apo count
		local num_bard = self:CountSquads("harlequin_squad_troubadur")
		if (num_bard >= num_attach) then
			return 0
		end	
	end
	
	return BuildBaseStrategy.ModifySquadDemand(self, iUnitID)
end

