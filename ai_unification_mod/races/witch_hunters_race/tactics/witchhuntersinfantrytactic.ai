function WitchHuntersInfantryTactic:DoMarshalUseWeapon()

	if self.squad_ai:IsInCombat() then
		if self.squad_ai:CanDoAbility(WitchHuntersInfantryAbility.HellfireID) then 
			if Ability.DoAbilityArea( self.squad_ai, WitchHuntersInfantryAbility.HellfireID, Ability.Filters.CloseInfantryEnemy, 10, 4 )
			or Ability.DoAbilityArea( self.squad_ai, WitchHuntersInfantryAbility.HellfireID, Ability.Filters.CloseMonsterEnemy, 10, 2 ) then
				self.hellfireLastUse = g_iGMT
			end
		end

		if self.squad_ai:CanDoAbility(WitchHuntersInfantryAbility.HiexID) then
			if ( g_iGMT > self.hiexLastUse + 20 and self.squad_ai:IsAttacking() and Ability.Filters.CloseSquadEnemy( self.squad_ai:GetPosition(), 10, 4 )~= nil) then
				if Ability.DoAbility( self.squad_ai, WitchHuntersInfantryAbility.HiexID, Ability.Filters.IsInCombat ) then
					self.hiexLastUse = g_iGMT
				end
			end
		end

		if self.squad_ai:CanDoAbility(WitchHuntersInfantryAbility.StunID) then
			if ( g_iGMT > self.stunLastUse + 20 and self.squad_ai:IsAttacking() and Ability.Filters.CloseVehicleEnemy( self.squad_ai:GetPosition(), 20, 1 )~= nil) then
				if Ability.DoAbility( self.squad_ai, WitchHuntersInfantryAbility.StunID, Ability.Filters.IsInCombat ) then
					self.stunLastUse = g_iGMT
				end
			end
		end
	end

	if self.squad_ai:CanDoAbility(WitchHuntersInfantryAbility.RefractorID) then
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.5) then
			if (Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 20, 1) == nil and self.squad_ai:IsInCombat()) then
				self.squad_ai:DoSpecialAbility(WitchHuntersInfantryAbility.RefractorID)
			end
		end
	end
end

function WitchHuntersInfantryTactic:DoBattleSistersUseWeapon()

	if self.squad_ai:IsInCombat() then
		if self.squad_ai:CanDoAbility(WitchHuntersInfantryAbility.VeteranID) then
			if ( g_iGMT > self.veteranLastUse + 30 ) then
				if Ability.DoAbilityArea( self.squad_ai, WitchHuntersInfantryAbility.VeteranID, Ability.Filters.CloseEnemy, 20, 2 ) then
					self.veteranLastUse = g_iGMT
				end
			end
		end

		if self.squad_ai:CanDoAbility(WitchHuntersInfantryAbility.HandEmperorID) then
			if self.squad_ai:GetNumTroopers() >= 6 then
				local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
				if ( iRequisition > 1500 or (iRequisition > 250 and g_iGMT > self.handEmperorLastUse + 150 ) ) then
					if Ability.DoAbilityArea( self.squad_ai, WitchHuntersInfantryAbility.HandEmperorID, Ability.Filters.CloseEnemy, 15, 2 ) then
						self.handEmperorLastUse = g_iGMT
					end
				end
			end
		end

		if self.squad_ai:CanDoAbility(WitchHuntersInfantryAbility.HandEmperorBID) then
			if self.squad_ai:GetNumTroopers() >= 6 then
				local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
				if ( iRequisition > 1500 or (iRequisition > 250 and g_iGMT > self.handEmperorBLastUse + 150 ) ) then
					if Ability.DoAbilityArea( self.squad_ai, WitchHuntersInfantryAbility.HandEmperorBID, Ability.Filters.CloseEnemy, 15, 2 ) then
						self.handEmperorBLastUse = g_iGMT
					end
				end
			end
		end
	end
end


