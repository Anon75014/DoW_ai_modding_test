class 'HospitallerTactic' (WitchHuntersInfantryTactic)

Hospitaller = {}

function HospitallerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Hospitaller Tactic")
end

function HospitallerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function HospitallerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function HospitallerTactic:Update()

	if self:IsComplete() then
		return
	end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

	--attach to squad
	self:TryAttachSquad( false, false, 1000, 200, nil )
end


