class 'TauTurretTactic' (BaseTactic)

TauTurret = {}

function TauTurretTactic:__init( base_ai ) super( base_ai )

	self:SetName("Tau Turret Tactic")

	self.Addon = math.random( 0, 1 )	  -- Choose either to leave aa default turret or choose two other weapon options
	self.Upgrade = math.random( 0, 1 )	  -- Choose between missile launcher or plasma cannon addons
end

function TauTurretTactic:AutoBuildTurretAddOn( addonSlot, iID )
	local buildChannelLP = build_manager:GetBuildChannelFromID(iID)
	if (buildChannelLP ~= nil) then
		local addOnID = buildChannelLP:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
		if (buildChannelLP:IsBuilding() == 0 and buildChannelLP:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
			buildChannelLP:BuildAddOn(addOnID)
		end
	end
end

function TauTurretTactic:DoAbilities()

	if self.Addon == 0 then
		-- Choose to remain turret as default and not build any addons
		return
	else
   		if (cpu_manager:GetTierLevel() >= 2) then 
			local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
			local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
			if (iRequisition >= 100 and iPower >= 100) then
				self:AutoBuildTurretAddOn(self.Upgrade, self.base_ai:GetEntity():GetID())	-- Build either missile launcher or plasma cannon addons
			end
		end
	end
end
