class 'AnghkorTactic' (TauInfantryTactic)

Anghkor = {}

function AnghkorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Anghkor Tactic")
end

function AnghkorTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function AnghkorTactic:IsDefender()
	return self:IsCommanderDefender()
end

function AnghkorTactic:InitAbilities()

	-- Init ability ID's
	if (Anghkor.photon == nil) then
		Anghkor.photon = cpu_manager.stats:GetAbilityID( "tau_photon_grenade" )
	end
end

function AnghkorTactic:DoAbilities()

	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget(self.squad_ai, Anghkor.photon, Ability.Filters.CloseSquadEnemy, 1)
	else
		Ability.DoAbilityTarget(self.squad_ai, Anghkor.photon, Ability.Filters.CloseSquadEnemy, 3)
	end
end

function AnghkorTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier2+
    	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end
end
