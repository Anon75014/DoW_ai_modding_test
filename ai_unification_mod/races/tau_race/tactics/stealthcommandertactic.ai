class 'StealthCommanderTactic' (TauInfantryTactic)

StealthCommander = {}

function StealthCommanderTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("XV25 Stealth Commander Tactic")
end

function StealthCommanderTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function StealthCommanderTactic:IsDefender()
	return self:IsCommanderDefender()
end

-- Commander is allowed to retreat even directly after a jump
function StealthCommanderTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function StealthCommanderTactic:JumpAttack()
	Tactic.JumpAttack(self)
end

function StealthCommanderTactic:InitAbilities()

	-- Init ability ID's
	if StealthCommander.iEMPGrenadeID == nil then
		StealthCommander.iEMPGrenadeID = cpu_manager.stats:GetAbilityID( "tau_emp_grenade" )	
	end
end

function StealthCommanderTactic:DoAbilities()
	
	-- Check if we can use EMP grenade
	Ability.DoAbilityTarget(self.squad_ai, StealthCommander.iEMPGrenadeID, Ability.Filters.CloseVehicleEnemy, 1)
	
	-- Call basic DoAbilities methods
	InfantryTactic.DoAbilities(self)
end

function StealthCommanderTactic:Upgrade()

	-- If I am broken, don't upgrade!
	if (self:IsAffectedByMorale() and self.squad_ai:IsBroken()) then
		return
	end
	
	-- Force upgrade
	if (not self.squad_ai:IsReinforcing() and self.squad_ai:HasUpgradableTrooper() and self.squad_ai:GetHealthPercentage() > 0.5) then
		self.squad_ai:DoBestUpgrade(UnitStatsAI.UC_VehicleMed)
	end
end

function StealthCommanderTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end

	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end
