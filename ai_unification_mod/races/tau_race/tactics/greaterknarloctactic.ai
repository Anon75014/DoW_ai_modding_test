class 'GreaterKnarlocTactic' (TauInfantryTactic)

function GreaterKnarlocTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Greater Knarloc Tactic")
	self.rider_upgrade = math.random( 0, 1 ) -- Choose one of the handlers with ranged weapons (addons 0 and 1)
	self.lastAddonTry = g_iGMT
	self.do_it = cpu_manager.cpu_player:IsResearchComplete("0more_vanilla_squads_enable")
end

function GreaterKnarlocTactic:AutoBuildAddOn( addonSlot )
	for e in self.squad_ai:GetEntities() do
		local buildChannel = build_manager:GetBuildChannelFromID(e:GetID())
		if buildChannel ~= nil then
			local addOnID = buildChannel:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
			if (buildChannel:IsBuilding() == 0 and buildChannel:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
				buildChannel:BuildAddOn(addOnID)
				return
			end
		end
	end
	return
end

function GreaterKnarlocTactic:DoAbilities()

	-- Check if it is available (only for new squads)
	if self.do_it then
		-- Check to addon every 10+ secs
		if g_iGMT > self.lastAddonTry + 10 then
			self.lastAddonTry = g_iGMT
			-- Check available resources and health, before performing any upgrade
			local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
			local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
			if iReq > 100 and iPow > 100 and self.squad_ai:GetHealthPercentage() > 0.35 then
				self:AutoBuildAddOn(self.rider_upgrade)
			end
		end
	end
end

function GreaterKnarlocTactic:Update()

	if (self:IsComplete()) then
		return
	end

    	-- State machine
    	if (not InfantryTactic.Update(self)) then
        	return
    	end
    
	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end