class 'SniperDroneTactic' (TauInfantryTactic)

function SniperDroneTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Sniper Drone Tactic")
end


function SniperDroneTactic:DoAbilities()
	if G_Tau_ControllerPos ~= nil and (G_Tau_ControllerPos.x ~= 0 and G_Tau_ControllerPos.z ~= 0)
	and (G_Tau_ControllerPos.x ~= nil and G_Tau_ControllerPos.z ~= nil) then
		if not (self.squad_ai:IsAttacking() or self.squad_ai:IsInStateMove())
		and distance_sqr(G_Tau_ControllerPos, self.squad_ai:GetPosition()) > 1000 then
			self.squad_ai:DoMove(G_Tau_ControllerPos)
		end
	end
end
