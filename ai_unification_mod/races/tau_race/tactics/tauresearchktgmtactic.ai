class 'TauResearchKtgmTactic' (BaseTactic)

TauResearchKtgm = {}

function TauResearchKtgmTactic:__init( base_ai ) super( base_ai )

	self:SetName("Tau Research Kill Team Tactic")

	-- The name of the squad to target
	self.squad1_name = "tau_stealth_team_squad_ktgm"
	self.squad2_name = "tau_fire_warrior_squad_ktgm"
	self.squad3_name = "tau_commander_squad_ktgm"
	self.squad4_name = "tau_crisis_suit_advance_squad_ktgm"
	self.squad5_name = "tau_crisis_suit_honor_guard_squad_ktgm"
end

function TauResearchKtgmTactic:InitAbilities()
	
	-- Init abilities
	if (TauResearchKtgm.Strongheal_id == nil) then
		TauResearchKtgm.Strongheal_id = cpu_manager.stats:GetAbilityID( "ls_healing_1000" )
	end

	if (TauResearchKtgm.Lightheal_id == nil) then
		TauResearchKtgm.Lightheal_id = cpu_manager.stats:GetAbilityID( "ls_healing_500" )
	end
end

function TauResearchKtgmTactic:DoAbilities()
	
	aitrace("TauResearchKtgmTactic: Do abilities...")

	-- Check if squad is valid
    	for oSquad in military_manager:GetSquads() do
        	if oSquad:IsValid() then
            		if oSquad:GetSquadName() == self.squad1_name or
				oSquad:GetSquadName() == self.squad2_name or
				oSquad:GetSquadName() == self.squad3_name or
				oSquad:GetSquadName() == self.squad4_name or
				oSquad:GetSquadName() == self.squad5_name then

				-- Try to use Strong Heal ability on squad (restores target's health by 1000 HP)
				if (self.base_ai:CanDoAbility(TauResearchKtgm.Strongheal_id)) then
	
					-- Check if health needs an energency boost
					if (oSquad:WasRecentlyHurt() and oSquad:GetHealthPercentage() < 0.3) then

						-- Check if we have the needed resources
						local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
						local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
      						if iReq >= 100 and iPower >= 100 then		
		
							-- Use strong heal ability on commander
							self.base_ai:DoSpecialAbility(TauResearchKtgm.Strongheal_id)
							--print("Using Heavy Heal ability for player "..tostring(cpu_manager.player_id).."")
						end
					end
				end
