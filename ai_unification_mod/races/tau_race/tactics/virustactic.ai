class 'VirusTactic' (TauInfantryTactic)

function VirusTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Virus Tactic")
end

function VirusTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function VirusTactic:IsDefender()
	return self:IsCommanderDefender()
end

function VirusTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad(false, false, 1000, 60, nil)
end
