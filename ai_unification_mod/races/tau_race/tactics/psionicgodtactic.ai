class 'PsionicGodTactic' (TauInfantryTactic)

PsionicGod = {}

function PsionicGodTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Greater Psionic God Tactic")
end

function PsionicGodTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function PsionicGodTactic:IsDefender()
	return self:IsCommanderDefender()
end

-- Commander is allowed to retreat even directly after a jump
function PsionicGodTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function PsionicGodTactic:JumpAttack()
	Tactic.JumpAttack(self)
end

function PsionicGodTactic:InitAbilities()

	-- Init ability ID's
	if (PsionicGod.blast == nil) then
		PsionicGod.blast = cpu_manager.stats:GetAbilityID( "tau_god_psi_blast" )
	end

	if (PsionicGod.rage == nil) then
		PsionicGod.rage = cpu_manager.stats:GetAbilityID( "tau_god_rage" )
	end
end

function PsionicGodTactic:DoAbilities()

	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityArea(self.squad_ai, PsionicGod.blast, Ability.Filters.CloseEnemy, 18, 3)
	else
		Ability.DoAbilityArea(self.squad_ai, PsionicGod.blast, Ability.Filters.CloseEnemy, 16, 6)
	end

	if (self.squad_ai:IsInCombat() and self.squad_ai:WasRecentlyHurt()) then

		if (self.squad_ai:CanDoAbility(PsionicGod.rage)) then
			self.squad_ai:DoSpecialAbility(PsionicGod.rage)
		end
	end
end

function PsionicGodTactic:CanOnlyDecap()
	return true
end

function PsionicGodTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end

	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end
