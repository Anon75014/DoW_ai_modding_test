class 'StealthTeamKtgmTactic' (TauInfantryTactic)

StealthTeamKtgm = {}

function StealthTeamKtgmTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Stealth Squad Kill Team Tactic")
end

function StealthTeamKtgmTactic:InitAbilities()

	-- Init ability ID's
	if (StealthTeamKtgm.iEMPGrenadeID == nil) then
		StealthTeamKtgm.iEMPGrenadeID = cpu_manager.stats:GetAbilityID( "tau_emp_grenade" )	
	end

	if (StealthTeamKtgm.iShieldID == nil) then
		StealthTeamKtgm.iShieldID = cpu_manager.stats:GetAbilityID( "tau_personal_shield" )	
	end
end

function StealthTeamKtgmTactic:DoAbilities()

	-- See if we have and we must activate shields
	if (self.squad_ai:CanDoAbility(StealthTeamKtgm.iShieldID)) then
		if self.squad_ai:WasRecentlyHurt() and (self.squad_ai:IsInCombat() or self.squad_ai:GetHealthPercentage() < 0.5) then
			self.squad_ai:DoSpecialAbility(StealthTeamKtgm.iShieldID)
		end
	end
	
	-- Check if we can use EMP grenade
	--Ability.DoAbilityTarget(self.squad_ai, StealthTeamKtgm.iEMPGrenadeID, Ability.Filters.CloseVehicleEnemy, 1)

	-- Check if we can use EMP grenade (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(StealthTeamKtgm.iEMPGrenadeID)) then 

		-- Search for a nearby enemy squad
		local iRange = self.squad_ai:GetAbilityRange(StealthTeamKtgm.iEMPGrenadeID)
		local oUnit = cpu_manager.cpu_player:FindFirstVehicleEnemy(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil) then
			--print("Using EMP Grenade Ability for player "..tostring(cpu_manager.player_id).."")
			self.squad_ai:DoSpecialAbilitySquad(StealthTeamKtgm.iEMPGrenadeID, oUnit:GetSquad())
			return
		end
	end

	-- Call basic DoAbilities methods
	InfantryTactic.DoAbilities(self)
end

function StealthTeamKtgmTactic:Reinforce()

	-- Check if we are reinforcing
	if (not self.squad_ai:IsReinforcing()) then

		-- try for different types of squad members
		local StealthIndex = 0
		local BurstIndex = 1
		local ShieldIndex = 2
	
		local numStealths = self.squad_ai:GetLeaderCount( StealthIndex )
		local numBursts = self.squad_ai:GetLeaderCount( BurstIndex )
		local numShields = self.squad_ai:GetLeaderCount( ShieldIndex )

		-- Desired number of each leader type
		local desiredStealths = math.random(0,2)
		local desiredBursts = math.random(0,2)
		local desiredShields = math.random(0,2)

		-- Desired order of reinforcing
		if (numStealths < desiredStealths) then
			if (self.squad_ai:CanReinforce( true, StealthIndex )) then
				self.squad_ai:DoReinforce( true, StealthIndex )
			end
		elseif (numBursts < desiredBursts) then
			if (self.squad_ai:CanReinforce( true, BurstIndex )) then
				self.squad_ai:DoReinforce( true, BurstIndex )
			end
		elseif (numShields < desiredShields) then
			if (self.squad_ai:CanReinforce( true, ShieldIndex )) then
				self.squad_ai:DoReinforce( true, ShieldIndex )
			end
		else
			if (self.squad_ai:CanReinforce( false, 0 )) then
				self.squad_ai:DoReinforce( false, 0 )
			end			
		end
	end
end
