class 'TaunarTitanTactic' (TauVehicleTactic)

TaunarTitan = {}

function TaunarTitanTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Taunar Titan Tactic")
end

function TaunarTitanTactic:InitAbilities()

	-- Init ability ID's
	if TaunarTitan.titanic_stomp_id == nil then
		TaunarTitan.titanic_stomp_id = cpu_manager.stats:GetAbilityID( "tau_taunar_titanic_stomp" )	
	end
end



function TaunarTitanTactic:DoAbilities()
	if self.squad_ai:CanDoAbility(TaunarTitan.titanic_stomp_id) and self.squad_ai:IsInStateMove() then
		if Ability.DoAbilityArea(self.squad_ai, TaunarTitan.titanic_stomp_id, Ability.Filters.CloseSquadEnemy, 10, 4)
		or Ability.DoAbilityArea(self.squad_ai, TaunarTitan.titanic_stomp_id, Ability.Filters.CloseMonsterEnemy, 10, 4) then
			return
		end
	end
end
