function EmperorsChildrenBuildBaseStrategy:ChooseBuildProgram()

	-- Check build program count
	if (table.getn(self.info.BuildPrograms) ~= 2) then
		return BuildBaseStrategy.ChooseBuildProgram(self)
	end

	-- Try to maintain the same strategy, on AI re-initiation (Save->Load, Change Players, etc.)
	if cpu_manager.cpu_player:IsResearchComplete("emperors_children_go_with_miriel") then
		return 1
	elseif cpu_manager.cpu_player:IsResearchComplete("emperors_children_go_with_lucius") then
		return 2
	end

	-- Get map size and closest enemy distance
	local sMapSize, iClosestEnemyDistance = self:GetMapSize()
		
	-- Set probabilities of the strategies according to the map size
	local iStrategy1 = 50	-- Go With The Fallen Sisterhood strategy
	local iStrategy2 = 50	-- Go With The Legion strategy

	if (sMapSize == "small" or iClosestEnemyDistance <= 70 or cpu_manager.iPlayerCount == 2) then
		iStrategy1 = iStrategy1 + 30
	elseif (sMapSize == "large" and cpu_manager.iPlayerCount >= 6) then
		iStrategy2 = iStrategy2 + 30
	end
	
	-- Modify probabilities according to the closest enemy player
	local oEnemy = cpu_manager:FindClosestEnemyPlayer(false)
	local sEnemy = oEnemy:GetPlayerRaceName()		
	if (sEnemy == "ork_race") then
		iStrategy2 = iStrategy2 + 30
	elseif (sEnemy == "eldar_race" or sEnemy == "guard_race" or sEnemy == "tau_race" or sEnemy == "necron_race") then
		iStrategy1 = iStrategy1 + 30
	end
		
	-- Now choose a program
	local iRandom = math.random(1, iStrategy1+iStrategy2)
	if (iRandom <= iStrategy1) then
		return 1
	else
		return 2
	end
end

function EmperorsChildrenBuildBaseStrategy:EvaluateSquadCap()
	
	-- Check squad cap
	if (self:CheckSquadCap(300, 0)) then
		
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research
		
		if (not cpu_manager.cpu_player:IsResearchComplete( "emperors_children_squad_cap_research" )) then
			tBuildType.name = "emperors_children_squad_cap_research"
		elseif not cpu_manager.cpu_player:IsResearchComplete( "emperors_children_squad_cap_research_1" ) then
			tBuildType.name = "emperors_children_squad_cap_research_1"
		else
			return
		end
		
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
		
	-- Check support cap
	if (self:CheckSupportCap(150, 300)) then
		
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research
		
		if (not cpu_manager.cpu_player:IsResearchComplete( "emperors_children_support_cap_research" )) then
			tBuildType.name = "emperors_children_support_cap_research"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "emperors_children_support_cap_research_1" )) then
			tBuildType.name = "emperors_children_support_cap_research_1"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "emperors_children_support_cap_research_2" )) then
			tBuildType.name = "emperors_children_support_cap_research_2"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "emperors_children_support_cap_research_3" )) then
			tBuildType.name = "emperors_children_support_cap_research_3"
		else
			return
		end
		
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
end

