function EmperorsChildrenBuildBaseStrategy:UpdateTierLevel()

	-- Check for tier 4 first - it's a research
	if cpu_manager.cpu_player:IsResearchComplete("emperors_children_projectiles") then
		self.tierLevel = 4
		return
	end

	-- Reset tier level
	self.tierLevel = 1

	-- Prepare
	local iHQAddon1ID = cpu_manager.stats:GetAddOnID("emperors_children_hq_addon_1")
	local iHQAddon2ID = cpu_manager.stats:GetAddOnID("emperors_children_hq_addon_2")
	local oStats = cpu_manager.stats:GetPlayerStatsFromID( cpu_manager.player_id )
	
	-- Check HQ's for addons
	for oBase in oStats:GetBases() do
		-- Check for valid building
		if (oBase:IsValid() and not oBase:IsListeningPost()) then
			-- Check for HQ addon 2
			if (oBase:HasAddOn(iHQAddon2ID)) then
				self.tierLevel = 3
				return
			-- Check for HQ addon 1 
			elseif (oBase:HasAddOn(iHQAddon1ID)) then
				self.tierLevel = 2
			end
		end
	end
end

function EmperorsChildrenBuildBaseStrategy:BuildFlexible()

