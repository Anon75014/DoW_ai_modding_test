class 'EmperorsChildrenVehicleTactic' (VehicleTactic)

function EmperorsChildrenVehicleTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Emperors Children Vehicle Tactic")
end

-- Check if the vehicle should dance away in melee
function EmperorsChildrenVehicleTactic:CheckVehicleDance(sName)

	if (sName == "emperors_children_squad_rhino" or
		sName == "emperors_children_squad_rhino_sp_dxp3" or
		sName == "emperors_children_squad_razorback" or
		sName == "emperors_children_squad_sonic_warp_speeder" or
		sName == "emperors_children_squad_sentinel" or
		sName == "emperors_children_squad_sentinel_advance_sp" or
		sName == "emperors_children_squad_dreadnaught_noise_advance_sp" or
		sName == "emperors_children_squad_immolator" or
		sName == "emperors_children_squad_predator" or
		sName == "emperors_children_squad_vindicator" or
		sName == "emperors_children_squad_whirlwind" or
		sName == "emperors_children_squad_whirlwind_advance_sp" or
		sName == "emperors_children_squad_noiseblade" or
		sName == "emperors_children_squad_noisesword" or
		sName == "emperors_children_squad_land_raider" or
		sName == "emperors_children_squad_land_gifter" or
		sName == "emperors_children_squad_land_rapier") then
		return true
	end
	return false
end

function EmperorsChildrenVehicleTactic:CanOnlyDecap()

	local sSquadName = self.squad_ai:GetSquadName()
	if (sSquadName == "emperors_children_squad_sentinel") or
		(sSquadName == "emperors_children_squad_sentinel_advance_sp") then
		return true
	end
	return false
end