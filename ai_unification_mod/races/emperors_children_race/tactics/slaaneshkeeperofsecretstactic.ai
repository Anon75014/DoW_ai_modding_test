class 'SlaaneshKeeperOfSecretsTactic' (EmperorsChildrenInfantryTactic)

SlaaneshKeeperOfSecrets = {}

function SlaaneshKeeperOfSecretsTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Slaanesh Keeper Of Secrets Tactic")
end

function SlaaneshKeeperOfSecretsTactic:AlwaysAttack()
	return true
end

function SlaaneshKeeperOfSecretsTactic:InitAbilities()

	-- Init ability ID's
	if (SlaaneshKeeperOfSecrets.allure_id == nil) then
		SlaaneshKeeperOfSecrets.allure_id = cpu_manager.stats:GetAbilityID( "emperors_children_allure_kos" )
	end
end

function SlaaneshKeeperOfSecretsTactic:DoAbilities()

	-- Check if I can use in-combat abilities 
	if self.squad_ai:IsInCombat() then

		if self.squad_ai:CanDoAbility(SlaaneshKeeperOfSecrets.allure_id) then
            if Ability.DoAbilityTarget( self.squad_ai, SlaaneshKeeperOfSecrets.allure_id, Ability.Filters.CloseInfantryEnemy, 1 )
            or Ability.DoAbilityTarget( self.squad_ai, SlaaneshKeeperOfSecrets.allure_id, Ability.Filters.CloseCommanderEnemy, 1 )
            or Ability.DoAbilityTarget( self.squad_ai, SlaaneshKeeperOfSecrets.allure_id, Ability.Filters.CloseMonsterEnemy, 1 ) then
				return
			end
		end
	end
end
