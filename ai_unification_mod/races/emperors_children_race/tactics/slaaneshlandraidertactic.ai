class 'SlaaneshLandRaiderTactic' (EmperorsChildrenVehicleTactic)

SlaaneshLandRaider = {}

function SlaaneshLandRaiderTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Slaanesh Land Raider Tactic")
	
	self.Chosen_Upgrade = math.random( 0, 1 )	  -- Choose one of two possible addons
	self.lastAddonTry = g_iGMT

	-- Vehicle is a heavy transport
	self.m_iTransportVehicle = 2
	self.m_iTransportSlots = 1
end

function SlaaneshLandRaiderTactic:AutoBuildAddOn( addonSlot )
	for e in self.squad_ai:GetEntities() do
		local buildChannel = build_manager:GetBuildChannelFromID(e:GetID())
		if buildChannel ~= nil then
			local addOnID = buildChannel:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
			if (buildChannel:IsBuilding() == 0 and buildChannel:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
				buildChannel:BuildAddOn(addOnID)
				return
			end
		end
	end
	return
end

function SlaaneshLandRaiderTactic:InitAbilities()

	-- Init ability ID's
	if (SlaaneshLandRaider.spirit_id == nil) then
		SlaaneshLandRaider.spirit_id = cpu_manager.stats:GetAbilityID( "emperors_children_machine_spirit" )
	end

	if (SlaaneshLandRaider.smoke_id == nil) then
		SlaaneshLandRaider.smoke_id = cpu_manager.stats:GetAbilityID( "emperors_children_smoke_launchers" )	
	end

	if (SlaaneshLandRaider.barrage_id == nil) then
		SlaaneshLandRaider.barrage_id = cpu_manager.stats:GetAbilityID( "emperors_children_whirlwind_missiles" )	
	end
end

function SlaaneshLandRaiderTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(SlaaneshLandRaider.spirit_id)) then
			self.squad_ai:DoSpecialAbility(SlaaneshLandRaider.spirit_id)
		end
	end

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(SlaaneshLandRaider.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(SlaaneshLandRaider.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(SlaaneshLandRaider.smoke_id, oUnit:GetSquad())
		end
	end

	local hkChance = math.random(1,100)

	-- Check if we are attacking and not in home base
	if (self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(SlaaneshLandRaider.barrage_id)) then
		if ( (cpu_manager.terrain_analyzer:HasThreat( self.squad_ai:GetPosition(), 35 ) and hkChance > 25)
		or (cpu_manager.terrain_analyzer:HasThreat( self.squad_ai:GetPosition(), 55 ) and hkChance > 75) ) then
		
			-- If we are dying, lower requisites for attacks
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

				Ability.DoAbilityTarget(self.squad_ai, SlaaneshLandRaider.barrage_id, Ability.Filters.CloseEnemy, 2)
    				Ability.DoAbilityTargetEntity( self.squad_ai, SlaaneshLandRaider.barrage_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1)
			else
				Ability.DoAbilityTarget(self.squad_ai, SlaaneshLandRaider.barrage_id, Ability.Filters.CloseEnemy, 5)
    				Ability.DoAbilityTargetEntity( self.squad_ai, SlaaneshLandRaider.barrage_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
			end
		end
	end

--[[
	[addon_01] = addons\emperors_children_land_raider_rover_addon
	[addon_02] = addons\emperors_children_land_raider_roaster_addon
]]
	-- Check to addon every 10+ secs
	if self.Chosen_Upgrade < 3 and g_iGMT > self.lastAddonTry + 10 then
		self.lastAddonTry = g_iGMT
		-- Check available resources and health, before performing any upgrade
		local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
		if iReq > 300 and iPow > 200 and self.squad_ai:GetHealthPercentage() > 0.35 then
			self:AutoBuildAddOn(self.Chosen_Upgrade)
		end
	end
end

function SlaaneshLandRaiderTactic:Upgrade()

	-- If there are no resources available, don't upgrade!
	if (not Tactic.Options.can_reinforce) then
		return
	end
  
	local class_type = cpu_manager:FindClosestEnemyPlayer():GetMajorityClassType()
		self.squad_ai:DoBestUpgrade( class_type )
end
