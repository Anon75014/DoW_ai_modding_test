class 'SlaaneshHospitallerTactic' (EmperorsChildrenInfantryTactic)

SlaaneshHospitaller = {}

function SlaaneshHospitallerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Slaanesh Hospitaller Tactic")
end

function SlaaneshHospitallerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function SlaaneshHospitallerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function SlaaneshHospitallerTactic:InitAbilities()

	-- Init ability ID's
	if SlaaneshHospitaller.combatdrugs_id == nil then
		SlaaneshHospitaller.combatdrugs_id = cpu_manager.stats:GetAbilityID( "emperors_children_combat_drugs" )	
	end
end

function SlaaneshHospitallerTactic:DoAbilities()

	-- Check if I can use in-combat abilities 
	if self.squad_ai:IsInCombat() then

		-- Use combat drugs
		if self.squad_ai:CanDoAbility(SlaaneshHospitaller.combatdrugs_id) then
			self.squad_ai:DoSpecialAbility( SlaaneshHospitaller.combatdrugs_id )
		end
	end
end

function SlaaneshHospitallerTactic:Update()

	if self:IsComplete() then
		return
	end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

	--attach to squad
	self:TryAttachSquad( false, false, 1000, 200, nil )
end


