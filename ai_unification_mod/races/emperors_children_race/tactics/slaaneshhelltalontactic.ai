class 'SlaaneshHellTalonTactic' (EmperorsChildrenVehicleTactic)

SlaaneshHellTalon = {}

function SlaaneshHellTalonTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Slaanesh Hell Talon Tactic")
end

function SlaaneshHellTalonTactic:InitAbilities()

	-- Init ability ID's
	if (SlaaneshHellTalon.sonic_id == nil) then
		SlaaneshHellTalon.sonic_id = cpu_manager.stats:GetAbilityID( "emperors_children_sonic_charge" )
	end
end

function SlaaneshHellTalonTactic:DoAbilities()
	
	Ability.DoAbilityPos( self.squad_ai, SlaaneshHellTalon.sonic_id, Ability.Filters.CloseSquadEnemy, 4 ) 
	Ability.DoAbilityPos( self.squad_ai, SlaaneshHellTalon.sonic_id, Ability.Filters.CloseMonsterEnemy, 2 )
	Ability.DoAbilityPos( self.squad_ai, SlaaneshHellTalon.sonic_id, Ability.Filters.CloseCommanderEnemy, 1 )

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

		Ability.DoAbilityPos( self.squad_ai, SlaaneshHellTalon.sonic_id, Ability.Filters.CloseSquadEnemy, 2 ) 
	end
end