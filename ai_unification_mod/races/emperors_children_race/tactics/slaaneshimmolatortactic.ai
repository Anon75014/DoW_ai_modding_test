class 'SlaaneshImmolatorTactic' (EmperorsChildrenVehicleTactic)

SlaaneshImmolator = {}

function SlaaneshImmolatorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Slaanesh Immolator Tactic")
end

function SlaaneshImmolatorTactic:InitAbilities()
	
	-- Init ability ID's
	if (SlaaneshImmolator.smoke_id == nil) then
		SlaaneshImmolator.smoke_id = cpu_manager.stats:GetAbilityID( "emperors_children_smoke_launchers" )	
	end
end

function SlaaneshImmolatorTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(SlaaneshImmolator.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(SlaaneshImmolator.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(SlaaneshImmolator.smoke_id, oUnit:GetSquad())
		end
	end
	
	-- Call standard method
	EmperorsChildrenVehicleTactic.DoAbilities(self)
end

