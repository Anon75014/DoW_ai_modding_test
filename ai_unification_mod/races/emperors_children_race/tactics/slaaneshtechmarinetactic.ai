class 'SlaaneshTechmarineTactic' (EmperorsChildrenInfantryTactic)

SlaaneshTechmarine = {}

function SlaaneshTechmarineTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Slaanesh Techmarine Tactic")

	-- Engineer Tactic Settings, modify as required
	self.iBusy = g_iGMT
	self.iSquadName = self.squad_ai:GetSquadName()   --> The name of the SQUAD with the dual role, so that not to repair itself!
	self.iRepairVehicleRange = 40   --> The range within which the squad will perform the vehicle repairs
	self.iRepairSuperVehiclesWhenInCombat = true  --> Will repair super vehicles, even if in combat
	self.iRepairStrongVehiclesWhenInCombat = true  --> Will also repair super vehicles if true
	self.isBuildingsRepairer  = true  --> Will also repair nearby structures if true
	self.isBuildingsAssistant  = true  --> Will also help build nearby unfinished structures if true
	self.iFixBuildingsRange = 30  --> The range within which the squad will perform building duties

	-- Mines
	self.minesTMR = g_iGMT
	self.hasDroppedMines = false
end

function SlaaneshTechmarineTactic:IsAttacker()
	return false
end

function SlaaneshTechmarineTactic:IsDefender()
	return false
end

function SlaaneshTechmarineTactic:InitAbilities()

	-- Init ability ID's
	if (SlaaneshTechmarine.mines_id == nil) then
		SlaaneshTechmarine.mines_id = cpu_manager.stats:GetAbilityID( "emperors_children_drop_mines" )
	end

	if (SlaaneshTechmarine.mutation_id == nil) then
		SlaaneshTechmarine.mutation_id = cpu_manager.stats:GetAbilityID( "emperors_children_daemon_mutation_techmarine" )
	end

	if (SlaaneshTechmarine.warpspeeder_id == nil) then
		SlaaneshTechmarine.warpspeeder_id = cpu_manager.stats:GetAbilityID( "emperors_children_call_warpspeeder_ability" )
	end
end

function SlaaneshTechmarineTactic:DoAbilities()

	-- Drop Mines
	if not self.m_bBusy and self.squad_ai:CanDoAbility(SlaaneshTechmarine.mines_id) and self.squad_ai:IsBuilding() == 0 then
		if resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power ) > 300 then
			if not self:BuildigExistsWithin(self.squad_ai:GetPosition(),12) then
				self.squad_ai:DoSpecialAbility( SlaaneshTechmarine.mines_id )
				self.m_bBusy = true
				self.hasDroppedMines = true
				self.minesTMR = g_iGMT
			end
		end
	end

	-- Summon Sonic Warp Speeder whenever possible
	if not self.m_bBusy and self.squad_ai:CanDoAbility( SlaaneshTechmarine.warpspeeder_id ) then
		if self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt() then
			local req = resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Requisition)
			local pow = resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Power)
			if req > 300 and pow > 300 then
				self.squad_ai:DoSpecialAbilityPos(SlaaneshTechmarine.warpspeeder_id, self.squad_ai:GetPosition())
				self.m_bBusy = true
				self.hasDroppedMines = true
				self.minesTMR = g_iGMT
				return
			end
		end
	end

	-- Reset builder settings
	if self.hasDroppedMines and g_iGMT > self.minesTMR + 14.5 then
		self.m_bBusy = false
		self.hasDroppedMines = false
	end

	-- Check if I can use in-combat abilities 
	if self.squad_ai:IsInCombat() then

		if self.squad_ai:CanDoAbility(SlaaneshTechmarine.mutation_id) then
			Ability.DoAbilityArea( self.squad_ai, SlaaneshTechmarine.mutation_id, Ability.Filters.CloseEnemy, 10, 3 )
		end
	end
end

function SlaaneshTechmarineTactic:Reinforce()

	-- always try for the actual leader first
	if not self.squad_ai:IsReinforcing() then
		if self.squad_ai:CanReinforce( false, 0 ) then
			self.squad_ai:DoReinforce( false, 0 )
		end
	end

	if not self.squad_ai:IsReinforcing() then

		-- try for different types of squad members
		local skullIndex = 0
		local slaveIndex = 1
	
		local numSkulls = self.squad_ai:GetLeaderCount( skullIndex )
		local numSlaves = self.squad_ai:GetLeaderCount( slaveIndex )

		-- Desired number of each leader type
		--local desiredSkulls = math.random(0,2) 
		--local desiredSlaves = math.random(0,2)

		-- Desired order of reinforcing
		if numSkulls < 2 then -- desiredSkulls then
			if self.squad_ai:CanReinforce( true, skullIndex ) then
				self.squad_ai:DoReinforce( true, skullIndex )
			end
		elseif numSlaves < 2 then --desiredSlaves then
			if self.squad_ai:CanReinforce( true, slaveIndex ) then
				self.squad_ai:DoReinforce( true, slaveIndex )
			end
		end
	end
end
