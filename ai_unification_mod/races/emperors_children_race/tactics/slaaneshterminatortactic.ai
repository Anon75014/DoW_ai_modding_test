class 'SlaaneshTerminatorTactic' (EmperorsChildrenInfantryTactic)

SlaaneshTerminator = {}

function SlaaneshTerminatorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Slaanesh Terminator Tactic")
end

function SlaaneshTerminatorTactic:InitAbilities()

	-- Init ability ID's
	if (SlaaneshTerminator.combatdrugs_id == nil) then
		SlaaneshTerminator.combatdrugs_id = cpu_manager.stats:GetAbilityID( "emperors_children_combat_drugs" )	
	end
end

function SlaaneshTerminatorTactic:DoAbilities()

	-- Check if I can use combat drugs 
	if (self.squad_ai:IsInCombat()) then

		-- Use drugs!
		if (self.squad_ai:CanDoAbility( SlaaneshTerminator.combatdrugs_id )) then
			self.squad_ai:DoSpecialAbility( SlaaneshTerminator.combatdrugs_id )
		end
	end
end