class 'SlaaneshRhinoTactic' (EmperorsChildrenVehicleTactic)

SlaaneshRhino = {}

function SlaaneshRhinoTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Slaanesh Rhino Tactic")
	
	-- Vehicle is a light transport
	self.m_iTransportVehicle = 1
	if self.squad_ai:GetSquadName() == "emperors_children_squad_rhino" then
		-- Rhino
		self.m_iTransportSlots = 2
	else
		-- Razorback
		self.m_iTransportSlots = 1
	end
end

function SlaaneshRhinoTactic:InitAbilities()
	
	-- Init ability ID's
	if (SlaaneshRhino.smoke_id == nil) then
		SlaaneshRhino.smoke_id = cpu_manager.stats:GetAbilityID( "emperors_children_smoke_launchers" )	
	end
end

function SlaaneshRhinoTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(SlaaneshRhino.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(SlaaneshRhino.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(SlaaneshRhino.smoke_id, oUnit:GetSquad())
		end
	end
	
	-- Call standard method
	EmperorsChildrenVehicleTactic.DoAbilities(self)
end

