class 'SlaaneshWhirlwindTactic' (EmperorsChildrenVehicleTactic)

SlaaneshWhirlwind = {}

function SlaaneshWhirlwindTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Slaanesh Whirlwind Tactic")
end

function SlaaneshWhirlwindTactic:InitAbilities()
	
	-- Init ability ID's
	if (SlaaneshWhirlwind.barrage_id == nil) then
		SlaaneshWhirlwind.barrage_id = cpu_manager.stats:GetAbilityID( "emperors_children_whirlwind_missiles" )	
	end

	if (SlaaneshWhirlwind.smoke_id == nil) then
		SlaaneshWhirlwind.smoke_id = cpu_manager.stats:GetAbilityID( "emperors_children_smoke_launchers" )	
	end
end

function SlaaneshWhirlwindTactic:DoAbilities()

	local hkChance = math.random(1,100)

	-- Check if we are attacking and not in home base
	if (self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(SlaaneshWhirlwind.barrage_id)) then
		if ( (cpu_manager.terrain_analyzer:HasThreat( self.squad_ai:GetPosition(), 35 ) and hkChance > 25)
		or (cpu_manager.terrain_analyzer:HasThreat( self.squad_ai:GetPosition(), 55 ) and hkChance > 75) ) then
		
			-- If we are dying, lower requisites for attacks
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

				Ability.DoAbilityTarget(self.squad_ai, SlaaneshWhirlwind.barrage_id, Ability.Filters.CloseEnemy, 2)
    				Ability.DoAbilityTargetEntity( self.squad_ai, SlaaneshWhirlwind.barrage_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1)
			else
				Ability.DoAbilityTarget(self.squad_ai, SlaaneshWhirlwind.barrage_id, Ability.Filters.CloseEnemy, 5)
    				Ability.DoAbilityTargetEntity( self.squad_ai, SlaaneshWhirlwind.barrage_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
			end
		end
	end

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(SlaaneshWhirlwind.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(SlaaneshWhirlwind.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(SlaaneshWhirlwind.smoke_id, oUnit:GetSquad())
		end
	end
end
