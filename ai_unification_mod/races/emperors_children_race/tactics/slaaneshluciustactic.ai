class 'SlaaneshLuciusTactic' (EmperorsChildrenInfantryTactic)

SlaaneshLucius = {}

function SlaaneshLuciusTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Slaanesh Lucius Tactic")
end

function SlaaneshLuciusTactic:InitAbilities()

	-- Init ability ID's
	if (SlaaneshLucius.airstrike_id == nil) then
		SlaaneshLucius.airstrike_id = cpu_manager.stats:GetAbilityID( "emperors_children_airstrike_lucius" )
		SlaaneshLucius.siren_id = cpu_manager.stats:GetAbilityID( "emperors_children_doom_siren" )
		SlaaneshLucius.drugs_id = cpu_manager.stats:GetAbilityID( "emperors_children_combat_drugs" )
	end
end

function SlaaneshLuciusTactic:DoAbilities()

	-- Check if I can use in-combat abilities 
	if self.squad_ai:IsInCombat() then
		-- First, try to direct spawn the Kakophoni squad
		if (self.squad_ai:CanDirectSpawn()) then 
			self.squad_ai:DoDirectSpawn()
			return
		end
		if self.squad_ai:CanDoAbility(SlaaneshLucius.airstrike_id) then
			Ability.DoAbilityArea( self.squad_ai, SlaaneshLucius.airstrike_id, Ability.Filters.CloseEnemy, 10, 3 )
		end
		if self.squad_ai:CanDoAbility(SlaaneshLucius.siren_id) then
			Ability.DoAbilityArea(self.squad_ai, SlaaneshLucius.siren_id, Ability.Filters.CloseEnemy, 10, 4 )
		end
		if self.squad_ai:CanDoAbility(SlaaneshLucius.drugs_id) then
			self.squad_ai:DoSpecialAbility(SlaaneshLucius.drugs_id)
		end
	end
end

function SlaaneshLuciusTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end

	-- Attach to melee
	if (self:TryAttachSquad(true, true, 50, 150, nil) ~= nil) then
		return
	end
	if (self:TryAttachSquad(false, true, 50, nil, nil) == nil) then
		self:TryAttachSquadMelee()
	end
end
