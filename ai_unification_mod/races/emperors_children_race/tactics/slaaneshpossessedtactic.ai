class 'SlaaneshPossessedTactic' (EmperorsChildrenInfantryTactic)

SlaaneshPossessed = {}

function SlaaneshPossessedTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Slaanesh Possessed Tactic")
end

function SlaaneshPossessedTactic:InitAbilities()

	-- Init ability ID's
	if SlaaneshPossessed.combatdrugs_id == nil then
		SlaaneshPossessed.combatdrugs_id = cpu_manager.stats:GetAbilityID( "emperors_children_combat_drugs" )	
		SlaaneshPossessed.siren_id = cpu_manager.stats:GetAbilityID( "emperors_children_doom_siren" )
	end
end

function SlaaneshPossessedTactic:DoAbilities()

	-- Check if I can use in-combat abilities 
	if self.squad_ai:IsInCombat() then

		-- Use combat drugs
		if self.squad_ai:CanDoAbility(SlaaneshPossessed.combatdrugs_id) then
			self.squad_ai:DoSpecialAbility( SlaaneshPossessed.combatdrugs_id )
		end

		if self.squad_ai:CanDoAbility(SlaaneshPossessed.siren_id) then
			Ability.DoAbilityArea(self.squad_ai, SlaaneshPossessed.siren_id, Ability.Filters.CloseEnemy, 10, 4 )
		end
	end
end

