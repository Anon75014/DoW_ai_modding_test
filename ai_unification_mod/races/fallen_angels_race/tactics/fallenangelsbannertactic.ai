class 'FallenAngelsBannerTactic' (FallenAngelsInfantryTactic)

FallenAngelsBanner = {}

function FallenAngelsBannerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Fallen Angels Banner Tactic")
end

function FallenAngelsBannerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function FallenAngelsBannerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function FallenAngelsBannerTactic:Update()

	if self:IsComplete() then
		return
	end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

   	--attach to squad
	self:TryAttachSquad( false, false, 1000, 200, nil )
end


