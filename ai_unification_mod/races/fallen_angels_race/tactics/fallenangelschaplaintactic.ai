class 'FallenAngelsChaplainTactic' (FallenAngelsInfantryTactic)

FallenAngelsChaplain = {}

function FallenAngelsChaplainTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Fallen Angels Chaplain Tactic")

	self.timedDirectSpawnAbility = Timer( FallenAngelsChaplainTactic.DoDirectSpawnAbility, self, 5 )
end

function FallenAngelsChaplainTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function FallenAngelsChaplainTactic:IsDefender()
	return self:IsCommanderDefender()
end

function FallenAngelsChaplainTactic:InitAbilities()

	if (FallenAngelsChaplain.rage_id == nil) then
		FallenAngelsChaplain.rage_id = cpu_manager.stats:GetAbilityID( "fallen_exortation_of_rage" )
	end

	if (FallenAngelsChaplain.demoralize_id == nil) then
		FallenAngelsChaplain.demoralize_id = cpu_manager.stats:GetAbilityID( "fallen_demoralize" )
	end
 end

function FallenAngelsChaplainTactic:DoAbilities()

	if (self.squad_ai:CanDoAbility(FallenAngelsChaplain.rage_id)) then
		local range = self.squad_ai:GetAbilityRange( FallenAngelsChaplain.rage_id )	
		local squad_filter = function( squad_ai )		
			return squad_ai:IsInCombat() and squad_ai:IsInStateAttackMove() and 
					squad_ai:GetNumTroopers() >= 4 and not squad_ai:IsBroken() and
					not squad_ai:IsCapturing()
		end	
   		local target_squad = cpu_manager:GetClosestSquad( self.squad_ai:GetPosition(), range, squad_filter )
		if (target_squad ~= nil) then
			self.squad_ai:DoSpecialAbilitySquad( FallenAngelsChaplain.rage_id, target_squad:GetSquad() )
 		end
	end

	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget( self.squad_ai, FallenAngelsChaplain.demoralize_id, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, FallenAngelsChaplain.demoralize_id, Ability.Filters.CloseCommanderEnemy, 1 )
	else
		Ability.DoAbilityTarget( self.squad_ai, FallenAngelsChaplain.demoralize_id, Ability.Filters.CloseInfantryEnemy, 8 )
		Ability.DoAbilityTarget( self.squad_ai, FallenAngelsChaplain.demoralize_id, Ability.Filters.CloseCommanderEnemy, 1 )
	end

	-- Try to spawn zealots
	if (self.timedDirectSpawnAbility ~= nil) then
		self.timedDirectSpawnAbility:Call()
	else
		FallenAngelsChaplainTactic.DoDirectSpawnAbility(self)
	end
end

function FallenAngelsChaplainTactic:DoDirectSpawnAbility()

	-- Spawn zealots in combat
	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	end
end

function FallenAngelsChaplainTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier2+
	if (cpu_manager:GetTierLevel() > 1) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end

