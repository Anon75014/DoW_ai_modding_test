class 'FallenAngelsLandRaiderAresTactic' (FallenAngelsVehicleTactic)

FallenAngelsLandRaiderAres = {}

function FallenAngelsLandRaiderAresTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Fallen Angels Land Raider Ares Tactic")
end

function FallenAngelsLandRaiderAresTactic:InitAbilities()

	-- Init ability ID's
	if FallenAngelsLandRaiderAres.spirit_id == nil then
		FallenAngelsLandRaiderAres.spirit_id = cpu_manager.stats:GetAbilityID( "fallen_machine_spirit" )
	end
end

function FallenAngelsLandRaiderAresTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if self.squad_ai:CanDoAbility(FallenAngelsLandRaiderAres.spirit_id) then
			self.squad_ai:DoSpecialAbility(FallenAngelsLandRaiderAres.spirit_id)
		end	  
	end

	-- Do basic abilities
	FallenAngelsVehicleTactic.DoAbilities(self)
end