class 'FallenAngelsLordTactic' (FallenAngelsInfantryTactic)

FallenAngelsLord = {}

function FallenAngelsLordTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Fallen Angels Lord Tactic")
end

-- Assassinate win condition -- never attack
function FallenAngelsLordTactic:IsAttacker()
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function FallenAngelsLordTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

function FallenAngelsLordTactic:InitAbilities()

	-- Init ability ID's
	if (FallenAngelsLord.orbital_b == nil) then
		FallenAngelsLord.orbital_b = cpu_manager.stats:GetAbilityID( "fallen_orbital_bombardment" )
		FallenAngelsLord.warcry_id = cpu_manager.stats:GetAbilityID( "fallen_warcry" )
	end
end

function FallenAngelsLordTactic:DoAbilities()

	-- Try to use warcry
	if self.squad_ai:CanDoAbility(FallenAngelsLord.warcry_id) then
		if Ability.DoAbilityArea(self.squad_ai, FallenAngelsLord.warcry_id, Ability.Filters.CloseInCombat, 10, 1) then
			return
		end
	end

	if self.squad_ai:CanDoAbility(FallenAngelsLord.orbital_b) then
		if Ability.DoAbilityPos(self.squad_ai, FallenAngelsLord.orbital_b, Ability.Filters.CloseEnemy, 24)
			or Ability.DoAbilityPos(self.squad_ai, FallenAngelsLord.orbital_b, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
		end
	end
end

function FallenAngelsLordTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Assassinate win condition -- never attach to a squad
	if (not cpu_manager.assassinate and self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
	end
end
