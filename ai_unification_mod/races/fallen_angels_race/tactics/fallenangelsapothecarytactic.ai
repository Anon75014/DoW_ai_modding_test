class 'FallenAngelsApothecaryTactic' (FallenAngelsInfantryTactic)

FallenAngelsApothecary = {}

function FallenAngelsApothecaryTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Fallen Angels Apothecary Tactic")
end

function FallenAngelsApothecaryTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function FallenAngelsApothecaryTactic:IsDefender()
	return self:IsCommanderDefender()
end

function FallenAngelsApothecaryTactic:Update()

	if self:IsComplete() then
      		return
	end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

   	--attach to squad
   	self:TryAttachSquad( false, false, 1000, 200, nil )
end


