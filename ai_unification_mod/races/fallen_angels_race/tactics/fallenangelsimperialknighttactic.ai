class 'FallenAngelsImperialKnightTactic' (FallenAngelsVehicleTactic)

FallenAngelsImperialKnight = {}

function FallenAngelsImperialKnightTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Fallen Angels Imperial Knight Tactic")

	self.Ranged_Upgrade = math.random( 0,5 )	  -- Choose one of the main weapons (addons 0 through 5)
	self.lastAddonTry = g_iGMT
end

function FallenAngelsImperialKnightTactic:AutoBuildAddOn( addonSlot )
	for e in self.squad_ai:GetEntities() do
		local buildChannel = build_manager:GetBuildChannelFromID(e:GetID())
		if buildChannel ~= nil then
			local addOnID = buildChannel:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
			if (buildChannel:IsBuilding() == 0 and buildChannel:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
				buildChannel:BuildAddOn(addOnID)
				return
			end
		end
	end
	return
end

function FallenAngelsImperialKnightTactic:DoAbilities()
--[[
	[addon_01] = addons\fallen_knight_chaingun_addon
	[addon_02] = addons\fallen_knight_thermal_cannon_addon
	[addon_03] = addons\fallen_knight_las_impolsor_addon
	[addon_04] = addons\fallen_knight_plasma_cannon_addon
	[addon_05] = addons\fallen_knight_chainsword_addon
	[addon_06] = addons\fallen_knight_lightning_claw_addon
]]

	-- Check to addon every 10+ secs
	if g_iGMT > self.lastAddonTry + 16 then
		self.lastAddonTry = g_iGMT
		-- Check available resources and health, before performing any upgrade
		local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
		if iReq > 300 and iPow > 200 and self.squad_ai:GetHealthPercentage() > 0.35 then
			self:AutoBuildAddOn(self.Ranged_Upgrade)
		end
	end
end