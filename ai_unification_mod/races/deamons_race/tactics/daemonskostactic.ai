class 'DaemonsKosTactic' (DaemonsInfantryTactic)

DaemonsKos = {}

function DaemonsKosTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Daemons Kos Tactic")

end

function DaemonsKosTactic:InitAbilities()

	-- Init ability ID's
	if (DaemonsKos.Kosallure_id == nil) then
		DaemonsKos.Kosallure_id = cpu_manager.stats:GetAbilityID( "daemons_allure_kos" )
	end

end

function DaemonsKosTactic:DoAbilities()

	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

	if (iPower >= 80) then
		Ability.DoAbilityTarget( self.squad_ai, DaemonsKos.Kosallure_id, Ability.Filters.CloseSquadEnemy, 2 )
	end
end
