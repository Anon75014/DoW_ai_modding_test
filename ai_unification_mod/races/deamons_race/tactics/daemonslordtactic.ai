--[[
	if (self.squad_ai:CanDoAbility(DaemonsLord.allure_ktgm)) then
		if self.squad_ai:IsInCombat() then
			Ability.DoAbilityTarget( self.squad_ai, DaemonsLord.allure_ktgm, Ability.Filters.CloseInfantryEnemy, 4 )
