			Ability.DoAbilityTarget( self.squad_ai, DaemonsLord.murder_id, Ability.Filters.CloseSquadEnemy, 1 )
		end
	end

	if (self.squad_ai:CanDoAbility(DaemonsLord.murderb_id)) then
		if self.squad_ai:GetHealthPercentage() < 0.6 then
			Ability.DoAbilityTarget( self.squad_ai, DaemonsLord.murderb_id, Ability.Filters.CloseSquadEnemy, 1 )
		end
	end
--[[
	if (self.squad_ai:CanDoAbility(DaemonsLord.murder_ktgm)) then
		if self.squad_ai:GetHealthPercentage() < 0.6 then
			Ability.DoAbilityTarget( self.squad_ai, DaemonsLord.murder_ktgm, Ability.Filters.CloseSquadEnemy, 1 )
		end
	end
]]
	-- Try to use Murder Ability (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(DaemonsLord.murder_ktgm)) then 

		if self.squad_ai:GetHealthPercentage() < 0.6 then

			-- Search for a nearby enemy squad
			local iRange = self.squad_ai:GetAbilityRange(DaemonsLord.murder_ktgm)
			local oUnit = cpu_manager.cpu_player:FindFirstInfantryEnemy(self.squad_ai:GetPosition(), iRange, 2)
			if (oUnit ~= nil) then
				--print("Using Murder Ability for player "..tostring(cpu_manager.player_id).."")
				self.squad_ai:DoSpecialAbilitySquad(DaemonsLord.murder_ktgm, oUnit:GetSquad())
