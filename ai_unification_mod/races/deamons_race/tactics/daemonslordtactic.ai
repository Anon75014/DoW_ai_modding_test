function DaemonsLordTactic:DoAbilities()

	-- Check if we can possess
	-- Updated, overriding the standard infantry method, so that to possess whenever available.
	if (self.squad_ai:CanPossess()) then
		if true then
			self.squad_ai:DoPossess()
		end
	end

	if (self.squad_ai:CanDoAbility(DaemonsLord.warpportal_id)) then
		Ability.DoAbilityPos( self.squad_ai, DaemonsLord.warpportal_id, Ability.Filters.CloseSquadEnemy, 1 )
	end

	if (self.squad_ai:CanDoAbility(DaemonsLord.warpportalb_id)) then
		Ability.DoAbilityPos( self.squad_ai, DaemonsLord.warpportalb_id, Ability.Filters.CloseSquadEnemy, 1 )
	end

	if (self.squad_ai:CanDoAbility(DaemonsLord.obliteration_id)) then
		Ability.DoAbilityArea( self.squad_ai, DaemonsLord.obliteration_id, Ability.Filters.CloseInfantryEnemy, 4 )
	end

	if (self.squad_ai:CanDoAbility(DaemonsLord.hellmouth_id)) then
		Ability.DoAbilityPos( self.squad_ai, DaemonsLord.hellmouth_id, Ability.Filters.CloseSquadEnemy, 2 )
	end

	if (self.squad_ai:CanDoAbility(DaemonsLord.warpfire_id)) then
		Ability.DoAbilityTarget( self.squad_ai, DaemonsLord.warpfire_id, Ability.Filters.CloseSquadEnemy, 1 )
	end
--[[
	if (self.squad_ai:CanDoAbility(DaemonsLord.warpfire_ktgm)) then
		Ability.DoAbilityTarget( self.squad_ai, DaemonsLord.warpfire_ktgm, Ability.Filters.CloseSquadEnemy, 1 )
	end
]]
	-- Try to use Warpfire Ability (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(DaemonsLord.warpfire_ktgm)) then 

		-- Search for a nearby enemy squad
		local iRange = self.squad_ai:GetAbilityRange(DaemonsLord.warpfire_ktgm)
