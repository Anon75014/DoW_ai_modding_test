			end
		end
	end

	if (self.squad_ai:CanDoAbility(DaemonsLord.allure_id)) then 
		if self.squad_ai:IsInCombat() then
			Ability.DoAbilityTarget( self.squad_ai, DaemonsLord.allure_id, Ability.Filters.CloseInfantryEnemy, 4 )
