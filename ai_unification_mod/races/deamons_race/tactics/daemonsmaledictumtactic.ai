class 'DaemonsMaledictumTactic' (BaseTactic)

DaemonsMaledictum = {}

function DaemonsMaledictumTactic:__init( base_ai ) super( base_ai )

	self:SetName("Daemons Maledictum Tactic")
end

function DaemonsMaledictumTactic:InitAbilities()
	
	-- Init abilities
	if (DaemonsMaledictum.summon == nil) then
		DaemonsMaledictum.summon = cpu_manager.stats:GetAbilityID( "daemons_maledictum_protection" )
	end
	
end

function DaemonsMaledictumTactic:DoAbilities()

	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
	if (iPower >= 400) then
		self.base_ai:DoSpecialAbility(DaemonsMaledictum.summon)
	end
end

