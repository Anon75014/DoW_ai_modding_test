-- This function is called even if dark angels are not the race being played
function darkangels_race:LoadGlobalInfo()

	-- Trick to limit the number of tactical/assault/scouts, in favour of RW/DW branch squads
	IsRWorDWBranchChosen = false

	-- Import info files
	import( 'Races/darkangels_race/Info/darkangelsunitstats.ai' )
	
	-- Add dark angels unit stats
	table.insert(UnitStats, DarkAngelsUnitStats)
	return true
end

-- Creates build base strategy
function darkangels_race:CreateBuildBaseStrategy()
	return DarkAngelsBuildBaseStrategy(BuildBaseStrategyInfo)
end

-- Creates a special tactic for units
-- GAMBIT: Updated version, with no IFs at all, much faster and reliable. CPU utilization nigh zero
function darkangels_race:CreateTactic(oSquadAI)

    	-- Get unit name, and see if there is an attached tactic to it
    	local sUnitName = oSquadAI:GetSquadName()    
	if sUnitName ~= nil and DA_Race_Squad_Tactic[sUnitName] ~= nil then
		if DA_Race_Squad_Tactic[sUnitName] == "NONE" then
            		-- The squad must have NO tactic. Return nil.
            		return nil
        	else
            		return DA_Race_Squad_Tactic[sUnitName](oSquadAI)
        	end
    	end

	-- Get class
	local eClass = oSquadAI:GetStats():GetClass()

	-- Check if there is a special tactic for the unit available
	local bVehicle = (eClass == UnitStatsAI.UC_VehicleLow or eClass == UnitStatsAI.UC_VehicleMed or eClass == UnitStatsAI.UC_VehicleHigh)
	local bAirPlane = (eClass == UnitStatsAI.UC_AirLow or eClass == UnitStatsAI.UC_AirMed or eClass == UnitStatsAI.UC_AirHigh)

	if (bVehicle or bAirPlane) then
		return DarkAngelsVehicleTactic(oSquadAI)
	end
	return DarkAngelsInfantryTactic(oSquadAI)
end

-- Creates a special tactic for buildings
-- GAMBIT: Updated version, with no IFs at all, much faster and reliable. CPU utilization nigh zero
function darkangels_race:CreateBaseTactic(oBuilding)

	-- Get building name
	local sBuildingName = oBuilding:GetBaseName()
	if sBuildingName ~= nil and DA_Race_Base_Tactic[sBuildingName] ~= nil then
		if DA_Race_Base_Tactic[sBuildingName] == "NONE" then
            		-- The building must have NO tactic. Return nil.
            		return nil
        	else
            		return DA_Race_Base_Tactic[sBuildingName](oBuilding)
        	end
    	end
	return nil
end

-- Returns a specific information
function darkangels_race:GetInfo(sType)

	-- Check info type
	if (sType == "TurretPower") then
		return 400
	elseif (sType == "SupportAllyFactor") then
		return 9 / 4
	elseif (sType == "AttackModifier") then
		return -5
	elseif (sType == "CriticalRangeIncreasePerTier") then
		return 10
	elseif (sType == "MinArmyStrengthPerTier") then
		return 750
	elseif (sType == "AttackRatio") then
		return 4 / 5
	elseif (sType == "RetreatRatio") then
		return 3 / 5
	elseif (sType == "InvisibleBuildings") then
		return false
	elseif (sType == "HarassingLeader") then
		return "da_squad_grand_master"
	elseif (sType == "AutoConstructBuildings") then
		return false
	end
	return nil
end

-- Returns the building type and threat
function darkangels_race:GetBuildingType(sBuildingName)

	-- Return race specific object string
	if (sBuildingName == "darkangels_hq") then
		return "HQ", 0
		
	elseif (sBuildingName == "darkangels_generator") then
		return "Generator", 0
		
	elseif (sBuildingName == "darkangels_thermo_generator") then
		return "BiggerGenerator", 0
		
	elseif (sBuildingName == "darkangels_vehicle_building") then
		return "VehicleBuilding", 0
		
	elseif (sBuildingName == "darkangels_armoury") then
		return "Armoury", 0
		
	elseif (sBuildingName == "darkangels_listening_post") then
		return "ListeningPost", 0
		
	elseif (sBuildingName == "darkangels_turret_bolter_spec") then
		return "Turret", 300
	end
	return nil, 0
end