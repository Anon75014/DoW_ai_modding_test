class 'DarkAngelsChaplainTactic' (DarkAngelsInfantryTactic)

DarkAngelsChaplain = {}

function DarkAngelsChaplainTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Angels Chaplain Tactic")
end

function DarkAngelsChaplainTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function DarkAngelsChaplainTactic:IsDefender()
	return self:IsCommanderDefender()
end

function DarkAngelsChaplainTactic:InitAbilities()
 
end

function DarkAngelsChaplainTactic:DoAbilities()

    self:DoHuntTheFallen()
    self:DoDemoralize()
end

function DarkAngelsChaplainTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier2+
	if (cpu_manager:GetTierLevel() > 1) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end

