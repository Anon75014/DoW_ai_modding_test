class 'DarkAngelsDeathwingChampionTactic' (DarkAngelsInfantryTactic)

DarkAngelsDeathwingChampion = {}

function DarkAngelsDeathwingChampionTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Angels Deathwing Champion Tactic")

	self.timedDirectSpawnAbility = Timer( DarkAngelsDeathwingChampionTactic.DoDirectSpawnAbility, self, 5 )
end

function DarkAngelsDeathwingChampionTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function DarkAngelsDeathwingChampionTactic:IsDefender()
	return self:IsCommanderDefender()
end

function DarkAngelsDeathwingChampionTactic:InitAbilities()

end

function DarkAngelsDeathwingChampionTactic:DoAbilities()

    self:DoOrbitalBombardment()
    self:DoBattlecry()

	-- Spawn Deathwing Knights as soon as possible
	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	else
		DarkAngelsDeathwingChampionTactic.DoDirectSpawnAbility(self)
	end
end

function DarkAngelsDeathwingChampionTactic:DoDirectSpawnAbility()

	-- Spawn Deathwing Knights in combat
	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	end
end

function DarkAngelsDeathwingChampionTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier2+
	if (cpu_manager:GetTierLevel() > 1) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end