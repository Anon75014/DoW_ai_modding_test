class 'DarkAngelsLibrarianBikeTactic' (DarkAngelsInfantryTactic)

DarkAngelsLibrarianBike = {}

function DarkAngelsLibrarianBikeTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Angels Librarian Tactic")
end

function DarkAngelsLibrarianBikeTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function DarkAngelsLibrarianBikeTactic:IsDefender()
	return self:IsCommanderDefender()
end

function DarkAngelsLibrarianBikeTactic:InitAbilities()

end

function DarkAngelsLibrarianBikeTactic:DoAbilities()

    self:DoLibrarianAttacks()
end

function DarkAngelsLibrarianBikeTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end
