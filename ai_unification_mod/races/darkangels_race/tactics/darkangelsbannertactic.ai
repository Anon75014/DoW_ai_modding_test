class 'DarkAngelsBannerTactic' (DarkAngelsInfantryTactic)

DarkAngelsBanner = {}

function DarkAngelsBannerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Angels Banner Tactic")
end

function DarkAngelsBannerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function DarkAngelsBannerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function DarkAngelsBannerTactic:Update()

   if self:IsComplete() then
      return
   end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

   --attach to squad
   self:TryAttachSquad( false, false, 1000, 200, nil )
	
end


