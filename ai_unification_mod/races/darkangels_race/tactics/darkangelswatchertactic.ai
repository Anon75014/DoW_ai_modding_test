class 'DarkAngelsWatcherTactic' (DarkAngelsInfantryTactic)

DarkAngelsWatcher = {}

function DarkAngelsWatcherTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Angels Watcher Tactic")
end

function DarkAngelsWatcherTactic:IsSupportDetector()
	return true
end

-- Should only attack when attached
function DarkAngelsWatcherTactic:IsAttacker()
	return false
end

-- Should only defend when attached
function DarkAngelsWatcherTactic:IsDefender()
	return false
end

function DarkAngelsWatcherTactic:Update()

   if self:IsComplete() then
      return
   end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

   --attach to squad
   self:TryAttachSquad( false, false, 1000, 200, nil )
	
end


