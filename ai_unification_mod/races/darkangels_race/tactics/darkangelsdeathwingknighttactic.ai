class 'DarkAngelsDeathwingKnightTactic' (DarkAngelsInfantryTactic)

DarkAngelsDeathwingKnight = {}

function DarkAngelsDeathwingKnightTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Angels Deathwing Knight Tactic")
end

function DarkAngelsDeathwingKnightTactic:AlwaysAttack()
	return true
end

function DarkAngelsDeathwingKnightTactic:Reinforce()

	-- The AI cannot limit the leaders as set by the AE, so we must force the limitations manually
	if not self.squad_ai:IsReinforcing() then
		if self.squad_ai:CanReinforce( false, 0 ) then
			self.squad_ai:DoReinforce( false, 0 )
		elseif self.squad_ai:GetLeaderCount(0) == 0 then
			self.squad_ai:DoReinforce( true, 0 )
		elseif self.squad_ai:GetLeaderCount(1) == 0 then
			self.squad_ai:DoReinforce( true, 1 )
		end
	end
end