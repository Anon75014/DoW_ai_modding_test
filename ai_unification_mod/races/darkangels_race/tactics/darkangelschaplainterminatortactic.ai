class 'DarkAngelsChaplainTerminatorTactic' (DarkAngelsInfantryTactic)

DarkAngelsChaplainTerminator = {}

function DarkAngelsChaplainTerminatorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Angels Chaplain Terminator Tactic")
end

function DarkAngelsChaplainTerminatorTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function DarkAngelsChaplainTerminatorTactic:IsDefender()
	return self:IsCommanderDefender()
end

function DarkAngelsChaplainTerminatorTactic:InitAbilities()
	if DarkAngelsChaplainTerminator.DemoralizeID == nil then
		DarkAngelsChaplainTerminator.DemoralizeID = cpu_manager.stats:GetAbilityID( "darkangels_demoralize_termi" )
		DarkAngelsChaplainTerminator.HuntFallenID = cpu_manager.stats:GetAbilityID("darkangels_hunt_the_fallen")
	end
end

function DarkAngelsChaplainTerminatorTactic:DoAbilities()

	if self.squad_ai:IsInCombat() then

		if self.squad_ai:CanDoAbility(DarkAngelsChaplainTerminator.HuntFallenID) then
			if Ability.DoAbilityArea( self.squad_ai, DarkAngelsChaplainTerminator.HuntFallenID, Ability.Filters.CloseEnemy, 10, 1 ) then
				return
			end
		end

		if self.squad_ai:CanDoAbility(DarkAngelsChaplainTerminator.DemoralizeID) then
			if Ability.DoAbilityTarget( self.squad_ai, DarkAngelsChaplainTerminator.DemoralizeID, Ability.Filters.CloseSquadEnemy, 1 )
			or Ability.DoAbilityTarget( self.squad_ai, DarkAngelsChaplainTerminator.DemoralizeID, Ability.Filters.CloseCommanderEnemy, 1 ) 
			or Ability.DoAbilityTarget( self.squad_ai, DarkAngelsChaplainTerminator.DemoralizeID, Ability.Filters.CloseMonsterEnemy, 1 ) then end
		end
	end
end

function DarkAngelsChaplainTerminatorTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier2+
	if (cpu_manager:GetTierLevel() > 1) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end

