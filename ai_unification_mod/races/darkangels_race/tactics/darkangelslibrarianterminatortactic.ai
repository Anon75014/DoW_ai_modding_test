class 'DarkAngelsLibrarianTerminatorTactic' (DarkAngelsInfantryTactic)

DarkAngelsLibrarianTerminator = {}

function DarkAngelsLibrarianTerminatorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Angels Librarian Terminator Tactic")
end

function DarkAngelsLibrarianTerminatorTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function DarkAngelsLibrarianTerminatorTactic:IsDefender()
	return self:IsCommanderDefender()
end

function DarkAngelsLibrarianTerminatorTactic:InitAbilities()
	if DarkAngelsLibrarianTerminator.HellfireID == nil then
		DarkAngelsLibrarianTerminator.HellfireID = cpu_manager.stats:GetAbilityID( "darkangels_hellfire" )
		DarkAngelsLibrarianTerminator.ForceBarrierID = cpu_manager.stats:GetAbilityID( "darkangels_force_barrier" )
		DarkAngelsLibrarianTerminator.MindWormID = cpu_manager.stats:GetAbilityID( "darkangels_mind_worm_termi" )
	end
end


function DarkAngelsLibrarianTerminatorTactic:DoAbilities()

	if self.squad_ai:IsInCombat() then

		if self.squad_ai:CanDoAbility(DarkAngelsLibrarianTerminator.MindWormID) then
			if Ability.DoAbilityTarget( self.squad_ai, DarkAngelsLibrarianTerminator.MindWormID, Ability.Filters.CloseSquadEnemy, 1 )
			or Ability.DoAbilityTarget( self.squad_ai, DarkAngelsLibrarianTerminator.MindWormID, Ability.Filters.CloseCommanderEnemy, 1 ) 
			or Ability.DoAbilityTarget( self.squad_ai, DarkAngelsLibrarianTerminator.MindWormID, Ability.Filters.CloseMonsterEnemy, 1 ) then
				return
			end
		end

		if self.squad_ai:CanDoAbility(DarkAngelsLibrarianTerminator.HellfireID) then
			if Ability.DoAbilityTarget( self.squad_ai, DarkAngelsLibrarianTerminator.HellfireID, Ability.Filters.CloseSquadEnemy, 1 )
			or Ability.DoAbilityTarget( self.squad_ai, DarkAngelsLibrarianTerminator.HellfireID, Ability.Filters.CloseCommanderEnemy, 1 ) 
			or Ability.DoAbilityTarget( self.squad_ai, DarkAngelsLibrarianTerminator.HellfireID, Ability.Filters.CloseMonsterEnemy, 1 ) then
				return
			end
		end

		if self.squad_ai:CanDoAbility(DarkAngelsLibrarianTerminator.ForceBarrierID) then
			Ability.DoAbilityArea( self.squad_ai, DarkAngelsLibrarianTerminator.ForceBarrierID, Ability.Filters.CloseEnemy, 10, 1 )
		end
    end
end


function DarkAngelsLibrarianTerminatorTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end
