class 'DarkAngelsMasterRavenwingBikeTactic' (DarkAngelsInfantryTactic)

DarkAngelsMasterRavenwingBike = {}

function DarkAngelsMasterRavenwingBikeTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Angels Master Ravenwing Bike Tactic")
end

function DarkAngelsMasterRavenwingBikeTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function DarkAngelsMasterRavenwingBikeTactic:IsDefender()
	return self:IsCommanderDefender()
end

function DarkAngelsMasterRavenwingBikeTactic:InitAbilities()

end

function DarkAngelsMasterRavenwingBikeTactic:DoAbilities()

    self:DoStrafingRun()
end

function DarkAngelsMasterRavenwingBikeTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end
