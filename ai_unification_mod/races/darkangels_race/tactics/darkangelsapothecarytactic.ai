class 'DarkAngelsApothecaryTactic' (DarkAngelsInfantryTactic)

DarkAngelsApothecary = {}

function DarkAngelsApothecaryTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Angels Apothecary Tactic")
end

function DarkAngelsApothecaryTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function DarkAngelsApothecaryTactic:IsDefender()
	return self:IsCommanderDefender()
end

function DarkAngelsApothecaryTactic:Update()

   if self:IsComplete() then
      return
   end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

   --attach to squad
   self:TryAttachSquad( false, false, 1000, 200, nil )
	
end


