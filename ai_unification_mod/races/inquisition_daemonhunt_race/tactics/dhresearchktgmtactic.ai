class 'DHResearchKtgmTactic' (BaseTactic)

DHResearchKtgm = {}

function DHResearchKtgmTactic:__init( base_ai ) super( base_ai )

	self:SetName("DaemonHunt Research Kill Team Tactic")

	-- The name of the squad to target
	self.squad1_name = "inquisition_squad_grey_knights_paladin_ktgm"
	self.squad2_name = "inquisition_squad_inquisitor_lord_ktgm"
end

function DHResearchKtgmTactic:InitAbilities()
	
	-- Init abilities
	if (DHResearchKtgm.Strongheal_id == nil) then
		DHResearchKtgm.Strongheal_id = cpu_manager.stats:GetAbilityID( "ls_healing_1000" )
	end

	if (DHResearchKtgm.Lightheal_id == nil) then
		DHResearchKtgm.Lightheal_id = cpu_manager.stats:GetAbilityID( "ls_healing_500" )
	end
end

function DHResearchKtgmTactic:DoAbilities()
	
	aitrace("DHResearchKtgmTactic: Do abilities...")

	-- Check if squad is valid
    	for oSquad in military_manager:GetSquads() do
        	if oSquad:IsValid() then
            		if oSquad:GetSquadName() == self.squad1_name or oSquad:GetSquadName() == self.squad2_name then

				-- Try to use Strong Heal ability on squad (restores target's health by 1000 HP)
				if (self.base_ai:CanDoAbility(DHResearchKtgm.Strongheal_id)) then
	
					-- Check if health needs an energency boost
					if (oSquad:WasRecentlyHurt() and oSquad:GetHealthPercentage() < 0.3) then

						-- Check if we have the needed resources
						local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
						local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
      						if iReq >= 100 and iPower >= 100 then		
		
							-- Use strong heal ability on commander
							self.base_ai:DoSpecialAbility(DHResearchKtgm.Strongheal_id)
							--print("Using Heavy Heal ability for player "..tostring(cpu_manager.player_id).."")
						end
					end
				end
