class 'AstropathSPTactic' (DaemonhuntInfantryTactic)

AstropathSP = {}

function AstropathSPTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Astropath Campaign Tactic")
	self.m_iTransportable = 1
end

function AstropathSPTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Attach from scratch
	if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
		return
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end