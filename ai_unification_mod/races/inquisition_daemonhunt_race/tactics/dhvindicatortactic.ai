class 'DHVindicatorTactic' (DaemonhuntVehicleTactic)

DHVindicator = {}

function DHVindicatorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("DH Vindicator Tactic")
end

function DHVindicatorTactic:InitAbilities()

	if (DHVindicator.smoke_id == nil) then
	    DHVindicator.smoke_id = cpu_manager.stats:GetAbilityID( "inquisition_smoke_launcher_chimera" )	
	end
end

function DHVindicatorTactic:DoAbilities()

	-- Check if we can throw smoke
	if (self.squad_ai:CanDoAbility(DHVindicator.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(DHVindicator.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(DHVindicator.smoke_id, oUnit:GetSquad())
		end
	end

	-- Do basic abilities
	DaemonhuntVehicleTactic.DoAbilities(self)
end