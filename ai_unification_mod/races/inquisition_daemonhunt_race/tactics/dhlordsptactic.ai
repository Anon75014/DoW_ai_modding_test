class 'DHLordSPTactic' (DaemonhuntInfantryGKTactic)

DHLordSP = {}

function DHLordSPTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Inquisitor Lord Squad Campaign Tactic")
	self.m_iTransportable = 1
	self.daemonhostTime = g_iGMT
end

-- Assassinate win condition -- never attack
function DHLordSPTactic:IsAttacker()
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function DHLordSPTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

function DHLordSPTactic:InitAbilities()

	if (DHLordSP.banish_id == nil) then
	    DHLordSP.banish_id = cpu_manager.stats:GetAbilityID( "inquisition_inquisitor_lord_banish_advance" )	
	end

	if (DHLordSP.wrath_id == nil) then
	    DHLordSP.wrath_id = cpu_manager.stats:GetAbilityID( "inquisition_inquisitor_lord_emperor_wrath_advance" )	
	end

	if (DHLordSP.strength_id == nil) then
		DHLordSP.strength_id = cpu_manager.stats:GetAbilityID( "inquisition_daemon_strength" )	
	end

	if (DHLordSP.daemonhost_id == nil) then
		DHLordSP.daemonhost_id = cpu_manager.stats:GetAbilityID( "inquisition_inquisitor_lord_create_daemonhost_advance" )	
	end

	if (DHLordSP.daemonhostB_id == nil) then
		DHLordSP.daemonhostB_id = cpu_manager.stats:GetAbilityID( "inquisition_inquisitor_lord_create_daemonhost_advance_2" )	
	end
end

function DHLordSPTactic:DoAbilities()

	if self.daemonhostTime == nil then self.daemonhostTime = g_iGMT end

	-- Use the Create Daemonhost ability when alone and out of trouble
	if g_iGMT > self.daemonhostTime + 10 and not self.squad_ai:IsAttached() then
		if not self.squad_ai:IsInCombat() and self.squad_ai:CanDoAbility(DHLordSP.daemonhost_id) then	
			local squad_filter = function( squad_ai )
				return squad_ai:IsValid() and squad_ai:GetSquadName() == "inquisition_squad_acolyte_doomed_advance_sp"
			end	
			local oSquad = cpu_manager:GetClosestSquad( self.squad_ai:GetPosition(), 20, squad_filter )
			if oSquad ~= nil and oSquad:IsValid() then
				if oSquad:GetHealthPercentage() > 0.8 then
					self.squad_ai:DoSpecialAbilitySquad( DHLordSP.daemonhost_id, oSquad:GetSquad() )
					self.daemonhostTime = g_iGMT
				end
			end
 		end
	end

	-- Use the Create 2nd Daemonhost ability when alone and out of trouble
	if g_iGMT > self.daemonhostTime + 10 and not self.squad_ai:IsAttached() then
		if not self.squad_ai:IsInCombat() and self.squad_ai:CanDoAbility(DHLordSP.daemonhostB_id) then	
			local squad_filter = function( squad_ai )
				return squad_ai:IsValid() and squad_ai:GetSquadName() == "inquisition_squad_acolyte_doomed"
			end	
			local oSquad = cpu_manager:GetClosestSquad( self.squad_ai:GetPosition(), 20, squad_filter )
			if oSquad ~= nil and oSquad:IsValid() then
				if oSquad:GetHealthPercentage() > 0.8 then
					self.squad_ai:DoSpecialAbilitySquad( DHLordSP.daemonhostB_id, oSquad:GetSquad() )
					self.daemonhostTime = g_iGMT
				end
			end
 		end
	end

	Ability.DoAbility( self.squad_ai, DHLordSP.strength_id, Ability.Filters.IsInCombat )
	Ability.DoAbilityPos( self.squad_ai, DHLordSP.banish_id, Ability.Filters.CloseMonsterEnemy, 1 )
	Ability.DoAbilityPos( self.squad_ai, DHLordSP.banish_id, Ability.Filters.CloseCommanderEnemy, 1 )  
	Ability.DoAbilityArea( self.squad_ai, DHLordSP.wrath_id, Ability.Filters.CloseEnemy, 15, 2 )
end

function DHLordSPTactic:Reinforce()

	-- Allow free reinforcing during harassing time
	if (g_iGMT > DefendChokePointPlan.HarassingTime * 60) then

		-- If there are no resources available, don't upgrade!
		if (not Tactic.Options.can_reinforce) then
			return
		end
	end

	if (not self.squad_ai:IsReinforcing()) then

		-- Always try for the actual leader first
		if (self.squad_ai:CanReinforce( false, 0 )) then
			self.squad_ai:DoReinforce( false, 0 )
			return
		end

		if self.squad_ai:GetLeaderCount(0) == 0 and self.squad_ai:CanReinforce( true, 0 ) then
			self.squad_ai:DoReinforce( true, 0 )
			return
		end
		if self.squad_ai:GetLeaderCount(1) == 0 and self.squad_ai:CanReinforce( true, 1 ) then
			self.squad_ai:DoReinforce( true, 1 )
			return
		end
		if self.squad_ai:GetLeaderCount(2) == 0 and self.squad_ai:CanReinforce( true, 2 ) then
			self.squad_ai:DoReinforce( true, 2 )
			return
		end
		if self.squad_ai:GetLeaderCount(3) == 0 and self.squad_ai:CanReinforce( true, 3 ) then
			self.squad_ai:DoReinforce( true, 3 )
			return
		end
	end
end