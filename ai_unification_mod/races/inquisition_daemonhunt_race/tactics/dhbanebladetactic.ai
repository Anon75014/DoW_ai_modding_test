class 'DHBanebladeTactic' (DaemonhuntVehicleTactic)

DHBaneblade = {}

function DHBanebladeTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("DH Baneblade Tactic")
end

function DHBanebladeTactic:InitAbilities()

	-- Init ability ID's
	if (DHBaneblade.spirit_id == nil) then
		DHBaneblade.spirit_id = cpu_manager.stats:GetAbilityID( "inquisition_machine_spirit_baneblade" )
	end

	if (DHBaneblade.smoke_id == nil) then
		DHBaneblade.smoke_id = cpu_manager.stats:GetAbilityID( "inquisition_smoke_launchers_baneblade" )	
	end

	if (DHBaneblade.vortex_id == nil) then
		DHBaneblade.vortex_id = cpu_manager.stats:GetAbilityID( "inquisition_baneblade_vortex" )	
	end
end

function DHBanebladeTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(DHBaneblade.spirit_id)) then
			self.squad_ai:DoSpecialAbility(DHBaneblade.spirit_id)
		end	  
	end

	-- Check if we can throw smoke
	if (self.squad_ai:CanDoAbility(DHBaneblade.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(DHBaneblade.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(DHBaneblade.smoke_id, oUnit:GetSquad())
		end
	end

	-- Check if we can use vortex ability based if we have enough health and enemies nearby
	if self.squad_ai:CanDoAbility(DHBaneblade.vortex_id) then
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.6) then
			Ability.DoAbilityPos( self.squad_ai, DHBaneblade.vortex_id, Ability.Filters.CloseEnemy, 6 )
		else
			Ability.DoAbilityPos( self.squad_ai, DHBaneblade.vortex_id, Ability.Filters.CloseEnemy, 12 )
		end
	end

	-- Do basic abilities
	DaemonhuntVehicleTactic.DoAbilities(self)
end