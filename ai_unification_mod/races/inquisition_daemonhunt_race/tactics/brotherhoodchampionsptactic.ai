class 'BrotherhoodChampionSPTactic' (DaemonhuntInfantryGKTactic)

BrotherhoodChampionSP = {}

function BrotherhoodChampionSPTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Brotherhood Champion Campaign")
	self.m_iTransportable = 1
end

function BrotherhoodChampionSPTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function BrotherhoodChampionSPTactic:IsDefender()
	return self:IsCommanderDefender()
end

function BrotherhoodChampionSPTactic:InitAbilities()

	if (BrotherhoodChampionSP.trance == nil) then
	    BrotherhoodChampionSP.trance = cpu_manager.stats:GetAbilityID( "inquisition_trance" )	
	end
end

function BrotherhoodChampionSPTactic:DoAbilities()
	if self.squad_ai:CanDoAbility(BrotherhoodChampionSP.trance) and self.squad_ai:WasRecentlyHurt()
	and not self.squad_ai:IsAttached() then
		if (self.squad_ai:IsInCombat() and self.squad_ai:GetHealthPercentage() < 0.35) then
			self.squad_ai:DoSpecialAbilitySquad(BrotherhoodChampionSP.trance, self.squad_ai:GetSquad())
		else
			local iPos = self.squad_ai:GetPosition()
			if cpu_manager.terrain_analyzer:HasThreat(iPos, 50) and
			not cpu_manager.terrain_analyzer:HasThreat(iPos, 20) then
				self.squad_ai:DoSpecialAbilitySquad(BrotherhoodChampionSP.trance, self.squad_ai:GetSquad())
			end
		end
	end
end

function BrotherhoodChampionSPTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Check if we are in serious trouble
	self:EmergencyRetreat()

	-- Attach to melee in tier1
	if (cpu_manager:GetTierLevel() >= 1) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end