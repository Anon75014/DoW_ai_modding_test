class 'DaemonHostKtgmTactic' (DaemonhuntInfantryTactic)

DaemonHostKtgmAbility = {}

function DaemonHostKtgmTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("DaemonHost Kill Team Tactic")
end

function DaemonHostKtgmTactic:AlwaysAttack()
	return true
end

function DaemonHostKtgmTactic:InitAbilities()

	if DaemonHostKtgmAbility.reknit_form == nil then
		DaemonHostKtgmAbility.reknit_form = cpu_manager.stats:GetAbilityID( "inquisition_reknit_form" )
	end
end

function DaemonHostKtgmTactic:DoAbilities()

	-- Casting Re-kint Form
	if self.squad_ai:CanDoAbility(DaemonHostKtgmAbility.reknit_form) then
		if self.squad_ai:GetHealthPercentage() < 0.3 then
			self.squad_ai:DoSpecialAbility(DaemonHostKtgmAbility.reknit_form)
		end
	end
end
