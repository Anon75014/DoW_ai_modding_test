class 'DHRhinoTactic' (DaemonhuntVehicleTactic)

DHRhino = {}

function DHRhinoTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("DH Rhino Tactic")

	-- Vehicle is a light transport
	self.m_iTransportVehicle = 1
	self.m_iTransportSlots = 1
end

function DHRhinoTactic:InitAbilities()

	if DHRhino.repair_id == nil then
	    DHRhino.repair_id = cpu_manager.stats:GetAbilityID( "inquisition_rhino_self_repair" )
		DHRhino.repair2_id = cpu_manager.stats:GetAbilityID( "inquisition_rhino_self_repair_2" )
	    DHRhino.smoke_id = cpu_manager.stats:GetAbilityID( "inquisition_smoke_launchers" )
		DHRhino.hkmissiles_id = cpu_manager.stats:GetAbilityID( "inquisition_hk_missiles" )
		DHRhino.hkmissiles2_id = cpu_manager.stats:GetAbilityID( "inquisition_hk_missiles_2" )
	end
end

function DHRhinoTactic:DoAbilities()

	-- Check if we are attacking and not in home base
	if self.squad_ai:IsAttacking() then
		-- Launch HK Missiles at either Vehicles or Buildings
		if self.squad_ai:CanDoAbility(DHRhino.hkmissiles_id) then
			if Ability.DoAbilityTarget(self.squad_ai, DHRhino.hkmissiles_id, Ability.Filters.CloseVehicleEnemy, 2)
			or Ability.DoAbilityTargetEntity( self.squad_ai, DHRhino.hkmissiles_id, Ability.EntityFilters.CloseBaseEntityEnemy, 2)
			or Ability.DoAbilityTarget(self.squad_ai, DHRhino.hkmissiles_id, IDH_Ability.Filters.CloseVehicleHighEnemy, 1)  
			or Ability.DoAbilityTarget(self.squad_ai, DHRhino.hkmissiles_id, IDH_Ability.Filters.CloseVehicleMedEnemy, 1)
			or Ability.DoAbilityTargetEntity( self.squad_ai, DHRhino.hkmissiles_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
				return
			end
		elseif self.squad_ai:CanDoAbility(DHRhino.hkmissiles2_id) then
			if Ability.DoAbilityTarget(self.squad_ai, DHRhino.hkmissiles2_id, Ability.Filters.CloseVehicleEnemy, 2)
			or Ability.DoAbilityTargetEntity( self.squad_ai, DHRhino.hkmissiles2_id, Ability.EntityFilters.CloseBaseEntityEnemy, 2)
			or Ability.DoAbilityTarget(self.squad_ai, DHRhino.hkmissiles2_id, IDH_Ability.Filters.CloseVehicleHighEnemy, 1)  
			or Ability.DoAbilityTarget(self.squad_ai, DHRhino.hkmissiles2_id, IDH_Ability.Filters.CloseVehicleMedEnemy, 1)
			or Ability.DoAbilityTargetEntity( self.squad_ai, DHRhino.hkmissiles2_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
				return
			end
		end
	end

	-- Rhino Repair!
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.5) then

		if self.squad_ai:CanDoAbility( DHRhino.repair_id ) then
			self.squad_ai:DoSpecialAbility( DHRhino.repair_id )
			return
		elseif self.squad_ai:CanDoAbility( DHRhino.repair2_id ) then
			self.squad_ai:DoSpecialAbility( DHRhino.repair2_id )
			return
		end
	end

	-- Check if we can throw smoke
	if (self.squad_ai:CanDoAbility(DHRhino.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(DHRhino.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(DHRhino.smoke_id, oUnit:GetSquad())
		end
	end

	-- Do basic abilities
	DaemonhuntVehicleTactic.DoAbilities(self)
end

