class 'DHLordSabbathielTactic' (DaemonhuntInfantryTactic)

DHLordSabbathiel = {}

function DHLordSabbathielTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Astor Sabbathiel Tactic")
end

function DHLordSabbathielTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function DHLordSabbathielTactic:IsDefender()
	return self:IsCommanderDefender()
end

function DHLordSabbathielTactic:InitAbilities()

	if DHLordSabbathiel.lightning_id == nil then
	    DHLordSabbathiel.lightning_id = cpu_manager.stats:GetAbilityID( "inquisition_astor_lightning_arc" )
	end

	if DHLordSabbathiel.orbs_id == nil then
	    DHLordSabbathiel.orbs_id = cpu_manager.stats:GetAbilityID( "inquisition_defence_orbs" )
	end

	if DHLordSabbathiel.customisation_id == nil then
	    DHLordSabbathiel.customisation_id = cpu_manager.stats:GetAbilityID( "inquisition_inconceivable_customisation" )
	end
end

function DHLordSabbathielTactic:DoAbilities()

	if self.squad_ai:IsInCombat() and self.squad_ai:CanDoAbility(DHLordSabbathiel.lightning_id) then
		if Ability.DoAbilityTarget(self.squad_ai, DHLordSabbathiel.lightning_id, Ability.Filters.CloseCommanderEnemy, 1)
		or Ability.DoAbilityTarget(self.squad_ai, DHLordSabbathiel.lightning_id, Ability.Filters.CloseMonsterEnemy, 4)
		or Ability.DoAbilityTarget(self.squad_ai, DHLordSabbathiel.lightning_id, Ability.Filters.CloseInfantryEnemy, 5) then
			return
		end
	end

	-- If we are dying while in combat, use defensive orbs
	if self.squad_ai:IsInCombat() then
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
			if self.squad_ai:CanDoAbility(DHLordSabbathiel.orbs_id) then
				self.squad_ai:DoSpecialAbility(DHLordSabbathiel.orbs_id)
				--print("Using Defense Orbs ability for player "..tostring(cpu_manager.player_id).."")
			end
		end
	end

	-- Check if we can cast Inconceivable Customisation (improve weapon damage to allies while in combat)
	if (self.squad_ai:CanDoAbility(DHLordSabbathiel.customisation_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(DHLordSabbathiel.customisation_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 200) then
			self.squad_ai:DoSpecialAbilitySquad(DHLordSabbathiel.customisation_id, oUnit:GetSquad())
			--print("Enable Inconceivable Customisation ability for player "..tostring(cpu_manager.player_id).."")
		end
	end
end
