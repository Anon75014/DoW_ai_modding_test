class 'PaladinGK_KTGM_Tactic' (DaemonhuntInfantryGKTactic)

PaladinGK_KTGM = {}

function PaladinGK_KTGM_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Paladin Tactic")
	self.m_iTransportable = 1
end

-- Arkhan 03.2006: Inherited method used by commanders which are able to jump with an attached squad
function PaladinGK_KTGM_Tactic:CanJumpAttached()
	return true
end

function PaladinGK_KTGM_Tactic:InitAbilities()

	if PaladinGK_KTGM.holocaust_id == nil then
		PaladinGK_KTGM.holocaust_id = cpu_manager.stats:GetAbilityID( "inquisition_holocaust" )
		PaladinGK_KTGM.sanctuary_id = cpu_manager.stats:GetAbilityID( "inquisition_sanctuary_targeted_ability" )
		PaladinGK_KTGM.heal_id = cpu_manager.stats:GetAbilityID( "inquisition_healing_touch_ally" )
		PaladinGK_KTGM.nemesis_id = cpu_manager.stats:GetAbilityID( "inquisition_brother_captain_nemesis_gk" )
		PaladinGK_KTGM.hammerhand_id = cpu_manager.stats:GetAbilityID( "inquisition_hammerhand" )
	end
end

function PaladinGK_KTGM_Tactic:DoAbilities()
--[[
	if self.squad_ai:CanDoAbility(PaladinGK_KTGM.holocaust_id) then
		Ability.DoAbilityPos( self.squad_ai, PaladinGK_KTGM.holocaust_id, Ability.Filters.CloseSquadEnemy, 3 ) 
		Ability.DoAbilityPos( self.squad_ai, PaladinGK_KTGM.holocaust_id, Ability.Filters.CloseCommanderEnemy, 1 ) 
		Ability.DoAbilityPos( self.squad_ai, PaladinGK_KTGM.holocaust_id, Ability.Filters.CloseMonsterEnemy, 1 ) 
	end
]]
	-- Use Holocaust against enemies (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(PaladinGK_KTGM.holocaust_id)) then 

		-- Search for a nearby enemy squad
		local iRange = self.squad_ai:GetAbilityRange(PaladinGK_KTGM.holocaust_id)
		local oUnit = cpu_manager.cpu_player:FindFirstInfantryEnemy(self.squad_ai:GetPosition(), iRange, 4)
		local oUnitB = cpu_manager.cpu_player:FindFirstCommanderEnemy(self.squad_ai:GetPosition(), iRange, 1)
		local oUnitC = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil) then
			--print("Using Holocaust against infantry enemies for player "..tostring(cpu_manager.player_id).."")
			self.squad_ai:DoSpecialAbilitySquad(PaladinGK_KTGM.holocaust_id, oUnit:GetSquad())
			return
		elseif (oUnitB ~= nil) then
			--print("Using Holocaust against commander enemies for player "..tostring(cpu_manager.player_id).."")
			self.squad_ai:DoSpecialAbilitySquad(PaladinGK_KTGM.holocaust_id, oUnitB:GetSquad())
			return
		elseif (oUnitC ~= nil) then
			-- Get stats
			local oStats = oUnitC:GetStats()
			if (oStats ~= nil) then
				-- Check unit type
				local eClass = oStats:GetClass()
				if (eClass == UnitStatsAI.UC_MonsterMed or eClass == UnitStatsAI.UC_MonsterHigh) then
					--print("Using Holocaust against monster enemies for player "..tostring(cpu_manager.player_id).."")
					self.squad_ai:DoSpecialAbilitySquad(PaladinGK_KTGM.holocaust_id, oUnitC:GetSquad())
					return
				end
			end
		end
	end

	if self.squad_ai:CanDoAbility(PaladinGK_KTGM.sanctuary_id) and self.squad_ai:IsInCombat() then
		if resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Requisition) > 350 then
			local selfPos = self.squad_ai:GetPosition()
			-- First, try the ability directly on the Paladins, if of low health
			if self.squad_ai:GetHealthPercentage() < 0.55 and self.squad_ai:GetNumTroopers() > 3 then
				self.squad_ai:DoSpecialAbilityPos(PaladinGK_KTGM.sanctuary_id, selfPos)
			-- Else, scan for nearby Daemons presence, regardless squad health
			else
				local oGreaterDaemon = function(oSquad, iCount)
					local oStats = oSquad:GetStats()
					if oStats == nil then return false end
					return oStats:GetClass() == UnitStatsAI.UC_MonsterHigh
				end
				local greaterDaemon = cpu_manager:GetClosestSquad(selfPos, 16, oGreaterDaemon, 1)
				if greaterDaemon ~= nil then
					self.squad_ai:DoSpecialAbilityPos(PaladinGK_KTGM.sanctuary_id, greaterDaemon:GetPosition())
				else local lesserDaemon = Ability.Filters.CloseMonsterEnemy(selfPos, 16, 6)
					if lesserDaemon ~= nil then
						self.squad_ai:DoSpecialAbilityPos(PaladinGK_KTGM.sanctuary_id, lesserDaemon:GetPosition())
					end
				end
			end
		end
	end

	-- Make a healing attempt
	if self.squad_ai:CanDoAbility(PaladinGK_KTGM.heal_id) then
		-- Find: nearby (25) + wounded + non-vehicle + more that 3 members squad. For Commanders apply even for 1 member.
		local oSquad = cpu_manager.cpu_player:FindFirstHurtSquad(self.squad_ai:GetPosition(), 25)
		if oSquad ~= nil and oSquad:GetHealthPercentage() < 0.75 then
			local oStats = oSquad:GetStats()
			local oClass = nil
			if oStats ~= nil then oClass = oStats:GetClass() end
			if oClass ~= nil then
				if oClass == UnitStatsAI.UC_Commander then
					self.squad_ai:DoSpecialAbilitySquad(PaladinGK_KTGM.heal_id, oSquad:GetSquad())
				elseif oSquad:GetNumTroopers() > 3 then
					if oClass ~= UnitStatsAI.UC_VehicleLow and oClass ~= UnitStatsAI.UC_VehicleMed
					and oClass ~= UnitStatsAI.UC_VehicleHigh and oClass ~= UnitStatsAI.UC_AirMed then
						self.squad_ai:DoSpecialAbilitySquad(PaladinGK_KTGM.heal_id, oSquad:GetSquad())
					end
				end
			end
		end

		if self.squad_ai:GetHealthPercentage() < 0.25 then
			self.squad_ai:DoSpecialAbilitySquad(PaladinGK_KTGM.heal_id, self.squad_ai:GetSquad())
		end
	end
--[[
	if (self.squad_ai:IsInCombat()) then
		Ability.DoAbilityTarget( self.squad_ai, PaladinGK_KTGM.nemesis_id, Ability.Filters.CloseSquadEnemy, 3 ) 
		Ability.DoAbilityTarget( self.squad_ai, PaladinGK_KTGM.nemesis_id, Ability.Filters.CloseMonsterEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, PaladinGK_KTGM.nemesis_id, Ability.Filters.CloseVehicleEnemy, 2 )
	end

	--we are dying, lower requisites for attacks
	if self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4 then
        	Ability.DoAbilityTarget( self.squad_ai, PaladinGK_KTGM.nemesis_id, Ability.Filters.CloseSquadEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, PaladinGK_KTGM.nemesis_id, Ability.Filters.CloseVehicleEnemy, 1 )
	end
]]
	-- Casting Hammerhand for Terminators
	if self.squad_ai:CanDoAbility(PaladinGK_KTGM.hammerhand_id) and self.squad_ai:IsInCombat() then
		--if Ability.Filters.CloseVehicleEnemy(self.squad_ai:GetPosition(), 6, 1) ~= nil
		local oUnit = cpu_manager.cpu_player:FindFirstVehicleEnemy(self.squad_ai:GetPosition(), 6, 1)
		if (oUnit ~= nil) and self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault then
			self.squad_ai:DoSpecialAbility(PaladinGK_KTGM.hammerhand_id)
			--print("Using Hammerhand against vehicle enemies for player "..tostring(cpu_manager.player_id).."")
		end
	end

	-- Use Nemesis against enemies (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(PaladinGK_KTGM.nemesis_id)) then 

		-- Search for a nearby enemy squad
		local iRange = self.squad_ai:GetAbilityRange(PaladinGK_KTGM.nemesis_id)
		local oUnit = cpu_manager.cpu_player:FindFirstInfantryEnemy(self.squad_ai:GetPosition(), iRange, 4)
		local oUnitB = cpu_manager.cpu_player:FindFirstVehicleEnemy(self.squad_ai:GetPosition(), iRange, 1)
		local oUnitC = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil) then
			--print("Using Nemesis against infantry enemies for player "..tostring(cpu_manager.player_id).."")
			self.squad_ai:DoSpecialAbilitySquad(PaladinGK_KTGM.nemesis_id, oUnit:GetSquad())
			return
		elseif (oUnitB ~= nil) then
			--print("Using Nemesis against vehicle enemies for player "..tostring(cpu_manager.player_id).."")
			self.squad_ai:DoSpecialAbilitySquad(PaladinGK_KTGM.nemesis_id, oUnitB:GetSquad())
			return
		elseif (oUnitC ~= nil) then
			-- Get stats
			local oStats = oUnitC:GetStats()
			if (oStats ~= nil) then
				-- Check unit type
				local eClass = oStats:GetClass()
				if (eClass == UnitStatsAI.UC_MonsterMed or eClass == UnitStatsAI.UC_MonsterHigh) then
					--print("Using Nemesis against monster enemies for player "..tostring(cpu_manager.player_id).."")
					self.squad_ai:DoSpecialAbilitySquad(PaladinGK_KTGM.nemesis_id, oUnitC:GetSquad())
					return
				end
			end
		end
	end
end

function PaladinGK_KTGM_Tactic:Upgrade()

	-- Check if we are reinforcing
	if (self.squad_ai:IsReinforcing() or not self.squad_ai:HasUpgradableTrooper()) then
		return
	end

	-- If I am broken, don't upgrade!
	if (self:IsAffectedByMorale() and self.squad_ai:IsBroken()) then
		return
	end	
	
	-- Only upgrade in healthy state
	if (self.squad_ai:GetNumTroopers() < self.squad_ai:GetMaxTroopers() * 0.6 or self.squad_ai:GetHealthPercentage() < 0.5) then
		return
	end
	
	-- Set upgrade direction
	local eUpgradeType = UnitStatsAI.UC_VehicleMed
	if (math.random(1, 2) == 2) then

		-- Figure out my enemy's favourite class
		local oEnemy = cpu_manager:FindClosestEnemyPlayer()
		if (oEnemy ~= nil) then
			eUpgradeType = oEnemy:GetMajorityClassType()
		end
	end

	-- Try to upgrade
	self.squad_ai:DoBestUpgrade(eUpgradeType)
end

function PaladinGK_KTGM_Tactic:Reinforce()

	-- Check if we are reinforcing
	if (not self.squad_ai:IsReinforcing()) then

		-- try for different types of squad members
		local paladinIndex = 0
		local apothecaryIndex = 1
		local terminatorindex = 2

		local numPaladins = self.squad_ai:GetLeaderCount( paladinIndex )
		local numApothecaries = self.squad_ai:GetLeaderCount( apothecaryIndex )	
		local numTerminators = self.squad_ai:GetLeaderCount( terminatorindex )	

		-- Desired number of each bodyguard type
		local desiredPaladins = math.random(0,1)
		local desiredApothecaries = math.random(0,1) 
		local desiredTerminators = math.random(0,1) 

		-- Desired order of reinforcing
		if (numPaladins < desiredPaladins) then
			if (self.squad_ai:CanReinforce( true, paladinIndex )) then
				self.squad_ai:DoReinforce( true, paladinIndex )
			end
		elseif (numApothecaries < desiredApothecaries) then
			if (self.squad_ai:CanReinforce( true, apothecaryIndex )) then
				self.squad_ai:DoReinforce( true, apothecaryIndex )
			end
		elseif (numTerminators < desiredTerminators) then
			if (self.squad_ai:CanReinforce( true, terminatorindex )) then
				self.squad_ai:DoReinforce( true, terminatorindex )
			end
		else
			if (self.squad_ai:CanReinforce( false, 0 )) then
				self.squad_ai:DoReinforce( false, 0 )
			end			
		end
	end
end
