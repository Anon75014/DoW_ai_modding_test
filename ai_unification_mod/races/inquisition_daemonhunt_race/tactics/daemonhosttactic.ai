class 'DaemonHostTactic' (DaemonhuntInfantryTactic)

DaemonHostAbility = {}

function DaemonHostTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("DaemonHost Tactic")
end


function DaemonHostTactic:InitAbilities()

	if DaemonHostAbility.reknit_form == nil then
		DaemonHostAbility.reknit_form = cpu_manager.stats:GetAbilityID( "inquisition_reknit_form" )
	end
end


function DaemonHostTactic:AlwaysAttack()
	return true
end


function DaemonHostTactic:DoAbilities()
	-- Casting Re-kint Form
	if self.squad_ai:CanDoAbility(DaemonHostAbility.reknit_form) and self.squad_ai:GetHealthPercentage() < 0.3 then
		self.squad_ai:DoSpecialAbility(DaemonHostAbility.reknit_form)
	end
end
