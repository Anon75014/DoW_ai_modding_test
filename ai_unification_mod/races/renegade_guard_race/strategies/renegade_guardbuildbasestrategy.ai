function Renegade_GuardBuildBaseStrategy:ChooseBuildProgram()

	if cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_master_of_the_horde") or RG_AI_StrategyChosen == 1 then
		RG_AI_StrategyChosen = 1   -- Xaphan
		return RG_AI_StrategyChosen
	elseif cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_mutant_overlord") or RG_AI_StrategyChosen == 2 then
		RG_AI_StrategyChosen = 2   -- Raiden
		return RG_AI_StrategyChosen
	end
end

function Renegade_GuardBuildBaseStrategy:EvaluateSquadCap()

	if cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_master_of_the_horde") or RG_AI_StrategyChosen == 1 then

		-- Check squad cap
		if (self:CheckSquadCap(300, 0)) then
	
			-- Check if a plan exists
			local iBuildingID = cpu_manager.stats:GetBuildingID("renegade_guard_infantry_horde")
			if (self:PlanExists("Build Building Plan", iBuildingID)) then
				return
			end

			-- Check if any barracks are in production
			for oBuildChannel in build_manager:GetBuildChannelAIs() do
	
				-- Check building ID
				if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
					return
				end
			end
		
			-- Build a barracks
			local tBuildType = CpuBuildType()
			tBuildType.btype = CpuPrerequisites.BT_Building
			tBuildType.name = "renegade_guard_infantry_horde"
			if (self:TryBuild( tBuildType )) then
				aitrace("BuildController: Dynamic build of "..tBuildType.name)
			end
			return
		end
	
		-- Check support cap
		if (self:CheckSupportCap(150, 300)) then
	
			-- Check if a plan exists
			local iBuildingID = cpu_manager.stats:GetBuildingID("renegade_guard_mechanized")
			if (self:PlanExists("Build Building Plan", iBuildingID)) then
				return
			end
		
			-- Check if any vehicle buildings are in production
			for oBuildChannel in build_manager:GetBuildChannelAIs() do
	
				-- Check building ID
				if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
					return
				end
			end
		
			-- Build a vehicle building
			local tBuildType = CpuBuildType()
			tBuildType.btype = CpuPrerequisites.BT_Building
			tBuildType.name = "renegade_guard_mechanized"
			if (self:TryBuild( tBuildType )) then
				aitrace("BuildController: Dynamic build of "..tBuildType.name)
			end
			return
		end

	else
		-- Check squad cap
		if (self:CheckSquadCap(350, 0)) then
		
			local tBuildType = CpuBuildType()
			tBuildType.btype = CpuPrerequisites.BT_Research
		
			if (not cpu_manager.cpu_player:IsResearchComplete( "renegade_guard_squad_cap_research" )) then
				tBuildType.name = "renegade_guard_squad_cap_research"
			elseif (not cpu_manager.cpu_player:IsResearchComplete( "renegade_guard_squad_cap_research_1" )) then
				tBuildType.name = "renegade_guard_squad_cap_research_1"
			elseif (not cpu_manager.cpu_player:IsResearchComplete( "renegade_guard_squad_cap_research_2" )) then
				tBuildType.name = "renegade_guard_squad_cap_research_2"
			elseif (not cpu_manager.cpu_player:IsResearchComplete( "renegade_guard_squad_cap_research_3" )) then
				tBuildType.name = "renegade_guard_squad_cap_research_3"
			else
				return
			end
		
			if (self:TryBuild( tBuildType )) then
				aitrace("BuildController: Dynamic research of "..tBuildType.name)
			end
		end

		-- Check support cap
		if (self:CheckSupportCap(300, 0)) then
		
			local tBuildType = CpuBuildType()
			tBuildType.btype = CpuPrerequisites.BT_Research

			if (not cpu_manager.cpu_player:IsResearchComplete( "renegade_guard_support_cap_research" )) then
				tBuildType.name = "renegade_guard_support_cap_research"		
			elseif (not cpu_manager.cpu_player:IsResearchComplete( "renegade_guard_support_cap_research_1" )) then
				tBuildType.name = "renegade_guard_support_cap_research_1"
			elseif (not cpu_manager.cpu_player:IsResearchComplete( "renegade_guard_support_cap_research_2" )) then
				tBuildType.name = "renegade_guard_support_cap_research_2"
			elseif (not cpu_manager.cpu_player:IsResearchComplete( "renegade_guard_support_cap_research_3" )) then
				tBuildType.name = "renegade_guard_support_cap_research_3"
			else
				return
			end
		
			if (self:TryBuild( tBuildType )) then
				aitrace("BuildController: Dynamic research of "..tBuildType.name)
			end
		end
	end
end

function Renegade_GuardBuildBaseStrategy:GetBuildingName( sType )

	-- Return race specific object string
	if (sType == "HQ") then
		return "renegade_guard_hq"

	elseif (sType == "Generator") then
		if cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_master_of_the_horde") or RG_AI_StrategyChosen == 1 then
			return "renegade_guard_plasma_generator"
		else
			return "renegade_guard_plasma_generator_raiden"
		end

	elseif (sType == "BiggerGenerator") then
		if cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_master_of_the_horde") or RG_AI_StrategyChosen == 1 then
			return "renegade_guard_thermo_plasma"
		else
			return "renegade_guard_thermo_plasma_raiden"
		end

	elseif (sType == "VehicleBuilding") then
		if cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_master_of_the_horde") or RG_AI_StrategyChosen == 1 then
			return "renegade_guard_mechanized"
		else
			return "renegade_guard_machine_pit"
		end

	elseif (sType == "ListeningPost") then
		return "renegade_guard_listening_post"

	elseif (sType == "Turret") then
		return "renegade_guard_turret_heavy_bolter"

	elseif (sType == "Mine") then
		return "renegade_guard_mines"
	end
	return nil
end

function Renegade_GuardBuildBaseStrategy:GetAddonBuilding( sType )

	if (sType == "addon_renegade_guard_hq_1" or sType == "addon_renegade_guard_hq_2") then
		return "renegade_guard_hq"

	elseif (sType == "addon_renegade_guard_list_post_1" or sType == "addon_renegade_guard_list_post_2") then
		return "renegade_guard_listening_post"

	elseif (sType == "addon_renegade_guard_turret" or sType == "addon_renegade_guard_turret_stealth") then
		return "renegade_guard_turret_heavy_bolter"

	elseif (sType == "addon_renegade_guard_turret" or sType == "addon_renegade_guard_turret_stealth") then
		return "renegade_guard_turret_heavy_bolter_no_limit"

	elseif (sType == "addon_renegade_guard_basilisk_gas") then
		return "renegade_guard_earthshaker_platform"
	end
	return nil
end

-- Arkhan 01.2006: Inherited method to check if an addon is a tier addon
function Renegade_GuardBuildBaseStrategy:IsTierAddon( sName, iTargetTier )

	-- Check addon name and target tier
	if (sName == "addon_renegade_guard_hq_1" and iTargetTier == 2) then
		return true
	elseif (sName == "addon_renegade_guard_hq_2" and iTargetTier == 3) then
		return true
	end
	return false
end

