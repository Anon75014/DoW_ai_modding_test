		self:DynamicResearch("renegade_guard_plasma_pistol_research", 1, 50, 30, 0, 0, nil, 0)
	end

	-- Compute tier 2 researches
	if (self.tierLevel >= 2) then

		-- Compute basic infantry researches
		self:DynamicResearch("renegade_guard_champion_melee_research_2", 2, 50, 30, 0, 0, nil, 0)
		self:DynamicResearch("renegade_guard_upgrade_guardsmen_range", 2, 100, 25, 0, 0, nil, 0)
		self:DynamicResearch("renegade_guard_guardsman_morale_2", 2, 75, 50, 0, 0, nil, 0)
		self:DynamicResearch("renegade_guard_upgrade_weapon_specialization", 2, 100, 100, 0, 0, nil, 0)
		self:DynamicResearch("renegade_guard_general_wargear_2", 2, 100, 100, 0, 0, nil, 0)
		self:DynamicResearch("renegade_guard_raiden_aura_unlock", 2, 85, 35, 0, 0, nil, 0)	

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("renegade_guard_turret_heavy_bolter_no_limit", 2, 2, 200, 100, 0, 0)			
	end

	-- Compute tier 3 researches
	if (self.tierLevel >= 3) then
	
		-- Compute one of five Chaos God Choices
		if (self.m_iChaosGodResearchPattern == 1) then
			self:DynamicResearch("renegade_guard_research_mark_of_khorne", 3, 0, 0, 0, 0, nil, 0)
		elseif (self.m_iChaosGodResearchPattern == 2) then
			self:DynamicResearch("renegade_guard_research_mark_of_nurgle", 3, 0, 0, 0, 0, nil, 0)
		elseif (self.m_iChaosGodResearchPattern == 3) then
			self:DynamicResearch("renegade_guard_research_mark_of_tzeentch", 3, 0, 0, 0, 0, nil, 0)
		elseif (self.m_iChaosGodResearchPattern == 4) then
			self:DynamicResearch("renegade_guard_research_mark_of_slaanesh", 3, 0, 0, 0, 0, nil, 0)
		elseif (self.m_iChaosGodResearchPattern == 5) then
			self:DynamicResearch("renegade_guard_research_mark_of_undivided", 3, 0, 0, 0, 0, nil, 0)
		end

		-- Compute Turret / Chimera Stealth research
		if (self:CountSquads("renegade_guard_squad_tekarn_chimera") >= 1) or (self:CountSquads("renegade_guard_squad_vendetta") >= 1) then
			self:DynamicResearch("renegade_guard_stealth_coating", 3, 200, 100, 0, 0, nil, 0)
		end

		-- Compute additional building health research
		self:DynamicResearch("renegade_guard_research_prepared_defences", 3, 300, 100, 0, 0, nil, 0)

		-- Compute optimized production research
		self:DynamicResearch("renegade_guard_upgrade_optimized_production", 3, 200, 120, 0, 0, nil, 0)

		-- Compute master of the horde researches
		if (self:CountSquads("renegade_guard_squad_master_of_the_horde") >= 1) then
			self:DynamicResearch("renegade_guard_general_wargear_3", 3, 100, 100, 0, 0, nil, 0)
		end

		-- Compute secondary researches
		-- Compute kasrkin researches
		if (self:CountSquads("renegade_guard_squad_kasrkin") >= 1) then
			self:DynamicResearch("renegade_guard_research_kasrkin_armor", 3, 100, 50, 0, 0, nil, 0)
			self:DynamicResearch("renegade_guard_research_kasrkin_speed", 3, 100, 50, 0, 0, nil, 0)
		end

		-- Compute ogyrn or medic researches
		if (self:CountSquads("renegade_guard_squad_ogryns") >= 1) or (self:CountSquads("renegade_guard_squad_medic") >= 1) then
			self:DynamicResearch("renegade_guard_upgrade_ogryn_melee", 3, 100, 75, 0, 0, nil, 0)
		end

		-- Compute mortar research
		if (self:CountSquads("renegade_guard_squad_tekarn_archer") >= 1) or (self:CountSquads("renegade_guard_squad_tengu") >= 1) or (self:CountSquads("renegade_guard_squad_tekarn_ronin") >= 1) then
			self:DynamicResearch("renegade_guard_research_mortar", 3, 100, 80, 0, 0, nil, 0)
		end

		-- Compute tsunami tank researches
		if (self:CountSquads("renegade_guard_squad_tsunami") >= 1) then
			self:DynamicResearch("renegade_guard_tsunami_coilgun_improvement", 3, 80, 60, 0, 0, nil, 0)
		end
		
		-- Compute T3->T4 major research as AI sometimes fails to research
		self:DynamicResearch("renegade_guard_full_scale_war", 3, 450, 450, 0, 0, nil, 0)

		-- Force build additional generators in late game if we can with enough requisition and when low on power
                local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
                local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
                if iReq > 400 and iReq/iPow > 1.6 then

                	-- Check if a plan exists
                	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("Generator"))
                    	if (self:PlanExists("Build Building Plan", iBuildingID)) then
                       		return
                    	end

             		-- Check if any generators are in production
                    	for oBuildChannel in build_manager:GetBuildChannelAIs() do
                        	-- Check building ID
                        	if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
                            		return
                        	end
                    	end

             		-- Build a Generator
                    	local tBuildType = CpuBuildType()
                    	tBuildType.btype = CpuPrerequisites.BT_Building
                    	tBuildType.name = self:GetBuildingName("Generator")
                    	if (self:TryBuild( tBuildType )) then
               			aitrace("BuildController: Dynamic build of "..tBuildType.name)
			end
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("renegade_guard_turret_heavy_bolter_no_limit", 4, 3, 300, 200, 0, 0)
	end

	-- Compute tier 4 researches
	if (self.tierLevel >= 4) then

		-- Try to force build a Mars Pattern as sometimes the AI fails to build one
		if (self:GetBuildingCountByName("renegade_guard_mars_pattern") < 1) then

			-- Check if a plan exists
			local iBuildingID = cpu_manager.stats:GetBuildingID("renegade_guard_mars_pattern")
			if (self:PlanExists("Build Building Plan", iBuildingID)) then
				return
			end

			-- Check if any mars patterns are in production
			for oBuildChannel in build_manager:GetBuildChannelAIs() do
	
				-- Check building ID
				if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
					return
				end	
			end
		
			-- Build a Mars Pattern
			local tBuildType = CpuBuildType()
			tBuildType.btype = CpuPrerequisites.BT_Building
			tBuildType.name = "renegade_guard_mars_pattern"
			if (self:TryBuild( tBuildType )) then
				aitrace("BuildController: Dynamic build of "..tBuildType.name)
			end
		end

		-- Try to force build a Tri-Cannon Platform or Tesla Coil as sometimes the AI fails to build one for the Mutant Branch
		if cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_mutant_overlord") or RG_AI_StrategyChosen == 2 then --or RG_AI_StrategyChosen == 4 then

			if (self:GetBuildingCountByName("renegade_guard_tricannon_platform") < 1) then

				-- Check resources
				local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
				local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

				-- Check resources
				if (iRequisition > 400 and iPower > 400) then

					-- Check if a plan exists
					local iBuildingID = cpu_manager.stats:GetBuildingID("renegade_guard_tricannon_platform")
					if (self:PlanExists("Build Building Plan", iBuildingID)) then
						return
					end

					-- Check if any tri-cannon platforms are in production
					for oBuildChannel in build_manager:GetBuildChannelAIs() do
	
						-- Check building ID
						if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
							return
						end	
					end
		
					-- Build a Tri-Cannon Platform
					local tBuildType = CpuBuildType()
					tBuildType.btype = CpuPrerequisites.BT_Building
					tBuildType.name = "renegade_guard_tricannon_platform"
					if (self:TryBuild( tBuildType )) then
						aitrace("BuildController: Dynamic build of "..tBuildType.name)
					end
				end
			end

			if cpu_manager.cpu_player:IsResearchComplete("0liyue_enable") then

				if (self:GetBuildingCountByName("renegade_guard_tesla_coil") < 1) then

					-- Check if a plan exists
					local iBuildingID = cpu_manager.stats:GetBuildingID("renegade_guard_tesla_coil")
					if (self:PlanExists("Build Building Plan", iBuildingID)) then
						return
					end

					-- Check if any tesla coils are in production
					for oBuildChannel in build_manager:GetBuildChannelAIs() do
	
						-- Check building ID
						if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
							return
						end	
					end
		
					-- Build a Tesla Coil
					local tBuildType = CpuBuildType()
					tBuildType.btype = CpuPrerequisites.BT_Building
					tBuildType.name = "renegade_guard_tesla_coil"
					if (self:TryBuild( tBuildType )) then
						aitrace("BuildController: Dynamic build of "..tBuildType.name)
					end
				end
			end
		end

		-- Try to force build either a Psyker Tower as sometimes the AI fails to build one for the Master of the Horde Branch
		if cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_master_of_the_horde") or RG_AI_StrategyChosen == 2 then --or RG_AI_StrategyChosen == 4 then

			if cpu_manager.cpu_player:IsResearchComplete("0tau_psi_ops_enable") then

				if (self:GetBuildingCountByName("renegade_guard_psyker_tower") < 1) then

					-- Check resources
					local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
					local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

					-- Check resources
					if (iRequisition > 300 and iPower > 300) then

						-- Check if a plan exists
						local iBuildingID = cpu_manager.stats:GetBuildingID("renegade_guard_psyker_tower")
						if (self:PlanExists("Build Building Plan", iBuildingID)) then
							return
						end

						-- Check if any Psyker Towers are in production
						for oBuildChannel in build_manager:GetBuildChannelAIs() do
	
							-- Check building ID
							if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
								return
							end	
						end
		
						-- Build a Psyker Tower
						local tBuildType = CpuBuildType()
						tBuildType.btype = CpuPrerequisites.BT_Building
						tBuildType.name = "renegade_guard_psyker_tower"
						if (self:TryBuild( tBuildType )) then
							aitrace("BuildController: Dynamic build of "..tBuildType.name)
						end
					end
				end
			end
		end

		-- Compute mutant overlord researches
		if (self:CountSquads("renegade_guard_squad_mutant_overlord") >= 1) then
			self:DynamicResearch("renegade_guard_ion_cannon_uplink", 4, 400, 400, 0, 0, nil, 0)
		end

		-- Compute Eclipse Researches
		self:DynamicResearch("renegade_guard_eternal_eclipse_research", 4, 400, 400, 0, 0, nil, 0)

		-- Compute Yorha Researches
		self:DynamicResearch("renegade_guard_yorha_division", 4, 200, 200, 0, 0, nil, 0)

		-- Compute Titan Researches
		self:DynamicResearch("renegade_guard_titans_1", 4, 400, 400, 0, 0, nil, 0)
		self:DynamicResearch("renegade_guard_titans_2", 4, 800, 800, 0, 0, nil, 0)

		local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

		-- Compute HQ Tier2 Addons for future HQs
		if (self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 and (iPower >= 500 and iRequisition >= 500)) then
			self:DynamicAddon("addon_renegade_guard_hq_1", 100, 4, 300, 175, 0, 0, nil, nil, false)
		end

		-- Compute HQ Tier3 Addons for future HQs
		if (self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 and (iPower >= 1000 and iRequisition >= 1000)) then
			self:DynamicAddon("addon_renegade_guard_hq_2", 50, 4, 340, 340, 0, 0, nil, nil, false)
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("renegade_guard_turret_heavy_bolter_no_limit", 10, 4, 400, 300, 0, 0)
	end

	-- Try to build an tekarn engineer squad for the Mutant Warlord branch - the AI has issues with its prerequisites for some reason!
	if cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_mutant_overlord") or RG_AI_StrategyChosen == 2 then 
		if self:CountSquads("renegade_guard_squad_tekarn_engineer") < 3 then
			local tBuildType = CpuBuildType()
			tBuildType.btype = CpuPrerequisites.BT_Squad
			tBuildType.name = "renegade_guard_squad_tekarn_engineer"
			if (self:TryBuild(tBuildType)) then
				return
			end
		end
	end

	-- Restrict dynamic builds to hard difficulty or higher
	if (CpuManager.AISettings.bMultiBuildings) then
	
		-- Dynamic buildings
		-- Item-Syntax: BuildingName, BuildingCount, MinTier, MinRequisition, MinPower, MinSquadCap, MinSupportCap

			self:DynamicBuild("renegade_guard_hq", 2, 3, 700, 300, 0, 0)
			self:DynamicBuild("renegade_guard_hq", 3, 4, 1000, 600, 0, 0)
			self:DynamicBuild("renegade_guard_tactica", 2, 2, 300, 200, 0, 0)

		if cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_master_of_the_horde") or RG_AI_StrategyChosen == 1 then
			self:DynamicBuild("renegade_guard_infantry_horde", 2, 3, 500, 0, 0, 0)
			self:DynamicBuild("renegade_guard_infantry_horde", 3, 4, 800, 0, 0, 0)
			self:DynamicBuild("renegade_guard_mechanized", 2, 3, 200, 600, 0, 0)
			self:DynamicBuild("renegade_guard_mechanized", 3, 4, 300, 700, 0, 0)
		else
			self:DynamicBuild("renegade_guard_infantry", 2, 3, 500, 0, 0, 0)
			self:DynamicBuild("renegade_guard_infantry", 3, 4, 800, 0, 0, 0)
			self:DynamicBuild("renegade_guard_machine_pit", 2, 3, 200, 600, 0, 0)
			self:DynamicBuild("renegade_guard_machine_pit", 3, 4, 300, 700, 0, 0)
		end

		-- Try for more defensive emplacements if we have over one HQ
		if (self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1) then
			if (resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition ) >= 1000) and (resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power ) >= 1000) then
				self:DynamicBuild("renegade_guard_turret_heavy_bolter", 12, 4, 0, 0, 0, 0)
				self:DynamicBuild("renegade_guard_mines", 12, 4, 0, 0, 0, 0)
			end
		end

		-- Try for more defensive emplacements if we have over two HQ
		if (self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 2) then
			if (resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition ) >= 1500) and (resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power ) >= 1500) then
				self:DynamicBuild("renegade_guard_turret_heavy_bolter", 18, 4, 0, 0, 0, 0)
				self:DynamicBuild("renegade_guard_mines", 18, 4, 0, 0, 0, 0)
			end
		end
	end
end

-- Force AI to give priority to re-build HQ if lost and none are present
function Renegade_GuardBuildBaseStrategy:BuildFirstHQ()

	-- Check if a plan exists
	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))
	if (self:PlanExists("Build Building Plan", iBuildingID)) then
		return
	end

	-- Check if any HQ are in production
	for oBuildChannel in build_manager:GetBuildChannelAIs() do

		-- Check building ID
		if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
			return
		end
	end
		
	-- Build the HQ
	local sHQName = self:GetBuildingName("HQ")
	local tBuildType = CpuBuildType()
	tBuildType.btype = CpuPrerequisites.BT_Building
	tBuildType.name = sHQName
	if (self:TryBuild( tBuildType )) then
		aitrace("BuildController: Dynamic build of "..tBuildType.name)
	end
	return
end

-- Force AI to give priority to recruit a builder unit if none are present
function Renegade_GuardBuildBaseStrategy:BuildFirstBuilder(iBuilderName)

	if self:CountSquads(iBuilderName) < 1 then

		-- Recruit a builder squad
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Squad
		tBuildType.name = iBuilderName
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic build of "..tBuildType.name)
		end
		return
	end
end

-- Arkhan 01.2006: Method to check if force tech should be computed
function Renegade_GuardBuildBaseStrategy:ForceTech()

	-- Check time
	if (g_iGMT < 60 * CpuManager.ForceTech.StartTier1) then
		return false
	end
	
	-- Check resources
	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

	-- Check tier
	local iTierLevel = self:GetTierLevel()
	if (iTierLevel == 1) then
	
		-- Check resources
		if (iRequisition > 600 and iPower > 200) then
			return false
		end
		return not self.m_bHQAddon1
		
	elseif (iTierLevel == 2) then

		-- Check for vehicle building
		if (self:GetBuildingCountByName("renegade_guard_mechanized", false) + self:GetBuildingCountByName("renegade_guard_machine_pit", false)) < 1 then
			return true
		end

		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier2 and (iRequisition < 600 or iPower < 600)) then
			return true
		end

	elseif (iTierLevel == 3) then	

		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier3 and (iRequisition < 600 or iPower < 600)) then
			return true
		end
	end
	return false
end


-- Arkhan 03.2006: Return placement type for buildings
function Renegade_GuardBuildBaseStrategy:GetPlacementType(iBuildingID)

	-- Check building
	if (iBuildingID == cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))) then
        	local count = self:GetBuildingCountByName(self:GetBuildingName("HQ"), false)
		local friend = cpu_manager:FindClosestFriendPlayer()
		if friend == nil then
			-- Lone Player
			if count == 0 and not cpu_manager:HQThreat() then
				return "HQ"
			else
				return "Safeplace"
			end
		else
			-- Has allies
			if count > 0 or cpu_manager:HQThreat() then
				return "HQ"
			else
				return "Safeplace"
			end
		end
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("renegade_guard_infantry") or
			iBuildingID == cpu_manager.stats:GetBuildingID("renegade_guard_infantry_horde") or
			iBuildingID == cpu_manager.stats:GetBuildingID("renegade_guard_chronosphere") or
			iBuildingID == cpu_manager.stats:GetBuildingID("renegade_guard_mechanized") or
			iBuildingID == cpu_manager.stats:GetBuildingID("renegade_guard_machine_pit")) then
		return "Military"
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("renegade_guard_mars_pattern") or
			iBuildingID == cpu_manager.stats:GetBuildingID("renegade_guard_pulse_scanner")) then
		return "Front1"
	elseif (cpu_manager:IsTurret(iBuildingID) or
			iBuildingID == cpu_manager.stats:GetBuildingID("renegade_guard_turret_heavy_bolter_no_limit") or
			iBuildingID == cpu_manager.stats:GetBuildingID("renegade_guard_psyker_tower")) then
		return "Front2"
	elseif (cpu_manager:IsMine(iBuildingID)) then
		return "Mine"
	elseif (cpu_manager:IsGenerator(iBuildingID) or
			iBuildingID == cpu_manager.stats:GetBuildingID("renegade_guard_tactica")) then
		return "BaseBack"
	end
	return "Basic"
end


