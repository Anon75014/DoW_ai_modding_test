function Renegade_GuardBuildBaseStrategy:UpdateTierLevel()

	-- Reset tier level
	self.tierLevel = 1

	-- Prepare
	local iHQAddon1ID = cpu_manager.stats:GetAddOnID("addon_renegade_guard_hq_1")
	local iHQAddon2ID = cpu_manager.stats:GetAddOnID("addon_renegade_guard_hq_2")
	local oStats = cpu_manager.stats:GetPlayerStatsFromID( cpu_manager.player_id )

	-- Check HQ's for addons
	for oBase in oStats:GetBases() do

		-- Check for valid building
		if (oBase:IsValid() and not oBase:IsListeningPost()) then

		  	-- Check for HQ addon 2
			if (oBase:HasAddOn(iHQAddon2ID)) then

				-- We still have the proper add-on
				if (cpu_manager.cpu_player:IsResearchComplete("renegade_guard_full_scale_war")) then
					self.tierLevel = 4
					return
				elseif (oBase:HasAddOn(iHQAddon2ID)) then
					self.tierLevel = 3
					return
				end

			-- Check for HQ addon 1 
			elseif (oBase:HasAddOn(iHQAddon1ID)) then
				self.tierLevel = 2
				return
			end
		end
	end
end

function Renegade_GuardBuildBaseStrategy:BuildFlexible()

	-- Always test first to see if there is at least one existing HQ
	if self:GetBuildingCountByName(self:GetBuildingName("HQ")) < 1 then
     		self:BuildFirstHQ()
	end

	-- Always test first to see if there is at least one existing builder unit
	if cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_master_of_the_horde") then

		-- For Master of the Horde builder units
		self:BuildFirstBuilder("renegade_guard_squad_enginseer")

	elseif cpu_manager.cpu_player:IsResearchComplete("renegade_guard_research_mutant_overlord") then

		-- For Tekarn builder units
		self:BuildFirstBuilder("renegade_guard_squad_tekarn_engineer")

	else
		-- Declare no builders if no branch research selected thus skip
	end

	-- Renegades Last Standing Hero Wargear
	local iHeroLSCommanderSquads = self:CountSquads("renegade_guard_squad_mutant_overlord_ktgm")
	if iHeroLSCommanderSquads > 0 then

		if not G_KTGM_Commander_WG_Choice_Made then
			 -- WARNING: Below, ALWAYS insert numbers <= of the total in each table!
           		 -- I used the actual total of each table, so that ALL will be randomly available
            		i_WG_Selection_number1 = 15	-- The number of researches to randomize, from the 1st table
            		i_WG_Selection_number2 = 8	-- The number of researches to randomize, from the 2nd table

            		i_WG_Selections1 = {
                	{"renegade_guard_ls_champion_melee_research_1", 1, 100, 100, 0, 0, nil, 0},
                	{"renegade_guard_ls_champion_melee_research_2", 1, 125, 125, 0, 0, nil, 0},
                	{"renegade_guard_ls_mighty_shogun_aura", 1, 125, 125, 0, 0, nil, 0},
                	{"renegade_guard_ls_shogun_aura", 1, 75, 75, 0, 0, nil, 0},
                	{"renegade_guard_ls_warriors_assist", 1, 75, 75, 0, 0, nil, 0},
                	{"renegade_guard_ls_wargear_upgrade_01", 1, 75, 75, 0, 0, nil, 0},
                	{"renegade_guard_ls_wargear_upgrade_02", 1, 100, 100, 0, 0, nil, 0},
                	{"renegade_guard_ls_wargear_upgrade_03", 1, 125, 125, 0, 0, nil, 0},
                	{"renegade_guard_ls_wargear_upgrade_04", 1, 100, 100, 0, 0, nil, 0},
                	{"renegade_guard_ls_wargear_upgrade_05", 1, 125, 125, 0, 0, nil, 0},
                	{"renegade_guard_ls_wargear_upgrade_06", 1, 100, 100, 0, 0, nil, 0},
                	{"renegade_guard_ls_wargear_upgrade_07", 1, 100, 100, 0, 0, nil, 0},
                	{"renegade_guard_ls_wargear_upgrade_08", 1, 100, 100, 0, 0, nil, 0},
                	{"renegade_guard_ls_wargear_upgrade_09", 1, 150, 150, 0, 0, nil, 0},
                	{"renegade_guard_ls_wargear_upgrade_10", 1, 200, 200, 0, 0, nil, 0}}

            		i_WG_Selections2 = {
                	{"renegade_guard_ls_vow1", 1, 125, 125, 0, 0, nil, 0},
                	{"renegade_guard_ls_vow2", 1, 125, 125, 0, 0, nil, 0},
                	{"renegade_guard_ls_vow3", 1, 125, 125, 0, 0, nil, 0},
                	{"renegade_guard_ls_vow4", 1, 125, 125, 0, 0, nil, 0},
                	{"renegade_guard_ls_vow5", 1, 125, 125, 0, 0, nil, 0},
                	{"renegade_guard_ls_vow6", 1, 125, 125, 0, 0, nil, 0},
                	{"renegade_guard_ls_vow7", 1, 125, 125, 0, 0, nil, 0},
                	{"renegade_guard_ls_vow8", 1, 125, 125, 0, 0, nil, 0}}

            		-- The switch ensures we make the choice only ONCE
            		G_KTGM_Commander_WG_Choice_Made = true
            		i_WG_Rdm1 = {}          -- The random Selections from the 1st table
            		i_WG_Rdm2 = {}          -- The random Selections from the 2nd table

            		-- Populate the two random tables with the number of researches we need for each
            		for i = 1, i_WG_Selection_number1 do
                		local selection = math.random(1, table.getn(i_WG_Selections1))
                		table.insert(i_WG_Rdm1, i_WG_Selections1[selection])
                		table.remove(i_WG_Selections1, selection)
            		end

            		for i = 1, i_WG_Selection_number2 do
                		local selection = math.random(1, table.getn(i_WG_Selections2))
                		table.insert(i_WG_Rdm2, i_WG_Selections2[selection])
                		table.remove(i_WG_Selections2, selection)
            		end
		end

       		-- We are done. Perform the Researches
        	for i = 1, table.getn(i_WG_Rdm1) do
            		self:DynamicResearch(i_WG_Rdm1[i][1], 0, i_WG_Rdm1[i][3], i_WG_Rdm1[i][4], 0, 0, nil, 0)
        	end

    		for i = 1, table.getn(i_WG_Rdm2) do
       			self:DynamicResearch(i_WG_Rdm2[i][1], 0, i_WG_Rdm2[i][3], i_WG_Rdm2[i][4], 0, 0, nil, 0)
       		end
	end

	-- Dynamic research item syntax: ResearchName, MinTier, RequisitionCost, PowerCost, MinSquadCap, MinSupportCap, SquadName, SquadMinCount

	-- Compute tier 1 researches
	if (self.tierLevel >= 1) then
	
		-- Compute secondary researches
		self:DynamicResearch("renegade_guard_upgrade_guardsmen_health", 1, 100, 50, 0, 0, nil, 0)
		self:DynamicResearch("renegade_guard_guardsman_morale", 1, 75, 15, 0, 0, nil, 0)
		self:DynamicResearch("renegade_guard_champion_melee_research_1", 1, 40, 20, 0, 0, nil, 0)
