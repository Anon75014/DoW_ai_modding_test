class 'Renegades_Reporter_Tactic' (Renegades_Infantry_Tactic)

Reporter = {}

function Renegades_Reporter_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Reporter Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function Renegades_Reporter_Tactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function Renegades_Reporter_Tactic:IsDefender()
	return self:IsCommanderDefender()
end

function Renegades_Reporter_Tactic:InitAbilities()

	-- Init ability ID's
	if (Reporter.sprint_id == nil) then
		Reporter.sprint_id = cpu_manager.stats:GetAbilityID( "renegade_guard_sprint_reporter" )
	end
end

function Renegades_Reporter_Tactic:DoAbilities()

	-- Check if we can run where possible
	if (self.squad_ai:CanDoAbility( Reporter.sprint_id )) then
		self.squad_ai:DoSpecialAbility( Reporter.sprint_id )
	end
end

function Renegades_Reporter_Tactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end

	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
    
	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end