class 'Renegades_Tactica_Tactic' (BaseTactic)

RenegadeGuardTactica = {}

function Renegades_Tactica_Tactic:__init( base_ai ) super( base_ai )

	self:SetName("Renegades Tactica Tactic")
end

function Renegades_Tactica_Tactic:InitAbilities()

	-- Init ability ID's
	if (RenegadeGuardTactica.drop_id == nil) then
		RenegadeGuardTactica.drop_id = cpu_manager.stats:GetAbilityID("renegade_guard_tacita_cannon_drop")
	end
end

function Renegades_Tactica_Tactic:DoAbilities()

	-- Try to air drop the Kamuijima Cannon if available
	if self.base_ai:CanDoAbility(RenegadeGuardTactica.drop_id) then
		Ability.DoAbilityPos(self.base_ai, RenegadeGuardTactica.drop_id, Ability.Filters.CloseEnemy, 6)
	end
end