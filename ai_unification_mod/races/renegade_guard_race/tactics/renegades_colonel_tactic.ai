class 'Renegades_Colonel_Tactic' (Renegades_Infantry_Tactic)

Colonel = {}

function Renegades_Colonel_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Colonel Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function Renegades_Colonel_Tactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function Renegades_Colonel_Tactic:IsDefender()
	return self:IsCommanderDefender()
end

function Renegades_Colonel_Tactic:InitAbilities()

	-- Init ability ID's
	if (Colonel.drugs_id == nil) then
		Colonel.drugs_id = cpu_manager.stats:GetAbilityID( "renegade_guard_combat_drugs" )	
		Colonel.yell_id = cpu_manager.stats:GetAbilityID( "renegade_guard_rebel_yell" )	
		Colonel.strike_id = cpu_manager.stats:GetAbilityID( "renegade_guard_zephyr_strike" )	
	end
end

function Renegades_Colonel_Tactic:DoAbilities()

	if self.squad_ai:IsInCombat() then

		-- Use combat drugs
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
			if self.squad_ai:CanDoAbility(Colonel.drugs_id) then
				self.squad_ai:DoSpecialAbility(Colonel.drugs_id)
			end
		end

		-- Issue a glorious rebel yell
		if self.squad_ai:CanDoAbility(Colonel.yell_id) then
			Ability.DoAbilityArea(self.squad_ai, Colonel.yell_id, Ability.Filters.CloseInCombat, 10, 1)
		end

		-- Target enemy formations based on health
		if self.squad_ai:CanDoAbility(Colonel.strike_id) then

			-- We are dying, lower requisites for attacks
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
				Ability.DoAbilityPos( self.squad_ai, Colonel.strike_id, Ability.Filters.CloseEnemy, 8 )
			else
				Ability.DoAbilityPos( self.squad_ai, Colonel.strike_id, Ability.Filters.CloseEnemy, 12 )
			end
		end
	end
end

function Renegades_Colonel_Tactic:CanOnlyDecap()
	return true
end
