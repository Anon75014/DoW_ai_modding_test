class 'Renegades_Yae_Tactic' (Renegades_Infantry_Tactic)

Yae = {}

function Renegades_Yae_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Yae Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function Renegades_Yae_Tactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function Renegades_Yae_Tactic:IsDefender()
	return self:IsCommanderDefender()
end

function Renegades_Yae_Tactic:InitAbilities()

	-- Init ability ID's
	if (Yae.allure_id == nil) then
		Yae.allure_id = cpu_manager.stats:GetAbilityID( "renegade_guard_allure_yae" )	
		Yae.meteor_id = cpu_manager.stats:GetAbilityID( "renegade_guard_meteor_storm" )	
		Yae.thunder_id = cpu_manager.stats:GetAbilityID( "renegade_guard_thunder_storm" )
		Yae.barrier_id = cpu_manager.stats:GetAbilityID( "renegade_guard_yae_barrier" )
	end
end

function Renegades_Yae_Tactic:DoAbilities()

	if self.squad_ai:IsInCombat() then

		-- Activate barrier while in combat and low on health
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
			if self.squad_ai:CanDoAbility(Yae.barrier_id) then
				self.squad_ai:DoSpecialAbility(Yae.barrier_id)
			end
		end

		-- Try to use allure
		if self.squad_ai:CanDoAbility(Yae.allure_id) then
			if Ability.DoAbilityTarget(self.squad_ai, Yae.allure_id, Ability.Filters.CloseSquadEnemy, 4)
			or Ability.DoAbilityTarget(self.squad_ai, Yae.allure_id, Ability.Filters.CloseCommanderEnemy, 1) then
				return
			end
		end

		-- Try to use meteor storm
		if self.squad_ai:CanDoAbility(Yae.meteor_id) then

			-- We are dying, lower requisites for attacks
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
				if Ability.DoAbilityPos(self.squad_ai, Yae.meteor_id, Ability.Filters.CloseEnemy, 8)
					or Ability.DoAbilityPos(self.squad_ai, Yae.meteor_id, Ability.EntityFilters.CloseBaseEntityEnemy, 2) then
					return
				end
			else
				if Ability.DoAbilityPos(self.squad_ai, Yae.meteor_id, Ability.Filters.CloseEnemy, 12)
					or Ability.DoAbilityPos(self.squad_ai, Yae.meteor_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
					return
				end
			end
		end

		-- Try to use thunder storm
		if self.squad_ai:CanDoAbility(Yae.thunder_id) then

			-- We are dying, lower requisites for attacks
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
				if Ability.DoAbilityPos(self.squad_ai, Yae.thunder_id, Ability.Filters.CloseEnemy, 12) then
					return
				end
			else
				if Ability.DoAbilityPos(self.squad_ai, Yae.thunder_id, Ability.Filters.CloseEnemy, 24) then
					return
				end
			end
		end
	end
end

function Renegades_Yae_Tactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end

	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end