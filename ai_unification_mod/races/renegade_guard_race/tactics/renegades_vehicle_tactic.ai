function Renegades_Vehicle_Tactic:CanOnlyDecap()

	local sSquadName = self.squad_ai:GetSquadName()
	if (sSquadName == "renegade_guard_squad_sentinel" or 
		sSquadName == "renegade_guard_squad_sentinel_striker") then
		return true
	end
	return false
end

