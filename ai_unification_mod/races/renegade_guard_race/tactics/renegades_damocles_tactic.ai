class 'Renegades_Damocles_Tactic' (Renegades_Vehicle_Tactic)

Renegades_Damocles = {}

function Renegades_Damocles_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Damocles Tactic")
end

function Renegades_Damocles_Tactic:InitAbilities()

	-- Init ability ID's
	if (Renegades_Damocles.emp_id == nil) then
		Renegades_Damocles.emp_id = cpu_manager.stats:GetAbilityID("renegade_guard_damocles_emp")
	end

	if (Renegades_Damocles.bomb_id == nil) then
		Renegades_Damocles.bomb_id = cpu_manager.stats:GetAbilityID("renegade_guard_aurora_neutron_bomb")
	end
end

function Renegades_Damocles_Tactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

		-- Try to use 'EMP' (Renegades Damocles)
		Ability.DoAbilityPos(self.squad_ai, Renegades_Damocles.emp_id, Ability.Filters.CloseEnemy, 3)
		Ability.DoAbilityPos(self.squad_ai, Renegades_Damocles.emp_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1)
	else
		Ability.DoAbilityPos(self.squad_ai, Renegades_Damocles.emp_id, Ability.Filters.CloseEnemy, 6)
		Ability.DoAbilityPos(self.squad_ai, Renegades_Damocles.emp_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
	end

	-- Try to drop the Neutron Bomb if available
	if self.squad_ai:CanDoAbility(Renegades_Damocles.bomb_id) then

		-- Check available resources before dropping the bomb
		local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
		if iReq > 300 and iPow > 300 then

			-- We are dying, lower requisites for attacks
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
				Ability.DoAbilityPos(self.squad_ai, Renegades_Damocles.bomb_id, Ability.Filters.CloseEnemy, 8)
				Ability.DoAbilityPos(self.squad_ai, Renegades_Damocles.bomb_id, Ability.EntityFilters.CloseBaseEntityEnemy, 2)
			else
				Ability.DoAbilityPos(self.squad_ai, Renegades_Damocles.bomb_id, Ability.Filters.CloseEnemy, 12)
				Ability.DoAbilityPos(self.squad_ai, Renegades_Damocles.bomb_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
			end
		end
	end

	-- Call standard method
	Renegades_Vehicle_Tactic.DoAbilities(self)
end
