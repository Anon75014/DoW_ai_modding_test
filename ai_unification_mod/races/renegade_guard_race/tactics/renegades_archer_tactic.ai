class 'Renegades_Archer_Tactic' (Renegades_Infantry_Tactic)

Archer = {}

function Renegades_Archer_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Archer Squad Tactic")
end

function Renegades_Archer_Tactic:InitAbilities()

	-- Init ability ID's
	if (Archer.arrow_id == nil) then
		Archer.arrow_id = cpu_manager.stats:GetAbilityID( "renegade_guard_balista_vortex_arrow" )	
	end
end

function Renegades_Archer_Tactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityPos( self.squad_ai, Archer.arrow_id, Ability.Filters.CloseEnemy, 2 )
	else
		Ability.DoAbilityPos( self.squad_ai, Archer.arrow_id, Ability.Filters.CloseEnemy, 4 )
	end
end

function Renegades_Archer_Tactic:CanOnlyDecap()
	return true
end