class 'Renegades_Samurai_Tactic' (Renegades_Infantry_Tactic)

Samurai = {}

function Renegades_Samurai_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Samurai Tactic")

	-- Squad is able to occupy bunkers
	--self.m_bBunkerSquad = true
end

function Renegades_Samurai_Tactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function Renegades_Samurai_Tactic:IsDefender()
	return self:IsCommanderDefender()
end

function Renegades_Samurai_Tactic:InitAbilities()

	-- Init ability ID's
	if (Samurai.grenade_id == nil) then
		Samurai.grenade_id = cpu_manager.stats:GetAbilityID( "renegade_guard_ronin_grenades" )	
	end

	if (Samurai.switch_id == nil) then
		Samurai.switch_id = cpu_manager.stats:GetAbilityID( "renegade_guard_ronin_missile_switch" )	
	end
end

function Renegades_Samurai_Tactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget( self.squad_ai, Samurai.grenade_id, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, Samurai.grenade_id, Ability.Filters.CloseMonsterEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, Samurai.grenade_id, Ability.Filters.CloseCommanderEnemy, 1 )
	else
		Ability.DoAbilityTarget( self.squad_ai, Samurai.grenade_id, Ability.Filters.CloseInfantryEnemy, 8 )
		Ability.DoAbilityTarget( self.squad_ai, Samurai.grenade_id, Ability.Filters.CloseMonsterEnemy, 8 )
		Ability.DoAbilityTarget( self.squad_ai, Samurai.grenade_id, Ability.Filters.CloseCommanderEnemy, 1 )
	end

	-- Try to use missile switch
	if self.squad_ai:CanDoAbility(Samurai.switch_id) then
		Ability.DoAbilityArea(self.squad_ai, Samurai.switch_id, Ability.Filters.CloseInfantryEnemy, 20, 6)
		Ability.DoAbilityArea(self.squad_ai, Samurai.switch_id, Ability.Filters.CloseMonsterEnemy, 20, 4)
		Ability.DoAbilityArea(self.squad_ai, Samurai.switch_id, Ability.Filters.CloseVehicleEnemy, 20, 1)
	end
end
