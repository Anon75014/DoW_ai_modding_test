class 'Renegades_Kasrkin_Tactic' (Renegades_Infantry_Tactic)

Kasrkin = {}

function Renegades_Kasrkin_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Kasrkin Squad Tactic")
end

function Renegades_Kasrkin_Tactic:InitAbilities()

	-- Init ability ID's
	if (Kasrkin.melta_id == nil) then
		Kasrkin.melta_id = cpu_manager.stats:GetAbilityID( "renegade_guard_melta_bombs" )	
	end
end

function Renegades_Kasrkin_Tactic:DoAbilities()

	-- Try Melta Bombs
	Ability.DoAbilityTarget( self.squad_ai, Kasrkin.melta_id, Ability.Filters.CloseVehicleEnemy, 1 )
	Ability.DoAbilityTargetEntity( self.squad_ai, Kasrkin.melta_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1)
end