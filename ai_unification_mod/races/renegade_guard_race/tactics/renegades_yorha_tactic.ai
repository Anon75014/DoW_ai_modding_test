class 'Renegades_Yorha_Tactic' (Renegades_Infantry_Tactic)

Yorha = {}

function Renegades_Yorha_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Yorha Squad Tactic")
end

function Renegades_Yorha_Tactic:InitAbilities()

	-- Init ability ID's
	if (Yorha.implosion_id == nil) then
		Yorha.implosion_id = cpu_manager.stats:GetAbilityID( "renegade_guard_implosion_grenades" )	
	end

	if (Yorha.destruct_id == nil) then
		Yorha.destruct_id = cpu_manager.stats:GetAbilityID( "renegade_guard_yorha_self_destruct" )	
	end
end

function Renegades_Yorha_Tactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget( self.squad_ai, Yorha.implosion_id, Ability.Filters.CloseEnemy, 1 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Yorha.implosion_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1)
	else
		Ability.DoAbilityTarget( self.squad_ai, Yorha.implosion_id, Ability.Filters.CloseEnemy, 3 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Yorha.implosion_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1)
	end

	-- We are really dying, lower requisites even more for self destruction
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.3) then
		Ability.DoAbilityArea( self.squad_ai, Yorha.destruct_id, Ability.Filters.CloseEnemy, 10, 5 ) 
	end
end

function Renegades_Yorha_Tactic:Reinforce()

	-- Check if we are reinforcing
	if (not self.squad_ai:IsReinforcing()) then

		-- try for different types of squad members
		local leaderIndex = 0
		local captainIndex = 1

		local numLeaders = self.squad_ai:GetLeaderCount( leaderIndex )
		local numCaptains = self.squad_ai:GetLeaderCount( captainIndex )	

		-- Desired number of each leader type
		local desiredLeaders = math.random(0,1)
		local desiredCaptains = math.random(0,1) 

		-- Desired order of reinforcing
		if (numLeaders < desiredLeaders) then
			if (self.squad_ai:CanReinforce( true, leaderIndex )) then
				self.squad_ai:DoReinforce( true, leaderIndex )
			end
		elseif (numCaptains < desiredCaptains) then
			if (self.squad_ai:CanReinforce( true, captainIndex )) then
				self.squad_ai:DoReinforce( true, captainIndex )
			end
		else
			if (self.squad_ai:CanReinforce( false, 0 )) then
				self.squad_ai:DoReinforce( false, 0 )
			end			
		end
	end
end