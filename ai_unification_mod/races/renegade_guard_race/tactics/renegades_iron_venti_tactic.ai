class 'Renegades_Iron_Venti_Tactic' (Renegades_Vehicle_Tactic)

Renegades_Iron_Venti = {}

function Renegades_Iron_Venti_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Iron Venti Tactic")
end

function Renegades_Iron_Venti_Tactic:InitAbilities()

	-- Init ability ID's
	if (Renegades_Iron_Venti.souls_id == nil) then
		Renegades_Iron_Venti.souls_id = cpu_manager.stats:GetAbilityID( "renegade_guard_grand_ode_of_souls" )
	end

	if (Renegades_Iron_Venti.tempest_id == nil) then
		Renegades_Iron_Venti.tempest_id = cpu_manager.stats:GetAbilityID( "renegade_guard_skyward_tempest" )
	end
end

function Renegades_Iron_Venti_Tactic:DoAbilities()

	-- Check if I can launch Ode of Souls
	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
	if (iRequisition >= 300 and iPower >= 300) then

		-- We are dying, lower requisites for attacks
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
			Ability.DoAbilityPos(self.squad_ai, Renegades_Iron_Venti.souls_id, Ability.Filters.CloseEnemy, 8)
			Ability.DoAbilityPos(self.squad_ai, Renegades_Iron_Venti.souls_id, Ability.EntityFilters.CloseBaseEntityEnemy, 2)
		else
			Ability.DoAbilityPos(self.squad_ai, Renegades_Iron_Venti.souls_id, Ability.Filters.CloseEnemy, 16)
			Ability.DoAbilityPos(self.squad_ai, Renegades_Iron_Venti.souls_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
		end
	end

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityPos(self.squad_ai, Renegades_Iron_Venti.tempest_id, Ability.Filters.CloseInfantryEnemy, 4)
		Ability.DoAbilityPos(self.squad_ai, Renegades_Iron_Venti.tempest_id, Ability.Filters.CloseMonsterEnemy, 2)
	else
		Ability.DoAbilityPos(self.squad_ai, Renegades_Iron_Venti.tempest_id, Ability.Filters.CloseInfantryEnemy, 6)
		Ability.DoAbilityPos(self.squad_ai, Renegades_Iron_Venti.tempest_id, Ability.Filters.CloseMonsterEnemy, 3)
	end

	-- New code to unstuck units with pathing issues, that can jump.
	-- Call it with [true], only for multi-membered squads.
	self:SolveStuckCase(false)
end
