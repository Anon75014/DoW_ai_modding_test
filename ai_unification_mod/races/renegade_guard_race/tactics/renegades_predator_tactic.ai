class 'Renegades_Predator_Tactic' (Renegades_Vehicle_Tactic)

Renegades_Predator = {}

function Renegades_Predator_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Predator Tactic")
end

function Renegades_Predator_Tactic:InitAbilities()

	-- Init ability ID's
	if Renegades_Predator.smoke_id == nil then
		Renegades_Predator.smoke_id = cpu_manager.stats:GetAbilityID( "renegade_guard_smoke_launchers" )
	end
end

function Renegades_Predator_Tactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(Renegades_Predator.smoke_id)) then
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(Renegades_Predator.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(Renegades_Predator.smoke_id, oUnit:GetSquad())
		end
	end
end
