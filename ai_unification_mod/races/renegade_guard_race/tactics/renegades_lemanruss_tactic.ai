class 'Renegades_LemanRuss_Tactic' (Renegades_Vehicle_Tactic)

Renegades_LemanRuss = {}

function Renegades_LemanRuss_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Leman Russ Tactic")

	self.PrimaryGun_Upgrade = math.random( 0,5 )	  -- Choose one of the primary weapons (addons 0 through 5)
	self.lastAddonTry = g_iGMT
end

function Renegades_LemanRuss_Tactic:AutoBuildAddOn( addonSlot )
	for e in self.squad_ai:GetEntities() do
		local buildChannel = build_manager:GetBuildChannelFromID(e:GetID())
		if buildChannel ~= nil then
			local addOnID = buildChannel:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
			if (buildChannel:IsBuilding() == 0 and buildChannel:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
				buildChannel:BuildAddOn(addOnID)
				return
			end
		end
	end
	return
end

function Renegades_LemanRuss_Tactic:DoAbilities()
--[[
	[addon_01] = addons\addon_renegade_guard_leman_eradicator
	[addon_02] = addons\addon_renegade_guard_leman_executioner
	[addon_03] = addons\addon_renegade_guard_leman_incinerator
	[addon_04] = addons\addon_renegade_guard_leman_punisher
	[addon_05] = addons\addon_renegade_guard_leman_tesla
	[addon_06] = addons\addon_renegade_guard_leman_cryo
]]

	-- Check addon every 10+ secs
	if g_iGMT > self.lastAddonTry + 16 then
		self.lastAddonTry = g_iGMT
		-- Check available resources and health, before performing any upgrade
		local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
		if iReq > 200 and iPow > 200 and self.squad_ai:GetHealthPercentage() > 0.35 then
			self:AutoBuildAddOn(self.PrimaryGun_Upgrade)
		end
	end
end

function Renegades_LemanRuss_Tactic:Upgrade()
    -- Not needed, Leman Russ upgrades via Addons.
end