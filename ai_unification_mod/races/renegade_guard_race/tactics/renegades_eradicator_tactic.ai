class 'Renegades_Eradicator_Tactic' (Renegades_Infantry_Tactic)

Eradicator = {}

function Renegades_Eradicator_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Eradicator Squad Tactic")
end

function Renegades_Eradicator_Tactic:InitAbilities()

	-- Init ability ID's
	if (Eradicator.grenade_id == nil) then
		Eradicator.grenade_id = cpu_manager.stats:GetAbilityID( "renegade_guard_rad_grenades" )	
	end

	if (Eradicator.rally_id == nil) then
		Eradicator.rally_id = cpu_manager.stats:GetAbilityID( "renegade_guard_eradicator_rally" )	
	end
end

function Renegades_Eradicator_Tactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget( self.squad_ai, Eradicator.grenade_id, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, Eradicator.grenade_id, Ability.Filters.CloseMonsterEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, Eradicator.grenade_id, Ability.Filters.CloseCommanderEnemy, 1 )
	else
		Ability.DoAbilityTarget( self.squad_ai, Eradicator.grenade_id, Ability.Filters.CloseInfantryEnemy, 8 )
		Ability.DoAbilityTarget( self.squad_ai, Eradicator.grenade_id, Ability.Filters.CloseMonsterEnemy, 8 )
		Ability.DoAbilityTarget( self.squad_ai, Eradicator.grenade_id, Ability.Filters.CloseCommanderEnemy, 1 )
	end
end

function Renegades_Eradicator_Tactic:CheckForBroken()

	if (self.squad_ai:IsBroken()) then
	
		-- Check if I can repair my morale
		if (self.squad_ai:CanDoAbility( Eradicator.rally_id )) then
			self.squad_ai:DoSpecialAbility( Eradicator.rally_id )
		end
	end
	
	-- Call basic broken check method
	Renegades_Infantry_Tactic.CheckForBroken(self)
end

function Renegades_Eradicator_Tactic:Reinforce()

	-- Check if we are reinforcing
	if (not self.squad_ai:IsReinforcing()) then

		-- try for different types of squad members
		local leaderIndex = 0
		local sergeantIndex = 1

		local numLeaders = self.squad_ai:GetLeaderCount( leaderIndex )
		local numSergeants = self.squad_ai:GetLeaderCount( sergeantIndex )	

		-- Desired number of each leader type
		local desiredLeaders = math.random(0,1)
		local desiredSergeants = math.random(0,1) 

		-- Desired order of reinforcing
		if (numLeaders < desiredLeaders) then
			if (self.squad_ai:CanReinforce( true, leaderIndex )) then
				self.squad_ai:DoReinforce( true, leaderIndex )
			end
		elseif (numSergeants < desiredSergeants) then
			if (self.squad_ai:CanReinforce( true, sergeantIndex )) then
				self.squad_ai:DoReinforce( true, sergeantIndex )
			end
		else
			if (self.squad_ai:CanReinforce( false, 0 )) then
				self.squad_ai:DoReinforce( false, 0 )
			end			
		end
	end
end