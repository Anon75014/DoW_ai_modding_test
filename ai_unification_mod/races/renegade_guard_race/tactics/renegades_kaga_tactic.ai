class 'Renegades_Kaga_Tactic' (Renegades_Infantry_Tactic)

Kaga = {}

function Renegades_Kaga_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Kaga Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function Renegades_Kaga_Tactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function Renegades_Kaga_Tactic:IsDefender()
	return self:IsCommanderDefender()
end

function Renegades_Kaga_Tactic:InitAbilities()

	-- Init ability ID's
	if (Kaga.drug_id == nil) then
		Kaga.drug_id = cpu_manager.stats:GetAbilityID( "renegade_guard_kaga_drug" )	
		Kaga.silent_id = cpu_manager.stats:GetAbilityID( "renegade_guard_kaga_silently" )	
	end
end

function Renegades_Kaga_Tactic:DoAbilities()

	if self.squad_ai:IsInCombat() then

		-- Try to use drugs
		if self.squad_ai:CanDoAbility(Kaga.drug_id) then

			-- We are dying, lower requisites for attacks
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
				if Ability.DoAbilityTarget(self.squad_ai, Kaga.drug_id, Ability.Filters.CloseInfantryEnemy, 4)
					or Ability.DoAbilityTarget(self.squad_ai, Kaga.drug_id, Ability.Filters.CloseMonsterEnemy, 1)
					or Ability.DoAbilityTarget(self.squad_ai, Kaga.drug_id, Ability.Filters.CloseCommanderEnemy, 1) then
					return
				end
			else
				if Ability.DoAbilityTarget(self.squad_ai, Kaga.drug_id, Ability.Filters.CloseInfantryEnemy, 8)
					or Ability.DoAbilityTarget(self.squad_ai, Kaga.drug_id, Ability.Filters.CloseMonsterEnemy, 2)
					or Ability.DoAbilityTarget(self.squad_ai, Kaga.drug_id, Ability.Filters.CloseCommanderEnemy, 1) then
					return
				end
			end
		end

		-- Check if we can initiate silence against our struggling fighters so they become infiltrated
		if (self.squad_ai:CanDoAbility(Kaga.silent_id)) then

			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.3) then
	
				-- Search a squad
				local iRange = self.squad_ai:GetAbilityRange(Kaga.silent_id)
				local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
				if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
					self.squad_ai:DoSpecialAbilitySquad(Kaga.silent_id, oUnit:GetSquad())
				end
			end
		end
	end
end

function Renegades_Kaga_Tactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end

	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end