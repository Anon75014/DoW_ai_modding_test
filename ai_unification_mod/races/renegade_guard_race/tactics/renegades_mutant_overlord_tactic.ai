class 'Renegades_Mutant_Overlord_Tactic' (Renegades_Infantry_Tactic)

Overlord = {}

function Renegades_Mutant_Overlord_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Overlord Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function Renegades_Mutant_Overlord_Tactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function Renegades_Mutant_Overlord_Tactic:IsDefender()
	return self:IsCommanderDefender()
end

function Renegades_Mutant_Overlord_Tactic:InitAbilities()

	-- Init ability ID's
	if (Overlord.cannon_id == nil) then
		Overlord.cannon_id = cpu_manager.stats:GetAbilityID( "renegade_guard_ion_cannon" )
		Overlord.cannon_sp = cpu_manager.stats:GetAbilityID( "renegade_guard_ion_cannon_advance" )
		Overlord.cannon_sr = cpu_manager.stats:GetAbilityID( "renegade_guard_ion_cannon_survival" )
		Overlord.cannon_ktgm = cpu_manager.stats:GetAbilityID( "renegade_guard_ls_ion_cannon" )				
		Overlord.order_id = cpu_manager.stats:GetAbilityID( "renegade_guard_raiden_order_44" )
		Overlord.order_ktgm = cpu_manager.stats:GetAbilityID( "renegade_guard_ls_raiden_order_44" )	
		Overlord.warptime_id = cpu_manager.stats:GetAbilityID( "renegade_guard_raiden_warptime" )
		Overlord.warptime_sp = cpu_manager.stats:GetAbilityID( "renegade_guard_raiden_warptime_advance" )
		Overlord.warptime_ktgm = cpu_manager.stats:GetAbilityID( "renegade_guard_ls_raiden_warptime" )
		Overlord.strength_sp = cpu_manager.stats:GetAbilityID( "renegade_guard_daemon_strength" )
		Overlord.strength_ktgm = cpu_manager.stats:GetAbilityID( "renegade_guard_ls_daemon_strength" )
	end
end

function Renegades_Mutant_Overlord_Tactic:DoAbilities()

	if self.squad_ai:IsInCombat() then
		-- Try to use ion strike
		if self.squad_ai:CanDoAbility(Overlord.cannon_id) then
			if Ability.DoAbilityPos(self.squad_ai, Overlord.cannon_id, Ability.Filters.CloseEnemy, 24)
			or Ability.DoAbilityPos(self.squad_ai, Overlord.cannon_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
				return
			end
		end

		-- Try to use ion strike (Campaign)
		if self.squad_ai:CanDoAbility(Overlord.cannon_sp) then
			if Ability.DoAbilityPos(self.squad_ai, Overlord.cannon_sp, Ability.Filters.CloseEnemy, 24)
			or Ability.DoAbilityPos(self.squad_ai, Overlord.cannon_sp, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
				return
			end
		end

		-- Try to use ion strike (Survival)
		if self.squad_ai:CanDoAbility(Overlord.cannon_sr) then
			if Ability.DoAbilityPos(self.squad_ai, Overlord.cannon_sr, Ability.Filters.CloseEnemy, 24)
			or Ability.DoAbilityPos(self.squad_ai, Overlord.cannon_sr, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
				return
			end
		end

		-- Launch Ion Cannon at close enemy (Last Stand / Kill Team)
		if (self.squad_ai:CanDoAbility(Overlord.cannon_ktgm)) then 
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
				-- Search for a nearby enemy squad
				local iRange = self.squad_ai:GetAbilityRange(Overlord.cannon_ktgm)
				local oUnit = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 4)
				if (oUnit ~= nil) then
					--print("Using Deploy Ion Cannon with low health for player "..tostring(cpu_manager.player_id).."")
					self.squad_ai:DoSpecialAbilitySquad(Overlord.cannon_ktgm, oUnit:GetSquad())
					return
				end
			else
				-- Search for a nearby enemy squad
				local iRange = self.squad_ai:GetAbilityRange(Overlord.cannon_ktgm)
				local oUnit = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 8)
				if (oUnit ~= nil) then
					--print("Using Deploy Ion Cannon with good health for player "..tostring(cpu_manager.player_id).."")
					self.squad_ai:DoSpecialAbilitySquad(Overlord.cannon_ktgm, oUnit:GetSquad())
					return
				end
			end
		end

		-- Check if we can initiate Order 66 against our struggling fighters
		if (self.squad_ai:CanDoAbility(Overlord.order_id)) then
	
			-- Search a squad
			local iRange = self.squad_ai:GetAbilityRange(Overlord.order_id)
			local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
			if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
				self.squad_ai:DoSpecialAbilitySquad(Overlord.order_id, oUnit:GetSquad())
			end
		end

		-- Check if we can initiate Order 66 against our struggling fighters (Last Stand / Kill Team)
		if self.squad_ai:CanDoAbility(Overlord.order_ktgm) then
			-- Find: nearby (25) + wounded + non-vehicle + more that 3 members squad. For Commanders apply even for 1 member.
			local oSquad = cpu_manager.cpu_player:FindFirstHurtSquad(self.squad_ai:GetPosition(), 25)
			if oSquad ~= nil and oSquad:GetHealthPercentage() < 0.75 then
				local oStats = oSquad:GetStats()
				local oClass = nil
				if oStats ~= nil then oClass = oStats:GetClass() end
					if oClass ~= nil then
						if oClass == UnitStatsAI.UC_Commander then
							self.squad_ai:DoSpecialAbilitySquad(Overlord.order_ktgm, oSquad:GetSquad())
						elseif oSquad:GetNumTroopers() > 3 then
							if oClass ~= UnitStatsAI.UC_VehicleLow and oClass ~= UnitStatsAI.UC_VehicleMed
							and oClass ~= UnitStatsAI.UC_VehicleHigh and oClass ~= UnitStatsAI.UC_AirMed
							and oClass ~= UnitStatsAI.UC_MonsterHigh then
							self.squad_ai:DoSpecialAbilitySquad(Overlord.order_ktgm, oSquad:GetSquad())
						end
					end
				end
			end
		end

		-- Try to Warptime only when attached
		if (self.squad_ai:IsAttached()) then
			if self.squad_ai:CanDoAbility(Overlord.warptime_id) then
				if Ability.DoAbilityArea(self.squad_ai, Overlord.warptime_id, Ability.Filters.CloseEnemy, 15, 4) then
					return
				end
			end
			-- (Campaign)
			if self.squad_ai:CanDoAbility(Overlord.warptime_sp) then
				if Ability.DoAbilityArea(self.squad_ai, Overlord.warptime_sp, Ability.Filters.CloseEnemy, 15, 4) then
					return
				end
			end

			-- (Last Stand / Kill Team)
			if self.squad_ai:CanDoAbility(Overlord.warptime_ktgm) then

				-- Search for a nearby enemy squad
				local oSquad = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), 15, 4)
				if ( oSquad ~= nil ) then
					--print("Using Warptime Ability for player "..tostring(cpu_manager.player_id).."")
					self.squad_ai:DoSpecialAbility(Overlord.warptime_ktgm)
				end
			end
		end
	end

	-- Try to activate daemon strength when close (Campaign)
	if (self.squad_ai:CanDoAbility(Overlord.strength_sp)) then
	
		-- We are dying, lower requisites for attacks
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

			local oSquad = Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 10, 2)
			if (oSquad ~= nil) then
				--print("Using Low Health Deamon Strength Ability for player "..tostring(cpu_manager.player_id).."")
				self.squad_ai:DoSpecialAbility(Overlord.strength_sp)
			end
		else
			local oSquad = Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 20, 4)
			if (oSquad ~= nil) then
				--print("Using Good Health Deamon Strength Ability for player "..tostring(cpu_manager.player_id).."")
				self.squad_ai:DoSpecialAbility(Overlord.strength_sp)
			end
		end
	end

	-- Try to activate daemon strength when close (Last Stand / Kill Team)
	if (self.squad_ai:CanDoAbility(Overlord.strength_ktgm)) then
	
		-- We are dying, lower requisites for attacks
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

			local oSquad = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), 10, 1)
			if (oSquad ~= nil) then
				--print("Using Low Health Deamon Strength Ability for player "..tostring(cpu_manager.player_id).."")
				self.squad_ai:DoSpecialAbility(Overlord.strength_ktgm)
			end
		else
			local oSquad = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), 20, 4)
			if (oSquad ~= nil) then
				--print("Using Good Health Deamon Strength Ability for player "..tostring(cpu_manager.player_id).."")
				self.squad_ai:DoSpecialAbility(Overlord.strength_ktgm)
			end
		end
	end

	-- Spawn Warrior Squad (Last Stand / Kill Team)
	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	end

	-- Check if we can possess
	if (self.squad_ai:CanPossess()) then
	
		-- Check if we are in combat
		if (self.squad_ai:IsInCombat() or cpu_manager.terrain_analyzer:HasThreat(self.squad_ai:GetPosition(), 35)) then
			self.squad_ai:DoPossess()
		end
	end
end

function Renegades_Mutant_Overlord_Tactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end

	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end