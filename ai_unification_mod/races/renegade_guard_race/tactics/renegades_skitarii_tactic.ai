class 'Renegades_Skitarii_Tactic' (Renegades_Infantry_Tactic)

Skitarii = {}

function Renegades_Skitarii_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Skitarii Squad Tactic")
end

function Renegades_Skitarii_Tactic:InitAbilities()

	-- Init ability ID's
	if (Skitarii.emp_id == nil) then
		Skitarii.emp_id = cpu_manager.stats:GetAbilityID("renegade_guard_skitarii_emp_grenades")
	end
end

function Renegades_Skitarii_Tactic:DoAbilities()

	-- Use EMP Grenades against enemy vehicles
	Ability.DoAbilityTarget( self.squad_ai, Skitarii.emp_id, Ability.Filters.CloseVehicleEnemy, 1 )
end
