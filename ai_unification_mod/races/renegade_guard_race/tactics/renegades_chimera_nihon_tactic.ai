class 'Renegades_Chimera_Nihon_Tactic' (Renegades_Vehicle_Tactic)

Renegades_Chimera_Nihon = {}

function Renegades_Chimera_Nihon_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Chimera Nihon Tactic")
	
	Tactic.AssignStateFunction( self, Tactic.States.Idle, Renegades_Chimera_Nihon_Tactic.BeginIdleState )
	Tactic.AssignStateFunction( self, Tactic.States.Hold, Renegades_Chimera_Nihon_Tactic.BeginHoldState )
	Tactic.AssignStateFunction( self, Tactic.States.Retreat, Renegades_Chimera_Nihon_Tactic.BeginRetreatState )
	Tactic.AssignStateFunction( self, Tactic.States.Attack, Renegades_Chimera_Nihon_Tactic.BeginAttackState )
	
	-- Vehicle is a medium transport
	self.m_iTransportVehicle = 1
	self.m_iTransportSlots = 2
end

function Renegades_Chimera_Nihon_Tactic:IsAttacker()
	return (self.m_iUnloadTries > 0)
end

function Renegades_Chimera_Nihon_Tactic:IsDefender()
	return (self.m_iUnloadTries > 0)
end

function Renegades_Chimera_Nihon_Tactic:BeginIdleState()
	self:TransportMove()
	Tactic.SetSubState(self, self.IdleState, "Holding")
end

function Renegades_Chimera_Nihon_Tactic:BeginHoldState()
	self:TransportMove()
	Tactic.SetSubState(self, self.HoldState, "Holding")
end

function Renegades_Chimera_Nihon_Tactic:BeginRetreatState()
	self:TransportMove()
	Tactic.SetSubState( self, self.HoldState, "Holding" )
end

function Renegades_Chimera_Nihon_Tactic:BeginAttackState()
	self:TransportMove()
	Tactic.SetSubState(self, self.AttackingState, "Attacking")
end

function Renegades_Chimera_Nihon_Tactic:TransportMove()

	-- Check if we're busy
	if (self:IsInSubState() or self:CheckGatherMove()) then
		return
	end
	
	-- Check move delay
	if (g_iGMT < self.m_iMoveDelay + 3 and self:IsMoving()) then
		return
	end

	-- Try to unload troops
	local vSquadPos = self.squad_ai:GetPosition()
	local iDistance = distance_sqr(self.target, vSquadPos)	
	if (self:UnloadTroops(iDistance)) then
		self.m_iMoveDelay = g_iGMT
		return
	end
		
	-- Check distance
	if (self.squad_ai:WasRecentlyHurt()) then
		cpu_manager:DoMove(self.squad_ai, cpu_manager.start_pos, false, "RetreatMove")
		self.m_iMoveDelay = g_iGMT
		return
	elseif (iDistance > sqr(35)) then
		cpu_manager:DoMove(self.squad_ai, self.target, false, "TransportMove")
	elseif (iDistance > sqr(20) and not cpu_manager.terrain_analyzer:HasThreat(vSquadPos, 35)) then
		cpu_manager:DoMove(self.squad_ai, self.target, false, "TransportMove")
	else
		self.squad_ai:DoStop()
	end

	self.m_iMoveDelay = g_iGMT

	-- New code to unstuck units with pathing issues, that can jump.
	-- Call it with [true], only for multi-membered squads.
	self:SolveStuckCase(false)

	-- Call standard method
	Renegades_Vehicle_Tactic.DoAbilities(self)
end


