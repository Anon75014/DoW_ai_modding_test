class 'Renegades_Beastmen_Tactic' (Renegades_Infantry_Tactic)

Beastmen = {}

function Renegades_Beastmen_Tactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Renegades Beastmen Squad Tactic")
end

function Renegades_Beastmen_Tactic:InitAbilities()

	-- Init ability ID's
	if (Beastmen.fury_id == nil) then
		Beastmen.fury_id = cpu_manager.stats:GetAbilityID( "renegade_guard_wild_fury" )	
	end

	if (Beastmen.fear_id == nil) then
		Beastmen.fear_id = cpu_manager.stats:GetAbilityID( "renegade_guard_invoke_fear" )	
	end
end

function Renegades_Beastmen_Tactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityArea( self.squad_ai, Beastmen.fury_id, Ability.Filters.CloseEnemy, 5, 1 )
		Ability.DoAbilityArea( self.squad_ai, Beastmen.fear_id, Ability.Filters.CloseEnemy, 10, 1 )
	else
		Ability.DoAbilityArea( self.squad_ai, Beastmen.fury_id, Ability.Filters.CloseEnemy, 5, 2 )
		Ability.DoAbilityArea( self.squad_ai, Beastmen.fear_id, Ability.Filters.CloseEnemy, 10, 2 )
	end
end

function Renegades_Beastmen_Tactic:Reinforce()

	-- Check if we are reinforcing
	if (not self.squad_ai:IsReinforcing()) then

		-- try for different types of squad members
		local leaderIndex = 0
		local sergeantIndex = 1

		local numLeaders = self.squad_ai:GetLeaderCount( leaderIndex )
		local numSergeants = self.squad_ai:GetLeaderCount( sergeantIndex )	

		-- Desired number of each leader type
		local desiredLeaders = math.random(0,1)
		local desiredSergeants = math.random(0,1) 

		-- Desired order of reinforcing
		if (numLeaders < desiredLeaders) then
			if (self.squad_ai:CanReinforce( true, leaderIndex )) then
				self.squad_ai:DoReinforce( true, leaderIndex )
			end
		elseif (numSergeants < desiredSergeants) then
			if (self.squad_ai:CanReinforce( true, sergeantIndex )) then
				self.squad_ai:DoReinforce( true, sergeantIndex )
			end
		else
			if (self.squad_ai:CanReinforce( false, 0 )) then
				self.squad_ai:DoReinforce( false, 0 )
			end			
		end
	end
end