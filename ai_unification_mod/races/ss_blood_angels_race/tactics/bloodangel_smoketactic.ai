class 'BloodAngelSmokeTactic' (BloodAngelsVehicleTactic)

BloodAngelSmoke = {}

function BloodAngelSmokeTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Blood Angel Smoke Tactic")
end

function BloodAngelSmokeTactic:InitAbilities()

	if (BloodAngelSmoke.smoke_id == nil) then
		BloodAngelSmoke.smoke_id = cpu_manager.stats:GetAbilityID( "blood_angel_smoke_launchers" )	
	end
end

function BloodAngelSmokeTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(BloodAngelSmoke.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(BloodAngelSmoke.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 200) then
			self.squad_ai:DoSpecialAbilitySquad(BloodAngelSmoke.smoke_id, oUnit:GetSquad())
		end
	end
end