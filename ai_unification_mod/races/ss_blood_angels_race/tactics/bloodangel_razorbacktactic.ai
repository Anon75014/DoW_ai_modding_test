class 'BloodAngelRazorbackTactic' (BloodAngelsVehicleTactic)

BloodAngelRazorback = {}

function BloodAngelRazorbackTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Blood Angel Razorback Tactic")
	
	-- Vehicle is a light transport
	self.m_iTransportVehicle = 2
	self.m_iTransportSlots = 1
end

function BloodAngelRazorbackTactic:InitAbilities()

	if (BloodAngelRazorback.smoke_id == nil) then
		BloodAngelRazorback.smoke_id = cpu_manager.stats:GetAbilityID( "blood_angel_smoke_launchers" )	
	end
end

function BloodAngelRazorbackTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(BloodAngelRazorback.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(BloodAngelRazorback.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 200) then
			self.squad_ai:DoSpecialAbilitySquad(BloodAngelRazorback.smoke_id, oUnit:GetSquad())
		end
	end
end