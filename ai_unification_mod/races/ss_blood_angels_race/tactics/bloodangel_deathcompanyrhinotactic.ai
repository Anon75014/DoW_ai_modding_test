class 'BloodAngelDeathCompanyRhinoTactic' (BloodAngelsVehicleTactic)

BloodAngelDeathCompanyRhino = {}

function BloodAngelDeathCompanyRhinoTactic:__init( squad_ai ) super( squad_ai )

       self:SetName("Blood Angel Death Company Rhino Tactic")

       self.timedDirectSpawnAbility = Timer( BloodAngelDeathCompanyRhinoTactic.DoDirectSpawnAbility, self, 5 )

	-- Vehicle is a light transport
	self.m_iTransportVehicle = 4
	self.m_iTransportSlots = 1
end

function BloodAngelDeathCompanyRhinoTactic:InitAbilities()

	if (BloodAngelDeathCompanyRhino.smoke_id == nil) then
		BloodAngelDeathCompanyRhino.smoke_id = cpu_manager.stats:GetAbilityID( "blood_angel_smoke_launchers" )	
	end
end

function BloodAngelDeathCompanyRhinoTactic:DoAbilities()
	
	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(BloodAngelDeathCompanyRhino.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(BloodAngelDeathCompanyRhino.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 200) then
			self.squad_ai:DoSpecialAbilitySquad(BloodAngelDeathCompanyRhino.smoke_id, oUnit:GetSquad())
		end
	end

	-- Try to spawn Death Company
	self.timedDirectSpawnAbility:Call()
end

function BloodAngelDeathCompanyRhinoTactic:DoDirectSpawnAbility()

	-- Spawn Death Company in combat
	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	end
end

function BloodAngelDeathCompanyRhinoTactic:Update()

	if self:IsComplete() then
		return
	end
	
	  --state machine
	  if not VehicleTactic.Update( self ) then
		 return
	  end
end