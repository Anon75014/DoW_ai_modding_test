class 'BloodAngelsSicaranTactic' (BloodAngelsVehicleTactic)

BloodAngelsSicaran = {}

function BloodAngelsSicaranTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("BloodAngels Sicaran Tactic")
end

function BloodAngelsSicaranTactic:AutoBuildAddOn( addonSlot )
	for e in self.squad_ai:GetEntities() do
		local buildChannelBloodAngelsSicaran = build_manager:GetBuildChannelFromID(e:GetID())
		if (buildChannelBloodAngelsSicaran ~= nil) then
			local addOnID = buildChannelBloodAngelsSicaran:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
			if (buildChannelBloodAngelsSicaran:IsBuilding() == 0 and buildChannelBloodAngelsSicaran:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then			
				buildChannelBloodAngelsSicaran:BuildAddOn(addOnID)
				return
			end
		end
	end
	return
end

function BloodAngelsSicaranTactic:InitAbilities()

	-- Init ability ID's
	if (BloodAngelsSicaran.missile_id == nil) then
		BloodAngelsSicaran.missile_id = cpu_manager.stats:GetAbilityID( "blood_angel_hk_missile_sicaran" )	
	end

	if (BloodAngelsSicaran.smoke_id == nil) then
		BloodAngelsSicaran.smoke_id = cpu_manager.stats:GetAbilityID( "blood_angel_smoke_launchers_sicaran" )	
	end

	if (BloodAngelsSicaran.spirit_id == nil) then
		BloodAngelsSicaran.spirit_id = cpu_manager.stats:GetAbilityID( "blood_angel_machine_spirit_sicaran" )
	end
end

function BloodAngelsSicaranTactic:DoAbilities()

	if (self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(BloodAngelsSicaran.missile_id)) then
		Ability.DoAbilityTarget( self.squad_ai, BloodAngelsSicaran.missile_id, Ability.Filters.CloseVehicleEnemy, 1 )
		Ability.DoAbilityTargetEntity( self.squad_ai, BloodAngelsSicaran.missile_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, BloodAngelsSicaran.missile_id, Ability.Filters.CloseSquadEnemy, 4 )
	end

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(BloodAngelsSicaran.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(BloodAngelsSicaran.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(BloodAngelsSicaran.smoke_id, oUnit:GetSquad())
		end
	end

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(BloodAngelsSicaran.spirit_id)) then
			self.squad_ai:DoSpecialAbility(BloodAngelsSicaran.spirit_id)
		end
	end

	-- Call standard method
	BloodAngelsVehicleTactic.DoAbilities(self)
end