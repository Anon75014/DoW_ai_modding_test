class 'BloodAngelDeathCompanyTactic' (BloodAngelsInfantryTactic)

BloodAngelDeathCompany = {}

function BloodAngelDeathCompanyTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Blood Angel Death Company Tactic")
end

function BloodAngelDeathCompanyTactic:InitAbilities()

	if (BloodAngelDeathCompany.battlecry_id == nil) then
		BloodAngelDeathCompany.battlecry_id = cpu_manager.stats:GetAbilityID( "blood_angel_chaplin_battlecry" )	
	end
end

function BloodAngelDeathCompanyTactic:DoAbilities()

	Ability.DoAbilityArea( self.squad_ai, BloodAngelDeathCompany.battlecry_id, Ability.Filters.CloseInCombat, 10 ) 
end

