class 'BloodAngelMephistonTactic' (BloodAngelsInfantryTactic)

BloodAngelMephiston = {}

function BloodAngelMephistonTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Blood Angel Mephiston Tactic")
end

function BloodAngelMephistonTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function BloodAngelMephistonTactic:IsDefender()
	return self:IsCommanderDefender()
end

function BloodAngelMephistonTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function BloodAngelMephistonTactic:InitAbilities()


	if (BloodAngelMephiston.glare_id == nil) then
		BloodAngelMephiston.glare_id = cpu_manager.stats:GetAbilityID( "blood_angel_transfixing_glare" )
	end

	if (BloodAngelMephiston.sanguine_id == nil) then
      		BloodAngelMephiston.sanguine_id = cpu_manager.stats:GetAbilityID( "blood_angel_sanguine_sword" )
	end

	if (BloodAngelMephiston.rage_id == nil) then
      		BloodAngelMephiston.rage_id = cpu_manager.stats:GetAbilityID( "blood_angel_unleash_rage" )
	end

	if (BloodAngelMephiston.quick_id == nil) then
      		BloodAngelMephiston.quick_id = cpu_manager.stats:GetAbilityID( "blood_angel_quickening" )
	end

	if (BloodAngelMephiston.storm_id == nil) then
      		BloodAngelMephiston.storm_id = cpu_manager.stats:GetAbilityID( "blood_angel_storm_of_emperors_wrath" )
	end

end

function BloodAngelMephistonTactic:DoAbilities()

	Ability.DoAbility( self.squad_ai, BloodAngelMephiston.sanguine_id, Ability.Filters.IsInCombat )
	Ability.DoAbilityArea( self.squad_ai, BloodAngelMephiston.rage_id, Ability.Filters.CloseInCombat, 10 )
	Ability.DoAbilityArea( self.squad_ai, BloodAngelMephiston.quick_id, Ability.Filters.CloseInCombat, 10 )
	Ability.DoAbilityPos( self.squad_ai, BloodAngelMephiston.glare_id, Ability.Filters.CloseInfantryEnemy, 4 )
	
	Ability.DoAbilityPos(self.squad_ai, BloodAngelMephiston.storm_id, Ability.Filters.CloseInfantryEnemy, 4)
	Ability.DoAbilityPos(self.squad_ai, BloodAngelMephiston.storm_id, Ability.Filters.CloseMonsterEnemy, 4)

end

function BloodAngelMephistonTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
    if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                self:TryAttachSquadMelee()
            end
        end
    end
end

