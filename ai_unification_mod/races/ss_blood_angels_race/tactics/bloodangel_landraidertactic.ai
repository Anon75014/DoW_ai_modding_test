class 'BloodAngelLandRaiderTactic' (BloodAngelsVehicleTactic)

BloodAngelLandRaider = {}

function BloodAngelLandRaiderTactic:__init( squad_ai ) super( squad_ai )

	self.timedDirectSpawnAbility = Timer( BloodAngelLandRaiderTactic.DoDirectSpawnAbility, self, 5 )

	self:SetName("Blood Angel Land Raider Tactic")
	
	-- Vehicle is a heavy transport
	self.m_iTransportVehicle = 3
	self.m_iTransportSlots = 1
end

function BloodAngelLandRaiderTactic:InitAbilities()

	-- Init ability ID's
	if (BloodAngelLandRaider.spirit_id == nil) then
		BloodAngelLandRaider.spirit_id = cpu_manager.stats:GetAbilityID( "blood_angel_machine_spirit" )
	end
end

function BloodAngelLandRaiderTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(BloodAngelLandRaider.spirit_id)) then
			self.squad_ai:DoSpecialAbility(BloodAngelLandRaider.spirit_id)
		end	  
	end

	-- Try to spawn terminator honor guards
	if (self.timedDirectSpawnAbility ~= nil) then
		self.timedDirectSpawnAbility:Call()
	else
		BloodAngelLandRaiderTactic.DoDirectSpawnAbility(self)
	end
	
	-- Do basic abilities
	VehicleTactic.DoAbilities(self)
end

function BloodAngelLandRaiderTactic:DoDirectSpawnAbility()

	-- Spawn honor guards in combat
	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	end
end