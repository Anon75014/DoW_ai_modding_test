class 'BloodAngelCommanderTychoDCTactic' (BloodAngelsInfantryTactic)

BloodAngelCommanderTychoDC = {}

function BloodAngelCommanderTychoDCTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Blood Angel Commander Tycho DC Tactic")
end

-- Assassinate win condition -- never attack
function BloodAngelCommanderTychoDCTactic:IsAttacker()
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function BloodAngelCommanderTychoDCTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

function BloodAngelCommanderTychoDCTactic:InitAbilities()

	if BloodAngelCommanderTychoDC.battlecry_id == nil then
		BloodAngelCommanderTychoDC.battlecry_id = cpu_manager.stats:GetAbilityID( "blood_angel_battlecry" )	
		BloodAngelCommanderTychoDC.bombardment_id = cpu_manager.stats:GetAbilityID( "blood_angel_orbital_bombardment" )
		BloodAngelCommanderTychoDC.rage_id = cpu_manager.stats:GetAbilityID( "blood_angel_empowering_rage" )	
	end
end

function BloodAngelCommanderTychoDCTactic:DoAbilities()

	-- Try to use orbital strike
	Ability.DoAbilityPos(self.squad_ai, BloodAngelCommanderTychoDC.bombardment_id, Ability.Filters.CloseEnemy, 24)
	Ability.DoAbilityPos(self.squad_ai, BloodAngelCommanderTychoDC.bombardment_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)

	Ability.DoAbilityArea( self.squad_ai, BloodAngelCommanderTychoDC.battlecry_id, Ability.Filters.CloseInCombat, 10 )

	-- In melee, enable the rage ability
	if self.squad_ai:IsInCombat() then
		local squad_pos = self.squad_ai:GetPosition()
		if Ability.Filters.CloseInfantryEnemy( squad_pos, 8, 1 ) ~= nil
		or Ability.Filters.CloseVehicleEnemy( squad_pos, 8, 1 ) ~= nil
		or Ability.Filters.CloseCommanderEnemy( squad_pos, 8, 1 ) ~= nil then
			self.squad_ai:DoSpecialAbility(BloodAngelCommanderTychoDC.rage_id)
		end
	end
end

