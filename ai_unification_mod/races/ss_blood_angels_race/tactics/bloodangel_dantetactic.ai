class 'BloodAngelDanteTactic' (BloodAngelsInfantryTactic)

BloodAngelDante = {}

function BloodAngelDanteTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Blood Angel Dante Tactic")
end

-- BloodAngelDante is allowed to retreat even directly after a jump
function BloodAngelDanteTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function BloodAngelDanteTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function BloodAngelDanteTactic:IsDefender()
	return self:IsCommanderDefender()
end

function BloodAngelDanteTactic:InitAbilities()

	if (BloodAngelDante.orbitalstrike_id == nil) then
		BloodAngelDante.orbitalstrike_id = cpu_manager.stats:GetAbilityID( "blood_angel_wrath_of_sanguinus" )
	end
end

function BloodAngelDanteTactic:DoAbilities()

	-- Try to use orbital strike
	Ability.DoAbilityPos(self.squad_ai, BloodAngelDante.orbitalstrike_id, Ability.Filters.CloseEnemy, 12)
	Ability.DoAbilityPos(self.squad_ai, BloodAngelDante.orbitalstrike_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)

end



function BloodAngelDanteTactic:Update()

    if (self:IsComplete()) then
        return
    end

    -- State machine
    if (not InfantryTactic.Update(self)) then
        return
    end

	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
    
	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end