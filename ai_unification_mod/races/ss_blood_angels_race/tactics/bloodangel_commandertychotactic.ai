class 'BloodAngelCommanderTychoTactic' (BloodAngelsInfantryTactic)

BloodAngelCommanderTycho = {}

function BloodAngelCommanderTychoTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Blood Angel Commander Tycho Tactic")
end

-- Assassinate win condition -- never attack
function BloodAngelCommanderTychoTactic:IsAttacker()
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function BloodAngelCommanderTychoTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

function BloodAngelCommanderTychoTactic:InitAbilities()

	if (BloodAngelCommanderTycho.battlecry_id == nil) then
		BloodAngelCommanderTycho.battlecry_id = cpu_manager.stats:GetAbilityID( "blood_angel_battlecry" )	
	end

	if (BloodAngelCommanderTycho.thirst_id == nil) then
		BloodAngelCommanderTycho.thirst_id = cpu_manager.stats:GetAbilityID( "blood_angel_red_thirst" )	
	end

	if (BloodAngelCommanderTycho.bombardment_id == nil) then
		BloodAngelCommanderTycho.bombardment_id = cpu_manager.stats:GetAbilityID( "blood_angel_orbital_bombardment" )
	end
end

function BloodAngelCommanderTychoTactic:DoAbilities()

	-- Try to use orbital strike
	Ability.DoAbilityPos(self.squad_ai, BloodAngelCommanderTycho.bombardment_id, Ability.Filters.CloseEnemy, 24)
	Ability.DoAbilityPos(self.squad_ai, BloodAngelCommanderTycho.bombardment_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)

	Ability.DoAbilityArea( self.squad_ai, BloodAngelCommanderTycho.battlecry_id, Ability.Filters.CloseInCombat, 10 ) 

	--Toggle: Enable the Red Thirst unless with low health
	if (self.squad_ai:IsAttacking() and self.squad_ai:WasRecentlyHurt() and	self.squad_ai:GetHealthPercentage() > 0.4 and
		self.squad_ai:CanDoAbility( BloodAngelCommanderTycho.thirst_id )) then
			self.squad_ai:DoSpecialAbility( BloodAngelCommanderTycho.thirst_id )
	end

end

