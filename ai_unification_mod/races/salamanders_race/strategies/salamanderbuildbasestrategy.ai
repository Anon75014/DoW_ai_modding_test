	-- Check addon name and target tier
	if (sName == "salamander_hq_addon_1" and iTargetTier == 2) then
		return true
	elseif (sName == "salamander_hq_addon_2" and iTargetTier == 3) then
		return true
	elseif (sName == "salamander_hq_addon_3" and iTargetTier == 4) then
		return true
	end
	return false
end

