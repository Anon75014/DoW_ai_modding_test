class 'SalamanderBuildBaseStrategy' (BuildBaseStrategy)

function SalamanderBuildBaseStrategy:__init( baseinfo ) super( baseinfo )

	-- Add detector units (Best first, worst last)
	self:AddDetectorUnit("salamander_squad_librarian")
	self:AddDetectorUnit("salamander_squad_skull_probe")
	self:AddDetectorUnit("salamander_squad_thundercannon")

	CpuPrerequisites2.AddSpecialItem("salamander_squad_sicaran_venator", CpuPrerequisites.BT_Squad)
end

function SalamanderBuildBaseStrategy:ChooseBuildProgram()

	-- Check build program count
	if (table.getn(self.info.BuildPrograms) ~= 4) then
		return BuildBaseStrategy.ChooseBuildProgram(self)
	end

	-- Get map size and closest enemy distance
	local sMapSize, iClosestEnemyDistance = self:GetMapSize()
		
	-- Set probabilities of the strategies according to the map size
	local iBuildProgram1	-- Basic strategy
	local iBuildProgram2	-- Marine rush
	local iBuildProgram3	-- Assault rush
	local iBuildProgram4	-- Vehicle rush
	if (sMapSize == "small" or iClosestEnemyDistance <= 70 or cpu_manager.iPlayerCount == 2) then
	
		iBuildProgram1 = 40
		iBuildProgram2 = 30
		iBuildProgram3 = 30
		iBuildProgram4 = 0
		
	elseif (sMapSize == "large" and cpu_manager.iPlayerCount >= 6) then
	
		iBuildProgram1 = 40
		iBuildProgram2 = 20
		iBuildProgram3 = 20
		iBuildProgram4 = 20
	else
	
		iBuildProgram1 = 40
		iBuildProgram2 = 30
		iBuildProgram3 = 30
		iBuildProgram4 = 0
	end
	
	-- Modify probabilities according to the closest enemy player
	local oEnemy = cpu_manager:FindClosestEnemyPlayer(false)
	local sEnemy = oEnemy:GetPlayerRaceName()		
	if (sEnemy == "ork_race") then
	
		iBuildProgram2 = iBuildProgram2 + 10
		iBuildProgram3 = iBuildProgram3 - 10

	elseif (sEnemy == "eldar_race" or sEnemy == "guard_race" or sEnemy == "tau_race" or sEnemy == "necron_race") then

		iBuildProgram1 = iBuildProgram1 - 10
		iBuildProgram2 = iBuildProgram2 - 10
		iBuildProgram3 = iBuildProgram3 + 20
	end
		
	-- Now choose a program
	iBuildProgram2 = iBuildProgram1 + iBuildProgram2
	iBuildProgram3 = iBuildProgram2 + iBuildProgram3
	iBuildProgram4 = iBuildProgram3 + iBuildProgram4
	local iRandom = math.random(1, 100)
	if (iRandom <= iBuildProgram1) then
		return 1
	elseif (iRandom <= iBuildProgram2) then
		return 2
	elseif (iRandom <= iBuildProgram3) then
		return 3
	elseif (iRandom <= iBuildProgram4) then
		return 4
	end
	return 1
end

function SalamanderBuildBaseStrategy:EvaluateSquadCap()

	-- Check squad cap
	if (self:CheckSquadCap(300, 0)) then
		
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research
		
		if (not cpu_manager.cpu_player:IsResearchComplete( "salamander_squad_cap_research" )) then
			tBuildType.name = "salamander_squad_cap_research"
		elseif not cpu_manager.cpu_player:IsResearchComplete( "salamander_squad_cap_research_1" ) then
			tBuildType.name = "salamander_squad_cap_research_1"
		else
			return
		end
		
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
	
	-- Check support cap
	if (self:CheckSupportCap(150, 300)) then
		
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research
		
		if (not cpu_manager.cpu_player:IsResearchComplete( "salamander_support_cap_research" )) then
			tBuildType.name = "salamander_support_cap_research"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "salamander_support_cap_research_1" )) then
			tBuildType.name = "salamander_support_cap_research_1"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "salamander_support_cap_research_2" )) then
			tBuildType.name = "salamander_support_cap_research_2"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "salamander_support_cap_research_3" )) then
			tBuildType.name = "salamander_support_cap_research_3"
		else
			return
		end
		
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
end

function SalamanderBuildBaseStrategy:GetBuildingName( sType )

	-- Return race specific object string
	if (sType == "HQ") then
		return "salamander_hq"

	elseif (sType == "Generator") then
		return "salamander_generator"
		
	elseif (sType == "BiggerGenerator") then
		return "salamander_thermo_generator"
		
	elseif (sType == "VehicleBuilding") then
		return "salamander_vehicle_building"
		
	elseif (sType == "ListeningPost") then
		return "salamander_listening_post"
		
	elseif (sType == "Turret") then
		return "salamander_turret_spec"

	elseif (sType == "Mine") then
		return "salamander_mines"
	end
	return nil
end

