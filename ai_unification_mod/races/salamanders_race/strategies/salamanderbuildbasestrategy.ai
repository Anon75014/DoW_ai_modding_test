function SalamanderBuildBaseStrategy:UpdateTierLevel()

	-- Reset tier level
	self.tierLevel = 1
	
	-- Prepare
	local iHQAddon1ID = cpu_manager.stats:GetAddOnID("salamander_hq_addon_1")
	local iHQAddon2ID = cpu_manager.stats:GetAddOnID("salamander_hq_addon_2")
	local iHQAddon3ID = cpu_manager.stats:GetAddOnID("salamander_hq_addon_3")
	local oStats = cpu_manager.stats:GetPlayerStatsFromID( cpu_manager.player_id )
	
	-- Check HQ's for addons
	for oBase in oStats:GetBases() do
	
		-- Check for valid building
		if (oBase:IsValid() and not oBase:IsListeningPost()) then

			-- Check for HQ addon 2
			if (oBase:HasAddOn(iHQAddon3ID)) then
					self.tierLevel = 4
					return
			elseif (oBase:HasAddOn(iHQAddon2ID)) then
				self.tierLevel = 3
					return
			elseif (oBase:HasAddOn(iHQAddon1ID)) then
				self.tierLevel = 2
					return
			end
		end
	end
end

function SalamanderBuildBaseStrategy:BuildFlexible()

	-- Always test first to see if there is at least one existing HQ
	if self:GetBuildingCountByName(self:GetBuildingName("HQ")) < 1 then
     		self:BuildFirstHQ()
	end

	-- Always test first to see if there is at least one existing builder unit
	self:BuildFirstBuilder("salamander_squad_techmarine")

	-- Dynamic research item syntax: ResearchName, MinTier, RequisitionCost, PowerCost, MinSquadCap, MinSupportCap, SquadName, SquadMinCount
	local iArmyStrength = cpu_manager:GetArmyStrength()
	local iInfantrySquads	= self:CountSquads("salamander_squad_scout") + self:CountSquads("salamander_squad_sisters") + self:CountSquads("salamander_squad_tactical") + self:CountSquads("salamander_squad_tactical_assault") + self:CountSquads("salamander_squad_vanguard_veterans")
	local iLibrarianSquads	= self:CountSquads("salamander_squad_librarian")
	local iCommanderSquads	= self:CountSquads("salamander_squad_force_commander") + self:CountSquads("salamander_squad_chaplain") + iLibrarianSquads
	local iVehicleSquads	= self:CountSquads("salamander_squad_rhino") + self:CountSquads("salamander_squad_razorback")
	local iVehicleAdvSquads	= self:CountSquads("salamander_squad_predator") + self:CountSquads("salamander_squad_whirlwind") + self:CountSquads("salamander_squad_vindicator") + iVehicleSquads
	
	-- Compute tier 1 researches
	if (self.tierLevel >= 1) then

		-- Compute infantry researches
		if (iInfantrySquads >= 3) then
			self:DynamicResearch("salamander_frag_grenade_research", 1, 25, 75, 0, 0, "salamander_squad_tactical", 2)
			self:DynamicResearch("salamander_melta_bomb_research", 1, 75, 75, 0, 0, "salamander_squad_tactical_assault", 1)
		end

		-- Compute secondary researches
		if (iArmyStrength >= 750) then

			-- Compute infantry researches
			if (iInfantrySquads >= 3) then
				self:DynamicResearch("salamander_health_upgrade_research", 1, 50, 30, 0, 0, nil, 0)
				self:DynamicResearch("salamander_accuracy_upgrade_research", 1, 50, 30, 0, 0, nil, 0)

			end
		end
		
		-- Compute bonus researches
		if (iArmyStrength >= 1250) then
		
			-- Compute infantry researches
			self:DynamicResearch("salamander_advanced_scout_weapons_1", 1, 75, 35, 0, 0, "salamander_squad_scout", 2)
			
			-- Compute skull probe researches
			self:DynamicResearch("salamander_skull_probe_infiltrate_research", 1, 50, 50, 0, 0, "salamander_squad_skull_probe", 1)

			-- Build dynamic turrets if available
			self:DynamicBuild("salamander_turret_spec", 1, 1, 90, 45, 0, 0)
		end
	end
	
	-- Compute tier 2 researches
	if (self.tierLevel >= 2) then
	
		-- Compute infantry researches
		if (iInfantrySquads >= 3) then
			self:DynamicResearch("salamander_max_weapons_research", 2, 75, 75, 0, 0, nil, 0)
			self:DynamicResearch("salamander_health_upgrade_research_2", 2, 100, 50, 0, 0, nil, 0)
			self:DynamicResearch("salamander_flamer_research", 2, 50, 30, 0, 0, nil, 0)
		end
		
		-- Compute commander researches
		if (iLibrarianSquads >= 1) or (iCommanderSquads >= 1) then
			self:DynamicResearch("salamander_force_commander_ability_research_1", 2, 80, 35, 0, 0, "salamander_squad_force_commander", 1)
			self:DynamicResearch("salamander_commander_health_research_1", 2, 100, 25, 0, 0, nil, 0)
			self:DynamicResearch("salamander_librarian_research_1", 2, 50, 30, 0, 0, "salamander_squad_librarian", 1)
		end

		-- Compute sisters researches
		if (self:CountSquads("salamander_squad_sisters") >= 1) then
			self:DynamicResearch("salamander_ardent_flame_sister_research", 2, 200, 50, 0, 0, nil, 0)
		end
		
		-- Compute secondary researches
		if (iArmyStrength >= 1250) then
		
			-- Compute infantry researches
			if (iInfantrySquads >= 3) then
				self:DynamicResearch("salamander_accuracy_upgrade_research_2", 2, 100, 50, 0, 0, nil, 0)
				self:DynamicResearch("salamander_advanced_scout_weapons_2", 2, 100, 75, 0, 0, "salamander_squad_scout", 1)
				self:DynamicResearch("salamander_leader_burning_swords_research", 2, 100, 75, 0, 0, nil, 0)
			end

			-- Build dynamic turrets if available
			self:DynamicBuild("salamander_turret_spec", 2, 2, 90, 45, 0, 0)
		end
		
		-- Compute bonus researches
		if (iArmyStrength >= 1750) then
					
			-- Compute infantry researches
			self:DynamicResearch("salamander_scout_infiltrate_research", 2, 100, 150, 0, 0, "salamander_squad_scout", 1)
		
			-- Compute vehicle researches
			if (iVehicleSquads >= 1) then
				self:DynamicResearch("salamander_smoke_launcher_research", 2, 75, 25, 0, 0, nil, 0)
			end

			-- Build dynamic turrets if available
			self:DynamicBuild("salamander_turret_spec", 3, 2, 90, 45, 0, 0)

			-- Try to build no-limit defensive turrets
			self:DynamicBuild("salamander_turret_bolter_no_limit", 2, 2, 150, 90, 0, 0)
		end
	end
	
	-- Compute tier 3 researches
	if (self.tierLevel >= 3) then
	
		-- Compute commander researches
		if (iLibrarianSquads >= 1) then
			self:DynamicResearch("salamander_librarian_research_2", 3, 75, 40, 0, 0, nil, 0)
		end

		-- Compute secondary researches
		if (iArmyStrength >= 1750) then

			-- Compute commander researches
			if (iCommanderSquads >= 1) then
				self:DynamicResearch("salamander_commander_flaming_hammers_research", 3, 100, 100, 0, 0, nil, 0)
				self:DynamicResearch("salamander_commander_health_research_2", 3, 125, 50, 0, 0, nil, 0)
				self:DynamicResearch("salamander_melta_research_commander", 3, 75, 50, 0, 0, nil, 0)
				self:DynamicResearch("salamander_commander_research_2", 3, 100, 50, 0, 0, "salamander_squad_force_commander", 1)
				local commander_type = math.random(1, 3)
				if commander_type == 1 then
					self:DynamicResearch("salamander_command_vehicle_honours_research", 3, 150, 200, 0, 0, nil, 0)
				elseif commander_type == 2 then
					self:DynamicResearch("salamander_terminator_honours_research", 3, 100, 100, 0, 0, nil, 0)
				else
					self:DynamicResearch("salamander_command_primaris_honours_research", 3, 200, 150, 0, 0, nil, 0)
				end
			end

			-- Build dynamic turrets if available
			self:DynamicBuild("salamander_turret_spec", 4, 3, 90, 45, 0, 0)

			-- Try to build no-limit defensive turrets
			self:DynamicBuild("salamander_turret_bolter_no_limit", 4, 3, 300, 200, 0, 0)

			-- Compute Turret Addons
			if (self:GetBuildingCountByName("salamander_turret_spec") > 2) or (self:GetBuildingCountByName("salamander_turret_bolter_no_limit") > 2) then
				self:DynamicAddon("salamander_turret_no_limit_melta_addon", 50, 2, 50, 0, 0, 0, nil, nil, false)
			end
		end

		-- Compute bonus researches
		if (iArmyStrength >= 2000) then

			-- Compute infantry researches
			if (iInfantrySquads >= 3) then
				self:DynamicResearch("salamander_commander_flaming_swords_research", 3, 100, 100, 0, 0, nil, 0)
				self:DynamicResearch("salamander_artificier_armour_research", 3, 100, 300, 0, 0, nil, 0)
				self:DynamicResearch("salamander_master_crafted_ammo_research", 3, 200, 250, 0, 0, nil, 0)
			end

			-- Compute terminator researches
			self:DynamicResearch("salamander_personalteleporter_research", 3, 75, 125, 0, 0, nil, 0)

			-- Compute primaris researches
			self:DynamicResearch("salamander_advancedjetpacks_research", 3, 50, 100, 0, 0, "salamander_squad_force_commander_primaris", 1)

			-- Build dynamic turrets if available
			self:DynamicBuild("salamander_turret_spec", 5, 3, 90, 45, 0, 0)
		end

		-- Always try to build the independent force commanders of each type 
		if cpu_manager.cpu_player:IsResearchComplete( "salamander_terminator_honours_research" ) then
			local tBuildType = CpuBuildType(); tBuildType.btype = CpuPrerequisites.BT_Squad
			tBuildType.name = "salamander_squad_force_commander_terminator"; self:TryBuild(tBuildType)
		elseif cpu_manager.cpu_player:IsResearchComplete( "salamander_command_primaris_honours_research" ) then
			local tBuildType = CpuBuildType(); tBuildType.btype = CpuPrerequisites.BT_Squad
			tBuildType.name = "salamander_squad_force_commander_primaris"; self:TryBuild(tBuildType)
		elseif cpu_manager.cpu_player:IsResearchComplete( "salamander_command_primaris_honours_research" ) then
			local tBuildType = CpuBuildType(); tBuildType.btype = CpuPrerequisites.BT_Squad
			tBuildType.name = "salamander_squad_land_raider_prometheus"; self:TryBuild(tBuildType)
		end

		-- Force build additional generators in late game if we can with enough requisition and when low on power
                local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
                local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
                if iReq > 400 and iReq/iPow > 1.6 then

                	-- Check if a plan exists
                	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("Generator"))
                    	if (self:PlanExists("Build Building Plan", iBuildingID)) then
                       		return
                    	end

             		-- Check if any generators are in production
                    	for oBuildChannel in build_manager:GetBuildChannelAIs() do
                        	-- Check building ID
                        	if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
                            		return
                        	end
                    	end

             		-- Build a Generator
                    	local tBuildType = CpuBuildType()
                    	tBuildType.btype = CpuPrerequisites.BT_Building
                    	tBuildType.name = self:GetBuildingName("Generator")
                    	if (self:TryBuild( tBuildType )) then
               			aitrace("BuildController: Dynamic build of "..tBuildType.name)
			end
		end
	end

	-- Compute tier 4 researches
	if (self.tierLevel >= 4) then

		-- Compute advanced vehicle researches
		if (iVehicleAdvSquads >= 2) then
			self:DynamicResearch("salamander_extra_armour_research", 4, 200, 250, 0, 0, nil, 0)
		end

		-- Compute commander researches
		if (iLibrarianSquads >= 1) then
			self:DynamicResearch("salamander_librarian_research_3", 4, 90, 50, 0, 0, nil, 0)
		end

		-- Build dynamic turrets if available
		self:DynamicBuild("salamander_turret_spec", 6, 4, 90, 45, 0, 0)


		local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

		-- Compute HQ Tier2 Addons for future HQs
		if (self:GetBuildingCountByName("salamander_hq") > 1 and (iPower >= 500 and iRequisition >= 500)) then
			self:DynamicAddon("salamander_hq_addon_1", 100, 4, 300, 125, 0, 0, nil, nil, false)
		end

		-- Compute HQ Tier3 Addons for future HQs
		if (self:GetBuildingCountByName("salamander_hq") > 1 and (iPower >= 1000 and iRequisition >= 1000)) then
			self:DynamicAddon("salamander_hq_addon_2", 50, 4, 340, 340, 0, 0, nil, nil, false)
		end

		-- Compute HQ Tier4 Addons for future HQs
		if (self:GetBuildingCountByName("salamander_hq") > 1 and (iPower >= 1500 and iRequisition >= 1500)) then
			self:DynamicAddon("salamander_hq_addon_3", 25, 4, 450, 450, 0, 0, nil, nil, false)
		end

		-- Compute additional Turret construction based one additional HQ
		if (self:GetBuildingCountByName("salamander_hq") > 1 and (iPower >= 500 and iRequisition >= 500)) then
			self:DynamicBuild("salamander_turret_spec", 12, 4, 90, 45, 0, 0)
		end

		-- Compute additional Turret construction based on two additional HQs
		if (self:GetBuildingCountByName("salamander_hq") > 2 and (iPower >= 750 and iRequisition >= 750)) then
			self:DynamicBuild("salamander_turret_spec", 18, 4, 90, 45, 0, 0)
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("salamander_turret_bolter_no_limit", 10, 4, 400, 300, 0, 0)
	end

	-- Restrict dynamic builds to hard difficulty or higher
	if (CpuManager.AISettings.bMultiBuildings) then
	
		-- Dynamic buildings
		-- Item-Syntax: BuildingName, BuildingCount, MinTier, MinRequisition, MinPower, MinSquadCap, MinSupportCap
		self:DynamicBuild("salamander_barracks", 2, 3, 500, 200, 0, 0)
		self:DynamicBuild("salamander_barracks", 3, 4, 1000, 400, 0, 0)
		self:DynamicBuild("salamander_vehicle_building", 2, 3, 500, 200, 0, 0)
		self:DynamicBuild("salamander_vehicle_building", 3, 4, 1000, 400, 0, 0)
		self:DynamicBuild("salamander_hq", 2, 3, 700, 300, 0, 0)
		self:DynamicBuild("salamander_hq", 3, 4, 1000, 600, 0, 0)
	end
end

-- Force AI to give priority to re-build HQ if lost and none are present
function SalamanderBuildBaseStrategy:BuildFirstHQ()

	-- Check if a plan exists
	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))
	if (self:PlanExists("Build Building Plan", iBuildingID)) then
		return
	end

	-- Check if any HQ are in production
	for oBuildChannel in build_manager:GetBuildChannelAIs() do

		-- Check building ID
		if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
			return
		end
	end
		
	-- Build the HQ
	local sHQName = self:GetBuildingName("HQ")
	local tBuildType = CpuBuildType()
	tBuildType.btype = CpuPrerequisites.BT_Building
	tBuildType.name = sHQName
	if (self:TryBuild( tBuildType )) then
		aitrace("BuildController: Dynamic build of "..tBuildType.name)
	end
	return
end

-- Force AI to give priority to recruit a builder unit if none are present
function SalamanderBuildBaseStrategy:BuildFirstBuilder(iBuilderName)

	if self:CountSquads(iBuilderName) < 1 then

		-- Recruit a builder squad
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Squad
		tBuildType.name = iBuilderName
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic build of "..tBuildType.name)
		end
		return
	end
end

-- Arkhan 01.2006: Method to check if force tech should be computed
function SalamanderBuildBaseStrategy:ForceTech()

	-- Check time
	if (g_iGMT < 60 * CpuManager.ForceTech.StartTier1) then
		return false
	end
	
	-- Check resources
	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

	-- Check tier
	local iTierLevel = self:GetTierLevel()
	if (iTierLevel == 1) then
	
		-- Check resources
		if (iRequisition > 600 and iPower > 200) then
			return false
		end
		return not self.m_bHQAddon1
		
	elseif (iTierLevel == 2) then

		-- Check current build program
		if (self.m_iCurrentBuildProgram == 2) then

			-- Check build channel for ability building
			if (self:GetBuildingCountByName("salamander_ability_building", false) < 1) then
				return true
			end		
		else
		
			-- Check build channel for machine cult
			if (self:GetBuildingCountByName("salamander_vehicle_building", false) < 1) then
				return true
			end
		end
		
		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier2 and (iRequisition < 600 or iPower < 600)) then
			return true
		end
		
	elseif (iTierLevel == 3) then	

		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier3 and (iRequisition < 600 or iPower < 600)) then
			return true
		end
	end
	return false
end

-- Arkhan 03.2006: Return placement type for buildings
function SalamanderBuildBaseStrategy:GetPlacementType(iBuildingID)
	
	-- Check building
	if (cpu_manager:IsHQ(iBuildingID)) then
		local count = self:GetBuildingCountByName("salamander_hq", false)
		local friend = cpu_manager:FindClosestFriendPlayer()
		if friend == nil then
			-- Lone Player
			if count == 0 and not cpu_manager:HQThreat() then
				return "HQ"
			else
				return "Safeplace"
			end
		else
			-- Has allies
			if count > 0 or cpu_manager:HQThreat() then
				return "HQ"
			else
				return "Safeplace"
			end
		end
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("salamander_barracks") or
			iBuildingID == cpu_manager.stats:GetBuildingID("salamander_vehicle_building")) then
		return "Military"
	elseif (cpu_manager:IsTurret(iBuildingID) or
		iBuildingID == cpu_manager.stats:GetBuildingID("salamander_turret_bolter_no_limit")) then
		return "Front2"
	elseif (cpu_manager:IsMine(iBuildingID)) then
		return "Mine"
	elseif (cpu_manager:IsGenerator(iBuildingID) or
			iBuildingID == cpu_manager.stats:GetBuildingID("salamander_armoury")) then
		return "BaseBack"
	end
	return "Basic"
end
-- Arkhan 03.2006: Inherited method to modify squad demand
function SalamanderBuildBaseStrategy:ModifySquadDemand(iUnitID)

	-- No more apothecaries then squads 
	if (iUnitID == cpu_manager.stats:GetSquadID("salamander_squad_apothecary")) then
		
		-- Check number of attachable squads 
		local apoth_attach = function ( squad_ai )
			return (squad_ai:GetTactic():GetUnitStrength() >= 250 and squad_ai:CanReceiveAttachment())
		end
		local num_attach = self:CountSquads("salamander_squad_scout", skullprobe_attach) +
				   self:CountSquads("salamander_squad_tactical", skullprobe_attach) +
				   self:CountSquads("salamander_squad_sisters", skullprobe_attach) + 
				   self:CountSquads("salamander_squad_vanguard_veterans", skullprobe_attach) +
				   self:CountSquads("salamander_squad_terminator", skullprobe_attach) +
				   self:CountSquads("salamander_squad_terminator_assault", skullprobe_attach)
 
 		-- Check apo count
		local num_apo = self:CountSquads("salamander_squad_apothecary")
		if (num_apo >= num_attach) then
			return 0
		end	
	end

	-- No more hospitallers than squads 
	if (iUnitID == cpu_manager.stats:GetSquadID("salamander_squad_sister_hospitaller")) then
		
		-- Check number of attachable squads 
		local apoth_attach = function ( squad_ai )
			return (squad_ai:GetTactic():GetUnitStrength() >= 250 and squad_ai:CanReceiveAttachment())
		end
		local num_attach = self:CountSquads("salamander_squad_scout", apoth_attach) +
				   self:CountSquads("salamander_squad_tactical", apoth_attach) +
				   self:CountSquads("salamander_squad_vanguard_veterans", apoth_attach) +
				   self:CountSquads("salamander_squad_terminator_assault", apoth_attach) + 
				   self:CountSquads("salamander_squad_terminator", apoth_attach) 
				   self:CountSquads("salamander_squad_terminator_fire_drakes", apoth_attach)  
 		-- Check apo count
		local num_apo = self:CountSquads("salamander_squad_sister_hospitaller")
		if (num_apo >= num_attach) then
			return 0
		end	
	end

	-- No more skullprobes then squads 
	if (iUnitID == cpu_manager.stats:GetSquadID("salamander_squad_skull_probe")) then
		
		-- Check number of attachable squads 
		local skullprobe_attach = function ( squad_ai )
			return (squad_ai:GetTactic():GetUnitStrength() >= 250 and squad_ai:CanReceiveAttachment())
		end
		local num_attach = self:CountSquads("salamander_squad_scout", skullprobe_attach) +
				   self:CountSquads("salamander_squad_tactical", skullprobe_attach) +
				   self:CountSquads("salamander_squad_sisters", skullprobe_attach) + 
				   self:CountSquads("salamander_squad_vanguard_veterans", skullprobe_attach) +
				   self:CountSquads("salamander_squad_terminator", skullprobe_attach) +
				   self:CountSquads("salamander_squad_terminator_assault", skullprobe_attach)
 
 		-- Check skullprobe count
		local num_skuprobe = self:CountSquads("salamander_squad_skull_probe")
		if (2 * num_skuprobe >= num_attach) then
			return 0
		end	
	end
	
	-- Only build rhinos if we've full support cap
	if (iUnitID == cpu_manager.stats:GetSquadID("salamander_squad_rhino")) then
		
		-- Check army strength
		if (cpu_manager:GetArmyStrength() < 4000) then
			return 0
		end
	end

	return BuildBaseStrategy.ModifySquadDemand(self, iUnitID)
end

