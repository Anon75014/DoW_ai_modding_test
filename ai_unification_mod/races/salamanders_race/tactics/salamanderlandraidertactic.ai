class 'SalamanderLandRaiderTactic' (SalamanderVehicleTactic)

SalamanderLandRaider = {}

function SalamanderLandRaiderTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Salamander Land Raider Tactic")
	
	-- Vehicle is a heavy transport
	self.m_iTransportVehicle = 2
	self.m_iTransportSlots = 1
end

function SalamanderLandRaiderTactic:InitAbilities()

	-- Init ability ID's
	if (SalamanderLandRaider.spirit_id == nil) then
		SalamanderLandRaider.spirit_id = cpu_manager.stats:GetAbilityID( "salamander_machine_spirit" )
	end

	if (SalamanderLandRaider.smoke_id == nil) then
		SalamanderLandRaider.smoke_id = cpu_manager.stats:GetAbilityID( "salamander_smoke_launchers_landraider" )	
	end
end

function SalamanderLandRaiderTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(SalamanderLandRaider.spirit_id)) then
			self.squad_ai:DoSpecialAbility(SalamanderLandRaider.spirit_id)
		end	  
	end

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(SalamanderLandRaider.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(SalamanderLandRaider.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(SalamanderLandRaider.smoke_id, oUnit:GetSquad())
		end
	end
	
	-- Do basic abilities
	SalamanderVehicleTactic.DoAbilities(self)
end