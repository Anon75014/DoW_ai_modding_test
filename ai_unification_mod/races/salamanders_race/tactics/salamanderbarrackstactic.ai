class 'SalamanderBarracksTactic' (BaseTactic)

function SalamanderBarracksTactic:__init( base_ai ) super( base_ai )

	self:SetName("Salamander Barracks Tactic")

	self.m_iArmouryID = cpu_manager.stats:GetBuildingID("salamander_armoury")
end

function SalamanderBarracksTactic:CanDeepStrikeTroops()
	return (cpu_manager.player_stats:GetNumBasesByBPID(self.m_iArmouryID, true) > 0)
end