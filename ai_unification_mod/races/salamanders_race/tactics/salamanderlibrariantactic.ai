class 'SalamanderLibrarianTactic' (SalamanderInfantryTactic)

SalamanderLibrarian = {}

function SalamanderLibrarianTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Salamander Librarian Tactic")
	self.heart = false
end

function SalamanderLibrarianTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function SalamanderLibrarianTactic:IsDefender()
	return self:IsCommanderDefender()
end

function SalamanderLibrarianTactic:InitAbilities()

	-- Init ability ID's
	if (SalamanderLibrarian.furnace == nil) then
		SalamanderLibrarian.furnace = cpu_manager.stats:GetAbilityID( "salamander_heart_of_the_furnace" )
	end

	if (SalamanderLibrarian.anvil == nil) then
		SalamanderLibrarian.anvil= cpu_manager.stats:GetAbilityID( "salamander_vulkans_anvil" )
	end

	if (SalamanderLibrarian.fury == nil) then
		SalamanderLibrarian.fury = cpu_manager.stats:GetAbilityID( "salamander_fury_of_the_salamanders" )
	end

	if (SalamanderLibrarian.nocturne == nil) then
		SalamanderLibrarian.nocturne = cpu_manager.stats:GetAbilityID( "salamander_nocturnes_fury" )
	end

	if (SalamanderLibrarian.burn == nil) then
		SalamanderLibrarian.burn = cpu_manager.stats:GetAbilityID( "salamander_let_it_burn_survival" )
	end
end

function SalamanderLibrarianTactic:DoAbilities()
	
	if (self.squad_ai:GetHealthPercentage() > 0.4 and self.squad_ai:IsInCombat() and not self.heart) then
		self.squad_ai:DoSpecialAbility(SalamanderLibrarian.furnace )
		self.heart = true
	
	elseif (self.heart and self.squad_ai:GetHealthPercentage() < 0.4) then
		-- Turn off ability
		self.squad_ai:DoSpecialAbility(SalamanderLibrarian.furnace )
		self.heart = false
	end

	if (self.squad_ai:WasRecentlyHurt()) then
		Ability.DoAbility( self.squad_ai, SalamanderLibrarian.anvil, Ability.Filters.IsInCombat )
	end
	
	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityPos( self.squad_ai, SalamanderLibrarian.furnace, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityPos( self.squad_ai, SalamanderLibrarian.fury, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityPos( self.squad_ai, SalamanderLibrarian.nocturne, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityPos( self.squad_ai, SalamanderLibrarian.anvil, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, SalamanderLibrarian.burn, Ability.Filters.CloseEnemy, 3 )
	else
		Ability.DoAbilityPos( self.squad_ai, SalamanderLibrarian.furnace, Ability.Filters.CloseInfantryEnemy, 8 )
		Ability.DoAbilityPos( self.squad_ai, SalamanderLibrarian.fury, Ability.Filters.CloseInfantryEnemy, 8 )
		Ability.DoAbilityPos( self.squad_ai, SalamanderLibrarian.nocturne, Ability.Filters.CloseInfantryEnemy, 8 )
		Ability.DoAbilityPos( self.squad_ai, SalamanderLibrarian.anvil, Ability.Filters.CloseInfantryEnemy, 8 )
		Ability.DoAbilityTarget( self.squad_ai, SalamanderLibrarian.burn, Ability.Filters.CloseEnemy, 6 )
	end
end

function SalamanderLibrarianTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
    	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end
end
