class 'SalamanderForceCommanderPrimTactic' (SalamanderInfantryTactic)

SalamanderForceCommander = {}

function SalamanderForceCommanderPrimTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Salamander Force Commander Tactic")
end

-- Assassinate win condition -- never attack
function SalamanderForceCommanderPrimTactic:IsAttacker()
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function SalamanderForceCommanderPrimTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

function SalamanderForceCommanderPrimTactic:InitAbilities()

	-- Init ability ID's
	if (SalamanderForceCommander.orbital_b == nil) then
		SalamanderForceCommander.orbital_b = cpu_manager.stats:GetAbilityID( "salamander_orbital_bombardment" )
	end
	if (SalamanderForceCommander.battlecry == nil) then
		SalamanderForceCommander.battlecry = cpu_manager.stats:GetAbilityID( "salamander_to_the_last_man" )
	end
end

function SalamanderForceCommanderPrimTactic:DoAbilities()

	-- Try to use battlecry
	Ability.DoAbility( self.squad_ai, SalamanderForceCommander.battlecry, Ability.Filters.IsInCombat )
	
	-- Try to use orbital bombardement
	Ability.DoAbilityPos(self.squad_ai, SalamanderForceCommander.orbital_b, Ability.Filters.CloseEnemy, 24)
	Ability.DoAbilityPos(self.squad_ai, SalamanderForceCommander.orbital_b, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
end

function SalamanderForceCommanderPrimTactic:Reinforce()

	-- Allow free reinforcing during harassing time
	if (g_iGMT > DefendChokePointPlan.HarassingTime * 60) then

		-- If there are no resources available, don't upgrade!
		if (not Tactic.Options.can_reinforce) then
			return
		end
	end

	if (not self.squad_ai:IsReinforcing()) then

		-- Always try for the actual Primaris Commander first
		if (self.squad_ai:CanReinforce( false, 0 )) then
			self.squad_ai:DoReinforce( false, 0 )
			return
		end

		-- Try for different configurations of 2 random leaders
		local index = math.random(0,3)
		if self.squad_ai:CanReinforce( true, index ) then
			self.squad_ai:DoReinforce( true, index )
		end
	end
end

function SalamanderForceCommanderPrimTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
end
