class 'SalamanderForceCommanderTactic' (SalamanderInfantryTactic)

SalamanderForceCommander = {}

function SalamanderForceCommanderTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Salamander Force Commander Tactic")
end

-- Assassinate win condition -- never attack
function SalamanderForceCommanderTactic:IsAttacker()
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function SalamanderForceCommanderTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

function SalamanderForceCommanderTactic:InitAbilities()

	-- Init ability ID's
	if (SalamanderForceCommander.orbital_b == nil) then
		SalamanderForceCommander.orbital_b = cpu_manager.stats:GetAbilityID( "salamander_orbital_bombardment" )
	end
	if (SalamanderForceCommander.battlecry == nil) then
		SalamanderForceCommander.battlecry = cpu_manager.stats:GetAbilityID( "salamander_to_the_last_man" )
	end
end

function SalamanderForceCommanderTactic:DoAbilities()

	-- Try to use battlecry
	Ability.DoAbility( self.squad_ai, SalamanderForceCommander.battlecry, Ability.Filters.IsInCombat )
	
	-- Try to use orbital bombardement
	Ability.DoAbilityPos(self.squad_ai, SalamanderForceCommander.orbital_b, Ability.Filters.CloseEnemy, 24)
	Ability.DoAbilityPos(self.squad_ai, SalamanderForceCommander.orbital_b, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
end

function SalamanderForceCommanderTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Assassinate win condition -- never attach to a squad
    if (not cpu_manager.assassinate and self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                self:TryAttachSquadMelee()
            end
        end
    end
end
