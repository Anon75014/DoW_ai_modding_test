class 'SalamanderThunderCannonTactic' (SalamanderVehicleTactic)

function SalamanderThunderCannonTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Salamander ThunderCannon Tactic")
		
	-- Vehicle needs to not be too aggressive
	self.m_bRecover = true
end

function SalamanderThunderCannonTactic:IsAttacker()
	return not self.m_bRecover
end

function SalamanderThunderCannonTactic:IsDefender()
	return not self.m_bRecover
end

function SalamanderThunderCannonTactic:Update()

    if (self:IsComplete()) then
        return
    end

    -- State machine
    if (not VehicleTactic.Update(self)) then
        return
    end

    -- Check health
    if (self.squad_ai:GetHealthPercentage() < 0.6) then
    	self.m_bRecover = true
    elseif (self.squad_ai:GetHealthPercentage() > 0.8) then
		self.m_bRecover = false
    end
end