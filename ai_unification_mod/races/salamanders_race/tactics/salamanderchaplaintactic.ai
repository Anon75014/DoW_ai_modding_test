class 'SalamanderChaplainTactic' (SalamanderInfantryTactic)

SalamanderChaplain = {}

function SalamanderChaplainTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Salamander Chaplain Tactic")
end

function SalamanderChaplainTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function SalamanderChaplainTactic:IsDefender()
	return self:IsCommanderDefender()
end

function SalamanderChaplainTactic:InitAbilities()

	-- Init ability ID's
	if (SalamanderChaplain.demoralize == nil) then
		SalamanderChaplain.demoralize = cpu_manager.stats:GetAbilityID( "salamander_demoralize" )
	end
end

function SalamanderChaplainTactic:DoAbilities()
	
	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget( self.squad_ai, SalamanderChaplain.demoralize, Ability.Filters.CloseInfantryEnemy, 4 )
	else
		Ability.DoAbilityTarget( self.squad_ai, SalamanderChaplain.demoralize, Ability.Filters.CloseInfantryEnemy, 8 )
	end
end

function SalamanderChaplainTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier2+
    if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                self:TryAttachSquadMelee()
            end
        end
    end
end

