class 'SalamanderApothecaryTactic' (SalamanderInfantryTactic)

SalamanderApothecary = {}

function SalamanderApothecaryTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Salamander Apothecary Tactic")
end

function SalamanderApothecaryTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function SalamanderApothecaryTactic:IsDefender()
	return self:IsCommanderDefender()
end

function SalamanderApothecaryTactic:Update()

   if self:IsComplete() then
      return
   end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

   --attach to squad
   self:TryAttachSquad( false, false, 1000, 200, nil )
	
end


