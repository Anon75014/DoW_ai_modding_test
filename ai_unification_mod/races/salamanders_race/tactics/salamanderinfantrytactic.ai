class 'SalamanderInfantryTactic' (InfantryTactic)

function SalamanderInfantryTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Salamander Infantry Tactic")
	
	-- Set infantry options
	local sSquadName = squad_ai:GetSquadName()
	if (sSquadName == "salamander_squad_scout" or
		sSquadName == "salamander_squad_apothecary" or
		sSquadName == "salamander_squad_sister_hospitaller" or
		sSquadName == "salamander_squad_banner_bearer" or
		sSquadName == "salamander_squad_force_commander" or
		sSquadName == "salamander_squad_librarian" or
		sSquadName == "salamander_squad_librarian_survival" or
		sSquadName == "salamander_squad_chaplain") then
		
		-- Squads are transportable
		self.m_iTransportable = 1	-- Rhino / Razorback
		
	elseif (sSquadName == "salamander_squad_tactical" or
			sSquadName == "salamander_squad_sisters" or
			sSquadName == "salamander_squad_primaris_infernus" or
			sSquadName == "salamander_squad_primaris_eradicator" or
			sSquadName == "salamander_squad_sternguard_veterans" or
			sSquadName == "salamander_squad_vanguard_veterans") then
		
		-- Squads are transportable and able to deepstrike	
		self.m_iTransportable = 1	-- Rhino / Razorback
		self.m_iDeepStrikeBlueprintID = cpu_manager.stats:GetBuildingID("salamander_orbital_relay")
		
	elseif (sSquadName == "salamander_squad_primaris_aggressor" or
			sSquadName == "salamander_squad_terminator" or
			sSquadName == "salamander_squad_terminator_fire_drakes" or
			sSquadName == "salamander_squad_terminator_assault" or
			sSquadName == "salamander_squad_terminator_fire_drakes" or
			sSquadName == "salamander_squad_force_commander_terminator") then
		
		-- Squads are transportable and able to deepstrike	
		self.m_iTransportable = 2	-- Land Raiders
		self.m_iDeepStrikeBlueprintID = cpu_manager.stats:GetBuildingID("salamander_barracks")
	end
end

function SalamanderInfantryTactic:AddTargetAbilities()
	table.insert(InfantryTactic.TargetAbilities, { nil, "salamander_melta_bombs", Ability.Filters.CloseVehicleEnemy, 1, 0 })
	table.insert(InfantryTactic.TargetAbilities, { nil, "salamander_phosphor_grenades", Ability.Filters.CloseSquadEnemy, 1, 0 })
	table.insert(InfantryTactic.TargetAbilities, { nil, "salamander_phosphor_grenades_sisters", Ability.Filters.CloseSquadEnemy, 1, 0 })
end

function SalamanderInfantryTactic:AddCommanders()
	table.insert(self.commander, { "salamander_squad_force_commander", true })
	table.insert(self.commander, { "salamander_squad_force_commander_terminator", true })
	table.insert(self.commander, { "salamander_squad_force_commander_primaris", true })
	table.insert(self.commander, { "salamander_squad_librarian", false })
	table.insert(self.commander, { "salamander_squad_librarian_survival", false })
	table.insert(self.commander, { "salamander_squad_chaplain", false })
end

function SalamanderInfantryTactic:DoAbilities()

	-- I might have these attached
	if (self.squad_ai:IsAttached()) then
	
		if (self.squad_ai:HasSquadAttached("salamander_squad_force_commander")) then
			SalamanderForceCommanderTactic.InitAbilities( self )
			SalamanderForceCommanderTactic.DoAbilities( self )
		elseif (self.squad_ai:HasSquadAttached("salamander_squad_force_commander_terminator")) then
			SalamanderForceCommanderTermiTactic.InitAbilities( self )
			SalamanderForceCommanderTermiTactic.DoAbilities( self )
		elseif (self.squad_ai:HasSquadAttached("salamander_squad_chaplain")) then
			SalamanderChaplainTactic.InitAbilities( self )
			SalamanderChaplainTactic.DoAbilities( self )
		elseif (self.squad_ai:HasSquadAttached("salamander_squad_librarian")) or (self.squad_ai:HasSquadAttached("salamander_squad_librarian_survival")) then
			SalamanderLibrarianTactic.InitAbilities( self )
			SalamanderLibrarianTactic.DoAbilities( self )
		end
	end
	
	-- Call basic DoAbilities methods
	InfantryTactic.DoAbilities(self)
end

function SalamanderInfantryTactic:CheckForBroken()

	if (self.squad_ai:IsBroken()) then
	
		-- Check if I can repair my morale
		local rally_id = cpu_manager.stats:GetAbilityID( "salamander_rally" )
		if (self.squad_ai:CanDoAbility( rally_id )) then
			self.squad_ai:DoSpecialAbility( rally_id )
		end
	end
	
	-- Call basic broken check method
	InfantryTactic.CheckForBroken(self)
end

function SalamanderInfantryTactic:CheckDance(oSquad)

	-- Check opponent
	if (oSquad == nil) then
		return false
	end
	
	-- Compare opponents
	local sSquadName = self.squad_ai:GetSquadName()
	if (sSquadName == "salamander_squad_tactical" or sSquadName == "salamander_squad_terminator") then
		
		-- Check opponent
		if (oSquad:GetSquadName() == "chaos_squad_cultist") then
			return false
		end
	end
	return true
end

function SalamanderInfantryTactic:Upgrade()

	-- Check if we have free ressources
	if (not Tactic.Options.can_reinforce) then
		return
	end
	
	-- If I am broken, don't upgrade!
	if (self:IsAffectedByMorale() and self.squad_ai:IsBroken()) then
		return
	end
	
	-- Don't upgrade salamander squads with less than 4 troopers
	if (self.squad_ai:GetSquadName() == "salamander_squad_tactical" and self.squad_ai:GetNumTroopers() < 4) then
		return
	end
	
	if (not self.squad_ai:IsReinforcing() and self.squad_ai:HasUpgradableTrooper() and self.squad_ai:GetNumTroopers() > 3) then
		
		-- Figure out my enemy's favourite class
		local enemy = cpu_manager:FindClosestEnemyPlayer()
		if (enemy == nil) then
			return
		end
		local class_type = enemy:GetMajorityClassType()
		
		-- Larkins hard counter upgrade for HeavyInfantryMed 
		if (class_type < UnitStatsAI.UC_HeavyInfantryMed) then	  
		  
			local enemy_race = enemy:GetPlayerRaceName()
			if (enemy_race == "space_marine_race" or enemy_race == "chaos_marine_race" or enemy_race == "necron_race" or enemy_race == "salamanders_race") then
		    	class_type = UnitStatsAI.UC_HeavyInfantryMed
		  	end
		end
		
		-- Do best upgrade
		self.squad_ai:DoBestUpgrade(class_type)
	end
end