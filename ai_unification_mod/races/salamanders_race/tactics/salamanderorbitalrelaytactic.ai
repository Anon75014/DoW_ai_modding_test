class 'SalamanderOrbitalRelayTactic' (BaseTactic)

function SalamanderOrbitalRelayTactic:__init( base_ai ) super( base_ai )

	self:SetName("Salamander Orbital Relay Tactic")

	self.m_iArmouryID = cpu_manager.stats:GetBuildingID("salamander_armoury")
end

function SalamanderOrbitalRelayTactic:CanDeepStrikeTroops()
	return (cpu_manager.player_stats:GetNumBasesByBPID(self.m_iArmouryID, true) > 0)
end