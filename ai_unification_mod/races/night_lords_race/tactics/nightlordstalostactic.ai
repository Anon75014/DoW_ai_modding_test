class 'NightLordsTalosTactic' (NightLordsInfantryTactic)

NightLordsTalos = {}

function NightLordsTalosTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("NightLords Talos Tactic")

	self.m_oTimedSpecialAbilities = Timer( NightLordsTalosTactic.DoTimedSpecialAbilities, self, 7 )
end

function NightLordsTalosTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function NightLordsTalosTactic:IsDefender()
	return self:IsCommanderDefender()
end

function NightLordsTalosTactic:InitAbilities()

	-- Init ability ID's
	if (NightLordsTalos.premonition_id == nil) then
		NightLordsTalos.premonition_id = cpu_manager.stats:GetAbilityID( "night_lords_premonition" )
	end

	if (NightLordsTalos.prophecy_id == nil) then
		NightLordsTalos.prophecy_id = cpu_manager.stats:GetAbilityID( "night_lords_prophecy" )
	end

	if (NightLordsTalos.future_id == nil) then
		NightLordsTalos.future_id = cpu_manager.stats:GetAbilityID( "night_lords_talos_future" )
	end

	if (NightLordsTalos.gel_id == nil) then
		NightLordsTalos.gel_id = cpu_manager.stats:GetAbilityID( "night_lords_explosive_gel" )
	end
end

function NightLordsTalosTactic:DoAbilities()
	
	if (self.squad_ai:IsInCombat() and not self.squad_ai:IsCapturing() and not self.squad_ai:IsBroken()) then
	  
		-- Enable premonition ability to increase fighting power if infantry enemies are close.
		local iPos = self.squad_ai:GetPosition()
		local oTarget = Ability.Filters.CloseInfantryEnemy(iPos, 15, 1)
		if oTarget ~= nil and oTarget:IsValid() then

			-- Check if I can use premonition while stationary
			if (not self:IsMoving()) then
				if (self.squad_ai:CanDoAbility( NightLordsTalos.premonition_id )) then
					self.squad_ai:DoSpecialAbility( NightLordsTalos.premonition_id )
				end
			end
		end		
	end

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

		if (self.squad_ai:CanDoAbility( NightLordsTalos.prophecy_id )) then
			Ability.DoAbilityTarget( self.squad_ai, NightLordsTalos.prophecy_id, Ability.Filters.CloseInfantryEnemy, 4 )
			Ability.DoAbilityTarget( self.squad_ai, NightLordsTalos.prophecy_id, Ability.Filters.CloseMonsterEnemy, 2 )
			Ability.DoAbilityTarget( self.squad_ai, NightLordsTalos.prophecy_id, Ability.Filters.CloseCommanderEnemy, 1 )
		end
	else
		if (self.squad_ai:CanDoAbility( NightLordsTalos.prophecy_id )) then
			Ability.DoAbilityTarget( self.squad_ai, NightLordsTalos.prophecy_id, Ability.Filters.CloseInfantryEnemy, 8 )
			Ability.DoAbilityTarget( self.squad_ai, NightLordsTalos.prophecy_id, Ability.Filters.CloseMonsterEnemy, 3 )
			Ability.DoAbilityTarget( self.squad_ai, NightLordsTalos.prophecy_id, Ability.Filters.CloseCommanderEnemy, 1 )
		end
	end

	if (self.m_oTimedSpecialAbilities ~= nil) then
		self.m_oTimedSpecialAbilities:Call()
	else
		NightLordsTalosTactic.DoTimedSpecialAbilities(self)
	end
end

function NightLordsTalosTactic:DoTimedSpecialAbilities()

	-- Try to use detection ability
	if (self.squad_ai:CanDoAbility(NightLordsTalos.future_id)) then
    
    		-- Check for infiltrated enemy
        	local oEnemy = Ability.Filters.CloseInfiltratedEnemy(self.squad_ai:GetPosition(), 35, 1)
        	if (oEnemy ~= nil) then

        		-- Get distance to enemy unit
            		local vSquadPos = self.squad_ai:GetPosition()
            		local vEnemyPos = oEnemy:GetPosition()
            		local iDistance = distance(vSquadPos, vEnemyPos)
            
            		-- If target is too far away launch auspex in range
            		local vTargetPos = Vector3f(vSquadPos)
            		local iRange = self.squad_ai:GetAbilityRange(NightLordsTalos.future_id)
            		if (iDistance > iRange) then
                		local fThrowFactor = iRange / iDistance
                		vTargetPos.x = vTargetPos.x + (vEnemyPos.x - vSquadPos.x) * fThrowFactor
                		vTargetPos.z = vTargetPos.z + (vEnemyPos.z - vSquadPos.z) * fThrowFactor
           	 	else
                		vTargetPos = Vector3f(vEnemyPos)
			end
            		self.squad_ai:DoSpecialAbilityPos(NightLordsTalos.future_id, vTargetPos)
        	end
    	end

	-- Try to use explosive gel ability
	if (self.squad_ai:CanDoAbility(NightLordsTalos.gel_id)) then
    
    		-- Check for infiltrated enemy
		local oEnemy = Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), 25, 1)
		if (oEnemy ~= nil) then

        		-- Get distance to enemy unit
            		local vSquadPos = self.squad_ai:GetPosition()
            		local vEnemyPos = oEnemy:GetPosition()
            		local iDistance = distance(vSquadPos, vEnemyPos)
            
           		 -- If target is too far away launch explosive gel in range
            		local vTargetPos = Vector3f(vSquadPos)
            		local iRange = self.squad_ai:GetAbilityRange(NightLordsTalos.gel_id)
            		if (iDistance > iRange) then
                		local fThrowFactor = iRange / iDistance
                		vTargetPos.x = vTargetPos.x + (vEnemyPos.x - vSquadPos.x) * fThrowFactor
                		vTargetPos.z = vTargetPos.z + (vEnemyPos.z - vSquadPos.z) * fThrowFactor
            		else
                		vTargetPos = Vector3f(vEnemyPos)
			end
            		self.squad_ai:DoSpecialAbilityPos(NightLordsTalos.gel_id, vTargetPos)
		end
    	end
end

function NightLordsTalosTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier2+
    	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end

	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end