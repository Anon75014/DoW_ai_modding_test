class 'NightLordsHQTactic' (BaseTactic)

NightLordsHQ = {}

function NightLordsHQTactic:__init( base_ai ) super( base_ai )

	self:SetName("Night Lords HQ Tactic")
end

function NightLordsHQTactic:InitAbilities()

	-- Init ability ID's
	if (NightLordsHQ.airstrike_id == nil) then
		NightLordsHQ.airstrike_id = cpu_manager.stats:GetAbilityID( "night_lords_terror_airstrike" )
	end
end

function NightLordsHQTactic:DoAbilities()

	-- Try to activate the "Terror Strike" ability against the attacking enemy
	if (self.base_ai:CanDoAbility(NightLordsHQ.airstrike_id)) then
	
		local iRange = self.base_ai:GetAbilityRange(NightLordsHQ.airstrike_id)
		local oSquad = Ability.Filters.CloseEnemy(self.base_ai:GetPosition(), iRange, 4)
		if (oSquad ~= nil) then
			
			-- Only try to use when enemy is attacking
			if (oSquad:IsAttacking()) then
				self.base_ai:DoSpecialAbilitySquad(NightLordsHQ.airstrike_id, oSquad:GetSquad())
			end
		end
	end
end
