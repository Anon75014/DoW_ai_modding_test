class 'NightLordsOrbitalRelayTactic' (BaseTactic)

function NightLordsOrbitalRelayTactic:__init( base_ai ) super( base_ai )

	self:SetName("Night Lords Orbital Relay Tactic")

	self.m_iArmouryID = cpu_manager.stats:GetBuildingID("night_lords_armoury")
end

function NightLordsOrbitalRelayTactic:CanDeepStrikeTroops()
	return (cpu_manager.player_stats:GetNumBasesByBPID(self.m_iArmouryID, true) > 0)
end