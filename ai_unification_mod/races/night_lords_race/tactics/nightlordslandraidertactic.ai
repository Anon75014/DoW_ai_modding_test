class 'NightLordsLandRaiderTactic' (NightLordsVehicleTactic)

NightLordsLandRaider = {}

function NightLordsLandRaiderTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Night Lords Land Raider Tactic")
	
	-- Vehicle is a heavy transport
	self.m_iTransportVehicle = 2
	self.m_iTransportSlots = 1
end

function NightLordsLandRaiderTactic:InitAbilities()

	-- Init ability ID's
	if (NightLordsLandRaider.infernal_id == nil) then
		NightLordsLandRaider.infernal_id = cpu_manager.stats:GetAbilityID( "night_lords_infernal_device" )
	end

	if (NightLordsLandRaider.smoke_id == nil) then
		NightLordsLandRaider.smoke_id = cpu_manager.stats:GetAbilityID( "night_lords_smoke_launchers" )	
	end
end

function NightLordsLandRaiderTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(NightLordsLandRaider.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(NightLordsLandRaider.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(NightLordsLandRaider.smoke_id, oUnit:GetSquad())
		end
	end

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(NightLordsLandRaider.infernal_id)) then
			self.squad_ai:DoSpecialAbility(NightLordsLandRaider.infernal_id)
		end	  
	end
	
	-- Do basic abilities
	NightLordsVehicleTactic.DoAbilities(self)
end