class 'NightLordsRaptorScoutTactic' (NightLordsInfantryTactic)

NightLordsRaptorScout = {}

function NightLordsRaptorScoutTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Night Lords Raptor Scout Tactic")
end

function NightLordsRaptorScoutTactic:InitAbilities()

	-- Init ability ID's
	if (NightLordsRaptorScout.speed_id == nil) then
		NightLordsRaptorScout.speed_id = cpu_manager.stats:GetAbilityID( "night_lords_speed_fiend" )	
	end

	if (NightLordsRaptorScout.rage_id == nil) then
		NightLordsRaptorScout.rage_id = cpu_manager.stats:GetAbilityID( "night_lords_furious_rage" )	
	end

	if (NightLordsRaptorScout.torment_id == nil) then
		NightLordsRaptorScout.torment_id = cpu_manager.stats:GetAbilityID( "night_lords_net_tosser" )
	end
end

function NightLordsRaptorScoutTactic:DoAbilities()

	if (self.squad_ai:IsInCombat() and not self.squad_ai:IsCapturing() and not self.squad_ai:IsBroken()) then
	  
		-- Check if I can go berserk while stationary
		if (not self:IsMoving()) then

			if (self.squad_ai:CanDoAbility( NightLordsRaptorScout.rage_id )) then
				self.squad_ai:DoSpecialAbility( NightLordsRaptorScout.rage_id )
			end
		end		
	end

	-- Check if jump squad can speed up with boost
	if ((not self.squad_ai:IsInCombat() and self.squad_ai:IsInStateMove()) or self.stateID ~= Tactic.StateID.NoState) then
		
		if (self.squad_ai:CanDoAbility( NightLordsRaptorScout.speed_id )) then
			self.squad_ai:DoSpecialAbility( NightLordsRaptorScout.speed_id )
		end
	end

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

		Ability.DoAbilityTarget( self.squad_ai, NightLordsRaptorScout.torment_id, Ability.Filters.CloseEnemy, 4 ) 
	else
		Ability.DoAbilityTarget( self.squad_ai, NightLordsRaptorScout.torment_id, Ability.Filters.CloseEnemy, 8 )

	end

	-- Call basic DoAbilities methods
	NightLordsInfantryTactic.DoAbilities(self)
end

function NightLordsRaptorScoutTactic:Reinforce()

	-- Check if we are reinforcing
	if (self.squad_ai:IsReinforcing()) then
		return
	end
	
	-- If I am broken, don't upgrade!
	if (self:IsAffectedByMorale() and self.squad_ai:IsBroken()) then
		return
	end
	
	-- Don't reinforce squads in critical condition
	if (self.squad_ai:GetNumTroopers() <= self.squad_ai:GetMaxTroopers() / 3 and self.squad_ai:IsUnderAttack()) then
		return
	end

	-- Always try to get the leader first
	if (self.squad_ai:CanReinforce(true, 0)) then
		self.squad_ai:DoReinforce(true, 0)
		return
	end

	-- Always try to reinforce, as long as I have money
	if (self.squad_ai:CanReinforce( false, 0 ) and self.squad_ai:HasLeader() and cpu_manager:GetTierLevel() >= 1) then
		self.squad_ai:DoReinforce( false, 0 )
	end
end