class 'NightLordsPossessedSquadTactic' (NightLordsInfantryTactic)

NightLordsPossessedSquad = {}

function NightLordsPossessedSquadTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Night Lords Possessed Squad Tactic")
end

function NightLordsPossessedSquadTactic:InitAbilities()

	-- Init ability ID's
	if (NightLordsPossessedSquad.surge == nil) then
		NightLordsPossessedSquad.surge = cpu_manager.stats:GetAbilityID( "night_lords_torture_fury_possessed" )
	end
end

function NightLordsPossessedSquadTactic:DoAbilities()

	local squad_pos = self.squad_ai:GetPosition()
	if (((self.squad_ai:IsInCombat() and Ability.Filters.CloseEnemy( squad_pos, 20, 1 ) == nil) or
	   	self.squad_ai:IsBroken()) and self.squad_ai:GetHealthPercentage() > 0.8 and self:IsMoving()) then 
		if (self.squad_ai:CanDoAbility(NightLordsPossessedSquad.surge)) then
			self.squad_ai:DoSpecialAbility(NightLordsPossessedSquad.surge)
		end
	end
end
