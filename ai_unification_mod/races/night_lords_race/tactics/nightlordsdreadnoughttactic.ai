class 'NightLordsDreadnoughtTactic' (NightLordsVehicleTactic)

NightLordsDreadnought = {}

function NightLordsDreadnoughtTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dreadnought Tactic")

	-- Check dreadnought count
	if (NightLordsDreadnought.iCount == nil) then
		NightLordsDreadnought.iCount = 1
	else
		NightLordsDreadnought.iCount = NightLordsDreadnought.iCount + 1
	end
	
	-- Set update flag
	self.m_bUpgrade = (math.mod(NightLordsDreadnought.iCount, 2) == 0)
end

function NightLordsDreadnoughtTactic:InitAbilities()

	-- Init ability ID's
	if (NightLordsDreadnought.smoke_id == nil) then
		NightLordsDreadnought.smoke_id = cpu_manager.stats:GetAbilityID( "night_lords_smoke_launchers" )	
	end
end

function NightLordsDreadnoughtTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(NightLordsDreadnought.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(NightLordsDreadnought.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(NightLordsDreadnought.smoke_id, oUnit:GetSquad())
		end
	end

	-- Call standard method
	--NightLordsVehicleTactic.DoAbilities(self)
end

function NightLordsDreadnoughtTactic:Upgrade()

	-- Check upgrade flag
	if (not self.m_bUpgrade) then
		return
	end
	
	-- Compute standard upgrade
	VehicleTactic.Upgrade(self)
end
