class 'NightLordsRazorbackTactic' (NightLordsVehicleTactic)

NightLordsRazorback = {}

function NightLordsRazorbackTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("NightLords Razorback Tactic")
	
	-- Vehicle is a light transport
	self.m_iTransportVehicle = 1
	self.m_iTransportSlots = 1
end

function NightLordsRazorbackTactic:InitAbilities()

	-- Init ability ID's
	if (NightLordsRazorback.smoke_id == nil) then
		NightLordsRazorback.smoke_id = cpu_manager.stats:GetAbilityID( "night_lords_smoke_launchers" )	
	end
end

function NightLordsRazorbackTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(NightLordsRazorback.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(NightLordsRazorback.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(NightLordsRazorback.smoke_id, oUnit:GetSquad())
		end
	end

	-- Call standard method
	NightLordsVehicleTactic.DoAbilities(self)
end

function NightLordsRazorbackTactic:Upgrade()

	local class_type = cpu_manager:FindClosestEnemyPlayer():GetMajorityClassType()
		self.squad_ai:DoBestUpgrade( class_type )
end
