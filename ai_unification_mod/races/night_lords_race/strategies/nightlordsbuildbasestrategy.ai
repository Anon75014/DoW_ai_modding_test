function NightLordsBuildBaseStrategy:UpdateTierLevel()

	-- Reset tier level
	self.tierLevel = 1
	
	-- Prepare
	local iHQAddon1ID = cpu_manager.stats:GetAddOnID("night_lords_hq_addon_1")
	local iHQAddon2ID = cpu_manager.stats:GetAddOnID("night_lords_hq_addon_2")
	local oStats = cpu_manager.stats:GetPlayerStatsFromID( cpu_manager.player_id )
	
	-- Check HQ's for addons
	for oBase in oStats:GetBases() do
	
		-- Check for valid building
		if (oBase:IsValid() and not oBase:IsListeningPost()) then

			-- Check for HQ addon 2
			if (oBase:HasAddOn(iHQAddon2ID)) then
			
				-- We still have the proper add-on
				if (cpu_manager.cpu_player:IsResearchComplete("night_lords_heavy_armor_deployment")) then
					self.tierLevel = 4
					return
				else
					self.tierLevel = 3
					return
				end
			
			-- Check for HQ addon 1
			elseif (oBase:HasAddOn(iHQAddon1ID)) then
				self.tierLevel = 2
			end
		end
	end
end

function NightLordsBuildBaseStrategy:BuildFlexible()

	-- Always test first to see if there is at least one existing HQ
	if self:GetBuildingCountByName(self:GetBuildingName("HQ")) < 1 then
     		self:BuildFirstHQ()
	end

	-- Always test first to see if there is at least one existing builder unit
	self:BuildFirstBuilder("night_lords_squad_serf")

	-- Dynamic research item syntax: ResearchName, MinTier, RequisitionCost, PowerCost, MinSquadCap, MinSupportCap, SquadName, SquadMinCount
	local iArmyStrength = cpu_manager:GetArmyStrength()
	local iInfantrySquads = self:CountSquads("night_lords_squad_raptor_scout") + self:CountSquads("night_lords_squad_marine") + self:CountSquads("night_lords_squad_raptor") + self:CountSquads("night_lords_squad_havoc") + self:CountSquads("night_lords_squad_chosen_raptor")
	local iCommanderSquads = self:CountSquads("night_lords_squad_lord") + self:CountSquads("night_lords_squad_talonmaster") + self:CountSquads("night_lords_squad_mawdrym_llansahai") 
	
	-- Compute tier 1 researches
	if (self.tierLevel >= 1) then
		
		-- Compute infantry researches
		if (self:CountSquads("night_lords_squad_marine") >= 2) or (self:CountSquads("night_lords_squad_havoc") >= 1) then 
			self:DynamicResearch("night_lords_frag_grenade_research", 1, 25, 75, 0, 0, nil, 0)
		end
		
		-- Compute bonus researches
		if (iArmyStrength >= 1250) then
	
			-- Compute infantry researches
			if (iInfantrySquads >= 3) then
				self:DynamicResearch("night_lords_health_upgrade_research", 1, 100, 50, 0, 0, nil, 0)
				self:DynamicResearch("night_lords_accuracy_upgrade_research", 1, 50, 30, 0, 0, nil, 0)
			end
		end

		-- Check for T1 Commander first
		if (self:CountSquads("night_lords_squad_lord") == 1) then

			-- Force build starting squads to get immediate battlefield presence
			if (self:CountSquads("night_lords_squad_marine") < 2) then

				-- Build the Tactical squad
				local tBuildType = CpuBuildType()
				tBuildType.btype = CpuPrerequisites.BT_Squad
				tBuildType.name = "night_lords_squad_marine"
				if (self:TryBuild( tBuildType )) then
					aitrace("BuildController: Dynamic build of "..tBuildType.name)
				end

			elseif (self:CountSquads("night_lords_squad_raptor") < 2) then

				-- Build the Raptor squad
				local tBuildType = CpuBuildType()
				tBuildType.btype = CpuPrerequisites.BT_Squad
				tBuildType.name = "night_lords_squad_raptor"
				if (self:TryBuild( tBuildType )) then
					aitrace("BuildController: Dynamic build of "..tBuildType.name)
				end

			elseif (self:CountSquads("night_lords_squad_fury") < 2) then

				-- Build the Raptor squad
				local tBuildType = CpuBuildType()
				tBuildType.btype = CpuPrerequisites.BT_Squad
				tBuildType.name = "night_lords_squad_fury"
				if (self:TryBuild( tBuildType )) then
					aitrace("BuildController: Dynamic build of "..tBuildType.name)
				end
			end
		end

	end
	
	-- Compute tier 2 researches
	if (self.tierLevel >= 2) then
		
		-- Compute infantry researches
		-- Compute infantry and commander researches
		if (iInfantrySquads >= 3) or (iCommanderSquads >= 2) then
			self:DynamicResearch("night_lords_champion_melee_research_1", 2, 40, 20, 0, 0, nil, 0)
			self:DynamicResearch("night_lords_plasma_pistol_research", 2, 50, 30, 0, 0, nil, 0)
		end
		
		-- Compute melta bomb researches
		if (self:CountSquads("night_lords_squad_raptor") >= 1) then
			self:DynamicResearch("night_lords_melta_bomb_research", 2, 75, 75, 0, 0, nil, 0)
		end

		-- Compute commander researches
		if (iCommanderSquads >= 1) then
			self:DynamicResearch("night_lords_commander_health_research_1", 2, 100, 25, 0, 0, nil, 0)
		end

		-- Compute Lord researches
		if (self:CountSquads("night_lords_squad_lord") >= 1) then 
			self:DynamicResearch("night_lords_lord_research_1", 2, 60, 20, 0, 0, nil, 0)
		end

		-- Compute Sorcerer researches
		if (self:CountSquads("night_lords_squad_sorcerer") >= 1) then 
			self:DynamicResearch("night_lords_sorcerer_research_1", 2, 50, 40, 0, 0, nil, 0)
		end

		-- Compute bonus researches
		if (iArmyStrength >= 1750) then
		
			-- Compute infantry researches
			if (iInfantrySquads >= 3) then
				self:DynamicResearch("night_lords_max_weapons_research", 2, 75, 100, 0, 0, nil, 0)
				self:DynamicResearch("night_lords_health_upgrade_research_2", 2, 150, 100, 0, 0, nil, 0)
				self:DynamicResearch("night_lords_accuracy_upgrade_research_2", 2, 100, 50, 0, 0, nil, 0)
			end

			-- Compute Lord researches
			if (self:CountSquads("night_lords_squad_lord") >= 1) then 
				self:DynamicResearch("night_lords_lord_research_2", 2, 60, 20, 0, 0, nil, 0)
			end

			-- Compute smoke launcher researches
			if (self:CountSquads("night_lords_squad_rhino") >= 1) or (self:CountSquads("night_lords_squad_razorback") >= 1) or (self:CountSquads("night_lords_squad_vindicator") >= 1) or (self:CountSquads("night_lords_squad_land_raider") >= 1) then 
				self:DynamicResearch("night_lords_smoke_launcher_research", 2, 75, 25, 0, 0, nil, 0)
			end
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("night_lords_turret_bolter_no_limit", 2, 2, 200, 100, 0, 0)
	end

	-- Compute tier 3 researches
	if (self.tierLevel >= 3) then

		if (iInfantrySquads >= 3) then
			self:DynamicResearch("night_lords_champion_melee_research_2", 3, 50, 30, 0, 0, nil, 0)
			self:DynamicResearch("night_lords_purge_the_weak", 3, 100, 75, 0, 0, nil, 0)

		end

		-- Compute marine infiltration researches
		if (self:CountSquads("night_lords_squad_raptor_scout") >= 2) or (self:CountSquads("night_lords_squad_raptor") >= 1) then
			self:DynamicResearch("night_lords_infiltration_marine_research", 3, 200, 150, 0, 0, nil, 0)
		end

		-- Compute Scout improved melee weapons researches
		if (self:CountSquads("night_lords_squad_raptor_scout") >= 1) then
			self:DynamicResearch("night_lords_raptor_scouts_improved_chainswords", 3, 50, 30, 0, 0, nil, 0)
			self:DynamicResearch("night_lords_net_tosser_research", 3, 50, 100, 0, 0, nil, 0)
		end

		-- Compute secondary researches
		if (iArmyStrength >= 1750) then
		
			-- Compute commander researches
			if (iCommanderSquads >= 1) then
				self:DynamicResearch("night_lords_commander_health_research_2", 3, 125, 50, 0, 0, nil, 0)
			end

			-- Compute Lord researches
			if (self:CountSquads("night_lords_squad_lord") >= 1) then 
				self:DynamicResearch("night_lords_lord_research_3", 3, 100, 25, 0, 0, nil, 0)
			end

			-- Compute nightfall stealth drive researches
			if (self:CountSquads("night_lords_squad_rhino") >= 1) or (self:CountSquads("night_lords_squad_razorback") >= 1) or (self:CountSquads("night_lords_squad_vindicator") >= 1) or (self:CountSquads("night_lords_squad_whirlwind") >= 1) or (self:CountSquads("night_lords_squad_predator") >= 1) then 
				self:DynamicResearch("night_lords_rhino_chassis_stealth_research", 3, 90, 50, 0, 0, nil, 0)
			end
		end

		-- Compute Sorcerer researches
		if (self:CountSquads("night_lords_squad_sorcerer") >= 1) then 
			self:DynamicResearch("night_lords_sorcerer_research_2", 3, 40, 50, 0, 0, nil, 0)
		end

		-- Compute bonus researches
		if (iArmyStrength >= 2250) then

			-- Compute teleportation researches
			if (self:CountSquads("night_lords_squad_terminator_assault") >= 1) then 
				self:DynamicResearch("night_lords_personalteleporters", 3, 75, 125, 0, 0, nil, 0)
			end
		end

		-- Compute Daemon Prince research
		if (self:CountSquads("night_lords_squad_lord") >= 1) then 
			self:DynamicResearch("night_lords_daemon_prince_research", 3, 150, 150, 0, 0, nil, 0)
		end

		if (self:CountSquads("night_lords_squad_daemon_prince") >= 1) then 
			self:DynamicResearch("night_lords_daemon_prince_rending_research", 3, 100, 50, 0, 0, nil, 0)
			self:DynamicResearch("night_lords_curzes_orb_research", 3, 50, 100, 0, 0, nil, 0)
			self:DynamicResearch("night_lords_stormbolt_plate_research", 3, 100, 100, 0, 0, nil, 0)
		end

		-- Force build additional generators in late game if we can with enough requisition and when low on power
                local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
                local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
                if iReq > 400 and iReq/iPow > 1.6 then

                	-- Check if a plan exists
                	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("Generator"))
                    	if (self:PlanExists("Build Building Plan", iBuildingID)) then
                       		return
                    	end

             		-- Check if any generators are in production
                    	for oBuildChannel in build_manager:GetBuildChannelAIs() do
                        	-- Check building ID
                        	if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
                            		return
                        	end
                    	end

             		-- Build a Generator
                    	local tBuildType = CpuBuildType()
                    	tBuildType.btype = CpuPrerequisites.BT_Building
                    	tBuildType.name = self:GetBuildingName("Generator")
                    	if (self:TryBuild( tBuildType )) then
               			aitrace("BuildController: Dynamic build of "..tBuildType.name)
			end
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("night_lords_turret_bolter_no_limit", 4, 3, 300, 200, 0, 0)
	end

	-- Compute tier 4 researches
	if (self.tierLevel >= 4) then

		-- Compute infantry researches
		if (iInfantrySquads >= 3) then
			self:DynamicResearch("night_lords_terror_research", 4, 125, 75, 0, 0, nil, 0)
		end

		-- Compute Titan researches
		self:DynamicResearch("night_lords_titans_tier_ii", 4, 800, 800, 0, 0, nil, 0)

		local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

		-- Compute HQ Tier2 Addons for future HQs
       		if (self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 and (iPower >= 400 and iRequisition >= 400)) then
			self:DynamicAddon("night_lords_hq_addon_1", 100, 4, 300, 125, 0, 0, nil, nil, false)
		end

		-- Compute HQ Tier3 Addons for future HQs
       		if (self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 and (iPower >= 500 and iRequisition >= 500)) then
			self:DynamicAddon("night_lords_hq_addon_2", 100, 4, 340, 340, 0, 0, nil, nil, false)
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("night_lords_turret_bolter_no_limit", 10, 4, 400, 300, 0, 0)
	end

	-- Restrict dynamic builds to hard difficulty or higher
	if (CpuManager.AISettings.bMultiBuildings) then
	
		-- Dynamic buildings
		-- Item-Syntax: BuildingName, BuildingCount, MinTier, MinRequisition, MinPower, MinSquadCap, MinSupportCap
		self:DynamicBuild("night_lords_barracks", 2, 3, 800, 0, 0, 0)
		self:DynamicBuild("night_lords_barracks", 3, 4, 2000, 0, 0, 0)
		self:DynamicBuild("night_lords_vehicle_building", 2, 3, 200, 600, 0, 0)
		self:DynamicBuild("night_lords_vehicle_building", 3, 4, 500, 1500, 0, 0)
		self:DynamicBuild("night_lords_ability_building", 2, 3, 400, 800, 0, 0)
		self:DynamicBuild("night_lords_ability_building", 3, 4, 800, 2000, 0, 0)
		self:DynamicBuild("night_lords_hq", 2, 3, 700, 300, 0, 0)
		self:DynamicBuild("night_lords_hq", 3, 4, 1000, 600, 0, 0)
		self:DynamicBuild("night_lords_titans_building", 1, 4, 300, 300, 0, 0)
	end
end

-- Force AI to give priority to re-build HQ if lost and none are present
function NightLordsBuildBaseStrategy:BuildFirstHQ()

	-- Check if a plan exists
	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))
	if (self:PlanExists("Build Building Plan", iBuildingID)) then
		return
	end

	-- Check if any HQ are in production
	for oBuildChannel in build_manager:GetBuildChannelAIs() do

		-- Check building ID
		if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
			return
		end
	end
		
	-- Build the HQ
	local sHQName = self:GetBuildingName("HQ")
	local tBuildType = CpuBuildType()
	tBuildType.btype = CpuPrerequisites.BT_Building
	tBuildType.name = sHQName
	if (self:TryBuild( tBuildType )) then
		aitrace("BuildController: Dynamic build of "..tBuildType.name)
	end
	return
end

-- Force AI to give priority to recruit a builder unit if none are present
function NightLordsBuildBaseStrategy:BuildFirstBuilder(iBuilderName)

	if self:CountSquads(iBuilderName) < 1 then

		-- Recruit a builder squad
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Squad
		tBuildType.name = iBuilderName
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic build of "..tBuildType.name)
		end
		return
	end
end

-- Arkhan 01.2006: Method to check if force tech should be computed
function NightLordsBuildBaseStrategy:ForceTech()

	-- Check time
	if (g_iGMT < 60 * CpuManager.ForceTech.StartTier1) then
		return false
	end
	
	-- Check ressources
	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

	-- Check tier
	local iTierLevel = self:GetTierLevel()
	if (iTierLevel == 1) then
	
		-- Check resources
		if (iRequisition > 600 and iPower > 200) then
			return false
		end
		return not self.m_bHQAddon1
		
	elseif (iTierLevel == 2) then

		-- Check current build program
		if (self.m_iCurrentBuildProgram == 2) then

			-- Check build channel for ability building
			if (self:GetBuildingCountByName("night_lords_ability_building", false) < 1) then
				return true
			end		
		else
		
			-- Check build channel for machine cult
			if (self:GetBuildingCountByName("night_lords_vehicle_building", false) < 1) then
				return true
			end
		end
		
		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier2 and (iRequisition < 600 or iPower < 600)) then
			return true
		end
		
	elseif (iTierLevel == 3) then	

		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier3 and (iRequisition < 600 or iPower < 600)) then
			return true
		end
	end
	return false
end

-- Arkhan 03.2006: Return placement type for buildings
function NightLordsBuildBaseStrategy:GetPlacementType(iBuildingID)
	
	-- Check building
	if (iBuildingID == cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))) then
        	local count = self:GetBuildingCountByName(self:GetBuildingName("HQ"), false)
		local friend = cpu_manager:FindClosestFriendPlayer()
		if friend == nil then
			-- Lone Player
			if count == 0 and not cpu_manager:HQThreat() then
				return "HQ"
			else
				return "Safeplace"
			end
		else
			-- Has allies
			if count > 0 or cpu_manager:HQThreat() then
				return "HQ"
			else
				return "Safeplace"
			end
		end
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("night_lords_barracks") or
			iBuildingID == cpu_manager.stats:GetBuildingID("night_lords_vehicle_building") or
			iBuildingID == cpu_manager.stats:GetBuildingID("night_lords_ability_building") or
			iBuildingID == cpu_manager.stats:GetBuildingID("night_lords_orbital_relay")) then
		return "Military"
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("night_lords_titans_building")) then
		return "Front1"
	elseif (cpu_manager:IsTurret(iBuildingID) or
			iBuildingID == cpu_manager.stats:GetBuildingID("night_lords_turret_bolter_no_limit")) then
		return "Front2"
	elseif (cpu_manager:IsMine(iBuildingID)) then
		return "Mine"
	elseif (cpu_manager:IsGenerator(iBuildingID) or
			iBuildingID == cpu_manager.stats:GetBuildingID("night_lords_armoury")) then
		return "BaseBack"
	end
	return "Basic"
end

-- Arkhan 03.2006: Inherited method to modify squad demand
function NightLordsBuildBaseStrategy:ModifySquadDemand(iUnitID)

	-- Only build rhinos if we've full support cap
	if (iUnitID == cpu_manager.stats:GetSquadID("night_lords_squad_rhino")) then
		
		-- Check army strength
		if (cpu_manager:GetArmyStrength() < 4000) then
			return 0
		end
	end
	return BuildBaseStrategy.ModifySquadDemand(self, iUnitID)
end

