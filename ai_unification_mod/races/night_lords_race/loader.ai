end

-- Creates a special tactic for units
-- GAMBIT: Updated version, with no IFs at all, much faster and reliable. CPU utilization nigh zero
function night_lords_race:CreateTactic(oSquadAI)

    	-- Get unit name, and see if there is an attached tactic to it
    	local sUnitName = oSquadAI:GetSquadName()    
	if sUnitName ~= nil and NL_Race_Squad_Tactic[sUnitName] ~= nil then
		if NL_Race_Squad_Tactic[sUnitName] == "NONE" then
            		-- The squad must have NO tactic. Return nil.
            		return nil
        	else
            		return NL_Race_Squad_Tactic[sUnitName](oSquadAI)
        	end
    	end

	-- Get class
	local eClass = oSquadAI:GetStats():GetClass()

	-- Check if there is a special tactic for the unit available
	local bVehicle = (eClass == UnitStatsAI.UC_VehicleLow or eClass == UnitStatsAI.UC_VehicleMed or eClass == UnitStatsAI.UC_VehicleHigh)
	local bAirPlane = (eClass == UnitStatsAI.UC_AirLow or eClass == UnitStatsAI.UC_AirMed or eClass == UnitStatsAI.UC_AirHigh)

	if (bVehicle or bAirPlane) then
		return NightLordsVehicleTactic(oSquadAI)
	end
	return NightLordsInfantryTactic(oSquadAI)
end

-- Creates a special tactic for buildings
-- GAMBIT: Updated version, with no IFs at all, much faster and reliable. CPU utilization nigh zero
function night_lords_race:CreateBaseTactic(oBuilding)

	-- Get building name
	local sBuildingName = oBuilding:GetBaseName()
	if sBuildingName ~= nil and NL_Race_Base_Tactic[sBuildingName] ~= nil then
		if NL_Race_Base_Tactic[sBuildingName] == "NONE" then
            		-- The building must have NO tactic. Return nil.
            		return nil
        	else
            		return NL_Race_Base_Tactic[sBuildingName](oBuilding)
        	end
    	end
	return nil
end

-- Returns a specific information
function night_lords_race:GetInfo(sType)

	-- Check info type
	if (sType == "TurretPower") then
		return 400
	elseif (sType == "SupportAllyFactor") then
		return 9 / 4
	elseif (sType == "AttackModifier") then
		return -5
	elseif (sType == "CriticalRangeIncreasePerTier") then
		return 10
	elseif (sType == "MinArmyStrengthPerTier") then
		return 750
	elseif (sType == "AttackRatio") then
		return 4 / 5
	elseif (sType == "RetreatRatio") then
		return 3 / 5
	elseif (sType == "InvisibleBuildings") then
		return false
	elseif (sType == "HarassingLeader") then
		return "night_lords_squad_lord"
	elseif (sType == "AutoConstructBuildings") then
		return false
	end
	return nil
end

-- Returns the building type and threat
function night_lords_race:GetBuildingType(sBuildingName)

	-- Return race specific object string
	if (sBuildingName == "night_lords_hq") then
		return "HQ", 0
		
	elseif (sBuildingName == "night_lords_generator") then
		return "Generator", 0
		
	elseif (sBuildingName == "night_lords_thermo_generator") then
		return "BiggerGenerator", 0
		
	elseif (sBuildingName == "night_lords_vehicle_building") then
		return "VehicleBuilding", 0
		
	elseif (sBuildingName == "night_lords_armoury") then
		return "Armoury", 0
		
	elseif (sBuildingName == "night_lords_listening_post") then
		return "ListeningPost", 0
		
	elseif (sBuildingName == "night_lords_turret_bolter") then
		return "Turret", 300
		
	elseif (sBuildingName == "night_lords_mine_field") then
		return "Mine", 100
	end
	return nil, 0
end