function FirstbornHWTSquadTactic:DoAbilities()

	-- Check to build addon every 10+ secs
	if g_iGMT > self.lastAddonTry + 10 then
		self.lastAddonTry = g_iGMT
		-- Check available resources and health, before performing any upgrade
		local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
		if iReq > 200 and iPow > 100 and self.squad_ai:GetHealthPercentage() > 0.35 then
			self:AutoBuildAddOn(self.weapon_upgrade)
		end
	end
end
]]
function FirstbornHWTSquadTactic:Update()

	if self:IsComplete() then
		return
	end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

	--attach to squad
	self:TryAttachSquad( false, false, 1000, 200, nil )
end
