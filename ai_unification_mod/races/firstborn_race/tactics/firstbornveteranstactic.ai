class 'FirstbornVeteransTactic' (FirstbornInfantryTactic)

FirstbornVeterans = {}

function FirstbornVeteransTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Firstborn Veterans Tactic")
end

function FirstbornVeteransTactic:DoAbilities()

	-- Try to activate dance
	if (self.squad_ai:IsInCombat() and self.squad_ai:CanMeleeDance()) then
		self.squad_ai:DoMeleeDance()
	end

	-- Call basic DoAbilities methods
	FirstbornInfantryTactic.DoAbilities(self)
end
