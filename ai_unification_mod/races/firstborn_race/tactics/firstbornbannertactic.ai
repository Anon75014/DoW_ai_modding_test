class 'FirstbornBannerTactic' (FirstbornInfantryTactic)

FirstbornBanner = {}

function FirstbornBannerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Firstborn Banner Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function FirstbornBannerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function FirstbornBannerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function FirstbornBannerTactic:Update()

	if self:IsComplete() then
		return
	end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

	--attach to squad
	self:TryAttachSquad( false, false, 1000, 200, nil )
end