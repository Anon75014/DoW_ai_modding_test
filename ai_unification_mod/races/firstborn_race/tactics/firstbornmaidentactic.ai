class 'FirstbornMaidenTactic' (FirstbornInfantryTactic)

FirstbornMaiden = {}

function FirstbornMaidenTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Firstborn Mirror Maiden Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function FirstbornMaidenTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function FirstbornMaidenTactic:IsDefender()
	return self:IsCommanderDefender()
end

function FirstbornMaidenTactic:InitAbilities()

	-- Init ability ID's
	if (FirstbornMaiden.blizzard_id == nil) then
		FirstbornMaiden.blizzard_id = cpu_manager.stats:GetAbilityID( "firstborn_blizzard" )
	end

	if (FirstbornMaiden.cryospear_id == nil) then
		FirstbornMaiden.cryospear_id = cpu_manager.stats:GetAbilityID( "firstborn_cryospear" )
	end

	if (FirstbornMaiden.shield_id == nil) then
		FirstbornMaiden.shield_id = cpu_manager.stats:GetAbilityID( "firstborn_reflection_shield" )
	end
end

function FirstbornMaidenTactic:DoAbilities()

	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityPos( self.squad_ai, FirstbornMaiden.blizzard_id, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityPos( self.squad_ai, FirstbornMaiden.cryospear_id, Ability.Filters.CloseEnemy, 2 )
	else
		Ability.DoAbilityPos( self.squad_ai, FirstbornMaiden.blizzard_id, Ability.Filters.CloseInfantryEnemy, 8 )
		Ability.DoAbilityPos( self.squad_ai, FirstbornMaiden.cryospear_id, Ability.Filters.CloseEnemy, 4 )
	end

	-- Activate protective shield while in combat with low health
	if self.squad_ai:CanDoAbility(FirstbornMaiden.shield_id) then
		local health = self.squad_ai:GetHealthPercentage()
		if (self.squad_ai:IsInCombat() and health < 0.4) or (self.squad_ai:WasRecentlyHurt() and health < 0.25) then
			self.squad_ai:DoSpecialAbility(FirstbornMaiden.shield_id)
		end
	end
end

function FirstbornMaidenTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end

	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end