class 'FirstbornBasiliskTactic' (FirstbornVehicleTactic)

FirstbornBasilisk = {}

function FirstbornBasiliskTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("FirstbornBasilisk Tactic")
end

function FirstbornBasiliskTactic:InitAbilities()

	-- Init ability ID's
	if (FirstbornBasilisk.shaker_id == nil) then
		FirstbornBasilisk.shaker_id = cpu_manager.stats:GetAbilityID( "firstborn_earthshaker_round" )
	end
end

function FirstbornBasiliskTactic:DoAbilities()

	-- Check if I can launch EarthShaker Round
	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
	if (Tactic.Options.can_reinforce and iRequisition > 500 and iPower > 500) then
		Ability.DoAbilityPos(self.squad_ai, FirstbornBasilisk.shaker_id, Ability.Filters.CloseEnemy, 16)
		Ability.DoAbilityPos(self.squad_ai, FirstbornBasilisk.shaker_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
	end
	
	-- Call standard method
	FirstbornVehicleTactic.DoAbilities(self)
end
