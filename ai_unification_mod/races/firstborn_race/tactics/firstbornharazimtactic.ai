class 'FirstbornHarazimTactic' (FirstbornInfantryTactic)

FirstbornHarazim = {}

function FirstbornHarazimTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Firstborn Harazim Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function FirstbornHarazimTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function FirstbornHarazimTactic:IsDefender()
	return self:IsCommanderDefender()
end

