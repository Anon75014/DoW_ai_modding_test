function FirstbornHarazimTactic:DoAbilities()
--[[
	-- Try to use banish
	Ability.DoAbilityTarget( self.squad_ai, FirstbornHarazim.banish_id, Ability.Filters.CloseMonsterEnemy, 1 )
	
	-- Try to use battlecry
	Ability.DoAbilityArea( self.squad_ai, FirstbornHarazim.battlecry_id, Ability.Filters.CloseInCombat, 10 )
]]
	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

		-- Try to use Smoke/Gas Grenade
		Ability.DoAbilityPos( self.squad_ai, FirstbornHarazim.smoke_id, Ability.Filters.CloseEnemy, 2 )
	else
		Ability.DoAbilityPos( self.squad_ai, FirstbornHarazim.smoke_id, Ability.Filters.CloseEnemy, 4 )
	end

	-- Try to use orbital lance
	Ability.DoAbilityPos(self.squad_ai, FirstbornHarazim.orbital_b, Ability.Filters.CloseEnemy, 24)
	Ability.DoAbilityPos(self.squad_ai, FirstbornHarazim.orbital_b, Ability.EntityFilters.CloseBaseEntityEnemy, 3)

	if (self.squad_ai:IsBroken() and self.squad_ai:IsAttached()) then

		-- Check if I can repair my morale
		if (self.squad_ai:CanDoAbility( FirstbornHarazim.rally_id )) then
			self.squad_ai:DoSpecialAbility( FirstbornHarazim.rally_id )
		end
	end
end

function FirstbornHarazimTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end