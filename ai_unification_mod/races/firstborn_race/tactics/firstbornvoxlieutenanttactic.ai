class 'FirstbornVoxLieutenantTactic' (FirstbornInfantryTactic)

FirstbornVoxLieutenant = {}

function FirstbornVoxLieutenantTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Firstborn Vox Lieutenant Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function FirstbornVoxLieutenantTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function FirstbornVoxLieutenantTactic:IsDefender()
	return self:IsCommanderDefender()
end

function FirstbornVoxLieutenantTactic:InitAbilities()

	-- Init ability ID's
	if (FirstbornVoxLieutenant.strafing_id == nil) then
		FirstbornVoxLieutenant.strafing_id = cpu_manager.stats:GetAbilityID( "firstborn_strafing_run_vox" )
	end
	if (FirstbornVoxLieutenant.berkut_id == nil) then
		FirstbornVoxLieutenant.berkut_id = cpu_manager.stats:GetAbilityID( "firstborn_vox_berkut_strike" )
	end
	if (FirstbornVoxLieutenant.strike_id == nil) then
		FirstbornVoxLieutenant.strike_id = cpu_manager.stats:GetAbilityID( "firstborn_vox_nova_strike" )
	end
end

function FirstbornVoxLieutenantTactic:DoAbilities()

	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

		-- Try to call either Strafing Run or Nova Strike on enemy targets
		Ability.DoAbilityPos( self.squad_ai, FirstbornVoxLieutenant.strafing_id, Ability.Filters.CloseEnemy, 4 )
		Ability.DoAbilityPos( self.squad_ai, FirstbornVoxLieutenant.berkut_id, Ability.Filters.CloseEnemy, 7 )
		Ability.DoAbilityPos( self.squad_ai, FirstbornVoxLieutenant.strike_id, Ability.Filters.CloseEnemy, 6 )
	else
		Ability.DoAbilityPos( self.squad_ai, FirstbornVoxLieutenant.strafing_id, Ability.Filters.CloseEnemy, 8 )
		Ability.DoAbilityPos( self.squad_ai, FirstbornVoxLieutenant.berkut_id, Ability.Filters.CloseEnemy, 12 )
		Ability.DoAbilityPos( self.squad_ai, FirstbornVoxLieutenant.strike_id, Ability.Filters.CloseEnemy, 9 )
	end
end

function FirstbornVoxLieutenantTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end