class 'FirstbornPriestTactic' (FirstbornInfantryTactic)

FirstbornPriest = {}

function FirstbornPriestTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Firstborn Priest Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
end

function FirstbornPriestTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function FirstbornPriestTactic:IsDefender()
	return self:IsCommanderDefender()
end

function FirstbornPriestTactic:InitAbilities()

	-- Init ability ID's
	if (FirstbornPriest.banish_id == nil) then
		FirstbornPriest.banish_id = cpu_manager.stats:GetAbilityID( "firstborn_banish" )
	end
end

function FirstbornPriestTactic:DoAbilities()

	-- Try to use banish
	Ability.DoAbilityTarget( self.squad_ai, FirstbornPriest.banish_id, Ability.Filters.CloseMonsterEnemy, 1 )
end

function FirstbornPriestTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end
