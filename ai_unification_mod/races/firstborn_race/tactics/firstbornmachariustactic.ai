class 'FirstbornMachariusTactic' (FirstbornVehicleTactic)

FirstbornMacharius = {}

function FirstbornMachariusTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Firstborn Macharius Tactic")
end

function FirstbornMachariusTactic:InitAbilities()

	-- Init ability ID's
	if (FirstbornMacharius.spirit_id == nil) then
		FirstbornMacharius.spirit_id = cpu_manager.stats:GetAbilityID( "firstborn_machine_spirit" )
	end
end

function FirstbornMachariusTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(FirstbornMacharius.spirit_id)) then
			self.squad_ai:DoSpecialAbility(FirstbornMacharius.spirit_id)
		end	  
	end
	
	-- Do basic abilities
	FirstbornVehicleTactic.DoAbilities(self)
end