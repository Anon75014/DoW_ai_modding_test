class 'FirstbornEnginseerTactic' (EngineerTactic)

FirstbornEnginseer = {}

function FirstbornEnginseerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Firstborn Enginseer Tactic")
	
	-- Firstborn Enginseers are able to enter bunkers
	self.m_iBunkerMoveDelay = 0

	self.timedDirectSpawnAbility = Timer( FirstbornEnginseerTactic.DoDirectSpawnAbility, self, 5 )

	self.lastused_ability_skullbomb_time = g_iGMT
	self.lastused_ability_skullbomb_position = squad_ai:GetPosition()
	self.min_skullbomb_requisition = 165 -- amount of requisition to have before typical use
	self.min_skullbomb_time = 120 -- 30 seconds to wait between use, in possibly same location
	self.min_skullbomb_distance = squad_ai:GetAbilityRange(FirstbornEnginseer.skullbomb_id) * 2 -- min 
end

function FirstbornEnginseerTactic:InitAbilities()

	-- Init ability ID's
	if (FirstbornEnginseer.skullbomb_id == nil) then
		FirstbornEnginseer.skullbomb_id = cpu_manager.stats:GetAbilityID( "firstborn_skull_bomb" )
	end

	if (FirstbornEnginseer.kastellan_id == nil) then
		FirstbornEnginseer.kastellan_id = cpu_manager.stats:GetAbilityID( "firstborn_kastellan" )
	end
end

function FirstbornEnginseerTactic:DoAbilities()

	-- Spawn the Kastellan when in combat
	if (self.squad_ai:CanDoAbility(FirstbornEnginseer.kastellan_id)) then

		if (self.squad_ai:IsInCombat()) then
			Ability.DoAbilityPos(self.squad_ai, FirstbornEnginseer.kastellan_id, Ability.Filters.CloseEnemy, 20, 1)
		end
	end

	if (self.squad_ai:CanDoAbility(FirstbornEnginseer.skullbomb_id) and self.squad_ai:IsBuilding() == 0) then

		-- Get ability range
		local iRange = self.squad_ai:GetAbilityRange(FirstbornEnginseer.skullbomb_id)
	
		-- If surrounded, try to use the snare trap
		if (self.squad_ai:IsInCombat()) then
	
			local vSquadPos = self.squad_ai:GetPosition()
			local fThrowFactor = 1 / 3
			local oEnemy = Ability.Filters.CloseEnemy(vSquadPos, iRange, 4)
			if (oEnemy ~= nil) then

				local vEnemyPos = oEnemy:GetPosition()
				local vTargetPos = Vector3f(vSquadPos)
				vTargetPos.x = vTargetPos.x + (vEnemyPos.x - vSquadPos.x) * fThrowFactor
				vTargetPos.z = vTargetPos.z + (vEnemyPos.z - vSquadPos.z) * fThrowFactor
				self:DoSpecialAbilitySkullbomb(vTargetPos, true)
			end
		else
			-- Check for close strategic point
			local oTarget = Ability.Filters.CloseStrategicPoint(self.squad_ai:GetPosition(), iRange)
			if (oTarget ~= nil) then

				-- Modify position
				local vTargetPos = oTarget:GetPosition()
				local vDir = cpu_manager:GetDirectionToEnemy(vTargetPos)
				local iOffsetx = math.random(4, 8)	
				local iOffsetz = math.random(4, 8)
				vTargetPos.x = vTargetPos.x + vDir.x * iOffsetx
				vTargetPos.z = vTargetPos.z + vDir.z * iOffsetz
				local iDistanceSqr = distance_sqr(vTargetPos, self.squad_ai:GetPosition())
				if (iDistanceSqr < sqr(iRange) and iDistanceSqr > 1) then
					self:DoSpecialAbilitySkullbomb(vTargetPos, false)
				end
			end
		end
	end

	-- Try to spawn Kastellans
	if (self.timedDirectSpawnAbility ~= nil) then
		self.timedDirectSpawnAbility:Call()
	else
		FirstbornEnginseerTactic.DoDirectSpawnAbility(self)
	end
end

function FirstbornEnginseerTactic:DoDirectSpawnAbility()

	-- Spawn Kastellan in combat
	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	end
end

function FirstbornEnginseerTactic:DoTimedSpecialAbilities()

	-- Try to use detection ability
    	if (self.squad_ai:CanDoAbility(FirstbornEnginseer.kastellan_id)) then
    
    		-- Check for infiltrated enemy
        	local oEnemy = Ability.Filters.CloseSquadEnemy(self.squad_ai:GetPosition(), 35, 1)
        	if (oEnemy ~= nil) then

			-- Get distance to enemy unit
            		local vSquadPos = self.squad_ai:GetPosition()
            		local vEnemyPos = oEnemy:GetPosition()
            		local iDistance = distance(vSquadPos, vEnemyPos)
            
            		-- If target is too far away launch auspex in range
            		local vTargetPos = Vector3f(vSquadPos)
            		local iRange = self.squad_ai:GetAbilityRange(Iskandar.knight_id)
            		if (iDistance > iRange) then
                		local fThrowFactor = iRange / iDistance
                		vTargetPos.x = vTargetPos.x + (vEnemyPos.x - vSquadPos.x) * fThrowFactor
                		vTargetPos.z = vTargetPos.z + (vEnemyPos.z - vSquadPos.z) * fThrowFactor
            		else
                		vTargetPos = Vector3f(vEnemyPos)
            		end
            		self.squad_ai:DoSpecialAbilityPos(FirstbornEnginseer.kastellan_id, vTargetPos)
        	end
	end
end

function FirstbornEnginseerTactic:DoSpecialAbilitySkullbomb(position,skip_prereqs)

	local current_time = g_iGMT
	local current_requisition = resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Power)
	local last_time = self.lastused_ability_skullbomb_time
	local last_pos = self.lastused_ability_skullbomb_position
	local min_requisition = self.min_skullbomb_requisition
	local min_time = self.min_skullbomb_time 
	local min_distance = self.min_skullbomb_distance

	-- Check situation
	if (skip_prereqs or (current_requisition > min_requisition and current_time - last_time > min_time) or 
		(current_requisition > min_requisition and distance(position,last_pos) > min_distance)) then

		-- Use snare trap ability
		self.squad_ai:DoSpecialAbilityPos(FirstbornEnginseer.skullbomb_id, position)
		self.lastused_ability_skullbomb_time = current_time
		self.lastused_ability_skullbomb_position = position
	end
end

function FirstbornEnginseerTactic:Update()

	-- Check bunker move delay
	if (g_iGMT < self.m_iBunkerMoveDelay) then
		return
	end

	-- Update engineer tactic
	EngineerTactic.Update(self)

	-- Check if we're hurt
	if (self.squad_ai:WasRecentlyHurt()) then
	
		-- Try to occupy a close bunker	
		if (cpu_manager:OccupyBunker(self.squad_ai, 35)) then
			self.m_iBunkerMoveDelay = g_iGMT + 5
			return
		end
	end
end
 