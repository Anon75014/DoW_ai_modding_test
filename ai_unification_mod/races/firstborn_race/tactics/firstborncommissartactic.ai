class 'FirstbornCommissarTactic' (FirstbornInfantryTactic)

FirstbornCommissar = {}

function FirstbornCommissarTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Firstborn Commissar Tactic")

	-- Squad is able to occupy bunkers
	self.m_bBunkerSquad = true
	
	-- Init execute delay time
	FirstbornCommissar.NextExecuteCheck = 0
end

function FirstbornCommissarTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function FirstbornCommissarTactic:IsDefender()
	return self:IsCommanderDefender()
end

function FirstbornCommissarTactic:InitAbilities()

	-- Init ability ID's
	if (FirstbornCommissar.execute_id == nil or FirstbornCommissar.NextExecuteCheck == nil) then
		FirstbornCommissar.execute_id = cpu_manager.stats:GetAbilityID( "firstborn_commissar_execute" )
		FirstbornCommissar.NextExecuteCheck = iGMT
	end
end

function FirstbornCommissarTactic:DoAbilities()

	if FirstbornCommissar.NextExecuteCheck == nil then 
		FirstbornCommissar.NextExecuteCheck = 0
 	end

	-- TargetSelf: When attached to squad, executes one of his own soldiers to increase their fighting potential
	if (self.squad_ai:IsAttached() and self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(FirstbornCommissar.execute_id) and
		self.squad_ai:GetNumTroopers() > 6 and g_iGMT > FirstbornCommissar.NextExecuteCheck) then
		
		-- Use execute ability
		self.squad_ai:DoSpecialAbility(FirstbornCommissar.execute_id) 
		FirstbornCommissar.NextExecuteCheck = g_iGMT + 20
	end
end

function FirstbornCommissarTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad(false, false, 1000, 60, nil)
end
 