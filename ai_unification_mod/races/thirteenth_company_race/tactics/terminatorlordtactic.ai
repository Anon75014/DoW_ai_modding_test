class 'TerminatorLordTactic' (ThirteenthcomInfantryTactic)

TerminatorLord = {}

function TerminatorLordTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Terminator Lord Tactic")
end

-- TerminatorLord is allowed to retreat even directly after a jump
function TerminatorLordTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function TerminatorLordTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function TerminatorLordTactic:IsDefender()
	return self:IsCommanderDefender()
end

-- Assassinate win condition -- never jump into combat
function TerminatorLordTactic:JumpAttack()

	if (cpu_manager.assassinate) or (not cpu_manager.assassinate) then
		Tactic.JumpAttack(self)
	end
end

function TerminatorLordTactic:InitAbilities()

	if TerminatorLord.fanatical_id == nil then
	   TerminatorLord.fanatical_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_priest_fanatical" )	
	end

	if TerminatorLord.righteous_id == nil then
	   TerminatorLord.righteous_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_priest_righteous_fury" )	
	end

	if TerminatorLord.wolfstorm_id == nil then
	   TerminatorLord.wolfstorm_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_wolf_storm_termi" )	
	end
end

function TerminatorLordTactic:DoAbilities()

	-- No fanatism while retreating
	if (not self:IsMoving() and self.squad_ai:IsInCombat()) then
		Ability.DoAbility( self.squad_ai, TerminatorLord.fanatical_id, Ability.Filters.IsInCombat ) 
	end

	Ability.DoAbility( self.squad_ai, TerminatorLord.righteous_id, Ability.Filters.IsInCombat )
	Ability.DoAbilityPos( self.squad_ai, TerminatorLord.wolfstorm_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
	Ability.DoAbilityPos( self.squad_ai, TerminatorLord.wolfstorm_id, Ability.Filters.CloseEnemy, 24 )

	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityPos( self.squad_ai, TerminatorLord.wolfstorm_id, Ability.Filters.CloseEnemy, 12 )
	else
		Ability.DoAbilityPos( self.squad_ai, TerminatorLord.wolfstorm_id, Ability.Filters.CloseEnemy, 6 )
	end
end

function TerminatorLordTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Check if we are in serious trouble
	self:EmergencyRetreat()

	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end

	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end

-- Arkhan 03.2006: Inherited method used by commanders which are able to jump with an attached squad
function TerminatorLordTactic:CanJumpAttached()
	return true
end