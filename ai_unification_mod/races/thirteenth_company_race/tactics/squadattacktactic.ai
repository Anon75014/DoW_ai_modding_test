class 'SquadAttackTactic' (ThirteenthcomInfantryTactic)

SquadAttack = {}

function SquadAttackTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Squad Attack Tactic")
end

function SquadAttackTactic:InitAbilities()

	if SquadAttack.boobytrap_id == nil then
	   SquadAttack.boobytrap_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_troop_boobytrap" )	
	end

	if SquadAttack.grenades_id == nil then
	   SquadAttack.grenades_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_smoke_grenades" )	
	end
--[[
	if SquadAttack.frag_id == nil then
	   SquadAttack.frag_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_frag_grenades" )	
	end

	if SquadAttack.melta_id == nil then
	   SquadAttack.melta_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_melta_bombs" )	
	end
]]
	if SquadAttack.rally_id == nil then
	   SquadAttack.rally_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_rally" )	
	end
end

function SquadAttackTactic:DoAbilities()

	--Ability.DoAbilityTarget( self.squad_ai, SquadAttack.frag_id, Ability.Filters.CloseSquadEnemy, 1 )
	--Ability.DoAbilityTarget( self.squad_ai, SquadAttack.melta_id, Ability.Filters.CloseVehicleEnemy, 1 )

    self:DoThrowGrenades()

	-- Deploy boobytraps against the enemy (Wolf Pack Leaders)
	Ability.DoAbilityPos( self.squad_ai, SquadAttack.boobytrap_id, Ability.Filters.CloseSquadEnemy, 1 )
	Ability.DoAbilityPos( self.squad_ai, SquadAttack.boobytrap_id, Ability.Filters.CloseVehicleEnemy, 1 )

	-- Check if we can throw smoke grenades
	if (self.squad_ai:CanDoAbility(SquadAttack.grenades_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(SquadAttack.grenades_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(SquadAttack.grenades_id, oUnit:GetSquad())
		end
	end
end

function SquadAttackTactic:CheckForBroken()

	if (self.squad_ai:IsBroken()) then
	
		-- Check if I can repair my morale
		if (self.squad_ai:CanDoAbility( SquadAttack.rally_id )) then
			self.squad_ai:DoSpecialAbility( SquadAttack.rally_id )
		end
	end
	
	-- Call basic broken check method
	InfantryTactic.CheckForBroken(self)
end