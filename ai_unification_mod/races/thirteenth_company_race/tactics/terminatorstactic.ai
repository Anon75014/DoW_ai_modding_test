class 'TerminatorsTactic' (ThirteenthcomInfantryTactic)

Terminators = {}

function TerminatorsTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Terminators Tactic")
end

function TerminatorsTactic:InitAbilities()

	if Terminators.grenades_id == nil then
	   Terminators.grenades_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_smoke_grenades" )	
	end

	if Terminators.fanatical_id == nil then
	   Terminators.fanatical_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_priest_fanatical" )	
	end

	if Terminators.stormcaller_id == nil then
	   Terminators.stormcaller_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_storm_caller_terminator" )	
	end

	if Terminators.rally_id == nil then
	   Terminators.rally_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_rally" )	
	end
end

function TerminatorsTactic:DoAbilities()

	-- No fanatism while retreating
	if (not self:IsMoving() and self.squad_ai:IsInCombat()) then
		Ability.DoAbility( self.squad_ai, Terminators.fanatical_id, Ability.Filters.IsInCombat ) 
	end

	-- Use storm caller
	--Ability.DoAbilityArea( self.squad_ai, Terminators.stormcaller_id, Ability.Filters.CloseEnemy, 10, 5 )

	-- Check if we can throw smoke grenades
	if (self.squad_ai:CanDoAbility(Terminators.grenades_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(Terminators.grenades_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(Terminators.grenades_id, oUnit:GetSquad())
		end
	end
end

function TerminatorsTactic:CheckForBroken()

	if (self.squad_ai:IsBroken()) then
	
		-- Check if I can repair my morale
		if (self.squad_ai:CanDoAbility( Terminators.rally_id )) then
			self.squad_ai:DoSpecialAbility( Terminators.rally_id )
		end
	end
	
	-- Call basic broken check method
	InfantryTactic.CheckForBroken(self)
end