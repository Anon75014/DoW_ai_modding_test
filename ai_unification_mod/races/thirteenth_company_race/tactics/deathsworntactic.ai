class 'DeathswornTactic' (ThirteenthcomInfantryTactic)

Deathsworn = {}

function DeathswornTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Deathsworn Tactic")
end

function DeathswornTactic:InitAbilities()

	if Deathsworn.stasis_id == nil then
	   Deathsworn.stasis_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_stasis_bombs" )	
	end
end

function DeathswornTactic:DoAbilities()

	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget( self.squad_ai, Deathsworn.stasis_id, Ability.Filters.CloseInfantryEnemy, 2 )
		Ability.DoAbilityTarget( self.squad_ai, Deathsworn.stasis_id, Ability.Filters.CloseMonsterEnemy, 2 )
		Ability.DoAbilityTarget( self.squad_ai, Deathsworn.stasis_id, Ability.Filters.CloseVehicleEnemy, 1 )
	else
		Ability.DoAbilityTarget( self.squad_ai, Deathsworn.stasis_id, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, Deathsworn.stasis_id, Ability.Filters.CloseMonsterEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, Deathsworn.stasis_id, Ability.Filters.CloseVehicleEnemy, 1 )
	end
end

function DeathswornTactic:CheckForBroken()
	
	-- Call basic broken check method
	InfantryTactic.CheckForBroken(self)
end