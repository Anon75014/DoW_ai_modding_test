class 'ThirteenthcomLandRaiderTactic' (ThirteenthcomVehicleTactic)

ThirteenthcomLandRaider = {}

function ThirteenthcomLandRaiderTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Thirteenthcom Land Raider Tactic")
	
	-- Vehicle is a heavy transport
	self.m_iTransportVehicle = 2
	self.m_iTransportSlots = 1
end

function ThirteenthcomLandRaiderTactic:InitAbilities()

	-- Init ability ID's
	if (ThirteenthcomLandRaider.spirit_id == nil) then
		ThirteenthcomLandRaider.spirit_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_machine_spirit" )
	end
end

function ThirteenthcomLandRaiderTactic:DoAbilities()

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(ThirteenthcomLandRaider.spirit_id)) then
			self.squad_ai:DoSpecialAbility(ThirteenthcomLandRaider.spirit_id)
		end	  
	end
	
	-- Do basic abilities
	ThirteenthcomVehicleTactic.DoAbilities(self)
end