class 'WulfenMarineTactic' (ThirteenthcomInfantryTactic)

WulfenMarine = {}

function WulfenMarineTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Wulfen Marine Tactic")
end

function WulfenMarineTactic:InitAbilities()
--[[
	if WulfenMarine.wolfstorm_id == nil then
	   WulfenMarine.wolfstorm_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_wolf_storm" )	
	end

	if WulfenMarine.battlecry_id == nil then
	   WulfenMarine.battlecry_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_battlecry" )	
	end
]]
	if WulfenMarine.rage_id == nil then
	   WulfenMarine.rage_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_furious_rage" )	
	end

	if WulfenMarine.rally_id == nil then
	   WulfenMarine.rally_id = cpu_manager.stats:GetAbilityID( "thirteenthcom_rally" )	
	end
end

function WulfenMarineTactic:DoAbilities()
--[[
	Ability.DoAbilityPos(self.squad_ai, WulfenMarine.wolfstorm_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
	Ability.DoAbilityPos( self.squad_ai, WulfenMarine.wolfstorm_id, Ability.Filters.CloseEnemy, 6 )

	-- Try to use battlecry
	Ability.DoAbilityArea( self.squad_ai, WulfenMarine.battlecry_id, Ability.Filters.CloseInCombat, 10, 1 )
]]
	if (self.squad_ai:IsInCombat() and not self.squad_ai:IsCapturing() and not self.squad_ai:IsBroken()) then
	  
		-- Check if I can go furious while stationary
		if (not self:IsMoving()) then

			if (self.squad_ai:CanDoAbility( WulfenMarine.rage_id )) then
				self.squad_ai:DoSpecialAbility( WulfenMarine.rage_id )
			end
		end
	end
end

function WulfenMarineTactic:CheckForBroken()

	if (self.squad_ai:IsBroken()) then
	
		-- Check if I can repair my morale
		if (self.squad_ai:CanDoAbility( WulfenMarine.rally_id )) then
			self.squad_ai:DoSpecialAbility( WulfenMarine.rally_id )
		end
	end
	
	-- Call basic broken check method
	InfantryTactic.CheckForBroken(self)
end