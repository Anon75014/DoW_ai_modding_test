class 'NecronOverlordSylphekTactic' (NecronVehicleTactic)

NecronOverlordSylphek = {}

function NecronOverlordSylphekTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Necron Overlord Sylphek Tactic")
end


function NecronOverlordSylphekTactic:DoAbilities()

	-- Summon the Obelisk
	if self.squad_ai:CanDirectSpawn() then 
		if self.squad_ai:WasRecentlyHurt() then
			if resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power ) > 1400 then
				self.squad_ai:DoDirectSpawn()
				return
			end
		end
	end
end

