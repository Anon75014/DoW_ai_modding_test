class 'SkorpekhTactic' (NecronInfantryTactic)

Skorpekh = {}

function SkorpekhTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Skorpekh Tactic")
end


function SkorpekhTactic:InitAbilities()

	-- Init ability ID's
	if (Skorpekh.strength_id == nil) then
		Skorpekh.strength_id = cpu_manager.stats:GetAbilityID( "necron_infused_madness" )	
	end

end

function SkorpekhTactic:DoAbilities()

	if self.squad_ai:IsInCombat() then
	Ability.DoAbility( self.squad_ai, Skorpekh.strength_id, Ability.Filters.IsInCombat )
	end
end



function SkorpekhTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
end
