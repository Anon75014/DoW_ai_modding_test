class 'NecronInfantryTactic' (InfantryTactic)

function NecronInfantryTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Necron Infantry Tactic")

	-- Necrons don't get cover bonus
	self.m_bTakeCover = false

	local sSquadName = squad_ai:GetSquadName()
	if (sSquadName == "necron_basic_warrior_squad" or
		sSquadName == "necron_wraith_squad" or
		sSquadName == "necron_wraith_squad_advance" or
		sSquadName == "necron_immortal_squad" or
		sSquadName == "necron_pariah_squad" or
		sSquadName == "necron_pariah_veteran_squad" or
		sSquadName == "necron_cryptothrall_squad" or
		sSquadName == "necron_lychguard_squad" or
		sSquadName == "necron_lychguard_spear_squad" or
		sSquadName == "necron_lord_squad" or
		sSquadName == "necron_lord_anrakyr_squad" or
		sSquadName == "necron_lord_galmakh_squad" or
		sSquadName == "necron_lord_imotekh_squad" or
		sSquadName == "necron_lord_trazyn_squad" or
		sSquadName == "necron_lord_trazyn_surrogate_squad" or
		sSquadName == "necron_lord_xun_bakyr_squad" or
		sSquadName == "necron_pyrrhian_eternals_squad") then

		-- Squads are transportable
		self.m_iTransportable = 1	-- Ghost Ark

	elseif (sSquadName == "necron_flayed_one_squad") then

		-- Squads are transportable
		self.m_iTransportable = 2	-- Restored Obelisk
	end
end

