function NecronInfantryTactic:DoAbilities()

	-- I might have the Overlords attached
	if self.squad_ai:IsAttached() then
	
		if self.squad_ai:HasSquadAttached("necron_lord_imotekh_squad")
		or self.squad_ai:HasSquadAttached("necron_lord_trazyn_squad")
		or self.squad_ai:HasSquadAttached("necron_lord_xun_bakyr_squad")
		or self.squad_ai:HasSquadAttached("necron_lord_anrakyr_squad")
		or self.squad_ai:HasSquadAttached("necron_lord_galmakh_squad") then
			NecronOverlordsTactic.InitAbilities( self )
			NecronOverlordsTactic.DoAbilities( self )
		end
	end
	
	-- Call basic DoAbilities methods
	InfantryTactic.DoAbilities(self)
end

