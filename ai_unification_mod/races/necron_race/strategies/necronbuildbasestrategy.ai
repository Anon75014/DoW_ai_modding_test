-- Arkhan 01.2006: Inherited method to check if an addon is a tier addon
function NecronBuildBaseStrategy:IsTierAddon( sName, iTargetTier )

	-- Check addon name and target tier
	if (sName == "addon_necron_hq_1" and iTargetTier == 2) then
		return true
	elseif (sName == "addon_necron_hq_2" and iTargetTier == 3) then
		return true
	end
	return false
end

function NecronBuildBaseStrategy:UpdateTierLevel()

	-- Reset tier level
	self.tierLevel = 1
	
	-- Prepare
	local iHQAddon1ID = cpu_manager.stats:GetAddOnID("addon_necron_hq_1")
	local iHQAddon2ID = cpu_manager.stats:GetAddOnID("addon_necron_hq_2")
	local oStats = cpu_manager.stats:GetPlayerStatsFromID( cpu_manager.player_id )
	
	-- Check HQ's for addons
	for oBase in oStats:GetBases() do

		-- Check for valid building
		if (oBase:IsValid() and not oBase:IsListeningPost()) then

			-- Check for HQ addon 2
			if (oBase:HasAddOn(iHQAddon2ID)) then
			
				-- We still have the proper add-on
				if (self:GetBuildingCountByName("necron_energy_core") > 0) then
					self.tierLevel = 4
					return
				else
					self.tierLevel = 3
					return
				end
			
			-- Check for HQ addon 1 
			elseif (oBase:HasAddOn(iHQAddon1ID)) then
				self.tierLevel = 2
			end
		end
	end
end

-- Arkhan 01.2006: Method to check if force tech should be computed
function NecronBuildBaseStrategy:ForceTech()

	-- Check time
	if (g_iGMT < 60 * CpuManager.ForceTech.StartTier1) then
		return false
	end
	
	-- Check resources
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

	-- Check tier
	local iTierLevel = self:GetTierLevel()
	if (iTierLevel == 1) then
	
		-- Check resources
		if (iPower > 600) then
			return false
		end
		return not self.m_bHQAddon1
		
	elseif (iTierLevel == 2) then

		-- Check buildings for greater summoning core
		if (self:GetBuildingCountByName("necron_greater_summoning_core", false) < 1) then
			return true
		end
		
		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier2 and iPower < 1000) then
			return true
		end
		
	elseif (iTierLevel == 3) then	

		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier3 and iPower < 1000) then
			return true
		end
	end
	return false
end

function NecronBuildBaseStrategy:BuildFlexible()

	-- Always test first to see if there is at least one existing HQ
	if self:GetBuildingCountByName(self:GetBuildingName("HQ")) < 1 then
     		self:BuildFirstHQ()
	end

	-- Always test first to see if there is at least one existing builder unit
	self:BuildFirstBuilder("necron_builder_scarab_squad")

	local iNecronLordSquads = self:CountSquads("necron_lord_squad") + self:CountSquads("necron_lord_squad_dc") +
			self:CountSquads("necron_lord_squad_nb") + self:CountSquads("necron_lord_squad_advance_sp_wg") +
			self:CountSquads("necron_lord_squad_advance_sp_wg_dc") + self:CountSquads("necron_lord_squad_advance_sp_wg_nb")

	local iNecronLordSPSquads = self:CountSquads("necron_lord_squad_dc") + self:CountSquads("necron_lord_squad_nb") + self:CountSquads("necron_lord_squad_advance_sp_wg") +
			self:CountSquads("necron_lord_squad_advance_sp_wg_dc") + self:CountSquads("necron_lord_squad_advance_sp_wg_nb")

	if iNecronLordSPSquads > 0 then
		self:DynamicResearch("necron_wargear06", 1, 0, 100, 2, 0, nil, 0)
		self:DynamicResearch("necron_wargear01", 1, 0, 75, 4, 2, nil, 0)
		self:DynamicResearch("necron_wargear05", 1, 0, 125, 4, 2, nil, 0)
		self:DynamicResearch("necron_wargear03", 2, 0, 100, 4, 2, nil, 0)
		self:DynamicResearch("necron_wargear09", 2, 0, 150, 4, 2, nil, 0)
		self:DynamicResearch("necron_wargear08", 2, 0, 150, 4, 2, nil, 0)
		self:DynamicResearch("necron_wargear10", 3, 0, 175, 2, 0, nil, 0)
		self:DynamicResearch("necron_wargear07", 3, 0, 125, 2, 0, nil, 0)
		self:DynamicResearch("necron_wargear02", 4, 0, 100, 4, 2, nil, 0)
		self:DynamicResearch("necron_wargear04", 4, 0, 125, 4, 2, nil, 0)
	end

	-- Necron Last Standing Hero Wargear
	local iHeroLSCommanderSquads = self:CountSquads("necron_lord_squad_ktgm")
	if iHeroLSCommanderSquads > 0 then

		if not G_KTGM_Commander_WG_Choice_Made then
			 -- WARNING: Below, ALWAYS insert numbers <= of the total in each table!
           		 -- I used the actual total of each table, so that ALL will be randomly available
            		i_WG_Selection_number1 = 8	-- The number of researches to randomize, from the 1st table
            		i_WG_Selection_number2 = 11	-- The number of researches to randomize, from the 2nd table

            		i_WG_Selections1 = {
                	{"necron_ls_necron_lord_veil_of_darkness_research", 1, 0, 125, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_chronometron_research", 1, 0, 125, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_lightning_field_research", 1, 0, 125, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_nightmare_shroud_research", 1, 0, 125, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_phase_shifter_research", 1, 0, 125, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_phylactery_research", 1, 0, 125, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_resurrection_orb_research", 1, 0, 125, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_solar_pulse_research", 1, 0, 125, 0, 0, nil, 0}}

            		i_WG_Selections2 = {
                	{"necron_ls_necron_lord_wargear01", 1, 0, 100, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_wargear02", 1, 0, 125, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_wargear03", 1, 0, 75, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_wargear04", 1, 0, 100, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_wargear05", 1, 0, 100, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_wargear06", 1, 0, 125, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_wargear07", 1, 0, 150, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_wargear08", 1, 0, 150, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_wargear09", 1, 0, 125, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_wargear10", 1, 0, 150, 0, 0, nil, 0},
                	{"necron_ls_necron_lord_ctan_research", 1, 0, 325, 0, 0, nil, 0}}

            		-- The switch ensures we make the choice only ONCE
            		G_KTGM_Commander_WG_Choice_Made = true
            		i_WG_Rdm1 = {}          -- The random Selections from the 1st table
            		i_WG_Rdm2 = {}          -- The random Selections from the 2nd table

            		-- Populate the two random tables with the number of researches we need for each
            		for i = 1, i_WG_Selection_number1 do
                		local selection = math.random(1, table.getn(i_WG_Selections1))
                		table.insert(i_WG_Rdm1, i_WG_Selections1[selection])
                		table.remove(i_WG_Selections1, selection)
            		end

            		for i = 1, i_WG_Selection_number2 do
                		local selection = math.random(1, table.getn(i_WG_Selections2))
                		table.insert(i_WG_Rdm2, i_WG_Selections2[selection])
                		table.remove(i_WG_Selections2, selection)
            		end
		end

       		-- We are done. Perform the Researches
        	for i = 1, table.getn(i_WG_Rdm1) do
            		self:DynamicResearch(i_WG_Rdm1[i][1], 0, i_WG_Rdm1[i][3], i_WG_Rdm1[i][4], 0, 0, nil, 0)
        	end

    		for i = 1, table.getn(i_WG_Rdm2) do
       			self:DynamicResearch(i_WG_Rdm2[i][1], 0, i_WG_Rdm2[i][3], i_WG_Rdm2[i][4], 0, 0, nil, 0)
       		end
	end

	-- Dynamic research
	-- Item-Syntax: ResearchName, MinTier, RequisitionCost, PowerCost, MinSquadCap, MinSupportCap, SquadName, SquadMinCount

	-- Necron Lord research pattern
	if (self.m_iNecronLordResearchPattern == 1 and iNecronLordSquads > 0) then

		-- Timed: Necron units advance normally while their opponents move in slow motion.
		self:DynamicResearch("necron_chronometron_research", 1, 0, 100, 0, 0, nil, 0)

		-- Passive: Reduces damage from ranged attacks while slowly healing Necron Lord.
		self:DynamicResearch("necron_phylactery_research", 2, 0, 150, 0, 0, nil, 0)

		-- Timed / Passive: Mass Resurrection / Necron units in the Necron Lord's vicinity have a chance of returning to life.
		self:DynamicResearch("necron_resurrection_orb_research", 2, 0, 275, 0, 0, nil, 0)

	elseif (self.m_iNecronLordResearchPattern == 2 and iNecronLordSquads > 0) then

		-- Passive: Units attacking Necron Lord in melee take large amounts of damage.
		self:DynamicResearch("necron_lightning_field_research", 1, 0, 100, 0, 0, nil, 0)

		-- Passive: Reduces damage from ranged attacks while slowly healing Necron Lord.
		self:DynamicResearch("necron_phylactery_research", 2, 0, 150, 0, 0, nil, 0)

		-- Passive: Cloak nearby friendly units unless Necron Lord gets injured.
		self:DynamicResearch("necron_veil_of_darkness_research", 3, 0, 325, 0, 0, nil, 0)

	elseif (self.m_iNecronLordResearchPattern == 3 and iNecronLordSquads > 0) then
	
		-- Target Pos: Infiltrated units revealed, blinds units causing them firing inaccuracies.
		self:DynamicResearch("necron_solar_pulse_research", 1, 0, 125, 0, 0, nil, 0)

		-- Timed: Lord and phase-shifted units are immune to all forms of damage, but cannot attack.	
		self:DynamicResearch("necron_phase_shifter_research", 1, 0, 75, 0, 0, nil, 0)

		-- Passive: Reduces damage from ranged attacks while slowly healing Necron Lord.
		self:DynamicResearch("necron_phylactery_research", 2, 0, 150, 0, 0, nil, 0)

	elseif (self.m_iNecronLordResearchPattern == 4 and iNecronLordSquads > 0) then

		-- Target Pos: Infiltrated units revealed, blinds units causing them firing inaccuracies.
		self:DynamicResearch("necron_solar_pulse_research", 1, 0, 125, 0, 0, nil, 0)

		-- Passive: Reduces damage from ranged attacks while slowly healing Necron Lord.
		self:DynamicResearch("necron_phylactery_research", 2, 0, 150, 0, 0, nil, 0)

		-- Passive: Cloak nearby friendly units unless Necron Lord gets injured.
		self:DynamicResearch("necron_veil_of_darkness_research", 3, 0, 325, 0, 0, nil, 0)
	end

	if (self.tierLevel >= 1) then

		-- Compute warrior researches
		self:DynamicResearch("necron_warrior_boost", 1, 0, 200, 0, 0, "necron_basic_warrior_squad", 3)
	end

	if (self.tierLevel >= 2) then

		-- Compute infantry researches
		self:DynamicResearch("necron_improved_necrodermis_1", 2, 0, 180, 0, 0, nil, 0)

		-- Compute warrior researches
		self:DynamicResearch("necron_warrior_boost_2", 2, 0, 200, 0, 0, "necron_basic_warrior_squad", 3)

		-- Compute wraith researches
		self:DynamicResearch("necron_wraith_boost", 2, 0, 75, 0, 0, "necron_wraith_squad", 2)

		-- Try to build defensive large pylons
		self:DynamicBuild("necron_turret_big_pylon", 1, 2, 0, 325, 0, 0)

		-- Try to build no-limit defensive large pylons
		self:DynamicBuild("necron_turret_big_pylon_no_limit", 2, 2, 0, 400, 0, 0)
	end

	if (self.tierLevel >= 3) then
	
		-- Perform the selected Dynasty Research
		if (self.m_iDynastyResearch == 1) then
			self:DynamicResearch("necron_dynasty_imotekh", 3, 0, 0, 0, 0, nil, 0)
		elseif (self.m_iDynastyResearch == 2) then
			self:DynamicResearch("necron_dynasty_trazyn", 3, 0, 0, 0, 0, nil, 0)
		elseif (self.m_iDynastyResearch == 3) then
			self:DynamicResearch("necron_dynasty_xunbakyr", 3, 0, 0, 0, 0, nil, 0)
		elseif (self.m_iDynastyResearch == 4) then
			self:DynamicResearch("necron_dynasty_anrakyr", 3, 0, 0, 0, 0, nil, 0)
		elseif (self.m_iDynastyResearch == 5) then
			self:DynamicResearch("necron_dynasty_galmakh", 3, 0, 0, 0, 0, nil, 0)
		elseif (self.m_iDynastyResearch == 6) then
			self:DynamicResearch("necron_dynasty_sylphek", 3, 0, 0, 0, 0, nil, 0)
		end

		-- Compute infantry researches
		self:DynamicResearch("necron_reanimation_protocols_1", 3, 0, 280, 0, 0, nil, 0)

		-- Try to build defensive large pylons
		self:DynamicBuild("necron_turret_big_pylon", 2, 3, 0, 350, 0, 0)

		-- Try to build no-limit defensive large pylons
		self:DynamicBuild("necron_turret_big_pylon_no_limit", 4, 3, 0, 550, 0, 0)
	end

	if (self.tierLevel >= 4) then

		-- Compute Lord researches
		if (iNecronLordSquads > 0) then
			self:DynamicResearch("necron_ctan_research", 4, 0, 325, 0, 0, nil, 0)
		end

		-- Compute Destroyer Lord researches
		self:DynamicResearch("necron_lord_destroyer_wargear", 4, 0, 350, 0, 0, "necron_lord_destroyer_squad", 1)

		-- Compute Doom Scythe researches
		self:DynamicResearch("necron_weapons_night_scythe", 4, 0, 280, 0, 0, nil, 0)

		-- Compute Titan researches
		self:DynamicResearch("necron_titans_tier_ii", 4, 0, 1400, 10, 10, nil, 0)

		-- Compute HQ Tier2 and Tier3 Addons for future HQs
       		if self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 then
			self:DynamicAddon("addon_necron_hq_1", 100, 4, 0, 500, 0, 0, nil, nil, false)
			self:DynamicAddon("addon_necron_hq_2", 50, 4, 0, 1000, 0, 0, nil, nil, false)

			-- Try to build further defensive large pylons
			self:DynamicBuild("necron_turret_big_pylon", 6, 4, 0, 450, 0, 0)
		end

		-- Try to build no-limit defensive large pylons
		self:DynamicBuild("necron_turret_big_pylon_no_limit", 10, 4, 0, 600, 0, 0)
	end

	-- Build Pyramid Squads if applicable research is completed
	self:BuildPyramidSquads()

	-- Spam Necron warriors
	self:BuildFreeNecronWarriors()

	-- Restrict dynamic builds to hard difficulty or higher
	if (CpuManager.AISettings.bMultiBuildings) then
	
		-- Dynamic buildings
		-- Item-Syntax: BuildingName, BuildingCount, MinTier, MinRequisition, MinPower, MinSquadCap, MinSupportCap
		self:DynamicBuild("monolith", 2, 3, 0, 700, 0, 0)
		self:DynamicBuild("monolith", 3, 4, 0, 1000, 0, 0)
		self:DynamicBuild("necron_pyramid", 1, 3, 0, 300, 0, 0)
		self:DynamicBuild("necron_titans_building", 1, 4, 0, 500, 0, 0)
	end
end

-- Force AI to give priority to re-build HQ if lost and none are present
function NecronBuildBaseStrategy:BuildFirstHQ()

	-- Check if a plan exists
	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))
	if (self:PlanExists("Build Building Plan", iBuildingID)) then
		return
	end

	-- Check if any HQ are in production
	for oBuildChannel in build_manager:GetBuildChannelAIs() do

		-- Check building ID
		if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
			return
		end
	end
		
	-- Build the HQ
	local sHQName = self:GetBuildingName("HQ")
	local tBuildType = CpuBuildType()
	tBuildType.btype = CpuPrerequisites.BT_Building
	tBuildType.name = sHQName
	if (self:TryBuild( tBuildType )) then
		aitrace("BuildController: Dynamic build of "..tBuildType.name)
	end
	return
end

-- Force AI to give priority to recruit a builder unit if none are present
function NecronBuildBaseStrategy:BuildFirstBuilder(iBuilderName)

	if self:CountSquads(iBuilderName) < 1 then

		-- Recruit a builder squad
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Squad
		tBuildType.name = iBuilderName
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic build of "..tBuildType.name)
		end
		return
	end
end

