function DeathGuardBuildBaseStrategy:ForceTech()
	if (g_iGMT < 60 * CpuManager.ForceTech.StartTier1) then
		return false
	end

	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
	local iTierLevel = self:GetTierLevel()

	if (iTierLevel == 1) then
		if (iRequisition > 600 and iPower > 200) then
			return false
		end
		return not self.m_bHQAddon1

	elseif (iTierLevel == 2) then
		iID = cpu_manager.stats:GetBuildingID("death_guard_machine_pit")
		local bHasVehicleBuilding = false
		for oBuildChannel in build_manager:GetBuildChannelAIs() do
			if (oBuildChannel:GetBlueprintID() == iID) then
				bHasVehicleBuilding = true
				break
			end
		end

		if (not bHasVehicleBuilding) then
			return true
		end

		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier2 and (iRequisition < 600 or iPower < 600)) then
			return true
		end

	elseif (iTierLevel == 3) then	
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier3 and (iRequisition < 600 or iPower < 600)) then
			return true
		end
	end
	return false
end

function DeathGuardBuildBaseStrategy:GetPlacementType(iBuildingID)

	-- Check building
	if (iBuildingID == cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))) then
        	local count = self:GetBuildingCountByName(self:GetBuildingName("HQ"), false)
		local friend = cpu_manager:FindClosestFriendPlayer()
		if friend == nil then
			-- Lone Player
                	if count == 0 and not cpu_manager:HQThreat() then
                    		return "HQ"
                	else
                    		return "Safeplace"
                	end
        	else
        		-- Has allies
                	if count > 0 or cpu_manager:HQThreat() then
 				return "HQ"
                	else
				return "Safeplace"
                	end
		end
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("death_guard_temple") or
			iBuildingID == cpu_manager.stats:GetBuildingID("death_guard_temple_daemons") or
			iBuildingID == cpu_manager.stats:GetBuildingID("death_guard_sacrificial_circle") or
			iBuildingID == cpu_manager.stats:GetBuildingID("death_guard_sacrificial_circle_daemons") or
			iBuildingID == cpu_manager.stats:GetBuildingID("death_guard_machine_pit") or
			iBuildingID == cpu_manager.stats:GetBuildingID("death_guard_listening_post_spreading")) then
		return "Military"
	elseif (cpu_manager:IsTurret(iBuildingID) or
			iBuildingID == cpu_manager.stats:GetBuildingID("death_guard_turret_bolter_no_limit")) then
		return "Front2"	
	elseif (cpu_manager:IsMine(iBuildingID)) then
		return "Mine"
	elseif (cpu_manager:IsGenerator(iBuildingID) or
			iBuildingID == cpu_manager.stats:GetBuildingID("death_guard_armoury")) then
		return "BaseBack"
	end
	return "Basic"
end

function DeathGuardBuildBaseStrategy:ModifySquadDemand(iUnitID)

	if (iUnitID == cpu_manager.stats:GetSquadID("death_guard_squad_blightbringer") or
		iUnitID == cpu_manager.stats:GetSquadID("death_guard_squad_blightspawn") or
		iUnitID == cpu_manager.stats:GetSquadID("death_guard_squad_putrifier") or
		iUnitID == cpu_manager.stats:GetSquadID("death_guard_squad_tallyman") or
		iUnitID == cpu_manager.stats:GetSquadID("death_guard_squad_icon") or
		iUnitID == cpu_manager.stats:GetSquadID("death_guard_squad_sigil") or
		iUnitID == cpu_manager.stats:GetSquadID("death_guard_squad_surgeon")) then

		local virion_attach = function ( squad_ai )
			return (squad_ai:GetTactic():GetUnitStrength() >= 50 and squad_ai:CanReceiveAttachment())
		end

		local num_attach = self:CountSquads("death_guard_squad_cultist", virion_attach) +
			self:CountSquads("death_guard_squad_plague_marine_ranged", virion_attach) +
			self:CountSquads("death_guard_squad_plague_marine_melee", virion_attach) + 
			self:CountSquads("death_guard_squad_plague_havoc", virion_attach) +
			self:CountSquads("death_guard_squad_possessed", virion_attach) +
			self:CountSquads("death_guard_squad_chosen", virion_attach) +
			self:CountSquads("death_guard_squad_terminator_blightlord", virion_attach) +
			self:CountSquads("death_guard_squad_terminator_deathshroud", virion_attach)

		local num_virion = self:CountSquads("death_guard_squad_blightbringer") +
			self:CountSquads("death_guard_squad_blightspawn") +
			self:CountSquads("death_guard_squad_putrifier") +
			self:CountSquads("death_guard_squad_tallyman") +
			self:CountSquads("death_guard_squad_icon") +
			self:CountSquads("death_guard_squad_sigil") +
			self:CountSquads("death_guard_squad_surgeon")

		if (num_virion >= num_attach) then
			return 0
		end
	end

	-- Stop building rhinos if we are at the limit and above Tier4
	if (iUnitID == cpu_manager.stats:GetSquadID("death_guard_squad_rhino")) then 

		if (self.tierLevel >= 4) then
			if (self:CountSquads("death_guard_squad_rhino") >= 2) then
				return 0
			end
		end
	end

	return BuildBaseStrategy.ModifySquadDemand(self, iUnitID)
end

