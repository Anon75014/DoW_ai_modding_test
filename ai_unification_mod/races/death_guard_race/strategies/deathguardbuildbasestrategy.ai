function DeathGuardBuildBaseStrategy:UpdateTierLevel()

	self.tierLevel = 1
	if cpu_manager.cpu_player:IsResearchComplete("death_guard_projectiles") then
		self.tierLevel = 4
		return
	end
	local iHQAddon1ID = cpu_manager.stats:GetAddOnID("death_guard_hq_addon_1")
	local iHQAddon2ID = cpu_manager.stats:GetAddOnID("death_guard_hq_addon_2")
	local oStats = cpu_manager.stats:GetPlayerStatsFromID( cpu_manager.player_id )
	for oBase in oStats:GetBases() do
		if (oBase:IsValid() and not oBase:IsListeningPost()) then
			if oBase:HasAddOn(iHQAddon2ID) then
				self.tierLevel = 3
				return
			elseif oBase:HasAddOn(iHQAddon1ID) then
				self.tierLevel = 2
			end
		end
	end
end

