function DeathGuardBuildBaseStrategy:ChooseBuildProgram()

	if (table.getn(self.info.BuildPrograms) ~= 5) then
		return BuildBaseStrategy.ChooseBuildProgram(self)
	end

	local sMapSize, iClosestEnemyDistance = self:GetMapSize()
	local iBuildProgram1	-- Basic strategy
	local iBuildProgram2	-- Marine rush
	local iBuildProgram3	-- Vector rush
	local iBuildProgram4	-- Vehicle rush
	local iBuildProgram5	-- Marine rush

	if (sMapSize == "small" or iClosestEnemyDistance <= 70 or cpu_manager.iPlayerCount == 2) then
		iBuildProgram1 = 15
		iBuildProgram2 = 15
		iBuildProgram3 = 15
		iBuildProgram4 = 15
		iBuildProgram5 = 40
	elseif (sMapSize == "large" and cpu_manager.iPlayerCount >= 6) then
		iBuildProgram1 = 25
		iBuildProgram2 = 25
		iBuildProgram3 = 25
		iBuildProgram4 = 20
		iBuildProgram5 = 5
	else
		iBuildProgram1 = 25
		iBuildProgram2 = 25
		iBuildProgram3 = 25
		iBuildProgram4 = 20
		iBuildProgram5 = 5
	end

	local oEnemy = cpu_manager:FindClosestEnemyPlayer(false)
	local sEnemy = oEnemy:GetPlayerRaceName()	

	if (sEnemy == "ork_race") then
		iBuildProgram1 = iBuildProgram1 - 5
		iBuildProgram2 = iBuildProgram2 + 15
		iBuildProgram3 = iBuildProgram3 - 5
		iBuildProgram4 = iBuildProgram4 - 5
	elseif (sEnemy == "eldar_race" or sEnemy == "guard_race") then
		iBuildProgram1 = iBuildProgram1 - 10
		iBuildProgram2 = iBuildProgram2 - 10
		iBuildProgram3 = iBuildProgram3 + 30
		iBuildProgram4 = iBuildProgram4 - 10
	elseif (sEnemy == "necron_race") then
		iBuildProgram1 = iBuildProgram1 - 5
		iBuildProgram2 = iBuildProgram2 - 5
		iBuildProgram3 = iBuildProgram3 - 5
		iBuildProgram4 = iBuildProgram4 - 5
		iBuildProgram5 = iBuildProgram5 + 20
	elseif (iClosestEnemyDistance <= 50) then
		iBuildProgram1 = iBuildProgram1 - 5
		iBuildProgram2 = iBuildProgram2 - 5
		iBuildProgram3 = iBuildProgram3 - 5
		iBuildProgram4 = iBuildProgram4 - 5
		iBuildProgram5 = iBuildProgram5 + 20
	end

	iBuildProgram2 = iBuildProgram1 + iBuildProgram2
	iBuildProgram3 = iBuildProgram2 + iBuildProgram3
	iBuildProgram4 = iBuildProgram3 + iBuildProgram4
	iBuildProgram5 = iBuildProgram4 + iBuildProgram5

	local iRandom = math.random(1, 100)
	if (iRandom <= iBuildProgram1) then
		return 1
	elseif (iRandom <= iBuildProgram2) then
		return 2
	elseif (iRandom <= iBuildProgram3) then
		return 3
	elseif (iRandom <= iBuildProgram4) then
		return 4
	elseif (iRandom <= iBuildProgram5) then
		return 5
	end
	return 1
end

function DeathGuardBuildBaseStrategy:EvaluateSquadCap()

	-- Check squad cap
	if (self:CheckSquadCap(300, 0)) then
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research

		if (not cpu_manager.cpu_player:IsResearchComplete( "death_guard_squad_cap_research" )) then
			tBuildType.name = "death_guard_squad_cap_research"
		elseif not cpu_manager.cpu_player:IsResearchComplete( "death_guard_squad_cap_research_1" ) then
			tBuildType.name = "death_guard_squad_cap_research_1"
		else
			return
		end

		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end

	-- Check support cap
	if (self:CheckSupportCap(150, 300)) then
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research

		if (not cpu_manager.cpu_player:IsResearchComplete( "death_guard_support_cap_research" )) then
			tBuildType.name = "death_guard_support_cap_research"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "death_guard_support_cap_research_1" )) then
			tBuildType.name = "death_guard_support_cap_research_1"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "death_guard_support_cap_research_2" )) then
			tBuildType.name = "death_guard_support_cap_research_2"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "death_guard_support_cap_research_3" )) then
			tBuildType.name = "death_guard_support_cap_research_3"
		else
			return
		end

		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
end

function DeathGuardBuildBaseStrategy:GetBuildingName( sType )

	if (sType == "HQ") then
		return "death_guard_hq"

	elseif (sType == "Generator") then
		return "death_guard_plasma_generator"

	elseif (sType == "BiggerGenerator") then
		return "death_guard_thermo_plasma_generator"

	elseif (sType == "VehicleBuilding") then
		return "death_guard_machine_pit"

	elseif (sType == "ListeningPost") then
		return "death_guard_listening_post"

	elseif (sType == "Turret") then
		return "death_guard_turret_bolter"

	elseif (sType == "Mine") then
