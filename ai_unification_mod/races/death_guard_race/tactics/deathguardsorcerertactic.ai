class 'DeathGuardSorcererTactic' (DeathGuardInfantryTactic)

DeathGuardSorcerer = {}

function DeathGuardSorcererTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Death Guard Sorcerer Tactic")

	self.dance_time = 0
end

function DeathGuardSorcererTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function DeathGuardSorcererTactic:IsDefender()
	return self:IsCommanderDefender()
end

function DeathGuardSorcererTactic:InitAbilities()

	if (DeathGuardSorcerer.curse_id == nil) then
		DeathGuardSorcerer.curse_id = cpu_manager.stats:GetAbilityID( "death_guard_curse_of_the_leper" )
	end

	if (DeathGuardSorcerer.gift_id == nil) then
		DeathGuardSorcerer.gift_id = cpu_manager.stats:GetAbilityID( "death_guard_gift_of_contagion" )
	end

	if (DeathGuardSorcerer.miasma_id == nil) then
		DeathGuardSorcerer.miasma_id = cpu_manager.stats:GetAbilityID( "death_guard_miasma_of_pestilence" )
	end

	if (DeathGuardSorcerer.pox_id == nil) then
		DeathGuardSorcerer.pox_id = cpu_manager.stats:GetAbilityID( "death_guard_pox_walkers" )
	end
end

function DeathGuardSorcererTactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityArea( self.squad_ai, DeathGuardSorcerer.curse_id, Ability.Filters.CloseEnemy, 10, 4 )
		Ability.DoAbilityArea( self.squad_ai, DeathGuardSorcerer.gift_id, Ability.Filters.CloseEnemy, 7, 4 )
		Ability.DoAbilityArea( self.squad_ai, DeathGuardSorcerer.miasma_id, Ability.Filters.CloseEnemy, 4, 4 )
		Ability.DoAbilityTarget( self.squad_ai, DeathGuardSorcerer.pox_id, Ability.Filters.CloseSquadEnemy, 1 )
	else
		Ability.DoAbilityArea( self.squad_ai, DeathGuardSorcerer.curse_id, Ability.Filters.CloseEnemy, 21, 8 )
		Ability.DoAbilityArea( self.squad_ai, DeathGuardSorcerer.gift_id, Ability.Filters.CloseEnemy, 14, 8 )
		Ability.DoAbilityArea( self.squad_ai, DeathGuardSorcerer.miasma_id, Ability.Filters.CloseEnemy, 7, 8 )
		Ability.DoAbilityTarget( self.squad_ai, DeathGuardSorcerer.pox_id, Ability.Filters.CloseSquadEnemy, 2 )
	end

	-- Check if we can possess
	if (self.squad_ai:CanPossess()) then

		-- Check if we are in combat
		if (self.squad_ai:IsInCombat() or cpu_manager.terrain_analyzer:HasThreat(self.squad_ai:GetPosition(), 35)) then
			self.squad_ai:DoPossess()
		end
	end
end

function DeathGuardSorcererTactic:Update()

    if (self:IsComplete()) then
        return
    end
    
    -- State machine
    if (not InfantryTactic.Update( self )) then
        return
    end
    
	-- Check for close commander
    	local bSetRanged = false
	local bSetMelee = false
	local vSquadPos = self.squad_ai:GetPosition()
	local eStance = self.squad_ai:GetMeleeStance()
	local oEnemyCommander = Ability.Filters.CloseCommanderEnemy(vSquadPos, 20, 1)
    	if (oEnemyCommander ~= nil) then
       
        -- Check health
        if (self.squad_ai:GetHealthPercentage() > 0.8 and oEnemyCommander:GetHealthPercentage() < 0.3) then
            bSetMelee = (eStance == SquadAI.MSTANCE_Ranged)
            self.dance_time = 0
		else
            bSetRanged = (eStance == SquadAI.MSTANCE_Assault)
        end
	else
    
    	-- Check for close attached commander
    	local oSquad = Ability.Filters.CloseInfantryEnemy(vSquadPos, 20, 4)
    	if (oSquad ~= nil and oSquad:IsAttached()) then
    		bSetRanged = (eStance == SquadAI.MSTANCE_Assault)
    	else
    		bSetMelee = (eStance == SquadAI.MSTANCE_Ranged)
    	end
    end

    -- At leat 10 secs ranged stance/dancing
    if (bSetRanged) then
        self.squad_ai:DoSetMeleeStance( SquadAI.MSTANCE_Ranged )
        self.dance_time = g_iGMT
    elseif (bSetMelee and self.stateID ~= Tactic.StateID.DoDance and g_iGMT > self.dance_time + 10) then
        self.squad_ai:DoSetDefaultMeleeStance()
        self.dance_time = 0
    end
    
	-- Check if we are in serious trouble
	self:EmergencyRetreat()
    
    -- Attach to melee
	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then

		if (self:TryAttachSquad(true, true, 50, 100, nil) == nil) then
		
			if (self:TryAttachSquad(false, false, 50, 100, self.m_fCommanderAttachHealth) == nil) then
				self:TryAttachSquadMelee()
			end
		end
	end
end