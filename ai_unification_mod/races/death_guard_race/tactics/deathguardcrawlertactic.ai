class 'DeathGuardCrawlerTactic' (DeathGuardVehicleTactic)

DeathGuardCrawler = {}

function DeathGuardCrawlerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Death Guard Crawler Tactic")
end

function DeathGuardCrawlerTactic:InitAbilities()

	-- Init ability ID's
	if (DeathGuardCrawler.cloud_id == nil) then
		DeathGuardCrawler.cloud_id = cpu_manager.stats:GetAbilityID( "death_guard_plagueburst_cloud" )
	end
end

function DeathGuardCrawlerTactic:DoAbilities()
		
	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityPos( self.squad_ai, DeathGuardCrawler.cloud_id, Ability.Filters.CloseEnemy, 4 ) 
	else
		Ability.DoAbilityPos( self.squad_ai, DeathGuardCrawler.cloud_id, Ability.Filters.CloseEnemy, 8 )
	end
end
