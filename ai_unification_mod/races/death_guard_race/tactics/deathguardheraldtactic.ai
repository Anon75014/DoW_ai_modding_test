class 'DeathGuardHeraldTactic' (DeathGuardInfantryTactic)

DeathGuardHerald = {}

function DeathGuardHeraldTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Death Guard Herald Tactic")
end

function DeathGuardHeraldTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function DeathGuardHeraldTactic:IsDefender()
	return self:IsCommanderDefender()
end

function DeathGuardHeraldTactic:InitAbilities()

	if DeathGuardHerald.pox_id == nil then
		DeathGuardHerald.pox_id = cpu_manager.stats:GetAbilityID( "death_guard_shrivelling_pox" )
		DeathGuardHerald.corruption_id = cpu_manager.stats:GetAbilityID( "death_guard_stream_of_corruption" )
		DeathGuardHerald.flies_id = cpu_manager.stats:GetAbilityID( "death_guard_cloud_of_flies" )
	end
end

function DeathGuardHeraldTactic:DoAbilities()

	if self.squad_ai:IsInCombat() then
		if self.squad_ai:CanDoAbility(DeathGuardHerald.pox_id) then
			if Ability.DoAbilityTarget( self.squad_ai, DeathGuardHerald.pox_id, Ability.Filters.CloseEnemy, 5 ) then
				return
			end
		end
		if self.squad_ai:CanDoAbility(DeathGuardHerald.corruption_id) then
			if Ability.DoAbilityTarget( self.squad_ai, DeathGuardHerald.corruption_id, Ability.Filters.CloseEnemy, 10 ) then
				return
			end
		end
		if self.squad_ai:CanDoAbility(DeathGuardHerald.flies_id) then
			if Ability.DoAbilityTarget( self.squad_ai, DeathGuardHerald.flies_id, Ability.Filters.CloseVehicleEnemy, 1 ) then
				return
			end
		end
	end
end

function DeathGuardHeraldTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
    if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                self:TryAttachSquadMelee()
            end
        end
    end
end
