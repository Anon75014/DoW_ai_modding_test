class 'DeathGuardGreatUncleanOneTactic' (DeathGuardInfantryTactic)

DeathGuardGreatUncleanOne = {}

function DeathGuardGreatUncleanOneTactic:__init( squad_ai ) super( squad_ai )

	self.timedDirectSpawnAbility = Timer( DeathGuardGreatUncleanOneTactic.DoDirectSpawnAbility, self, 5 )

	self:SetName("Death Guard Great Unclean One Tactic")
end

function DeathGuardGreatUncleanOneTactic:AlwaysAttack()
	return true
end

function DeathGuardGreatUncleanOneTactic:InitAbilities()

	if (DeathGuardGreatUncleanOne.puke_id == nil) then
		DeathGuardGreatUncleanOne.puke_id = cpu_manager.stats:GetAbilityID( "death_guard_guo_puke" )
		DeathGuardGreatUncleanOne.stomp_id = cpu_manager.stats:GetAbilityID( "death_guard_guo_stomp" )
		DeathGuardGreatUncleanOne.gut_id = cpu_manager.stats:GetAbilityID( "death_guard_gut" )
	end
end

function DeathGuardGreatUncleanOneTactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityPos( self.squad_ai, DeathGuardGreatUncleanOne.puke_id, Ability.Filters.CloseEnemy, 3 )
		Ability.DoAbilityPos( self.squad_ai, DeathGuardGreatUncleanOne.stomp_id, Ability.Filters.CloseEnemy, 4 )
		Ability.DoAbilityArea( self.squad_ai, DeathGuardGreatUncleanOne.gut_id, Ability.Filters.CloseEnemy, 10, 4 )
	else
		Ability.DoAbilityPos( self.squad_ai, DeathGuardGreatUncleanOne.puke_id, Ability.Filters.CloseEnemy, 6 )
		Ability.DoAbilityPos( self.squad_ai, DeathGuardGreatUncleanOne.stomp_id, Ability.Filters.CloseEnemy, 8 )
		Ability.DoAbilityArea( self.squad_ai, DeathGuardGreatUncleanOne.gut_id, Ability.Filters.CloseEnemy, 20, 6 )
	end

	-- Try to spawn Great Unclean Twos
	if (self.timedDirectSpawnAbility ~= nil) then
		self.timedDirectSpawnAbility:Call()
	else
		DeathGuardGreatUncleanOneTactic.DoDirectSpawnAbility(self)
	end
end

function DeathGuardGreatUncleanOneTactic:DoDirectSpawnAbility()

	-- Spawn Great Unclean Twos in combat
	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	end
end

function DeathGuardGreatUncleanOneTactic:Update()

    if (self:IsComplete()) then
        return
    end

    -- State machine
    if (not InfantryTactic.Update(self)) then
        return
    end
end
