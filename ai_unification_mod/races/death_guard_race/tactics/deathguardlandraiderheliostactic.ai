class 'DeathGuardLandRaiderHeliosTactic' (DeathGuardVehicleTactic)

DeathGuardLandRaiderHelios = {}

function DeathGuardLandRaiderHeliosTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Death Guard Land Raider Helios Tactic")
end

function DeathGuardLandRaiderHeliosTactic:InitAbilities()

	if (DeathGuardLandRaiderHelios.smoke_id == nil) then
		DeathGuardLandRaiderHelios.smoke_id = cpu_manager.stats:GetAbilityID( "death_guard_smoke_launchers" )	
		DeathGuardLandRaiderHelios.spirit_id = cpu_manager.stats:GetAbilityID( "death_guard_machine_spirit" )
	end
end

function DeathGuardLandRaiderHeliosTactic:DoAbilities()

	-- Check if we can launch poison
	if (self.squad_ai:CanDoAbility(DeathGuardLandRaiderHelios.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(DeathGuardLandRaiderHelios.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(DeathGuardLandRaiderHelios.smoke_id, oUnit:GetSquad())
		end
	end

	-- Check if I can use corrupted machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(DeathGuardLandRaiderHelios.spirit_id)) then
			self.squad_ai:DoSpecialAbility(DeathGuardLandRaiderHelios.spirit_id)
		end	  
	end

	VehicleTactic.DoAbilities(self)
end
