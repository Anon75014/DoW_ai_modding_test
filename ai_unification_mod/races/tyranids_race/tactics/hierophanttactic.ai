-- File: 'hierophanttactic.ai'

class 'HierophantTactic' (TyranidInfantryTactic)

Hierophant = {}


function HierophantTactic:__init( squad_ai ) super( squad_ai )
	self:SetName("Hierophant Tactic")
	self.bunkerCheckDelay = g_iGMT
end


function HierophantTactic:AlwaysAttack()
	return true
end


function HierophantTactic:InitAbilities()
	if Hierophant.iCloudID == nil then
		Hierophant.iCloudID = cpu_manager.stats:GetAbilityID( "tyranids_hierophant_cloud" )
	end
end


function HierophantTactic:DoAbilities()
	if self.squad_ai:CanDoAbility(Hierophant.iCloudID) then
		if cpu_manager.cpu_player:FindFirstInfantryEnemy(self.squad_ai:GetPosition(), 30, 4) ~= nil then
			self.squad_ai:DoSpecialAbility(Hierophant.iCloudID)
		end
	end
end


