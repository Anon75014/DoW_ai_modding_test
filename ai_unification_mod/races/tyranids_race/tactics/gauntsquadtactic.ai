class 'GauntSquadTactic' (TyranidInfantryTactic)

function GauntSquadTactic:__init( squad_ai ) super( squad_ai )

       self:SetName("Gaunt Squad Tactic")
end

function GauntSquadTactic:AlwaysAttack()
	return true
end

function GauntSquadTactic:Reinforce()

	-- Don't reinforce more then 9 squad members -- they get stuck
	if (not self.squad_ai:IsReinforcing() and self.squad_ai:GetNumTroopers() < 9) then
		if (self.squad_ai:CanReinforce( false, 0 )) then
			self.squad_ai:DoReinforce( false, 0 )
		end
	end
end
