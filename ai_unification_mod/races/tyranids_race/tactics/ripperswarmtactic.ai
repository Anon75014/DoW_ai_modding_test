class 'RipperSwarmTactic' (TyranidInfantryTactic)

function RipperSwarmTactic:__init( squad_ai ) super( squad_ai )

       self:SetName("Ripper Swarm Tactic")
end

function RipperSwarmTactic:AlwaysAttack()
	return true
end

function RipperSwarmTactic:CanOnlyDecap()
		return true
end

function RipperSwarmTactic:Reinforce()

	-- Don't reinforce more then 9 squad members -- they get stuck
	if (not self.squad_ai:IsReinforcing() and self.squad_ai:GetNumTroopers() < 9) then
		if (self.squad_ai:CanReinforce( false, 0 )) then
			self.squad_ai:DoReinforce( false, 0 )
		end
	end
end
