	-- Check name
	if (sName == "chaos_bloodthirster_research")
	or (sName == "chaos_squad_bloodthirster")
	or (sName == "chaos_squad_decimator_tank")
	or (sName == "chaos_squad_keeper_of_secrets")
	or (sName == "chaos_squad_land_raider_hades")
	or (sName == "chaos_squad_yor_forger")
	or (sName == "chaos_squad_primarch_alpharius")
	or (sName == "chaos_squad_warhound_titan")
	or (sName == "chaos_squad_ravager_titan") then
		return true
	end
	return false
end

