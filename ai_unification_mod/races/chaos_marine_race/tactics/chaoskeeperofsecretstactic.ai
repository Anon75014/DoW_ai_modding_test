class 'ChaosKeeperOfSecretsTactic' (ChaosMarineInfantryTactic)

ChaosKeeperOfSecrets = {}

function ChaosKeeperOfSecretsTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Chaos Keeper Of Secrets Tactic")
end

function ChaosKeeperOfSecretsTactic:AlwaysAttack()
	return true
end

function ChaosKeeperOfSecretsTactic:InitAbilities()

	-- Init ability ID's
	if (ChaosKeeperOfSecrets.allure_id == nil) then
		ChaosKeeperOfSecrets.allure_id = cpu_manager.stats:GetAbilityID( "chaos_allure_kos" )
	end
end

function ChaosKeeperOfSecretsTactic:DoAbilities()

	-- Check if I can use in-combat abilities 
	if self.squad_ai:IsInCombat() then

		if self.squad_ai:CanDoAbility(ChaosKeeperOfSecrets.allure_id) then
            		if Ability.DoAbilityTarget( self.squad_ai, ChaosKeeperOfSecrets.allure_id, Ability.Filters.CloseInfantryEnemy, 1 )
            		or Ability.DoAbilityTarget( self.squad_ai, ChaosKeeperOfSecrets.allure_id, Ability.Filters.CloseCommanderEnemy, 1 )
            		or Ability.DoAbilityTarget( self.squad_ai, ChaosKeeperOfSecrets.allure_id, Ability.Filters.CloseMonsterEnemy, 1 ) then
				return
			end
		end
	end
end
