class 'ChaosPredatorVanillaTactic' (ChaosMarineVehicleTactic)

ChaosPredatorVanilla = {}

function ChaosPredatorVanillaTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Chaos Predator Vanilla Tactic")

	self.Chosen_Upgrade = 0	  -- Annihilator Addon available only
	self.lastAddonTry = g_iGMT
end

function ChaosPredatorVanillaTactic:AutoBuildAddOn( addonSlot )
	for e in self.squad_ai:GetEntities() do
		local buildChannel = build_manager:GetBuildChannelFromID(e:GetID())
		if buildChannel ~= nil then
			local addOnID = buildChannel:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
			if (buildChannel:IsBuilding() == 0 and buildChannel:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
				buildChannel:BuildAddOn(addOnID)
				return
			end
		end
	end
	return
end

function ChaosPredatorVanillaTactic:DoAbilities()
--[[
	[addon_01] = addons\addon_chaos_pred_annihilator
]]
	-- Check to addon every 20+ secs
	if self.Chosen_Upgrade < 6 and g_iGMT > self.lastAddonTry + 20 then
		self.lastAddonTry = g_iGMT
		-- Check available resources and health, before performing any upgrade
		local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
		if iReq > 200 and iPow > 200 and self.squad_ai:GetHealthPercentage() > 0.35 then
			self:AutoBuildAddOn(self.Chosen_Upgrade)
		end
	end

	-- Do basic abilities
	ChaosMarineVehicleTactic.DoAbilities(self)
end