class 'EnclavesResearchKtgmTactic' (BaseTactic)

EnclavesResearchKtgm = {}

function EnclavesResearchKtgmTactic:__init( base_ai ) super( base_ai )

	self:SetName("Enclaves Research Kill Team Tactic")

	-- The name of the squad to target
	self.squad1_name = "enclaves_squad_arrakon_ktgm"
	self.squad2_name = "enclaves_squad_bravestorm_ktgm"
	self.squad3_name = "enclaves_squad_brightsword_ktgm"
	self.squad4_name = "enclaves_squad_farsight_ktgm"
	self.squad5_name = "enclaves_squad_oblotai_ktgm"
	self.squad6_name = "enclaves_squad_ovesa_ktgm"
	self.squad7_name = "enclaves_squad_shavastos_ktgm"
	self.squad8_name = "enclaves_squad_torchstar_ktgm"
end

function EnclavesResearchKtgmTactic:InitAbilities()
	
	-- Init abilities
	if (EnclavesResearchKtgm.Strongheal_id == nil) then
		EnclavesResearchKtgm.Strongheal_id = cpu_manager.stats:GetAbilityID( "ls_healing_1000" )
	end

	if (EnclavesResearchKtgm.Lightheal_id == nil) then
		EnclavesResearchKtgm.Lightheal_id = cpu_manager.stats:GetAbilityID( "ls_healing_500" )
	end
end

function EnclavesResearchKtgmTactic:DoAbilities()
	
	aitrace("EnclavesResearchKtgmTactic: Do abilities...")

	-- Check if squad is valid
    	for oSquad in military_manager:GetSquads() do
        	if oSquad:IsValid() then
            		if oSquad:GetSquadName() == self.squad1_name or
				oSquad:GetSquadName() == self.squad2_name or
				oSquad:GetSquadName() == self.squad3_name or
				oSquad:GetSquadName() == self.squad4_name or
				oSquad:GetSquadName() == self.squad5_name or
				oSquad:GetSquadName() == self.squad6_name or
				oSquad:GetSquadName() == self.squad7_name or
				oSquad:GetSquadName() == self.squad8_name then

				-- Try to use Strong Heal ability on squad (restores target's health by 1000 HP)
				if (self.base_ai:CanDoAbility(EnclavesResearchKtgm.Strongheal_id)) then
	
					-- Check if health needs an energency boost
					if (oSquad:WasRecentlyHurt() and oSquad:GetHealthPercentage() < 0.3) then

						-- Check if we have the needed resources
						local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
						local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
      						if iReq >= 100 and iPower >= 100 then		
		
							-- Use strong heal ability on commander
							self.base_ai:DoSpecialAbility(EnclavesResearchKtgm.Strongheal_id)
							--print("Using Heavy Heal ability for player "..tostring(cpu_manager.player_id).."")
						end
					end
				end
