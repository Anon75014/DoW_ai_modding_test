class 'EnclavesDroneGunTactic' (EnclavesInfantryTactic)

EnclavesDroneGun = {}

function EnclavesDroneGunTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Enclaves Drone Gun Tactic")
end

function EnclavesDroneGunTactic:InitAbilities()

	-- Init ability ID's
	if (EnclavesDroneGun.detonate_id == nil) then
		EnclavesDroneGun.detonate_id = cpu_manager.stats:GetAbilityID( "enclaves_klestak_detonate" )	
	end
end

function EnclavesDroneGunTactic:DoAbilities()

	-- Self Destruct when in proximity and with low health
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		if (self.squad_ai:CanDoAbility(EnclavesDroneGun.detonate_id)) then
 			Ability.DoAbilityTarget( self.squad_ai, EnclavesDroneGun.detonate_id, Ability.Filters.CloseVehicleEnemy, 1 )
			Ability.DoAbilityTargetEntity( self.squad_ai, EnclavesDroneGun.detonate_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1) 
		end
	end
end

function EnclavesDroneGunTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad(false, false, 1000, 60, nil)
end