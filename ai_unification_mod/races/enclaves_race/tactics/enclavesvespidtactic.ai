class 'EnclavesVespidTactic' (EnclavesInfantryTactic)

EnclavesVespid = {}

function EnclavesVespidTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Enclaves Vespid Tactic")
end

function EnclavesVespidTactic:InitAbilities()

	-- Init ability ID's
	if (EnclavesVespid.iSonicPulseID == nil) then
		EnclavesVespid.iSonicPulseID = cpu_manager.stats:GetAbilityID( "enclaves_sonic_pulse" )	
	end

	if (EnclavesVespid.iDevourID == nil) then
		EnclavesVespid.iDevourID = cpu_manager.stats:GetAbilityID( "enclaves_devour" )	
	end
end

function EnclavesVespidTactic:DoAbilities()

	-- Check if I can activate sonic pulse
	Ability.DoAbility(self.squad_ai, EnclavesVespid.iSonicPulseID, Ability.PredicateFilters.IsInCombat)

	-- Check if we can use Shred on enemy buildings
	Ability.DoAbilityTargetEntity(self.squad_ai, EnclavesVespid.iDevourID, Ability.EntityFilters.CloseBaseEntityEnemy, 1)
	
	-- Call basic DoAbilities methods
	InfantryTactic.DoAbilities(self)
end