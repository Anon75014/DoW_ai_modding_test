class 'EnclavesFarsightTactic' (EnclavesInfantryTactic)

EnclavesFarsight = {}

function EnclavesFarsightTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Enclaves Farsight Tactic")

	self:InitAbilities()
end

-- Enclaves Commander is allowed to retreat even directly after a jump
function EnclavesFarsightTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

-- Assassinate win condition -- never attack
function EnclavesFarsightTactic:IsAttacker()	
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function EnclavesFarsightTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

-- Assassinate win condition -- never jump into combat
function EnclavesFarsightTactic:JumpAttack()
	if (not cpu_manager.assassinate) then
		Tactic.JumpAttack(self)
	end
end

function EnclavesFarsightTactic:InitAbilities()

	-- Init ability ID's
	if (EnclavesFarsight.summon_id == nil) then
		EnclavesFarsight.summon_id = cpu_manager.stats:GetAbilityID( "enclaves_beacon_summon" )	
	end

	if (EnclavesFarsight.summon_ktgm == nil) then
		EnclavesFarsight.summon_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon" )	
	end

	if (EnclavesFarsight.summon1_ktgm == nil) then
		EnclavesFarsight.summon1_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon1" )	
	end

	if (EnclavesFarsight.summon2_ktgm == nil) then
		EnclavesFarsight.summon2_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon2" )	
	end

	if (EnclavesFarsight.summon3_ktgm == nil) then
		EnclavesFarsight.summon3_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon3" )	
	end
end

function EnclavesFarsightTactic:DoAbilities()

	-- Try to summon an Orca if we have the needed resources 
	if resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Requisition) > 300 then

		-- Try to summon an Orca
    		if self.squad_ai:CanDoAbility(EnclavesFarsight.summon_id) then

			-- Condition 1: Search for a nearby hurt squad
        		local iRange = self.squad_ai:GetAbilityRange(EnclavesFarsight.summon_id)
        		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
        		if (oUnit ~= nil) then
				--print("Using Farsight Close Hurt Orca Drop for player "..tostring(cpu_manager.player_id).."")
            			if self.squad_ai:DoSpecialAbilitySquad(EnclavesFarsight.summon_id, oUnit:GetSquad()) then
                			return
            			end
        		end

        		-- Condition 2: Check for low Power (lower than 250, for example)
        		if resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Power) < 250 then
				--print("Using Farsight Low Power Orca Drop for player "..tostring(cpu_manager.player_id).."")
            			if self.squad_ai:DoSpecialAbilityPos(EnclavesFarsight.summon_id, self.squad_ai:GetPosition()) then
                			return
            			end
       			end

        		-- Condition 3: Random calling, just for the sake of creating new squads
        		if math.random(1,30) == 1 then
				--print("Using Farsight Random Orca Drop for player "..tostring(cpu_manager.player_id).."")
