function EnclavesOvesaTactic:DoAbilities()

	-- Run repair system if low health
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		if (self.squad_ai:CanDoAbility(EnclavesOvesa.repair_id)) then
			self.squad_ai:DoSpecialAbility(EnclavesOvesa.repair_id)
		end

		if (self.squad_ai:CanDoAbility(EnclavesOvesa.repair_ktgm)) then
			self.squad_ai:DoSpecialAbility(EnclavesOvesa.repair_ktgm)
		end
	end
--[[
	-- Engage increased accurancy and reduced reload tactics close in combat
	if (self.squad_ai:CanDoAbility(EnclavesOvesa.target_id)) then
		Ability.DoAbilityArea(self.squad_ai, EnclavesOvesa.target_id, Ability.Filters.CloseInCombat, 10, 1)
	end

	-- Engage increased accurancy and reduced reload tactics close in combat -- Killteam 
	if (self.squad_ai:CanDoAbility(EnclavesOvesa.target_ktgm)) then
		Ability.DoAbilityArea(self.squad_ai, EnclavesOvesa.target_ktgm, Ability.Filters.CloseInCombat, 10, 1)
	end
]]
	-- Check to make sure if no threats are nearby and we have enough health
	if not (self.squad_ai:IsInCombat()) and not (self.squad_ai:IsUnderAttack()) then

		if (self.squad_ai:GetHealthPercentage() > 0.5) then 

			-- If I am safe I can sprint
			if (self.squad_ai:CanDoAbility( EnclavesOvesa.speed_id )) then
				self.squad_ai:DoSpecialAbility( EnclavesOvesa.speed_id )
			end

			-- If I am safe I can sprint -- Killteam
			if (self.squad_ai:CanDoAbility( EnclavesOvesa.speed_ktgm )) then
				self.squad_ai:DoSpecialAbility( EnclavesOvesa.speed_ktgm )
			end
		end
	end

	-- Check to make sure if threats are nearby and we have enough health
	if (self.squad_ai:IsInCombat()) then

		if (self.squad_ai:GetHealthPercentage() > 0.5) then 

			-- If I am safe to charge weapons
			if (self.squad_ai:CanDoAbility( EnclavesOvesa.damage_id )) then
				self.squad_ai:DoSpecialAbility( EnclavesOvesa.damage_id )
			end

			-- If I am safe to charge weapons -- Killteam 
			if (self.squad_ai:CanDoAbility( EnclavesOvesa.damage_ktgm )) then
				self.squad_ai:DoSpecialAbility( EnclavesOvesa.damage_ktgm )
			end
		end
	end

	-- Try to summon an Orca if we have the needed resources 
	if resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Requisition) > 450 then

		-- Try to summon an Orca
    		if self.squad_ai:CanDoAbility(EnclavesOvesa.summon_id) then

			-- Condition 1: Search for a nearby hurt squad
        		local iRange = self.squad_ai:GetAbilityRange(EnclavesOvesa.summon_id)
        		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
        		if (oUnit ~= nil) then
				--print("Using Ovesa Close Hurt Orca Drop for player "..tostring(cpu_manager.player_id).."")
            			if self.squad_ai:DoSpecialAbilitySquad(EnclavesOvesa.summon_id, oUnit:GetSquad()) then
                			return
            			end
        		end

        		-- Condition 2: Check for low Power (lower than 250, for example)
        		if resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Power) < 250 then
				--print("Using Ovesa Low Power Orca Drop for player "..tostring(cpu_manager.player_id).."")
