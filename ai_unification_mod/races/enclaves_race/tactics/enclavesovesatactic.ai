class 'EnclavesOvesaTactic' (EnclavesInfantryTactic)

EnclavesOvesa = {}

function EnclavesOvesaTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Enclaves Ovesa Tactic")

	self:InitAbilities()
end

-- Enclaves Ovesa is allowed to retreat even directly after a jump
function EnclavesOvesaTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function EnclavesOvesaTactic:IsAttacker()	
	return self:IsCommanderAttacker()
end

function EnclavesOvesaTactic:IsDefender()
	return self:IsCommanderDefender()
end

function EnclavesOvesaTactic:JumpAttack()
	Tactic.JumpAttack(self)
end

