class 'EnclavesDroneMissileTactic' (EnclavesInfantryTactic)

EnclavesDroneMissile = {}

function EnclavesDroneMissileTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Enclaves Drone Missile Tactic")
end

function EnclavesDroneMissileTactic:InitAbilities()

	-- Init ability ID's
	if (EnclavesDroneMissile.shield_id == nil) then
		EnclavesDroneMissile.shield_id = cpu_manager.stats:GetAbilityID( "enclaves_personal_shield" )
	end
end

function EnclavesDroneMissileTactic:DoAbilities()

	-- Activate Personal Shield based on health level while in combat
	if (self.squad_ai:IsInCombat()) then

		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

			if (self.squad_ai:CanDoAbility(EnclavesDroneMissile.shield_id)) then 
				self.squad_ai:DoSpecialAbility(EnclavesDroneMissile.shield_id)
			end
		end
	end
end

function EnclavesDroneMissileTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad(false, false, 1000, 60, nil)
end