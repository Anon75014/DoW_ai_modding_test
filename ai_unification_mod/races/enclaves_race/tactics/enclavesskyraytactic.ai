class 'EnclavesSkyrayTactic' (EnclavesVehicleTactic)

EnclavesSkyray = {}

function EnclavesSkyrayTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Enclaves Skyray Tactic")
end

function EnclavesSkyrayTactic:InitAbilities()
--[[
	-- Init ability ID's
	if (EnclavesSkyray.iBarrageID == nil) then
		EnclavesSkyray.iBarrageID = cpu_manager.stats:GetAbilityID( "enclaves_skyray_missile_barrage" )	
	end
]]
end

function EnclavesSkyrayTactic:DoAbilities()
--[[
     -- Check if I can launch a barrage
	if (self.squad_ai:CanDoAbility(EnclavesSkyray.iBarrageID)) then
 		Ability.DoAbilityPos( self.squad_ai, EnclavesSkyray.iBarrageID, Ability.Filters.CloseEnemy, 8 ) 

		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
 			Ability.DoAbilityPos( self.squad_ai, EnclavesSkyray.iBarrageID, Ability.Filters.CloseEnemy, 4 ) 
		end
	end
]]
	-- New code to unstuck units with pathing issues, that can jump.
	-- Call it with [true], only for multi-membered squads.
	self:SolveStuckCase(false)
end