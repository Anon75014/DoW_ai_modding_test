class 'EnclavesVehicleTactic' (VehicleTactic)

function EnclavesVehicleTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Enclaves Vehicle Tactic")
end

-- Check if the vehicle should dance away in melee
function EnclavesVehicleTactic:CheckVehicleDance(sName)

	if (sName == "enclaves_squad_tetra" or
	    sName == "enclaves_squad_piranha" or
	    sName == "enclaves_squad_devilfish" or
	    sName == "enclaves_squad_sentinel" or
	    sName == "enclaves_squad_basilisk" or
	    sName == "enclaves_squad_thunderbolt" or
	    sName == "enclaves_squad_skyray" or
	    sName == "enclaves_squad_skyray_survival" or
	    sName == "enclaves_squad_harbinger" or
	    sName == "enclaves_squad_diamondback" or
	    sName == "enclaves_squad_hammerhead" or
	    sName == "enclaves_squad_hammerhead_survival" or
	    sName == "enclaves_squad_swordfish" or
	    sName == "enclaves_squad_swordfish_mk2") then
		return true
	end
	return false
end

function EnclavesVehicleTactic:DoAbilities()

	-- New code to unstuck units with pathing issues, that can jump
    	-- Can also be used for flying squads with map stuck issues
    	-- Call it with [true], only for multi-membered squads
    	local sSquadName = self.squad_ai:GetSquadName()
    	if (sSquadName == "enclaves_squad_thunderbolt" or
		sSquadName == "enclaves_squad_hammerhead" or
		sSquadName == "enclaves_squad_hammerhead_survival") then
        	self:SolveStuckCase(false)
    	end

	-- Call basic DoAbilities methods
	VehicleTactic.DoAbilities(self)
end