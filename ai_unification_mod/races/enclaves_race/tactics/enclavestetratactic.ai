class 'EnclavesTetraTactic' (EnclavesVehicleTactic)

EnclavesTetra = {}

function EnclavesTetraTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Enclaves Tetra Tactic")
end

function EnclavesTetraTactic:InitAbilities()

	-- Init ability ID's
	if (EnclavesTetra.markerlight_id == nil) then
		EnclavesTetra.markerlight_id = cpu_manager.stats:GetAbilityID( "enclaves_mark_squad" )	
	end
end

function EnclavesTetraTactic:DoAbilities()

	-- Check if we can use mark squad ability
	if (self.squad_ai:CanDoAbility(EnclavesTetra.markerlight_id) and self.squad_ai:IsInCombat()) then
	
		-- Get closest squad in range
		local iRange = self.squad_ai:GetAbilityRange(EnclavesTetra.markerlight_id)
		local oSquad = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 1)
		if (oSquad ~= nil) then
		
			-- Get stats
			local oStats = oSquad:GetStats()
			if (oStats ~= nil) then
			
				-- Check unit type
				local eClass = oStats:GetClass()
				if (eClass == UnitStatsAI.UC_VehicleLow or eClass == UnitStatsAI.UC_VehicleMed or
					eClass == UnitStatsAI.UC_VehicleHigh or eClass == UnitStatsAI.UC_Commander or
					eClass == UnitStatsAI.UC_MonsterHigh or oSquad:GetNumTroopers() >= 4) then
					
					-- Use mark ability on squad
					self.squad_ai:DoSpecialAbilitySquad(EnclavesTetra.markerlight_id, oSquad:GetSquad())
				end
			end	
		end
	end

	-- New code to unstuck units with pathing issues, that can jump.
	-- Call it with [true], only for multi-membered squads.
	self:SolveStuckCase(false)
end