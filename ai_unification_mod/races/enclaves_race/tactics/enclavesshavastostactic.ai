function EnclavesShavastosTactic:DoAbilities()

	-- Engage increase combat effectiveness and keen sight tactics in close combat
    	if self.squad_ai:CanDoAbility(EnclavesShavastos.montka_id) then
		Ability.DoAbilityArea(self.squad_ai, EnclavesShavastos.montka_id, Ability.Filters.CloseInCombat, 10, 2)
	end

	-- Engage increase combat effectiveness and keen sight tactics in close combat -- Killteam
    	if self.squad_ai:CanDoAbility(EnclavesShavastos.montka_ktgm) then
		Ability.DoAbilityArea(self.squad_ai, EnclavesShavastos.montka_ktgm, Ability.Filters.CloseInCombat, 10, 2)
	end

	-- Engage infiltration and increased speed tactics in close combat
    	if self.squad_ai:CanDoAbility(EnclavesShavastos.kauyon_id) then
		Ability.DoAbilityArea(self.squad_ai, EnclavesShavastos.kauyon_id, Ability.Filters.CloseInCombat, 20, 1)
	end

	-- Engage infiltration and increased speed tactics in close combat -- Killteam
    	if self.squad_ai:CanDoAbility(EnclavesShavastos.kauyon_ktgm) then
		Ability.DoAbilityArea(self.squad_ai, EnclavesShavastos.kauyon_ktgm, Ability.Filters.CloseInCombat, 20, 1)
	end

	-- Engage increase combat effectiveness and keen sight tactics in close combat
    	if self.squad_ai:CanDoAbility(EnclavesShavastos.monat_id) then
		Ability.DoAbilityArea(self.squad_ai, EnclavesShavastos.monat_id, Ability.Filters.CloseInCombat, 15, 3)
	end

	-- Engage increase combat effectiveness and keen sight tactics in close combat -- Killteam
    	if self.squad_ai:CanDoAbility(EnclavesShavastos.monat_ktgm) then
		Ability.DoAbilityArea(self.squad_ai, EnclavesShavastos.monat_ktgm, Ability.Filters.CloseInCombat, 15, 3)
	end

	-- Try to summon an Orca if we have the needed resources 
	if resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Requisition) > 350 then

		-- Try to summon an Orca
    		if self.squad_ai:CanDoAbility(EnclavesShavastos.summon_id) then

			-- Condition 1: Search for a nearby hurt squad
        		local iRange = self.squad_ai:GetAbilityRange(EnclavesShavastos.summon_id)
        		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
        		if (oUnit ~= nil) then
				--print("Using Shavastos Close Hurt Orca Drop for player "..tostring(cpu_manager.player_id).."")
            			if self.squad_ai:DoSpecialAbilitySquad(EnclavesShavastos.summon_id, oUnit:GetSquad()) then
                			return
            			end
        		end

        		-- Condition 2: Check for low Power (lower than 250, for example)
        		if resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Power) < 250 then
				--print("Using Shavastos Low Power Orca Drop for player "..tostring(cpu_manager.player_id).."")
            			if self.squad_ai:DoSpecialAbilityPos(EnclavesShavastos.summon_id, self.squad_ai:GetPosition()) then
                			return
            			end
       			end

