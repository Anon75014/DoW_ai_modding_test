class 'EnclavesShavastosTactic' (EnclavesInfantryTactic)

EnclavesShavastos = {}

function EnclavesShavastosTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Enclaves Shavastos Tactic")

	self:InitAbilities()
end

-- Enclaves Shavastos is allowed to retreat even directly after a jump
function EnclavesShavastosTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function EnclavesShavastosTactic:IsAttacker()	
	return self:IsCommanderAttacker()
end

function EnclavesShavastosTactic:IsDefender()
	return self:IsCommanderDefender()
end

function EnclavesShavastosTactic:JumpAttack()
	Tactic.JumpAttack(self)
end

