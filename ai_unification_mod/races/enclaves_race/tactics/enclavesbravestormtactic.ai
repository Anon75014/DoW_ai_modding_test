class 'EnclavesBravestormTactic' (EnclavesInfantryTactic)

EnclavesBravestorm = {}

function EnclavesBravestormTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Enclaves Bravestorm Tactic")

	-- Assume squad just entrenched/retrenched
	self.m_iLastEntrenchTime = g_iGMT

	self:InitAbilities()
end

-- Enclaves Bravestorm is allowed to retreat even directly after a jump
function EnclavesBravestormTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function EnclavesBravestormTactic:IsAttacker()	
	return self:IsCommanderAttacker()
end

function EnclavesBravestormTactic:IsDefender()
	return self:IsCommanderDefender()
end

function EnclavesBravestormTactic:JumpAttack()
	Tactic.JumpAttack(self)
end

function EnclavesBravestormTactic:InitAbilities()

	-- Init ability ID's
	if (EnclavesBravestorm.summon_id == nil) then
		EnclavesBravestorm.summon_id = cpu_manager.stats:GetAbilityID( "enclaves_beacon_summon" )	
	end

	if (EnclavesBravestorm.summon_ktgm == nil) then
		EnclavesBravestorm.summon_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon" )	
	end

	if (EnclavesBravestorm.summon1_ktgm == nil) then
		EnclavesBravestorm.summon1_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon1" )	
	end

	if (EnclavesBravestorm.summon2_ktgm == nil) then
		EnclavesBravestorm.summon2_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon2" )	
	end

	if (EnclavesBravestorm.summon3_ktgm == nil) then
		EnclavesBravestorm.summon3_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon3" )	
	end

	if (EnclavesBravestorm.onager_id == nil) then
		EnclavesBravestorm.onager_id = cpu_manager.stats:GetAbilityID( "enclaves_onager_strike" )	
	end

	if (EnclavesBravestorm.onager_ktgm == nil) then
		EnclavesBravestorm.onager_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_onager_strike" )	
	end
end

