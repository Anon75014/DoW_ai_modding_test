class 'EnclavesBrightswordTactic' (EnclavesInfantryTactic)

EnclavesBrightsword = {}

function EnclavesBrightswordTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Enclaves Brightsword Tactic")

	self:InitAbilities()
end

-- Enclaves Brightsword is allowed to retreat even directly after a jump
function EnclavesBrightswordTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function EnclavesBrightswordTactic:IsAttacker()	
	return self:IsCommanderAttacker()
end

function EnclavesBrightswordTactic:IsDefender()
	return self:IsCommanderDefender()
end

function EnclavesBrightswordTactic:JumpAttack()
	Tactic.JumpAttack(self)
end

function EnclavesBrightswordTactic:InitAbilities()

	-- Init ability ID's
	if (EnclavesBrightsword.summon_id == nil) then
		EnclavesBrightsword.summon_id = cpu_manager.stats:GetAbilityID( "enclaves_beacon_summon" )	
	end

	if (EnclavesBrightsword.summon_ktgm == nil) then
		EnclavesBrightsword.summon_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon" )	
	end

	if (EnclavesBrightsword.summon1_ktgm == nil) then
		EnclavesBrightsword.summon1_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon1" )	
	end

	if (EnclavesBrightsword.summon2_ktgm == nil) then
		EnclavesBrightsword.summon2_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon2" )	
	end

	if (EnclavesBrightsword.summon3_ktgm == nil) then
		EnclavesBrightsword.summon3_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_beacon_summon3" )	
	end

	if (EnclavesBrightsword.slash_id == nil) then
		EnclavesBrightsword.slash_id = cpu_manager.stats:GetAbilityID( "enclaves_brightsword_slash" )
	end

	if (EnclavesBrightsword.slash_ktgm == nil) then
		EnclavesBrightsword.slash_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_brightsword_slash" )
	end

	if (EnclavesBrightsword.mark_id == nil) then
		EnclavesBrightsword.mark_id = cpu_manager.stats:GetAbilityID( "enclaves_mark_squad_brightsword" )
	end

	if (EnclavesBrightsword.mark_ktgm == nil) then
		EnclavesBrightsword.mark_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_mark_squad_brightsword" )
	end

	if (EnclavesBrightsword.shield_id == nil) then
		EnclavesBrightsword.shield_id = cpu_manager.stats:GetAbilityID( "enclaves_personal_shield" )
	end

	if (EnclavesBrightsword.shield_ktgm == nil) then
		EnclavesBrightsword.shield_ktgm = cpu_manager.stats:GetAbilityID( "enclaves_ls_the_eight_personal_shield" )
	end
end

function EnclavesBrightswordTactic:DoAbilities()

	-- Launch melee strike based on health level
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		if (self.squad_ai:CanDoAbility(EnclavesBrightsword.slash_id)) then
			Ability.DoAbilityArea( self.squad_ai, EnclavesBrightsword.slash_id, Ability.Filters.CloseEnemy, 10, 2 )
		end

		if (self.squad_ai:CanDoAbility(EnclavesBrightsword.slash_ktgm)) then
			Ability.DoAbilityArea(self.squad_ai, EnclavesBrightsword.slash_ktgm, Ability.Filters.CloseInCombat, 10, 2)
		end
	else
		if (self.squad_ai:CanDoAbility(EnclavesBrightsword.slash_id)) then
			Ability.DoAbilityArea( self.squad_ai, EnclavesBrightsword.slash_id, Ability.Filters.CloseEnemy, 10, 5 )
		end

		if (self.squad_ai:CanDoAbility(EnclavesBrightsword.slash_ktgm)) then
			Ability.DoAbilityArea(self.squad_ai, EnclavesBrightsword.slash_ktgm, Ability.Filters.CloseInCombat, 10, 5)
		end
	end

	-- Activate Personal Shield based on health level while in combat
	if (self.squad_ai:IsInCombat()) then

		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

			if (self.squad_ai:CanDoAbility(EnclavesBrightsword.shield_id)) then 
				self.squad_ai:DoSpecialAbility(EnclavesBrightsword.shield_id)
			end

			if (self.squad_ai:CanDoAbility(EnclavesBrightsword.shield_ktgm)) then 
				self.squad_ai:DoSpecialAbility(EnclavesBrightsword.shield_ktgm)
			end
		end
	end

	-- Check if we can use mark squad ability while in combat
	if (self.squad_ai:CanDoAbility(EnclavesBrightsword.mark_id)) then
	
		if (self.squad_ai:IsInCombat()) then

			-- Get closest squad in range
			local iRange = self.squad_ai:GetAbilityRange(EnclavesBrightsword.mark_id)
			local oSquad = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 1)
			if (oSquad ~= nil) then
		
				-- Get stats
				local oStats = oSquad:GetStats()
				if (oStats ~= nil) then
			
					-- Check unit type
					local eClass = oStats:GetClass()
					if (eClass == UnitStatsAI.UC_VehicleLow or eClass == UnitStatsAI.UC_VehicleMed or
						eClass == UnitStatsAI.UC_VehicleHigh or eClass == UnitStatsAI.UC_Commander or
						eClass == UnitStatsAI.UC_MonsterHigh or oSquad:GetNumTroopers() >= 4) then
					
						-- Use mark ability on squad
						self.squad_ai:DoSpecialAbilitySquad(EnclavesBrightsword.mark_id, oSquad:GetSquad())
					end
				end
			end	
		end
	end

	-- Check if we can use mark squad ability while in combat -- Killteam
	if (self.squad_ai:CanDoAbility(EnclavesBrightsword.mark_ktgm)) then
	
		if (self.squad_ai:IsInCombat()) then
			-- Get closest squad in range
			local iRange = self.squad_ai:GetAbilityRange(EnclavesBrightsword.mark_ktgm)
			local oSquad = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 1)
			if (oSquad ~= nil) then
		
