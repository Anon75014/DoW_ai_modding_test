class 'InquisitorTactic' (GuardInfantryTactic)

Inquisitor = {}

function InquisitorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Inquisitor Tactic")
end

function InquisitorTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function InquisitorTactic:IsDefender()
	return self:IsCommanderDefender()
end

function InquisitorTactic:InitAbilities()

	-- Init ability ID's
	if (Inquisitor.orbital_b == nil) then
		Inquisitor.orbital_b = cpu_manager.stats:GetAbilityID( "marines_orbital_bombardment" )
	end

	if (Inquisitor.smite == nil) then
		Inquisitor.smite = cpu_manager.stats:GetAbilityID( "marines_smite_toth" )
	end

	if (Inquisitor.weaken_resolve == nil) then
		Inquisitor.weaken_resolve = cpu_manager.stats:GetAbilityID( "marines_weaken_resolve_toth" )
	end
end

function InquisitorTactic:DoAbilities()
	
	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityPos( self.squad_ai, Inquisitor.smite, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityPos( self.squad_ai, Inquisitor.weaken_resolve, Ability.Filters.CloseInfantryEnemy, 4 )
	else
		Ability.DoAbilityPos( self.squad_ai, Inquisitor.smite, Ability.Filters.CloseInfantryEnemy, 8 )
		Ability.DoAbilityPos( self.squad_ai, Inquisitor.weaken_resolve, Ability.Filters.CloseInfantryEnemy, 8 )
	end

	if self.squad_ai:IsInCombat() then

		-- Try to use orbital bombardement
		if self.squad_ai:CanDoAbility(Inquisitor.orbital_b) then

			-- We are dying, lower requisites for attacks
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
				if Ability.DoAbilityPos(self.squad_ai, Inquisitor.orbital_b, Ability.Filters.CloseEnemy, 12)
					or Ability.DoAbilityPos(self.squad_ai, Inquisitor.orbital_b, Ability.EntityFilters.CloseBaseEntityEnemy, 2) then
					return
				end
			else
				if Ability.DoAbilityPos(self.squad_ai, Inquisitor.orbital_b, Ability.Filters.CloseEnemy, 24)
					or Ability.DoAbilityPos(self.squad_ai, Inquisitor.orbital_b, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
					return
				end
			end
		end
	end
end

function InquisitorTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier3+
    	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end
end
