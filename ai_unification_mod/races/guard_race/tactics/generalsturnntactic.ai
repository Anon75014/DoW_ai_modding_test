class 'GeneralSturnnTactic' (GuardInfantryTactic)

GeneralSturnn = {}

function GeneralSturnnTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("General Sturnn Squad Tactic")
end

function GeneralSturnnTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function GeneralSturnnTactic:IsDefender()
	return self:IsCommanderDefender()
end

function GeneralSturnnTactic:InitAbilities()

	-- Init ability ID's
	if (GeneralSturnn.airstrike_id == nil) then
		GeneralSturnn.airstrike_id = cpu_manager.stats:GetAbilityID( "guard_sturn_airstrike" )	
	end

	if (GeneralSturnn.retreat_id == nil) then
		GeneralSturnn.retreat_id = cpu_manager.stats:GetAbilityID( "guard_sturn_no_retreat" )	
	end
end

function GeneralSturnnTactic:DoAbilities()

	-- Try to use abilities when in combat
	if self.squad_ai:IsInCombat() then

		-- Launch strafing run at close enemy 
		if self.squad_ai:CanDoAbility(GeneralSturnn.airstrike_id) then
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
				Ability.DoAbilityPos( self.squad_ai, GeneralSturnn.airstrike_id, Ability.Filters.CloseEnemy, 6 )
			else
				Ability.DoAbilityPos( self.squad_ai, GeneralSturnn.airstrike_id, Ability.Filters.CloseEnemy, 12 )
			end
		end

		-- If we are dying in combat and attached, lower requisites to use No Retreat
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then

			if self.squad_ai:IsAttached() then
				if self.squad_ai:CanDoAbility( GeneralSturnn.retreat_id ) then
					self.squad_ai:DoSpecialAbility( GeneralSturnn.retreat_id )
				end
			end
		end
	end
end

function GeneralSturnnTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
	
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end
	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
end