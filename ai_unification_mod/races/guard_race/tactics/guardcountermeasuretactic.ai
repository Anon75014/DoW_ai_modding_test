class 'GuardCounterMeasureTactic' (BaseTactic)

GuardCounterMeasure = {}

function GuardCounterMeasureTactic:__init( base_ai ) super( base_ai )

	self:SetName("Guard Counter Measures Tactic")
end

function GuardCounterMeasureTactic:InitAbilities()

	-- Init ability ID's
	if (GuardCounterMeasure.dangerclose_id == nil) then
		GuardCounterMeasure.dangerclose_id = cpu_manager.stats:GetAbilityID("guard_buildings_dangerclose")
	end
end

function GuardCounterMeasureTactic:DoAbilities()

	-- Try to activate defensive measures (Earthshaker Platform, Mars Pattern, and Titan Building)
	if (self.base_ai:CanDoAbility(GuardCounterMeasure.dangerclose_id)) then

		-- Enable Danger Close Protocols to increase defensive capabilities when enemies are near
		Ability.DoAbilityArea( self.base_ai, GuardCounterMeasure.dangerclose_id, Ability.Filters.CloseEnemy, 20, 1)
	end
end
