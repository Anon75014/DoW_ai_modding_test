                	{"guard_ls_general_castor_range_weapon2", 1, 125, 125, 0, 0, nil, 0},
                	{"guard_ls_general_castor_range_weapon3", 1, 125, 125, 0, 0, nil, 0},
                	{"guard_ls_general_castor_range_weapon4", 1, 125, 125, 0, 0, nil, 0},
                	{"guard_ls_general_castor_range_weapon6", 1, 75, 75, 0, 0, nil, 0},
                	{"guard_ls_general_castor_turret1", 1, 150, 150, 0, 0, nil, 0},
                	{"guard_ls_general_castor_turret2", 1, 150, 150, 0, 0, nil, 0},
                	{"guard_ls_general_castor_turret3", 1, 150, 150, 0, 0, nil, 0},
                	{"guard_ls_general_castor_turret4", 1, 150, 150, 0, 0, nil, 0},
                	{"guard_ls_general_castor_guardmens_leader1", 1, 125, 125, 0, 0, nil, 0},
