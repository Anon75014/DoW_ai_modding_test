class 'TankbustaTactic' (OrkInfantryTactic)

Tankbusta = {}

function TankbustaTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Tankbusta Tactic")
	self.Chosen_Upgrade = math.random( 0, 10 )	  -- Choose whether to upgrade hardpoints or not
	self.lastUpgradeTry = g_iGMT
end

function TankbustaTactic:InitAbilities()

	-- Init ability ID's
	if (Tankbusta.bomb_id == nil) then
		Tankbusta.bomb_id = cpu_manager.stats:GetAbilityID( "ork_tankbusta_bombs" )
	end

	if (Tankbusta.stikkbomb_id == nil) then
		Tankbusta.stikkbomb_id = cpu_manager.stats:GetAbilityID( "ork_stikkbombs" )
	end
end

function TankbustaTactic:DoAbilities()
	
	-- Try to use tank busta bomb ability
	Ability.DoAbilityTarget(self.squad_ai, Tankbusta.bomb_id, Ability.Filters.CloseVehicleEnemy, 1)

	-- Try to use stikk bomb ability
	Ability.DoAbilityTarget(self.squad_ai, Tankbusta.stikkbomb_id, Ability.Filters.CloseSquadEnemy, 1)
	
	-- Call basic DoAbilities methods
	OrkInfantryTactic.DoAbilities(self)
end

function TankbustaTactic:CheckDance(oSquad)

	-- Check opponent
	if (oSquad == nil) then
		return false
	end
	
	-- Check opponent
	if (oSquad:GetSquadName() == "chaos_squad_cultist") then
		return false
	end
	return true
end

-- Randomly don't upgrade
function TankbustaTactic:Upgrade()

	-- Check to Upgrade every 30+ secs
	if self.Chosen_Upgrade < 9 and g_iGMT > self.lastUpgradeTry + 30 then
		self.lastUpgradeTry = g_iGMT

		-- Choose not to upgrade any hardpoints
		return false

	elseif self.Chosen_Upgrade > 8 then
		-- Attempt to upgrade hardpoints based on best class type
		local class_type = cpu_manager:FindClosestEnemyPlayer():GetMajorityClassType()
		self.squad_ai:DoBestUpgrade( class_type )
	end
end
