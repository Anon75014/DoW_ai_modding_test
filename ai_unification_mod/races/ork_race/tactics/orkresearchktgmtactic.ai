class 'OrkResearchKtgmTactic' (BaseTactic)

OrkResearchKtgm = {}

function OrkResearchKtgmTactic:__init( base_ai ) super( base_ai )

	self:SetName("Ork Research Kill Team Tactic")

	-- The name of the squad to target
	self.squad1_name = "ork_squad_warboss_ktgm"
end

function OrkResearchKtgmTactic:InitAbilities()
	
	-- Init abilities
	if (OrkResearchKtgm.Strongheal_id == nil) then
		OrkResearchKtgm.Strongheal_id = cpu_manager.stats:GetAbilityID( "ls_healing_1000" )
	end

	if (OrkResearchKtgm.Lightheal_id == nil) then
		OrkResearchKtgm.Lightheal_id = cpu_manager.stats:GetAbilityID( "ls_healing_500" )
	end
end

function OrkResearchKtgmTactic:DoAbilities()
	
	aitrace("OrkResearchKtgmTactic: Do abilities...")

	-- Check if squad is valid
    	for oSquad in military_manager:GetSquads() do
        	if oSquad:IsValid() then
            		if oSquad:GetSquadName() == self.squad1_name then

				-- Try to use Strong Heal ability on squad (restores target's health by 1000 HP)
				if (self.base_ai:CanDoAbility(OrkResearchKtgm.Strongheal_id)) then
	
					-- Check if health needs an energency boost
					if (oSquad:WasRecentlyHurt() and oSquad:GetHealthPercentage() < 0.3) then

						-- Check if we have the needed resources
						local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
						local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
      						if iReq >= 100 and iPower >= 100 then		
		
							-- Use strong heal ability on commander
							self.base_ai:DoSpecialAbility(OrkResearchKtgm.Strongheal_id)
							--print("Using Heavy Heal ability for player "..tostring(cpu_manager.player_id).."")
						end
					end
				end
-- Disabled light health to save on resources
