	-- Check name
	if (sName == "ork_squad_squiggoth")
	or (sName == "ork_squad_stompa")
	or (sName == "ork_squad_gorkanaut")
	or (sName == "ork_squad_morkanaut")
	or (sName == "ork_squad_battle_fortress")
	or (sName == "ork_squad_gargant_titan")
