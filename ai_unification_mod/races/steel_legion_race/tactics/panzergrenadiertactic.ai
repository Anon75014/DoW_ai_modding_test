class 'PanzerGrenadierTactic' (SteelLegionInfantryTactic)

PanzerGrenadier = {}

function PanzerGrenadierTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Panzer Grenadier Tactic")
end

function PanzerGrenadierTactic:InitAbilities()

	-- Init ability ID's
	if (PanzerGrenadier.panzer_id == nil) then
		PanzerGrenadier.panzer_id = cpu_manager.stats:GetAbilityID( "steel_legion_panzer_grenades" )	
	end
	if (PanzerGrenadier.mg_id == nil) then
		PanzerGrenadier.mg_id = cpu_manager.stats:GetAbilityID( "steel_legion_panzer_mg34" )	
	end
end

function PanzerGrenadierTactic:DoAbilities()

	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget( self.squad_ai, PanzerGrenadier.panzer_id, Ability.Filters.CloseInfantryEnemy, 4 )
		Ability.DoAbilityTarget( self.squad_ai, PanzerGrenadier.panzer_id, Ability.Filters.CloseCommanderEnemy, 1 ) 
		Ability.DoAbilityTarget( self.squad_ai, PanzerGrenadier.panzer_id, Ability.Filters.CloseMonsterEnemy, 1 )
		Ability.DoAbilityArea( self.squad_ai, PanzerGrenadier.mg_id, Ability.Filters.CloseInfantryEnemy, 50, 4 )
	else
		Ability.DoAbilityTarget( self.squad_ai, PanzerGrenadier.panzer_id, Ability.Filters.CloseInfantryEnemy, 8 )
		Ability.DoAbilityTarget( self.squad_ai, PanzerGrenadier.panzer_id, Ability.Filters.CloseCommanderEnemy, 1 ) 
		Ability.DoAbilityTarget( self.squad_ai, PanzerGrenadier.panzer_id, Ability.Filters.CloseMonsterEnemy, 2 )
		Ability.DoAbilityArea( self.squad_ai, PanzerGrenadier.mg_id, Ability.Filters.CloseInfantryEnemy, 50, 8 )
	end
end
