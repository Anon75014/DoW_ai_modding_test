class 'VanquisherTactic' (SteelLegionVehicleTactic)

Vanquisher = {}

function VanquisherTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Vanquisher Tactic")
end

function VanquisherTactic:InitAbilities()

	if (Vanquisher.defenders_id == nil) then
		Vanquisher.defenders_id = cpu_manager.stats:GetAbilityID( "steel_legion_frag_defenders" )
	end

	if (Vanquisher.antitank_id == nil) then
		Vanquisher.antitank_id = cpu_manager.stats:GetAbilityID( "steel_legion_vanquisher_anti_tank_shell" )
	end

	if (Vanquisher.rally_id == nil) then
		Vanquisher.rally_id = cpu_manager.stats:GetAbilityID( "steel_legion_rally" )	
	end

	if (Vanquisher.smoke_id == nil) then
		Vanquisher.smoke_id = cpu_manager.stats:GetAbilityID( "steel_legion_smoke_launchers" )
	end
end

function VanquisherTactic:DoAbilities()

	-- Drop Frag Defenders if enemy infantry are nearby
	Ability.DoAbilityArea( self.squad_ai, Vanquisher.defenders_id, Ability.Filters.CloseSquadEnemy, 10, 2 )

	-- Use Anti-Tank Shells on vehicle enemy
	Ability.DoAbilityTarget( self.squad_ai, Vanquisher.antitank_id, Ability.Filters.CloseVehicleEnemy, 1 )

	-- Check if we rally with broken allied squads nearby
	if (self.squad_ai:CanDoAbility(Vanquisher.rally_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(Vanquisher.rally_id)
		local oUnit = Ability.Filters.CloseBroken(self.squad_ai:GetPosition(), 15, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 75) then
			self.squad_ai:DoSpecialAbility( Vanquisher.rally_id )
		end
	end
	
	-- Check if we can deploy smoke grenades
	if (self.squad_ai:CanDoAbility(Vanquisher.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(Vanquisher.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(Vanquisher.smoke_id, oUnit:GetSquad())
		end
	end
end

function VanquisherTactic:Update()

	if self:IsComplete() then
      		return
   	end

   	--state machine
   	if not VehicleTactic.Update( self ) then
		return
   	end
end