class 'YarrickTactic' (SteelLegionInfantryTactic)

Yarrick = {}

function YarrickTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Yarrick Tactic")
end

-- Assassinate win condition -- never attack
function YarrickTactic:IsAttacker()
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function YarrickTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

function YarrickTactic:InitAbilities()

	if (Yarrick.battlecry_id == nil) then
	    Yarrick.battlecry_id = cpu_manager.stats:GetAbilityID( "steel_legion_battlecry" )	
	end

	if (Yarrick.forcefield_id == nil) then
	    Yarrick.forcefield_id = cpu_manager.stats:GetAbilityID( "steel_legion_forcefield" )	
	end
end

function YarrickTactic:DoAbilities()

	Ability.DoAbilityArea( self.squad_ai, Yarrick.battlecry_id, Ability.Filters.CloseInCombat, 10, 1 ) 

       	-- Check if I can protect myself and enable forcefield to protect against ranged attacks if my health is low
 	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.6) then
 
		if self.squad_ai:CanDoAbility( Yarrick.forcefield_id ) then
			self.squad_ai:DoSpecialAbility( Yarrick.forcefield_id )
                end
        end

	-- Spawn Panzer Grenadier Squad
	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	end
end

function YarrickTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Assassinate win condition -- never attach to a squad
	if (not cpu_manager.assassinate) then
		
		-- Attach to melee in tier3+
		if (cpu_manager:GetTierLevel() > 2) then
		
			if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
				return
			end
		end
		if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
			self:TryAttachSquadMelee()
		end
	end
end