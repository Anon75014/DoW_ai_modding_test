class 'SethenoTactic' (SteelLegionInfantryTactic)

Setheno = {}

function SethenoTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Setheno Tactic")
end

function SethenoTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function SethenoTactic:IsDefender()
	return self:IsCommanderDefender()
end

function SethenoTactic:InitAbilities()

	-- Init ability ID's
	if (Setheno.demoralize == nil) then
		Setheno.demoralize = cpu_manager.stats:GetAbilityID( "steel_legion_setheno_demoralize" )
	end

	if (Setheno.rally_id == nil) then
	    	Setheno.rally_id = cpu_manager.stats:GetAbilityID( "steel_legion_setheno_rally" )	
	end
end

function SethenoTactic:DoAbilities()
	
	-- If we are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		Ability.DoAbilityTarget( self.squad_ai, Setheno.demoralize, Ability.Filters.CloseInfantryEnemy, 4 )
	else
		Ability.DoAbilityTarget( self.squad_ai, Setheno.demoralize, Ability.Filters.CloseInfantryEnemy, 8 )
	end

	-- Check if I can repair my morale
        if self.squad_ai:IsBroken() then
	  	  
		if self.squad_ai:CanDoAbility( Setheno.rally_id ) then
			self.squad_ai:DoSpecialAbility( Setheno.rally_id )
          	end
     	end
end

function SethenoTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to melee in tier2+
    	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end
end
