class 'PioneerTactic' (EngineerTactic)

function PioneerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Pioneer Tactic")
end

function PioneerTactic:CanRepair()
	-- Pioneers cannot repair
	return false
end

function PioneerTactic:IsAttacker()
	return false
end

function PioneerTactic:IsDefender()
	return true
end

function PioneerTactic:IsAffectedByMorale()
	return false
end

function PioneerTactic:Reinforce()

	-- Check if we are reinforcing
	if self.squad_ai:IsReinforcing() then
		return
	end

	if build_manager:GetSquadCapCurrentMax() < 13 then
		--don't reinforce more than 3 pioneers early on
		if self.squad_ai:GetNumTroopers() < 3 then
			if self.squad_ai:CanReinforce( false, 0 ) then
				self.squad_ai:DoReinforce( false, 0 )
			end
		end
	else
		if self.squad_ai:CanReinforce( false, 0 ) then
			self.squad_ai:DoReinforce( false, 0 )
		end
	end
end
