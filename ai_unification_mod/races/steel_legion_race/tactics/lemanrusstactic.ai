class 'LemanRussTactic' (SteelLegionVehicleTactic)

LemanRuss = {}

function LemanRussTactic:__init( squad_ai ) super( squad_ai )
	
	self:SetName("Leman Russ Tactic")

	-- Vehicle is a light transport
	self.m_iTransportVehicle = 3
	self.m_iTransportSlots = 1
end

function LemanRussTactic:UnloadTroops()
	return false
end

function LemanRussTactic:InitAbilities()

	if (LemanRuss.defenders_id == nil) then
	    LemanRuss.defenders_id = cpu_manager.stats:GetAbilityID( "steel_legion_frag_defenders" )
	end
end

function LemanRussTactic:DoAbilities()

	Ability.DoAbilityArea( self.squad_ai, LemanRuss.defenders_id, Ability.Filters.CloseSquadEnemy, 10, 2 )
end

function LemanRussTactic:Update()

	if self:IsComplete() then
		return
	end

   	--state machine
   	if not VehicleTactic.Update( self ) then
	  	return
	end
end