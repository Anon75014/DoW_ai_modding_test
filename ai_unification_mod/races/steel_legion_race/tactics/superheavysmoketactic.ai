class 'SuperHeavySmokeTactic' (SteelLegionVehicleTactic)

SuperHeavySmoke = {}

function SuperHeavySmokeTactic:__init( squad_ai ) super( squad_ai )
	
	self:SetName("Super Heavy Smoke Tactic")
end

function SuperHeavySmokeTactic:InitAbilities()

	if (SuperHeavySmoke.smoke_id == nil) then
	    SuperHeavySmoke.smoke_id = cpu_manager.stats:GetAbilityID( "steel_legion_smoke_launchers" )
	end
end

function SuperHeavySmokeTactic:DoAbilities()

	-- Check if we can deploy smoke grenades
	if (self.squad_ai:CanDoAbility(SuperHeavySmoke.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(SuperHeavySmoke.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(SuperHeavySmoke.smoke_id, oUnit:GetSquad())
		end
	end
end