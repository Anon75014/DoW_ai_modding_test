function SteelLegionBuildBaseStrategy:UpdateTierLevel()

	-- Reset tier level
	self.tierLevel = 1

	-- Check researches
	if cpu_manager.cpu_player:IsResearchComplete("steel_legion_airport_research") then
		self.tierLevel = 4
		return
	elseif cpu_manager.cpu_player:IsResearchComplete("steel_legion_leman_turret_research") then
		self.tierLevel = 3
		return
	elseif cpu_manager.cpu_player:IsResearchComplete("steel_legion_chimera_research") then
		self.tierLevel = 2
		return
	end
end

function SteelLegionBuildBaseStrategy:BuildFlexible()
  
	-- Always test first to see if there is at least one existing HQ
	if self:GetBuildingCountByName(self:GetBuildingName("HQ")) < 1 then
     		self:BuildFirstHQ()
	end

	-- Always test first to see if there is at least one existing builder unit
	self:BuildFirstBuilder("steel_legion_squad_pioneer")

	-- Dynamic research
        -- Item-Syntax: ResearchName, MinTier, RequisitionCost, PowerCost, MinSquadCap, MinSupportCap, SquadName, SquadMinCount
	local iArmyStrength = cpu_manager:GetArmyStrength()
	local num_infantry_squads = self:CountSquads("steel_legion_squad_soldier") + self:CountSquads("steel_legion_squad_stormtrooper_deepstrike")
	local num_vanquisher_squads = self:CountSquads("steel_legion_squad_tank_vanquisher")
	
	-- Compute tier 1 researches
	if (self.tierLevel >= 1) then
		
		-- Compute infantry researches
		if (num_infantry_squads >= 3) then
			self:DynamicResearch("steel_legion_frag_grenade_research", 1, 25, 25, 0, 0, nil, 0)
		end
		
		-- Compute bonus researches
		if (iArmyStrength >= 750) then
	
			-- Compute infantry researches
			if (num_infantry_squads >= 3) then
				self:DynamicResearch("steel_legion_sergeant_weapon_upgrade_1", 1, 50, 25, 0, 0, nil, 0)
				self:DynamicResearch("steel_legion_heavy_weapons_research", 1, 25, 75, 0, 0, nil, 0)
			end
		end

		-- Compute T1->T2 major research as AI sometimes fails to research
		if (iArmyStrength >= 1000) then
		
			-- Compute tier researches
			self:DynamicResearch("steel_legion_chimera_research", 1, 300, 175, 0, 0, nil, 0)
		end
	end

	-- Compute tier 2 researches
	if (self.tierLevel >= 2) then

		-- Compute secondary researches
		if (iArmyStrength >= 1250) then

			-- Compute infantry researches
			if (num_infantry_squads >= 3) then
				self:DynamicResearch("steel_legion_health_upgrade_research", 2, 125, 50, 0, 0, nil, 0)
				self:DynamicResearch("steel_legion_accuracy_upgrade_research", 2, 50, 100, 0, 0, nil, 0)
			end
		end

		-- Compute secondary researches
		if (iArmyStrength >= 1750) then
			
			if (cpu_manager.cpu_player:IsResearchComplete("steel_legion_branch_armoured_fist")) then

				-- Compute infantry researches
				if (num_infantry_squads >= 3) then
					self:DynamicResearch("steel_legion_health_upgrade_research_2", 2, 75, 125, 0, 0, nil, 0)
				end
			end
		end

		-- Compute T2->T3 major research as AI sometimes fails to research
		if (iArmyStrength >= 2000) then
		
			-- Compute tier researches
			self:DynamicResearch("steel_legion_leman_turret_research", 2, 340, 340, 0, 0, nil, 0)
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("steel_legion_tarantula_no_limit", 2, 2, 200, 100, 0, 0)
	end

	-- Compute tier 3 researches
	if (self.tierLevel >= 3) then

		-- Compute infantry researches
		if (num_infantry_squads >= 3) then
			self:DynamicResearch("steel_legion_sergeant_weapon_upgrade_2", 3, 50, 50, 0, 0, nil, 0)
			self:DynamicResearch("steel_legion_melta_research", 3, 65, 100, 0, 0, nil, 0)
		end
	
		-- Compute chimera researches
		if (cpu_manager.cpu_player:IsResearchComplete("steel_legion_branch_tank_company")) then
			self:DynamicResearch("steel_legion_tank_chimera_upgrade", 3, 200, 200, 0, 0, nil, 0)
		end

		if (cpu_manager.cpu_player:IsResearchComplete("steel_legion_branch_armoured_fist")) then

			-- Compute infantry researches
			if (self:CountSquads("steel_legion_squad_stormtrooper_deepstrike") >= 1) then
				self:DynamicResearch("steel_legion_infiltrate_research", 3, 100, 50, 0, 0, nil, 0)
			end

			-- Compute infantry researches
			if (num_infantry_squads >= 3) then
				self:DynamicResearch("steel_legion_accuracy_upgrade_research_2", 3, 250, 200, 0, 0, nil, 0)
			end
		end

		-- Compute T3->T4 major research as AI sometimes fails to research
		if (iArmyStrength >= 2500) then
		
			-- Compute tier researches
			self:DynamicResearch("steel_legion_airport_research", 3, 450, 450, 0, 0, nil, 0)
		end

		local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

		-- Compute flakcannons based on HQs present
		if (self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 ) then
			if (iRequisition >= 500 and iPower >= 400) then
				self:DynamicBuild("steel_legion_flak_cannon", 4, 3, 250, 300, 0, 0)
			end
		end

		-- Force build additional generators in late game if we can with enough requisition and when low on power
                local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
                local iPow = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
                if iReq > 400 and iReq/iPow > 1.6 then

                	-- Check if a plan exists
                	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("Generator"))
                    	if (self:PlanExists("Build Building Plan", iBuildingID)) then
                       		return
                    	end

             		-- Check if any generators are in production
                    	for oBuildChannel in build_manager:GetBuildChannelAIs() do
                        	-- Check building ID
                        	if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
                            		return
                        	end
                    	end

             		-- Build a Generator
                    	local tBuildType = CpuBuildType()
                    	tBuildType.btype = CpuPrerequisites.BT_Building
                    	tBuildType.name = self:GetBuildingName("Generator")
                    	if (self:TryBuild( tBuildType )) then
               			aitrace("BuildController: Dynamic build of "..tBuildType.name)
			end
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("steel_legion_tarantula_no_limit", 4, 3, 300, 200, 0, 0)
	end

	-- Compute tier 4 researches
	if (self.tierLevel >= 4) then

		-- Try to force build a Airport as sometimes the AI fails to build one
		if (self:GetBuildingCountByName("steel_legion_airport") < 1) then

			-- Check if a plan exists
			local iBuildingID = cpu_manager.stats:GetBuildingID("steel_legion_airport")
			if (self:PlanExists("Build Building Plan", iBuildingID)) then
				return
			end

			-- Check if any Airports are in production
			for oBuildChannel in build_manager:GetBuildChannelAIs() do
	
				-- Check building ID
				if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
					return
				end	
			end
		
			-- Build a Airport
			local tBuildType = CpuBuildType()
			tBuildType.btype = CpuPrerequisites.BT_Building
			tBuildType.name = "steel_legion_airport"
			if (self:TryBuild( tBuildType )) then
				aitrace("BuildController: Dynamic build of "..tBuildType.name)
			end
		end

		if (cpu_manager.cpu_player:IsResearchComplete("steel_legion_branch_tank_company")) then

			-- Compute tank armour researches
			self:DynamicResearch("steel_legion_tank_leman_armour", 4, 100, 150, 0, 0, nil, 0)

			-- Compute tank ace researches
			if (num_vanquisher_squads >= 1) then
				self:DynamicResearch("steel_legion_tank_ace_research", 4, 80, 125, 0, 0, nil, 0)
			end

			-- Computer tank of arrogance researches
			self:DynamicResearch("steel_legion_fortress_of_arrogance_research", 4, 500, 500, 0, 0, nil, 0)
		end

		local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

		-- Compute HQ Tier2 Addons for future HQs
		if (self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 and (iPower >= 200 and iRequisition >= 200)) then
			self:DynamicAddon("steel_legion_hq_addon_1", 100, 4, 125, 50, 0, 0, nil, nil, false)
		end

		-- Compute HQ Tier3 Addons for future HQs
		if (self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 and (iPower >= 400 and iRequisition >= 400)) then
			self:DynamicAddon("steel_legion_hq_addon_2", 100, 4, 250, 50, 0, 0, nil, nil, false)
		end

		-- Compute additional flakcannons based on HQs present
		if (self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 ) then
			if (iRequisition >= 600 and iPower >= 500) then
				self:DynamicBuild("steel_legion_flak_cannon", 6, 4, 250, 300, 0, 0)
			end
		end

		-- Compute additional tarantula based on HQs present
		if (self:GetBuildingCountByName(self:GetBuildingName("HQ")) > 1 ) then
			if (iRequisition >= 700 and iPower >= 600) then
				self:DynamicBuild("steel_legion_tarantula", 12, 4, 90, 45, 0, 0)
			end
		end

		-- Try to build no-limit defensive turrets
		self:DynamicBuild("steel_legion_tarantula_no_limit", 10, 4, 400, 300, 0, 0)
	end

	-- Restrict dynamic builds to hard difficulty or higher
	if (CpuManager.AISettings.bMultiBuildings) then
	
		-- Dynamic buildings
                -- Item-Syntax: BuildingName, BuildingCount, MinTier, MinRequisition, MinPower, MinSquadCap, MinSupportCap
		self:DynamicBuild("steel_legion_ammunition_bunker", 2, 3, 500, 0, 0, 0)
		self:DynamicBuild("steel_legion_ammunition_bunker", 3, 4, 700, 0, 0, 0)
		self:DynamicBuild("steel_legion_relay_station", 2, 3, 600, 200, 0, 0)
		self:DynamicBuild("steel_legion_tank_fabric", 2, 3, 700, 300, 0, 0)
		self:DynamicBuild("steel_legion_tank_fabric", 3, 4, 1200, 600, 0, 0)
		self:DynamicBuild("steel_legion_hq", 2, 3, 500, 100, 0, 0)
		self:DynamicBuild("steel_legion_hq", 3, 4, 600, 200, 0, 0)
		self:DynamicBuild("steel_legion_titanic_reactor", 1, 4, 600, 600, 0, 0)
	end
end

-- Force AI to give priority to re-build HQ if lost and none are present
function SteelLegionBuildBaseStrategy:BuildFirstHQ()

	-- Check if a plan exists
	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))
	if (self:PlanExists("Build Building Plan", iBuildingID)) then
		return
	end

	-- Check if any HQ are in production
	for oBuildChannel in build_manager:GetBuildChannelAIs() do

		-- Check building ID
		if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
			return
		end
	end
		
	-- Build the HQ
	local sHQName = self:GetBuildingName("HQ")
	local tBuildType = CpuBuildType()
	tBuildType.btype = CpuPrerequisites.BT_Building
	tBuildType.name = sHQName
	if (self:TryBuild( tBuildType )) then
		aitrace("BuildController: Dynamic build of "..tBuildType.name)
	end
	return
end

-- Force AI to give priority to recruit a builder unit if none are present
function SteelLegionBuildBaseStrategy:BuildFirstBuilder(iBuilderName)

	if self:CountSquads(iBuilderName) < 1 then

		-- Recruit a builder squad
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Squad
		tBuildType.name = iBuilderName
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic build of "..tBuildType.name)
		end
		return
	end
end

-- Arkhan 01.2006: Method to check if force tech should be computed
function SteelLegionBuildBaseStrategy:ForceTech()

	-- Check time
	if (g_iGMT < 60 * CpuManager.ForceTech.StartTier1) then
		return false
	end

	-- Check ressources
	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

	-- Check tier
	local iTierLevel = self:GetTierLevel()
	if (iTierLevel == 1) then

		-- Check resources
		if (iRequisition > 600 and iPower > 200) then
			return false
		end
	
		-- Check for research
		if (not cpu_manager.cpu_player:IsResearchComplete("steel_legion_chimera_research")) then
			return true
		end

	elseif (iTierLevel == 2) then

		-- Check build channel for tank building
		iID = cpu_manager.stats:GetBuildingID("steel_legion_tank_fabric")
		local bHasVehicleBuilding = false
		for oBuildChannel in build_manager:GetBuildChannelAIs() do
		
			-- Check building ID
			if (oBuildChannel:GetBlueprintID() == iID) then
				bHasVehicleBuilding = true
				break
			end
		end
		if (not bHasVehicleBuilding) then
			return true
		end
		
		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier2 and (iRequisition < 600 or iPower < 600)) then
			return true
		end
		
	elseif (iTierLevel == 3) then	

		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier3 and (iRequisition < 600 or iPower < 600)) then
			return true
		end
	end
	return false
end

-- Arkhan Nov.2006: Return placement type for buildings
function SteelLegionBuildBaseStrategy:GetPlacementType(iBuildingID)
	
	-- Check building
	if (iBuildingID == cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))) then
        	local count = self:GetBuildingCountByName(self:GetBuildingName("HQ"), false)
		local friend = cpu_manager:FindClosestFriendPlayer()
		if friend == nil then
			-- Lone Player
                	if count == 0 and not cpu_manager:HQThreat() then
                    		return "HQ"
                	else
                    		return "Safeplace"
                	end
        	else
        		-- Has allies
                	if count > 0 or cpu_manager:HQThreat() then
 				return "HQ"
                	else
				return "Safeplace"
                	end
		end
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("steel_legion_ammunition_bunker") or
		iBuildingID == cpu_manager.stats:GetBuildingID("steel_legion_tank_fabric")) then
		return "Military"
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("steel_legion_airport")) then
		return "Front1"
	elseif (cpu_manager:IsTurret(iBuildingID) or
		iBuildingID == cpu_manager.stats:GetBuildingID("steel_legion_tarantula_no_limit") or
		iBuildingID == cpu_manager.stats:GetBuildingID("steel_legion_flak_cannon")) then
		return "Front2"
	elseif (cpu_manager:IsMine(iBuildingID)) then
		return "Mine"
	elseif (cpu_manager:IsGenerator(iBuildingID) or
			iBuildingID == cpu_manager.stats:GetBuildingID("steel_legion_relay_station") or
			iBuildingID == cpu_manager.stats:GetBuildingID("steel_legion_titanic_reactor")) then
		return "BaseBack"
	end
	return "Basic"
end

-- Arkhan 03.2006: Inherited method to modify squad demand
function SteelLegionBuildBaseStrategy:ModifySquadDemand(iUnitID)

	-- No more commissars then soliders/stormtroopers squads 
	if (iUnitID == cpu_manager.stats:GetSquadID("steel_legion_squad_commissar")) then
		
		-- Check number of attachable squads 
		local commi_attach = function ( squad_ai )
			return (squad_ai:GetTactic():GetUnitStrength() >= 250 and squad_ai:CanReceiveAttachment())
		end
		local num_attach = self:CountSquads("steel_legion_squad_soldier", commi_attach) +
						   self:CountSquads("steel_legion_squad_stormtrooper_deepstrike", commi_attach)
 
 		-- Check Commissar count
		local num_commi = self:CountSquads("steel_legion_squad_commissar")
		if (num_commi >= num_attach) then
			return 0
		end	
	end
	return BuildBaseStrategy.ModifySquadDemand(self, iUnitID)
end

-- Arkhan 11.2006: Virtual method for checking out relic units
function SteelLegionBuildBaseStrategy:RelicRequired(sName)

	-- Check name
	if (sName == "steel_legion_squad_tank_incinerator") then
		return true
	elseif (sName == "steel_legion_squad_tank_baneblade") then
		return true
	elseif (sName == "steel_legion_squad_tank_stormblade") then
		return true
	elseif (sName == "steel_legion_squad_tank_shadowsword") then
		return true
	elseif (sName == "steel_legion_squad_tank_stormsword") then
		return true
	elseif (sName == "steel_legion_squad_tank_fortress_of_arrogance") then
		return true
	elseif (sName == "steel_legion_squad_tank_ordinatus") then
		return true
	end
	return false
end
