class 'SteelLegionBuildBaseStrategy' (BuildBaseStrategy)

function SteelLegionBuildBaseStrategy:__init( baseinfo ) super( baseinfo )
  
	-- Add detector units (Best first, worst last)
	self:AddDetectorUnit("steel_legion_squad_tank_sentinel")
	self:AddDetectorUnit("steel_legion_squad_commissar")
	self:AddDetectorUnit("steel_legion_squad_tank_salamander")
	self:AddDetectorUnit("steel_legion_squad_lieutenant")
	self:AddDetectorUnit("steel_legion_squad_uriah_jacobus")

	CpuPrerequisites2.AddSpecialItem("0titans_tier_ii_enable", CpuPrerequisites.BT_Research)
	CpuPrerequisites2.AddSpecialItem("0titan_building_enable", CpuPrerequisites.BT_Research)
	CpuPrerequisites2.AddSpecialItem("steel_legion_squad_tank_shadowsword", CpuPrerequisites.BT_Squad)
	CpuPrerequisites2.AddSpecialItem("steel_legion_squad_tank_ordinatus", CpuPrerequisites.BT_Squad)
	CpuPrerequisites2.AddSpecialItem("steel_legion_squad_thunderbolt", CpuPrerequisites.BT_Squad)
end

function SteelLegionBuildBaseStrategy:ChooseBuildProgram()
	
	-- Check build program count
	if (table.getn(self.info.BuildPrograms) ~= 2) then
		return BuildBaseStrategy.ChooseBuildProgram(self)
	end
	
	-- Unification Mod Addition
	-- Try to maintain the same strategy, on AI re-initiation (Save->Load, Change Players, etc.)
	if cpu_manager.cpu_player:IsResearchComplete("steel_legion_branch_tank_company") then
		return 1
	elseif cpu_manager.cpu_player:IsResearchComplete("steel_legion_branch_armoured_fist") then
		return 2
	end

	-- Set probabilities of the strategies according to the map size
	local iBuildProgram1 = 50	-- Tank Company strategy
	local iBuildProgram2 = 50	-- Armoured Fist strategy
	
	-- Modify probabilities according to the closest enemy player
	local oEnemy = cpu_manager:FindClosestEnemyPlayer(false)
	local sEnemy = oEnemy:GetPlayerRaceName()		
	if (sEnemy == "ork_race" or sEnemy == "guard_race") then

		iBuildProgram1 = iBuildProgram1 + 20
		iBuildProgram2 = iBuildProgram2 - 20
		
	elseif (sEnemy == "chaos_marine_race" or sEnemy == "necron_race") then
	
		iBuildProgram1 = iBuildProgram1 - 20
		iBuildProgram2 = iBuildProgram2 + 20
	end
		
	-- Now choose a program
	iBuildProgram2 = iBuildProgram1 + iBuildProgram2
	local iRandom = math.random(1, 100)
	if (iRandom <= iBuildProgram1) then
		return 1
	elseif (iRandom <= iBuildProgram2) then
		return 2
	end
	return 1
end

function SteelLegionBuildBaseStrategy:EvaluateSquadCap()

	-- Check squad cap
	if (self:CheckSquadCap(200, 0)) then
		
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research
		
		if (not cpu_manager.cpu_player:IsResearchComplete( "steel_legion_squad_cap_research" )) then
			tBuildType.name = "steel_legion_squad_cap_research"
		elseif not cpu_manager.cpu_player:IsResearchComplete( "steel_legion_squad_cap_research_1" ) then
			tBuildType.name = "steel_legion_squad_cap_research_1"
		elseif not cpu_manager.cpu_player:IsResearchComplete( "steel_legion_squad_cap_research_2" ) then
			tBuildType.name = "steel_legion_squad_cap_research_2"
		else
			return
		end
		
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
	
	-- Check support cap
	if (self:CheckSupportCap(150, 200)) then
		
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research
		
		if (not cpu_manager.cpu_player:IsResearchComplete( "steel_legion_support_cap_research" )) then
			tBuildType.name = "steel_legion_support_cap_research"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "steel_legion_support_cap_research_1" )) then
			tBuildType.name = "steel_legion_support_cap_research_1"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "steel_legion_support_cap_research_2" )) then
			tBuildType.name = "steel_legion_support_cap_research_2"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "steel_legion_support_cap_research_3" )) then
			tBuildType.name = "steel_legion_support_cap_research_3"
		else
			return
		end
		
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
end

function SteelLegionBuildBaseStrategy:GetBuildingName( sType )

	-- Return race specific object string
	if (sType == "HQ") then
		return "steel_legion_hq"
		
	elseif (sType == "Generator") then
		return "steel_legion_generator"
		
	elseif (sType == "BiggerGenerator") then
		return "steel_legion_reactor"
		
	elseif (sType == "VehicleBuilding") then
		return "steel_legion_ammunition_bunker"
		
	elseif (sType == "ListeningPost") then
		return "steel_legion_observation_bunker"
		
	elseif (sType == "Turret") then
		return "steel_legion_tarantula"

	elseif (sType == "Mine") then
		return "steel_legion_personal_mine"
	end
	return nil
end

