-- Arkhan 01.2006: Method to check if force tech should be computed
function FistsBuildBaseStrategy:ForceTech()

	-- Check time
	if (g_iGMT < 60 * CpuManager.ForceTech.StartTier1) then
		return false
	end
	
	-- Check ressources
	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

	-- Check tier
	local iTierLevel = self:GetTierLevel()
	if (iTierLevel == 1) then
	
		-- Check resources
		if (iRequisition > 600 and iPower > 200) then
			return false
		end

		-- Check research
		if cpu_manager.cpu_player:IsResearchComplete("imperial_fists_tier2_research") then
			return false
		end
		return true

	elseif (iTierLevel == 2) then

		-- Check build channel for ability building
		if (self:GetBuildingCountByName("imperial_fists_ability_building", false) < 1) then
			return true
		end

		-- Check build channel for machine cult
		if (self:GetBuildingCountByName("imperial_fists_vehicle_building", false) < 1) then
			return true
		end

		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier2 and (iRequisition < 600 or iPower < 600)) then
			return true
		end
		
	elseif (iTierLevel == 3) then	

		-- Check time
		if (g_iGMT > 60 * CpuManager.ForceTech.StartTier3 and (iRequisition < 600 or iPower < 600)) then
			return true
		end
	end
	return false
end

-- Arkhan 03.2006: Return placement type for buildings
function FistsBuildBaseStrategy:GetPlacementType(iBuildingID)
	
	-- Check building
	if (cpu_manager:IsHQ(iBuildingID)) then
		local count = self:GetBuildingCountByName("imperial_fists_hq", false)
		local friend = cpu_manager:FindClosestFriendPlayer()
		if friend == nil then
			-- Lone Player
			if count == 0 and not cpu_manager:HQThreat() then
				return "HQ"
			else
				return "Safeplace"
			end
		else
			-- Has allies
			if count > 0 or cpu_manager:HQThreat() then
				return "HQ"
			else
				return "Safeplace"
			end
		end
	elseif (iBuildingID == cpu_manager.stats:GetBuildingID("imperial_fists_barracks") or
			iBuildingID == cpu_manager.stats:GetBuildingID("imperial_fists_ability_building") or
			iBuildingID == cpu_manager.stats:GetBuildingID("imperial_fists_vehicle_building")) then
		return "Military"
	elseif iBuildingID == cpu_manager.stats:GetBuildingID("imperial_fists_hammerfall_bunker") then
		if math.random(1,3) == 1 then
			return "Military"
		else
			return "BaseBack"
		end
	elseif (cpu_manager:IsTurret(iBuildingID) or 
			iBuildingID == cpu_manager.stats:GetBuildingID("imperial_fists_turret_bolter_no_limit")) then
		return "Front2"
	elseif (cpu_manager:IsMine(iBuildingID) or iBuildingID == cpu_manager.stats:GetBuildingID("imperial_fists_tfc_beacon") or
			iBuildingID == cpu_manager.stats:GetBuildingID("imperial_fists_mine_field_no_limit")) then
		return "Mine"
	elseif (cpu_manager:IsGenerator(iBuildingID) or
			iBuildingID == cpu_manager.stats:GetBuildingID("imperial_fists_armoury")) then
		return "BaseBack"
	end
	return "Basic"
end

-- Arkhan 03.2006: Inherited method to modify squad demand
function FistsBuildBaseStrategy:ModifySquadDemand(iUnitID)

	-- No more apothecaries then squads 
	if (iUnitID == cpu_manager.stats:GetSquadID("imperial_fists_squad_apothecary")) then
		
		-- Check number of attachable squads 
		local apoth_attach = function ( squad_ai )
			return (squad_ai:GetTactic():GetUnitStrength() >= 250 and squad_ai:CanReceiveAttachment())
		end
		local num_attach = self:CountSquads("imperial_fists_squad_siege_marines", apoth_attach) +
				   self:CountSquads("imperial_fists_squad_tactical", apoth_attach) +
				   self:CountSquads("imperial_fists_squad_devastator", apoth_attach) +
				   self:CountSquads("imperial_fists_squad_assault", apoth_attach) +
				   self:CountSquads("imperial_fists_squad_terminator_assault", apoth_attach) + 
				   self:CountSquads("imperial_fists_squad_terminator", apoth_attach) 
 
 		-- Check apo count
		local num_apo = self:CountSquads("imperial_fists_squad_apothecary")
		if (num_apo >= num_attach) then
			return 0
		end	
	end

	-- No more skullprobes then squads 
	if (iUnitID == cpu_manager.stats:GetSquadID("imperial_fists_squad_skull_probe")) then
		
		-- Check number of attachable squads 
		local skullprobe_attach = function ( squad_ai )
			return (squad_ai:GetTactic():GetUnitStrength() >= 250 and squad_ai:CanReceiveAttachment())
		end
		local num_attach = self:CountSquads("imperial_fists_squad_siege_marines", skullprobe_attach) +
				   self:CountSquads("imperial_fists_squad_tactical", skullprobe_attach) +
				   self:CountSquads("imperial_fists_squad_devastator", skullprobe_attach) +
				   self:CountSquads("imperial_fists_squad_assault", skullprobe_attach) +
				   self:CountSquads("imperial_fists_squad_terminator_assault", skullprobe_attach) + 
				   self:CountSquads("imperial_fists_squad_terminator", skullprobe_attach) 

		-- Check skullprobe count
		local num_skuprobe = self:CountSquads("imperial_fists_squad_skull_probe")
		if (2 * num_skuprobe >= num_attach) then
			return 0
		end	
	end
	
	-- Only build rhinos if we've full support cap
	if (iUnitID == cpu_manager.stats:GetSquadID("imperial_fists_squad_rhino")) then
		
		-- Check army strength
		if (cpu_manager:GetArmyStrength() < 4000) then
			return 0
		end
	end

	return BuildBaseStrategy.ModifySquadDemand(self, iUnitID)
end

