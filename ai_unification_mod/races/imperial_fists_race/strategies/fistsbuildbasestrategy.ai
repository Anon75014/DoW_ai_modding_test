		-- Compute secondary researches
		if (iArmyStrength >= 750) then

			-- Compute infantry researches
			if (iInfantrySquads >= 3) then
				self:DynamicResearch("imperial_fists_melta_bomb_research", 1, 100, 100, 0, 0, "imperial_fists_squad_tactical", 2)
				self:DynamicResearch("imperial_fists_health_upgrade_research", 1, 50, 30, 0, 0, nil, 0)
				self:DynamicResearch("imperial_fists_accuracy_upgrade_research", 1, 50, 30, 0, 0, nil, 0)
				self:DynamicResearch("imperial_fists_sergeant_ranged_upgrade_1", 1, 75, 25, 0, 0, nil, 0)
				self:DynamicResearch("imperial_fists_sergeant_melee_upgrade_1", 1, 75, 25, 0, 0, nil, 0)
			end

			-- Compute skull probe researches
			self:DynamicResearch("imperial_fists_skull_probe_infiltrate_research", 1, 50, 50, 0, 0, nil, 0)
		end
	end
	
	-- Compute tier 2 researches
	if (self.tierLevel >= 2) then
	
		-- Compute bonus researches
		if (iArmyStrength >= 1250) then

			-- Compute infantry researches
			if (iInfantrySquads >= 2) then
				self:DynamicResearch("imperial_fists_max_weapons_research", 2, 75, 75, 0, 0, nil, 0)
				self:DynamicResearch("imperial_fists_frag_grenade_research", 2, 25, 75, 0, 0, nil, 0)
			end
		end
		-- Compute commander researches
		if (iCommanderSquads >= 1) then
			self:DynamicResearch("imperial_fists_commander_health_research_1", 2, 100, 25, 0, 0, nil, 0)
			self:DynamicResearch("imperial_fists_commander_ability_research_1", 2, 80, 35, 0, 0, "imperial_fists_squad_captain", 1)
		end

		-- Compute bonus researches
		if (iArmyStrength >= 1750) then
					
			-- Compute infantry researches
			if (iInfantrySquads >= 2) then
				self:DynamicResearch("imperial_fists_sergeant_melee_upgrade_2", 2, 75, 25, 0, 0, nil, 0)
				self:DynamicResearch("imperial_fists_health_upgrade_research_2", 2, 100, 50, 0, 0, nil, 0)
				self:DynamicResearch("imperial_fists_accuracy_upgrade_research_2", 2, 100, 50, 0, 0, nil, 0)
			end

			-- Compute siege marines and vehicle researches
			if (self:CountSquads("imperial_fists_squad_siege_marines") + self:CountSquads("imperial_fists_squad_rhino") + self:CountSquads("imperial_fists_squad_rhino_damocles") + self:CountSquads("imperial_fists_squad_razorback") + self:CountSquads("imperial_fists_squad_dreadnought_ironclad") >= 3) then
				self:DynamicResearch("imperial_fists_smoke_launcher_research", 2, 75, 25, 0, 0, nil, 0)
			end
		end

		-- Commence initial fortify addons if resources permit
		self:BuildTierTwoFortifyAddons()

		-- Special: We do not need as many Siege Marines at Tier II and above. Change the limit from 2-3, to 1-2.
		if G_Further_Limit_Siege_Marines then
			G_Further_Limit_Siege_Marines = false
			-- Do it only if we have normal caps. In case of large armies (wincondition), do not change
			if maxSquadCap < 22 then
				BuildBaseStrategyInfo.imperial_fists_race.SquadLimits.standard.imperial_fists_squad_siege_marines = math.random( 1,2 )
			end
		end

		-- Try to build no-limit defensive turrets and mines
		self:DynamicBuild("imperial_fists_turret_bolter_no_limit", 2, 2, 200, 150, 0, 0)
		self:DynamicBuild("imperial_fists_mine_field_no_limit", 2, 2, 200, 100, 0, 0)
	end
	
	-- Compute tier 3 researches
	if (self.tierLevel >= 3) then
	
		-- Compute commander researches
		if (iLibrarianSquads >= 1) then
			self:DynamicResearch("imperial_fists_librarian_research_1", 3, 75, 40, 0, 0, nil, 0)
			self:DynamicResearch("imperial_fists_librarian_research_2", 3, 40, 50, 0, 0, nil, 0)
		end

		-- Compute secondary researches
		if (iArmyStrength >= 2000) then

			-- Compute commander researches
			if (iCommanderSquads >= 1) then
				self:DynamicResearch("imperial_fists_commander_health_research_2", 3, 125, 50, 0, 0, nil, 0)
				self:DynamicResearch("imperial_fists_commander_ability_research_2", 3, 100, 50, 0, 0, "imperial_fists_squad_captain", 1)
			end
		end

		-- Compute bonus researches
		if (iArmyStrength >= 2250) then

			-- Compute terminator/centurion researches
			self:DynamicResearch("imperial_fists_personalteleporter_research", 3, 75, 125, 0, 0, nil, 0)
		end

		-- Commence next round of fortify addons if resources permit
		self:BuildTierThreeFortifyAddons()

		-- Special: We do not need as many Tactical Marines at Tier III and above. Change the limit from 2-4, to 1-2.
		if G_Further_Limit_Tactical_Marines then
			G_Further_Limit_Tactical_Marines = false
			-- Actually INCREASE the limits in Bigger Army (Caps 30) cases (in case of a wincondition)
			if maxSquadCap > 21 then
				BuildBaseStrategyInfo.imperial_fists_race.SquadLimits.standard.imperial_fists_squad_tactical = math.random( 3,4 )
			else
			-- OK, normal game, now limit them
				BuildBaseStrategyInfo.imperial_fists_race.SquadLimits.standard.imperial_fists_squad_tactical = math.random( 1,2 )
			end
		end

		-- Try to build no-limit defensive turrets and mines
		self:DynamicBuild("imperial_fists_turret_bolter_no_limit", 4, 3, 300, 200, 0, 0)
		self:DynamicBuild("imperial_fists_mine_field_no_limit", 4, 3, 200, 100, 0, 0)
	end

	-- Compute tier 4 researches
	if (self.tierLevel >= 4) then

		local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
		local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )

		-- Compute HQ Tier3 Addons for future HQs
		if (self:GetBuildingCountByName("imperial_fists_hq") > 1 and (iPower >= 1000 and iRequisition >= 1000)) then
			self:DynamicAddon("imperial_fists_hq_addon_1", 100, 4, 300, 340, 0, 0, nil, nil, false)
		end

		-- Vehicle Armour Research
		self:DynamicResearch("imperial_fists_extra_armour_research", 4, 150, 220, 0, 0, nil, 0)

		-- Relic Vehicles Research
		self:DynamicResearch("imperial_fists_relic_vehicles", 4, 700, 700, 0, 0, nil, 0)
	
		-- T2 Titan Vehicles Research
		self:DynamicResearch("imperial_fists_relic_vehicles_2", 4, 700, 700, 0, 0, nil, 0)

		-- Compute infantry Researches
		if (iInfantrySquads >= 2) then
			self:DynamicResearch("imperial_fists_max_weapons_research_2", 4, 100, 75, 0, 0, nil, 0)
		end

		-- CF related Research
		self:DynamicResearch("imperial_fists_max_weapons_research_2_cf", 4, 150, 100, 0, 0, nil, 0)

		-- Lex'es arsenal
		self:DynamicResearch("imperial_fists_lex_wargear", 4, 400, 400, 0, 0, nil, 0)

		-- Try to build no-limit defensive turrets and mines
		self:DynamicBuild("imperial_fists_turret_bolter_no_limit", 10, 4, 400, 300, 0, 0)
		self:DynamicBuild("imperial_fists_mine_field_no_limit", 10, 4, 300, 200, 0, 0)
	end

	-- Try to perform the last Support research ANYWAY from TierII, because it unlocks the Sabre.
	self:DynamicResearch("imperial_fists_support_cap_research_3", 2, 300, 300, 0, 0, nil, 0)
	
	local iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
	local iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	-- Build/Compute Power fortification addons
	if (iReq > 1.6*iPower and iReq > 380) or (iReq > 800 and iPower > 200) then
		self:DynamicAddon("imperial_fists_power_1", 100, 1, 135, 0, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_power_2", 100, 1, 135, 0, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_power_3", 100, 1, 135, 0, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_power_4", 100, 1, 135, 0, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_power_5", 100, 1, 135, 0, 0, 0, nil, nil, false)
	end

	-- Build/Compute Requisition fortification addons
	iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
	iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	if (iPower > iReq and iPower > 300) or (iReq > 400 and iPower > 800) then
		self:DynamicAddon("imperial_fists_req_fortify_1", 100, 1, 75, 50, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_req_fortify_2", 100, 2, 100, 50, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_req_fortify_3", 100, 3, 125, 50, 0, 0, nil, nil, false)
	end

	-- Build/Compute Normal fortification addons
	iPower = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Power )
	iReq = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )
	if (iReq > 1000 and iPower > 1000) or (math.random(1,5) < 2 and iReq > 500 and iPower > 500) then
		self:DynamicAddon("imperial_fists_fortify_1", 100, 1, 15, 15, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_fortify_2", 100, 1, 30, 30, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_fortify_3", 100, 1, 45, 45, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_fortify_4", 100, 1, 60, 60, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_fortify_5", 100, 1, 75, 75, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_fortify_6", 100, 1, 90, 90, 0, 0, nil, nil, false)
	end

	-- Build Bunkers
	self:DynamicBuild("imperial_fists_hammerfall_bunker", 1, 3, 300, 400, 0, 0)

	-- Build the Crimson Fists Stature
	self:DynamicBuild("imperial_fists_cf_statue", 1, 4, 500, 500, 0, 0)

	-- Restrict dynamic builds to hard difficulty or higher
	if (CpuManager.AISettings.bMultiBuildings) then
	
		-- Dynamic buildings
		-- Item-Syntax: BuildingName, BuildingCount, MinTier, MinRequisition, MinPower, MinSquadCap, MinSupportCap
		self:DynamicBuild("imperial_fists_hq", 2, 3, 700, 300, 0, 0)
		self:DynamicBuild("imperial_fists_hq", 3, 4, 1000, 600, 0, 0)
		self:DynamicBuild("imperial_fists_barracks", 2, 2, 500, 50, 0, 0)
		self:DynamicBuild("imperial_fists_barracks", 3, 3, 700, 100, 0, 0)
		self:DynamicBuild("imperial_fists_vehicle_building", 2, 3, 200, 400, 0, 0)
		self:DynamicBuild("imperial_fists_vehicle_building", 3, 4, 800, 700, 0, 0)
		self:DynamicBuild("imperial_fists_ability_building", 2, 3, 600, 800, 0, 0)
		self:DynamicBuild("imperial_fists_generator", 3, 2, 150, 0, 0, 0)
		self:DynamicAddon("imperial_fists_hq_addon_1", 100, 3, 340, 340, 0, 0, nil, nil, false)
		self:DynamicBuild("imperial_fists_hammerfall_bunker", 3, 3, 400, 500, 0, 0)
	end
end

-- Force AI to give priority to re-build HQ if lost and none are present
function FistsBuildBaseStrategy:BuildFirstHQ()

	-- Check if a plan exists
	local iBuildingID = cpu_manager.stats:GetBuildingID(self:GetBuildingName("HQ"))
	if (self:PlanExists("Build Building Plan", iBuildingID)) then
		return
	end

	-- Check if any HQ are in production
	for oBuildChannel in build_manager:GetBuildChannelAIs() do

		-- Check building ID
		if (oBuildChannel:GetBlueprintID() == iBuildingID and not oBuildChannel:ConstructionDone()) then
			return
		end
	end
		
	-- Build the HQ
	local sHQName = self:GetBuildingName("HQ")
	local tBuildType = CpuBuildType()
	tBuildType.btype = CpuPrerequisites.BT_Building
	tBuildType.name = sHQName
	if (self:TryBuild( tBuildType )) then
		aitrace("BuildController: Dynamic build of "..tBuildType.name)
	end
	return
end

-- Force AI to give priority to recruit a builder unit if none are present
function FistsBuildBaseStrategy:BuildFirstBuilder(iBuilderName)

	if self:CountSquads(iBuilderName) < 1 then

		-- Recruit a builder squad
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Squad
		tBuildType.name = iBuilderName
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic build of "..tBuildType.name)
		end
		return
	end
end

function FistsBuildBaseStrategy:BuildTierTwoFortifyAddons()

	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )

	-- Compute building fortification addons
	if (iRequisition >= 250) then
		self:DynamicAddon("imperial_fists_fortify_1", 100, 2, 15, 15, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_fortify_2", 100, 2, 30, 30, 0, 0, nil, nil, false)
		self:DynamicAddon("imperial_fists_fortify_3", 100, 2, 45, 45, 0, 0, nil, nil, false)
	end
end

function FistsBuildBaseStrategy:BuildTierThreeFortifyAddons()

	local iRequisition = resource_manager:GetResourceAmount():Get( ResourceAmount.RT_Requisition )

	-- Compute building fortification addons
	if (iRequisition >= 400) then
