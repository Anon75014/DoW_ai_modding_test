class 'FellbladeTactic' (ImperialFistsVehicleTactic)

Fellblade = {}

function FellbladeTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Fellblade Tactic")
end

function FellbladeTactic:InitAbilities()

	-- Init ability ID's
	if (Fellblade.missile_id == nil) then
		Fellblade.missile_id = cpu_manager.stats:GetAbilityID( "imperial_fists_hk_missile" )	
	end

	if (Fellblade.smoke_id == nil) then
		Fellblade.smoke_id = cpu_manager.stats:GetAbilityID( "imperial_fists_smoke_launchers" )	
	end

	if (Fellblade.spirit_id == nil) then
		Fellblade.spirit_id = cpu_manager.stats:GetAbilityID( "imperial_fists_machine_spirit" )	
	end
end

function FellbladeTactic:DoAbilities()

	if (self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(Fellblade.missile_id)) then
		Ability.DoAbilityTarget( self.squad_ai, Fellblade.missile_id, Ability.Filters.CloseVehicleEnemy, 1 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Fellblade.missile_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, Fellblade.missile_id, Ability.Filters.CloseSquadEnemy, 4 )
	end

	--[[if (self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(Fellblade.missile_falchion)) then
		Ability.DoAbilityTarget( self.squad_ai, Fellblade.missile_falchion, Ability.Filters.CloseVehicleEnemy, 1 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Fellblade.missile_falchion, Ability.EntityFilters.CloseBaseEntityEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, Fellblade.missile_falchion, Ability.Filters.CloseSquadEnemy, 4 )
	end]]

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(Fellblade.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(Fellblade.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(Fellblade.smoke_id, oUnit:GetSquad())
		end
	end

	-- Check if I can use machine spirit while stationary
	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		
		if (self.squad_ai:CanDoAbility(Fellblade.spirit_id)) then
			self.squad_ai:DoSpecialAbility(Fellblade.spirit_id)
		end
	end

	-- Call standard method
	ImperialFistsVehicleTactic.DoAbilities(self)
end