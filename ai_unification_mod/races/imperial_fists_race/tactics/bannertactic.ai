class 'BannerTactic' (ImperialFistsInfantryTactic)

Banner = {}

function BannerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Imperial Fists Banner Tactic")
end

function BannerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function BannerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function BannerTactic:Update()

	if self:IsComplete() then
		return
	end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

	--attach to squad
	self:TryAttachSquad( false, false, 1000, 200, nil )
end


