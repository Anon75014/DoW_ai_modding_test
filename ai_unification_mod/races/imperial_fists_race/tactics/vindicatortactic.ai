class 'VindicatorTactic' (ImperialFistsVehicleTactic)

Vindicator = {}
Sabre = {}

function VindicatorTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Imperial Fists Vindicator Tactic")
end

function VindicatorTactic:InitAbilities()

	-- Init ability ID's
	if (Vindicator.smoke_id == nil) then
		Vindicator.smoke_id = cpu_manager.stats:GetAbilityID( "imperial_fists_smoke_launchers" )	
	end
	if (Sabre.missile_id == nil) then
		Sabre.missile_id = cpu_manager.stats:GetAbilityID( "imperial_fists_hk_missiles_sabre" )	
	end
end

function VindicatorTactic:DoAbilities()

	-- Vindicator: Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(Vindicator.smoke_id)) then
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(Vindicator.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(Vindicator.smoke_id, oUnit:GetSquad())
		end
	end

	-- Sabre: Check if we can launch HK-Missiles
	if self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(Sabre.missile_id) then
		Ability.DoAbilityTarget( self.squad_ai, Sabre.missile_id, Ability.Filters.CloseVehicleEnemy, 1 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Sabre.missile_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1 )
	end

	-- Call standard method
	ImperialFistsVehicleTactic.DoAbilities(self)
end


