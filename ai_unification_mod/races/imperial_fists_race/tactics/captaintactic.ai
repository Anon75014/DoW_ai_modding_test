class 'CaptainTactic' (ImperialFistsInfantryTactic)

Captain = {}

function CaptainTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Captain Tactic")
end

-- Assassinate win condition -- never attack
function CaptainTactic:IsAttacker()
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function CaptainTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

-- Captain is allowed to retreat even directly after a jump
function CaptainTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

-- Assassinate win condition -- never jump into combat
function CaptainTactic:JumpAttack()

	if (not cpu_manager.assassinate) then
		Tactic.JumpAttack(self)
	end
end

function CaptainTactic:CanJumpAttached()
	return true
end

function CaptainTactic:InitAbilities()

	-- Init ability ID's
	if (Captain.battlecry == nil) then
		Captain.battlecry = cpu_manager.stats:GetAbilityID( "imperial_fists_battlecry" )
	end

	if (Captain.missile_id == nil) then
		Captain.missile_id = cpu_manager.stats:GetAbilityID( "imperial_fists_hk_missiles" )
	end

end

function CaptainTactic:DoAbilities()

	-- Try to use battlecry
	Ability.DoAbilityArea(self.squad_ai, Captain.battlecry, Ability.Filters.CloseInCombat, 10, 1)

	if (self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(Captain.missile_id)) then
		Ability.DoAbilityTarget( self.squad_ai, Captain.missile_id, Ability.Filters.CloseVehicleEnemy, 1 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Captain.missile_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, Captain.missile_id, Ability.Filters.CloseSquadEnemy, 4 )
	end

	-- Try the Primaris replacement.
	if self.squad_ai:CanPossess() and self.squad_ai:IsInCombat() then
		if self.squad_ai:GetHealthPercentage() < 0.35 then
			self.squad_ai:DoPossess()
		end
	end
end

function CaptainTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Assassinate win condition -- never attach to a squad
	if (not cpu_manager.assassinate and self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
		if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
	end

	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end
