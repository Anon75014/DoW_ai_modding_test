class 'VoxerTactic' (ImperialFistsInfantryTactic)

Voxer = {}

function VoxerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Imperial Fists Crimson Fists Voxer Tactic")
end

function VoxerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function VoxerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function VoxerTactic:Update()

	if self:IsComplete() then
		return
	end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

	--attach to squad
	self:TryAttachSquad( false, false, 1000, 200, nil )
end


