class 'SniperTactic' (ImperialFistsInfantryTactic)

PoliceSniper = {}

function SniperTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Police Sniper Tactic")

	-- Init execute delay time
	PoliceSniper.NextExecuteCheck = 0
end

function SniperTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function SniperTactic:IsDefender()
	return self:IsCommanderDefender()
end

function SniperTactic:InitAbilities()

	-- Init ability ID's
	if (PoliceSniper.execute_id == nil or PoliceSniper.NextExecuteCheck == nil) then
		PoliceSniper.execute_id = cpu_manager.stats:GetAbilityID( "imperial_fists_execute_enemy_sniper" )
		PoliceSniper.NextExecuteCheck = g_iGMT
	end
end

function SniperTactic:DoAbilities()

	-- TargetSelf: When attached to squad, executes one of his own soldiers to increase their fighting potential
	if (self.squad_ai:IsAttached() and self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(PoliceSniper.execute_id) and
		self.squad_ai:GetNumTroopers() > 6 and g_iGMT > PoliceSniper.NextExecuteCheck) then
		
		-- Use execute ability
		self.squad_ai:DoSpecialAbility(PoliceSniper.execute_id) 
		PoliceSniper.NextExecuteCheck = g_iGMT + 20
	end
end

function SniperTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad(false, false, 1000, 60, nil)
end
 