class 'LexTactic' (ImperialFistsInfantryTactic)

Lex = {}

function LexTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Lex Tactic")
end

function LexTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function LexTactic:IsDefender()
	return self:IsCommanderDefender()
end

function LexTactic:InitAbilities()

	-- Init ability ID's
	if (Lex.battlecry == nil) then
		Lex.battlecry = cpu_manager.stats:GetAbilityID( "imperial_fists_battlecry" )
	end
end

function LexTactic:DoAbilities()

	-- Try to use battlecry
	Ability.DoAbilityArea(self.squad_ai, Lex.battlecry, Ability.Filters.CloseInCombat, 10, 1)
end

function LexTactic:CheckForBroken()

	if (self.squad_ai:IsBroken()) then
	
		-- Check if I can repair my morale
		local rally_id = cpu_manager.stats:GetAbilityID( "imperial_fists_rally" )
		if (self.squad_ai:CanDoAbility( rally_id )) then
			self.squad_ai:DoSpecialAbility( rally_id )
		end
	end
	
	-- Call basic broken check method
	InfantryTactic.CheckForBroken(self)
end

function LexTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad(false, false, 1000, 60, nil)
end
 