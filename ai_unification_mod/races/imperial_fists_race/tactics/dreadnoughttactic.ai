class 'DreadnoughtTactic' (ImperialFistsVehicleTactic)

Dreadnought = {}

function DreadnoughtTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Imperial Fists Dreadnought Tactic")
end

function DreadnoughtTactic:InitAbilities()

	-- Init ability ID's
	if (Dreadnought.smoke_id == nil) then
		Dreadnought.smoke_id = cpu_manager.stats:GetAbilityID( "imperial_fists_smoke_launchers" )	
	end

	if (Dreadnought.quake_id == nil) then
		Dreadnought.quake_id = cpu_manager.stats:GetAbilityID( "imperial_fists_earthquake" )	
	end

	if (Dreadnought.missile_id == nil) then
		Dreadnought.missile_id = cpu_manager.stats:GetAbilityID( "imperial_fists_hk_missile_dread_1" )
	end

	if (Dreadnought.hkmissile_id == nil) then
		Dreadnought.hkmissile_id = cpu_manager.stats:GetAbilityID( "imperial_fists_hk_missile_dread_2" )
	end
end

function DreadnoughtTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(Dreadnought.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(Dreadnought.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(Dreadnought.smoke_id, oUnit:GetSquad())
		end
	end

	if (self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(Dreadnought.missile_id)) then
		Ability.DoAbilityTarget( self.squad_ai, Dreadnought.missile_id, Ability.Filters.CloseVehicleEnemy, 1 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Dreadnought.missile_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, Dreadnought.missile_id, Ability.Filters.CloseSquadEnemy, 4 )
	end

	if (self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(Dreadnought.hkmissile_id)) then
		Ability.DoAbilityTarget( self.squad_ai, Dreadnought.hkmissile_id, Ability.Filters.CloseVehicleEnemy, 1 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Dreadnought.hkmissile_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, Dreadnought.hkmissile_id, Ability.Filters.CloseSquadEnemy, 4 )
	end

	-- Call standard method
	Ability.DoAbility( self.squad_ai,Dreadnought.quake_id, Ability.Filters.IsInCombat )
	ImperialFistsVehicleTactic.DoAbilities(self)
end


