class 'ImperialFistsVehicleTactic' (VehicleTactic)

function ImperialFistsVehicleTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Imperial Fists Vehicle Tactic")
	
	-- Ironclad Dreadnoughts can enter deepstrike buildings
	local sName = squad_ai:GetSquadName()
	if (sName == "imperial_fists_squad_dreadnought_ironclad") then
		self.m_iDeepStrikeBlueprintID = cpu_manager.stats:GetBuildingID("imperial_fists_orbital_relay")
	end
end

-- Check if the vehicle should dance away in melee
function ImperialFistsVehicleTactic:CheckVehicleDance(sName)

	if (sName == "imperial_fists_squad_rhino" or
		sName == "imperial_fists_squad_cf_rhino" or
		sName == "imperial_fists_squad_rhino_damocles" or
		sName == "imperial_fists_squad_razorback" or
		sName == "imperial_fists_squad_sabre" or
		sName == "imperial_fists_squad_dreadnought" or
		sName == "imperial_fists_squad_dreadnought_ironclad" or
		sName == "imperial_fists_squad_dreadnought_venerable" or
		sName == "imperial_fists_squad_dreadnought_venerable_cf" or
		sName == "imperial_fists_squad_predator" or
		sName == "imperial_fists_squad_predator_natlan" or
		sName == "imperial_fists_squad_vindicator" or
		sName == "imperial_fists_squad_basilisk_legion" or
		sName == "imperial_fists_squad_stormhawk_interceptor" or
		sName == "imperial_fists_squad_glaive" or
		sName == "imperial_fists_squad_fellblade" or
		sName == "imperial_fists_squad_falchion" or
		sName == "imperial_fists_squad_land_raider_prometheus" or
		sName == "imperial_fists_squad_land_raider_achilles" or
		sName == "imperial_fists_squad_land_raider_might_of_rynn") then
		return true
	end
	return false
end

function ImperialFistsVehicleTactic:DoAbilities()

	-- New code to unstuck units with pathing issues, that can jump
    	-- Can also be used for flying squads with map stuck issues
    	-- Call it with [true], only for multi-membered squads
    	local sSquadName = self.squad_ai:GetSquadName()
    	if (sSquadName == "imperial_fists_squad_stormhawk_interceptor") then
        	self:SolveStuckCase(false)
    	end

	-- Call basic DoAbilities methods
	VehicleTactic.DoAbilities(self)
end
