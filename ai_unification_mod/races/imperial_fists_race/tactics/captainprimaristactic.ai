class 'CaptainPrimarisTactic' (ImperialFistsInfantryTactic)

CaptainPrimaris = {}

function CaptainPrimarisTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Captain Primaris Tactic")

	-- For the Commander, upgrade shield addon all the time, on spawn, or each time the AI re-initiates
	if self.squad_ai:GetSquadName() == "imperial_fists_squad_captain_primaris" then
		self:AutoBuildAddOn(0)
	end
end

-- Assassinate win condition -- never attack
function CaptainPrimarisTactic:IsAttacker()
	return (not cpu_manager.assassinate and self:IsCommanderAttacker())
end

-- Assassinate win condition -- never defend
function CaptainPrimarisTactic:IsDefender()
	return (not cpu_manager.assassinate and self:IsCommanderDefender())
end

-- CaptainPrimaris is allowed to retreat even directly after a jump
function CaptainPrimarisTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

-- Assassinate win condition -- never jump into combat
function CaptainPrimarisTactic:JumpAttack()

	if (not cpu_manager.assassinate) then
		Tactic.JumpAttack(self)
	end
end

function CaptainPrimarisTactic:CanJumpAttached()
	return true
end

function CaptainPrimarisTactic:AutoBuildAddOn( addonSlot )
	for e in self.squad_ai:GetEntities() do
		local buildChannel = build_manager:GetBuildChannelFromID(e:GetID())
		if buildChannel ~= nil then
			local addOnID = buildChannel:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
			if (buildChannel:IsBuilding() == 0 and buildChannel:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then			
				buildChannel:BuildAddOn(addOnID)
				return
			end
		end
	end
	return
end

function CaptainPrimarisTactic:InitAbilities()

	-- Init ability ID's
	if (CaptainPrimaris.battlecry == nil) then
		CaptainPrimaris.battlecry = cpu_manager.stats:GetAbilityID( "imperial_fists_battlecry" )
	end
end

function CaptainPrimarisTactic:DoAbilities()

	-- Try to use battlecry
	Ability.DoAbilityArea(self.squad_ai, CaptainPrimaris.battlecry, Ability.Filters.CloseInCombat, 10, 1)
end

function CaptainPrimarisTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Assassinate win condition -- never attach to a squad
	if (not cpu_manager.assassinate and self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
		if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
	end

	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end
