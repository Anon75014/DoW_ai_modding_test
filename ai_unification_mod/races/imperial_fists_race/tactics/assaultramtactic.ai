class 'AssaultRamTactic' (ImperialFistsVehicleTactic)

AssaultRam = {}

function AssaultRamTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Imperial Fists Assault Ram Tactic")
	
	Tactic.AssignStateFunction( self, Tactic.States.Idle, AssaultRamTactic.BeginIdleState )
	Tactic.AssignStateFunction( self, Tactic.States.Hold, AssaultRamTactic.BeginHoldState )
	Tactic.AssignStateFunction( self, Tactic.States.Retreat, AssaultRamTactic.BeginRetreatState )
	Tactic.AssignStateFunction( self, Tactic.States.Attack, AssaultRamTactic.BeginAttackState )

	-- Vehicle is a heavy transport
	self.m_iTransportVehicle = 1
	self.m_iTransportSlots = 8
end

function AssaultRamTactic:IsAttacker()
	return (self.m_iUnloadTries > 0 )
end

function AssaultRamTactic:IsDefender()
	return (self.m_iUnloadTries > 0)
end

function AssaultRamTactic:BeginIdleState()
	self:TransportMove()
	Tactic.SetSubState(self, self.IdleState, "Holding")
end

function AssaultRamTactic:BeginHoldState()
	self:TransportMove()
	Tactic.SetSubState(self, self.HoldState, "Holding")
end

function AssaultRamTactic:BeginRetreatState()
	self:TransportMove()
	Tactic.SetSubState( self, self.HoldState, "Holding" )
end

function AssaultRamTactic:BeginAttackState()
	self:TransportMove()
	Tactic.SetSubState(self, self.AttackingState, "Attacking")
end

function AssaultRamTactic:TransportMove()

	-- Check if we're busy
	if (self:IsInSubState() or self:CheckGatherMove()) then
		return
	end
	
	-- Check move delay
	if (g_iGMT < self.m_iMoveDelay + 3 and self:IsMoving()) then
		return
	end

	-- Try to unload troops
	local vSquadPos = self.squad_ai:GetPosition()
	local iDistance = distance_sqr(self.target, vSquadPos)	
	if (self:UnloadTroops(iDistance)) then
		self.m_iMoveDelay = g_iGMT
		return
	end
		
	-- Check distance
	if (self.squad_ai:WasRecentlyHurt()) then
		cpu_manager:DoMove(self.squad_ai, cpu_manager.start_pos, false, "RetreatMove")
		self.m_iMoveDelay = g_iGMT
		return
	elseif (iDistance > sqr(35)) then
		cpu_manager:DoMove(self.squad_ai, self.target, false, "TransportMove")
	elseif (iDistance > sqr(20) and not cpu_manager.terrain_analyzer:HasThreat(vSquadPos, 35)) then
		cpu_manager:DoMove(self.squad_ai, self.target, false, "TransportMove")
	else
		self.squad_ai:DoStop()
	end
	self.m_iMoveDelay = g_iGMT
end

function AssaultRamTactic:InitAbilities()

end

function AssaultRamTactic:DoAbilities()

	-- Call standard method
	ImperialFistsVehicleTactic.DoAbilities(self)
end


