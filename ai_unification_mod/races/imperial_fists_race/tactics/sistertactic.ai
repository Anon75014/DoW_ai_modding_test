class 'SisterTactic' (ImperialFistsInfantryTactic)

Sister = {}

function SisterTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Imperial Fists Sister Tactic")
end

function SisterTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function SisterTactic:IsDefender()
	return self:IsCommanderDefender()
end

function SisterTactic:IsAffectedByMorale()
	return true
end

function SisterTactic:Update()

	if self:IsComplete() then
		return
	end
   
	--state machine
	if not InfantryTactic.Update( self ) then
		return
	end

	--attach to squad
	self:TryAttachSquad( false, false, 1000, 200, nil )
end


