class 'IroncladTactic' (ImperialFistsVehicleTactic)

Ironclad = {}

function IroncladTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Imperial Fists Ironclad Tactic")
end

function IroncladTactic:InitAbilities()

	-- Init ability ID's
	if (Ironclad.smoke_id == nil) then
		Ironclad.smoke_id = cpu_manager.stats:GetAbilityID( "imperial_fists_smoke_launchers" )	
	end

	if (Ironclad.missile_id == nil) then
		Ironclad.missile_id = cpu_manager.stats:GetAbilityID( "imperial_fists_hk_missile_dread_1" )
	end

	if (Ironclad.hkmissile_id == nil) then
		Ironclad.hkmissile_id = cpu_manager.stats:GetAbilityID( "imperial_fists_hk_missile_dread_2" )
	end
end

function IroncladTactic:DoAbilities()

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(Ironclad.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(Ironclad.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(Ironclad.smoke_id, oUnit:GetSquad())
		end
	end

	if (self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(Ironclad.missile_id)) then
		Ability.DoAbilityTarget( self.squad_ai, Ironclad.missile_id, Ability.Filters.CloseVehicleEnemy, 1 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Ironclad.missile_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, Ironclad.missile_id, Ability.Filters.CloseSquadEnemy, 4 )
	end

	if (self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(Ironclad.hkmissile_id)) then
		Ability.DoAbilityTarget( self.squad_ai, Ironclad.hkmissile_id, Ability.Filters.CloseVehicleEnemy, 1 )
		Ability.DoAbilityTargetEntity( self.squad_ai, Ironclad.hkmissile_id, Ability.EntityFilters.CloseBaseEntityEnemy, 1 )
		Ability.DoAbilityTarget( self.squad_ai, Ironclad.hkmissile_id, Ability.Filters.CloseSquadEnemy, 4 )
	end

	-- Call standard method
	ImperialFistsVehicleTactic.DoAbilities(self)
end


