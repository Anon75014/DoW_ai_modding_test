class 'MavuikaTactic' (ImperialFistsInfantryTactic)

Mavuika = {}

function MavuikaTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Mavuika Tactic")
end

function MavuikaTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function MavuikaTactic:IsDefender()
	return self:IsCommanderDefender()
end

-- Commander is allowed to retreat even directly after a jump
function MavuikaTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function MavuikaTactic:InitAbilities()

	-- Init ability ID's
	if (Mavuika.lance == nil) then
		Mavuika.lance = cpu_manager.stats:GetAbilityID( "imperial_fists_mavuika_melta_lance" )
	end

	if (Mavuika.fire == nil) then
		Mavuika.fire = cpu_manager.stats:GetAbilityID( "imperial_fists_mavuika_everlasting_fire" )
	end
end

function MavuikaTactic:DoAbilities()

	-- Try to use Melta Lance on either enemy vehicles or buildings based on health while in combat
	if self.squad_ai:IsInCombat() then

		-- Try to use orbital bombardement
		if self.squad_ai:CanDoAbility(Mavuika.lance) then

			-- We are dying, lower requisites for attacks
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
				if Ability.DoAbilityPos(self.squad_ai, Mavuika.lance, Ability.Filters.CloseVehicleEnemy, 1)
					or Ability.DoAbilityPos(self.squad_ai, Mavuika.lance, Ability.EntityFilters.CloseBaseEntityEnemy, 2) then
					return
				end
			else
				if Ability.DoAbilityPos(self.squad_ai, Mavuika.lance, Ability.Filters.CloseVehicleEnemy, 2)
					or Ability.DoAbilityPos(self.squad_ai, Mavuika.lance, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
					return
				end
			end
		end
	end

	-- Try to use Everlasting Fire while in combat but with availabile health while in combat
	if self.squad_ai:IsInCombat() then

		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() > 0.4) then

			if (self.squad_ai:CanDoAbility(Mavuika.fire)) then
				self.squad_ai:DoSpecialAbility(Mavuika.fire)
			end	  
		end
	end
end

function MavuikaTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end

	-- Attach to melee in tier2+
	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end

	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end