class 'PoliceTactic' (ImperialFistsInfantryTactic)

Police = {}

function PoliceTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Police Tactic")

	-- Init execute delay time
	Police.NextExecuteCheck = 0
end

function PoliceTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function PoliceTactic:IsDefender()
	return self:IsCommanderDefender()
end

function PoliceTactic:InitAbilities()

	-- Init ability ID's
	if (Police.execute_id == nil or Police.NextExecuteCheck == nil) then
		Police.execute_id = cpu_manager.stats:GetAbilityID( "imperial_fists_execute_enemy_shotgun" )
		Police.NextExecuteCheck = g_iGMT
	end
end

function PoliceTactic:DoAbilities()

	-- TargetSelf: When attached to squad, executes one of his own soldiers to increase their fighting potential
	if (self.squad_ai:IsAttached() and self.squad_ai:IsAttacking() and self.squad_ai:CanDoAbility(Police.execute_id) and
		self.squad_ai:GetNumTroopers() > 6 and g_iGMT > Police.NextExecuteCheck) then
		
		-- Use execute ability
		self.squad_ai:DoSpecialAbility(Police.execute_id) 
		Police.NextExecuteCheck = g_iGMT + 20
	end
end

function PoliceTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad(false, false, 1000, 60, nil)
end
 