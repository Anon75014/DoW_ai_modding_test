class 'AlessioCortezTactic' (ImperialFistsInfantryTactic)

AlessioCortez = {}

function AlessioCortezTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Alessio Cortez Tactic")
end

function AlessioCortezTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function AlessioCortezTactic:IsDefender()
	return self:IsCommanderDefender()
end

-- Commander is allowed to retreat even directly after a jump
function AlessioCortezTactic:SetTarget( target, variant_type )

	self.variant_type = variant_type
	self.target = Vector3f(target)
	self.m_iMoveDelay = 0
	self.last_jump = 0
end

function AlessioCortezTactic:InitAbilities()

	-- Init ability ID's
	if (AlessioCortez.grenade == nil) then
		AlessioCortez.grenade = cpu_manager.stats:GetAbilityID( "imperial_fists_morales_grenades" )
	end

	if (AlessioCortez.strike == nil) then
		AlessioCortez.strike = cpu_manager.stats:GetAbilityID( "imperial_fists_morales_th_strike_passive" )
	end

	if (AlessioCortez.stealth == nil) then
		AlessioCortez.stealth = cpu_manager.stats:GetAbilityID( "imperial_fists_morales_stealth" )
	end
end

function AlessioCortezTactic:DoAbilities()

	-- Try to use grenades
	if self.squad_ai:CanDoAbility(AlessioCortez.grenade) then

		-- We are dying, lower requisites for attacks
		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
			Ability.DoAbilityTarget(self.squad_ai, AlessioCortez.grenade, Ability.Filters.CloseInfantryEnemy, 3)
			Ability.DoAbilityTarget(self.squad_ai, AlessioCortez.grenade, Ability.Filters.CloseMonsterEnemy, 1)
			Ability.DoAbilityTarget(self.squad_ai, AlessioCortez.grenade, Ability.Filters.CloseCommanderEnemy, 1)
		else
			Ability.DoAbilityTarget(self.squad_ai, AlessioCortez.grenade, Ability.Filters.CloseInfantryEnemy, 6)
			Ability.DoAbilityTarget(self.squad_ai, AlessioCortez.grenade, Ability.Filters.CloseMonsterEnemy, 2)
			Ability.DoAbilityTarget(self.squad_ai, AlessioCortez.grenade, Ability.Filters.CloseCommanderEnemy, 1)
		end
	end

	-- Try to use Thunderhawk Strike on enemies based on health while in combat
	if self.squad_ai:IsInCombat() then

		-- Try to use orbital bombardement
		if self.squad_ai:CanDoAbility(AlessioCortez.strike) then

			-- We are dying, lower requisites for attacks
			if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
				if Ability.DoAbilityPos(self.squad_ai, AlessioCortez.strike, Ability.Filters.CloseEnemy, 6)
					or Ability.DoAbilityPos(self.squad_ai, AlessioCortez.strike, Ability.EntityFilters.CloseBaseEntityEnemy, 2) then
					return
				end
			else
				if Ability.DoAbilityPos(self.squad_ai, AlessioCortez.strike, Ability.Filters.CloseEnemy, 12)
					or Ability.DoAbilityPos(self.squad_ai, AlessioCortez.strike, Ability.EntityFilters.CloseBaseEntityEnemy, 3) then
					return
				end
			end
		end
	end

	-- Try to use Incognito (Stealth) while in combat but with availabile health
	if self.squad_ai:IsInCombat() and self.squad_ai:IsAttacking() then

		if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() > 0.4) then

			if (self.squad_ai:CanDoAbility(AlessioCortez.stealth)) then
				self.squad_ai:DoSpecialAbility(AlessioCortez.stealth)
			end	  
		end
	end
end

function AlessioCortezTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end

	-- Attach to melee in tier2+
	if (self.squad_ai:GetMeleeStance() == SquadAI.MSTANCE_Assault) then
         
        	if (self.squad_ai:IsInCombat() or self.squad_ai:WasRecentlyHurt()) then
        
            		if (self:TryAttachSquad(false, true, 50, 150, self.m_fCommanderAttachHealth) == nil) then
                		self:TryAttachSquadMelee()
            		end
        	end
    	end

	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end