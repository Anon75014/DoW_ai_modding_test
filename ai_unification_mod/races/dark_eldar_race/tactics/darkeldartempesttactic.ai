class 'DarkEldarTempestTactic' (DarkEldarVehicleTactic)

DarkEldarTempest = {}

function DarkEldarTempestTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Dark Eldar Tempest Tactic")
end

function DarkEldarTempestTactic:InitAbilities()

	if (DarkEldarTempest.field_id == nil) then
		DarkEldarTempest.field_id = cpu_manager.stats:GetAbilityID( "dark_eldar_flickerfield_tempest" )	
	end
end

function DarkEldarTempestTactic:DoAbilities()

	-- We are dying, lower requisites for attacks
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		if (self.squad_ai:CanDoAbility(DarkEldarTempest.field_id)) then
			self.squad_ai:DoSpecialAbility(DarkEldarTempest.field_id)
		end
	end

	-- New code to unstuck units with pathing issues, that can jump.
	-- Call it with [true], only for multi-membered squads.
	self:SolveStuckCase(false)
end