class 'kKharnTactic' (kInfantryTactic)

kKharn = {}

function kKharnTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("k Kharn Tactic")
end

function kKharnTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function kKharnTactic:IsDefender()
	return self:IsCommanderDefender()
end

function kKharnTactic:InitAbilities()

	if (kKharn.strength_id == nil) then
		kKharn.strength_id = cpu_manager.stats:GetAbilityID( "khm_kharn_bfbg" )	
	end
	if (kKharn.battlecry == nil) then
		kKharn.battlecry = cpu_manager.stats:GetAbilityID( "khm_kharn_battlecry" )
	end

	if (kKharn.regeneration == nil) then
		kKharn.regeneration = cpu_manager.stats:GetAbilityID( "khm_hero_regeneration" )
	end
end

function kKharnTactic:DoAbilities()

	Ability.DoAbilityArea(self.squad_ai, kKharn.battlecry, Ability.Filters.CloseInCombat, 10, 1)
	Ability.DoAbility(self.squad_ai, kKharn.strength_id, Ability.Filters.IsInCombat )

	-- If we are dying, heal up.
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.4) then
		if self.squad_ai:CanDoAbility(kKharn.regeneration) then
			self.squad_ai:DoSpecialAbility(kKharn.regeneration)
		end
	end
end

function kKharnTactic:Update()

	if (self:IsComplete()) then
		return
	end

	if (not InfantryTactic.Update(self)) then
		return
	end

	if (not cpu_manager.assassinate) then
		if (cpu_manager:GetTierLevel() > 2) then
			if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
				return
			end
		end
		if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
			self:TryAttachSquadMelee()
		end
	end

	self:EmergencyRetreat()
end