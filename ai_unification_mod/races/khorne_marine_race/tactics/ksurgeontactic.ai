class 'kSurgeonTactic' (kInfantryTactic)

Surgeon = {}

function kSurgeonTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("kSurgeon Tactic")
end

function kSurgeonTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function kSurgeonTactic:IsDefender()
	return self:IsCommanderDefender()
end

function kSurgeonTactic:InitAbilities()

	if (Surgeon.regen_id == nil) then
		Surgeon.regen_id = cpu_manager.stats:GetAbilityID( "khm_hero_regeneration" )
	end
end

function kSurgeonTactic:DoAbilities()

	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.5) then
		Ability.DoAbility(self.squad_ai, Surgeon.regen_id, Ability.Filters.IsInCombat )
	end
end

function kSurgeonTactic:Update()

	if (self:IsComplete()) then
		return
	end

	if (not InfantryTactic.Update(self)) then
		return
	end

	if (cpu_manager:GetTierLevel() > 1) then
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end

	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end

	self:EmergencyRetreat()
end
