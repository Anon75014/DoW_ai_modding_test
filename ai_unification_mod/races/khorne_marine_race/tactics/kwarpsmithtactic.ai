class 'kWarpsmithTactic' (kInfantryTactic)

kWarpsmith = {}

function kWarpsmithTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Warpsmith Tactic")
end

function kWarpsmithTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function kWarpsmithTactic:IsDefender()
	return self:IsCommanderDefender()
end

function kWarpsmithTactic:InitAbilities()

	if (kWarpsmith.doomsday_id == nil) then
		kWarpsmith.doomsday_id = cpu_manager.stats:GetAbilityID( "khm_doomsday_reactor" )	
	end
end

function kWarpsmithTactic:DoAbilities()

	if (self.squad_ai:CanDoAbility(kWarpsmith.doomsday_id)) then
		local iRange = self.squad_ai:GetAbilityRange(kWarpsmith.doomsday_id)
		local oSquad = Ability.Filters.CloseVehicleEnemy(self.squad_ai:GetPosition(), iRange, 1)
		if (oSquad ~= nil and oSquad:IsAttacking()) then
			self.squad_ai:DoSpecialAbilitySquad(kWarpsmith.doomsday_id, oSquad:GetSquad())
		end
	end
end

function kWarpsmithTactic:Update()

	if self:IsComplete() then
		return
   	end

	if not InfantryTactic.Update( self ) then
		return
	end
	return true
end
