class 'kPossessedTactic' (kInfantryTactic)

kPossessed = {}

function kPossessedTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("kPossessed Tactic")
end

function kPossessedTactic:InitAbilities()

	if (kPossessed.rage_id == nil) then
		kPossessed.rage_id = cpu_manager.stats:GetAbilityID( "khm_furious_rage" )	
	end
end

function kPossessedTactic:DoAbilities()

	if (self.squad_ai:IsInCombat() and not self.squad_ai:IsCapturing() and not self.squad_ai:IsBroken()) then
		if (not self:IsMoving()) then
			if (self.squad_ai:CanDoAbility( kPossessed.rage_id )) then
				self.squad_ai:DoSpecialAbility( kPossessed.rage_id )
			end
		end		
	end
	kInfantryTactic.DoAbilities(self)
end
