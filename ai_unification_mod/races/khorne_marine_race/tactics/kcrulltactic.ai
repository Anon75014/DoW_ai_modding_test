class 'kCrullTactic' (kInfantryTactic)

kCrull = {}

function kCrullTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("k Crull Tactic")

	self.timedDirectSpawnAbility = Timer( kCrullTactic.DoDirectSpawnAbility, self, 5 )
end

function kCrullTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function kCrullTactic:IsDefender()
	return self:IsCommanderDefender()
end

function kCrullTactic:InitAbilities()

	if (kCrull.strength_id == nil) then
		kCrull.strength_id = cpu_manager.stats:GetAbilityID( "khm_daemon_strength" )	
	end

	if (kCrull.regen_id == nil) then
		kCrull.regen_id = cpu_manager.stats:GetAbilityID( "khm_hero_regeneration" )
	end
end

function kCrullTactic:DoAbilities()

	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.5) then
		Ability.DoAbility(self.squad_ai, kCrull.regen_id, Ability.Filters.IsInCombat )
	end

	Ability.DoAbility( self.squad_ai, kCrull.strength_id, Ability.Filters.IsInCombat )

	if (self.timedDirectSpawnAbility ~= nil) then
		self.timedDirectSpawnAbility:Call()
	else
		kCrullTactic.DoDirectSpawnAbility(self)
	end
end

function kCrullTactic:DoDirectSpawnAbility()

	if (self.squad_ai:CanDirectSpawn()) then 
		self.squad_ai:DoDirectSpawn()
	end
end

function kCrullTactic:Update()

	if (self:IsComplete()) then
		return
	end

	-- State machine
	if (not InfantryTactic.Update(self)) then
		return
	end

	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end

	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end

	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end