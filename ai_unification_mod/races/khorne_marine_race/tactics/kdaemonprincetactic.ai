class 'kDaemonPrinceTactic' (kInfantryTactic)

DaemonPrince = {}

function kDaemonPrinceTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Daemon Prince Tactic")
end

function kDaemonPrinceTactic:InitAbilities()

	if (DaemonPrince.roar_id == nil) then
		DaemonPrince.roar_id = cpu_manager.stats:GetAbilityID( "khm_fire_breath" )	
	end
end

function kDaemonPrinceTactic:DoAbilities()

	Ability.DoAbilityTarget(self.squad_ai, DaemonPrince.roar_id, Ability.Filters.CloseInfantryEnemy, 5)
	Ability.DoAbilityTarget(self.squad_ai, DaemonPrince.roar_id, Ability.Filters.CloseMonsterEnemy, 5)
end