class 'kDefilerTactic' (kVehicleTactic)

kDefiler = {}

function kDefilerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Defiler Tactic")
end

function kDefilerTactic:InitAbilities()

end

function kDefilerTactic:DoAbilities()

	if (self.squad_ai:CanPossess()) then
		if (self.squad_ai:IsInCombat() or cpu_manager.terrain_analyzer:HasThreat(self.squad_ai:GetPosition(), 35)) then
			self.squad_ai:DoPossess()
		end
	end
end