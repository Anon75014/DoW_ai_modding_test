class 'kSquadsTactic' (kInfantryTactic)

Squads = {}

function kSquadsTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("k Squads Tactic")

	Squads.NextExecuteCheck = 0
end

function kSquadsTactic:InitAbilities()

	if (Squads.sarcrificle_id == nil or Squads.NextExecuteCheck == nil) then
		Squads.sarcrificle_id = cpu_manager.stats:GetAbilityID( "khm_sarcrificle" )
		Squads.NextExecuteCheck = iGMT
	end

	if (Squads.rage_id == nil) then
		Squads.rage_id = cpu_manager.stats:GetAbilityID( "khm_furious_rage" )	
	end
end

function kSquadsTactic:DoAbilities()

	if (self.squad_ai:IsAttacking() and	self.squad_ai:CanDoAbility(Squads.sarcrificle_id) and
		self.squad_ai:GetNumTroopers() > 5 and g_iGMT > Squads.NextExecuteCheck) then
		self.squad_ai:DoSpecialAbility(Squads.sarcrificle_id) 
		Squads.NextExecuteCheck = g_iGMT + 20
	end

	if (self.squad_ai:IsInCombat() and not self.squad_ai:IsCapturing() and not self.squad_ai:IsBroken()) then
		if (not self:IsMoving()) then
			if (self.squad_ai:CanDoAbility( Squads.rage_id )) then
				self.squad_ai:DoSpecialAbility( Squads.rage_id )
			end
		end		
	end
	kInfantryTactic.DoAbilities(self)
end