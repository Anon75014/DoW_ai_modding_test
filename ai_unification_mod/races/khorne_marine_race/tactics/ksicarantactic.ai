class 'kSicaranTactic' (kVehicleTactic)

Sicaran = {}

function kSicaranTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Sicaran Tactic")
end

function kSicaranTactic:InitAbilities()

	if (Sicaran.possession_id == nil) then
		Sicaran.possession_id = cpu_manager.stats:GetAbilityID( "khm_daemon_possession_sicaran" )
	end

	if (Sicaran.smoke_id == nil) then
		Sicaran.smoke_id = cpu_manager.stats:GetAbilityID( "khm_smoke_launchers_sicaran" )	
	end
end

function kSicaranTactic:DoAbilities()

	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		if (self.squad_ai:CanDoAbility(Sicaran.possession_id)) then
			self.squad_ai:DoSpecialAbility(Sicaran.possession_id)
		end	  
	end

	-- Check if we can launch smoke
	if (self.squad_ai:CanDoAbility(Sicaran.smoke_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(Sicaran.smoke_id)
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 150) then
			self.squad_ai:DoSpecialAbilitySquad(Sicaran.smoke_id, oUnit:GetSquad())
		end
	end

	kVehicleTactic.DoAbilities(self)
end