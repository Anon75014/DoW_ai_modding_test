class 'kKnightRampagerTactic' (kVehicleTactic)

kKnightRampager = {}

function kKnightRampagerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Chaos Knight Rampager Tactic")
end

function kKnightRampagerTactic:AutoBuildAddOn( addonSlot )
	for e in self.squad_ai:GetEntities() do
		local buildChannelkKnightRampager = build_manager:GetBuildChannelFromID(e:GetID())
		if (buildChannelkKnightRampager ~= nil) then
			local addOnID = buildChannelkKnightRampager:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
			if (buildChannelkKnightRampager:IsBuilding() == 0 and buildChannelkKnightRampager:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then			
				buildChannelkKnightRampager:BuildAddOn(addOnID)
				return
			end
		end
	end
	return
end

function kKnightRampagerTactic:InitAbilities()

	if (kKnightRampager.ion_shield_id == nil) then
		kKnightRampager.ion_shield_id = cpu_manager.stats:GetAbilityID( "khm_knight_ion_shield" )
	end
end

function kKnightRampagerTactic:DoAbilities()

	if (self.squad_ai:WasRecentlyHurt() and not self.squad_ai:IsInStateMove() and not self.squad_ai:IsInStateAttackMove()) then
		if (self.squad_ai:CanDoAbility(kKnightRampager.ion_shield_id)) then
			self.squad_ai:DoSpecialAbility(kKnightRampager.ion_shield_id)
		end	  
	end
	kVehicleTactic.DoAbilities(self)
end

