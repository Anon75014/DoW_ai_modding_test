class 'kLotaraTactic' (kInfantryTactic)

kLotara = {}

function kLotaraTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Lotara Tactic")
end

function kLotaraTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function kLotaraTactic:IsDefender()
	return self:IsCommanderDefender()
end

function kLotaraTactic:InitAbilities()

	-- Init ability ID's
	if (kLotara.orbital_b == nil) then
		kLotara.orbital_b = cpu_manager.stats:GetAbilityID( "khm_lotara_orbital_bombardment_2" )
	end
end

function kLotaraTactic:DoAbilities()

	-- Try to use orbital bombardement
	Ability.DoAbilityPos(self.squad_ai, kLotara.orbital_b, Ability.Filters.CloseEnemy, 24)
	Ability.DoAbilityPos(self.squad_ai, kLotara.orbital_b, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
end

function kLotaraTactic:Update()

	if (self:IsComplete()) then
		return
	end

	-- Attach to melee in tier3+
	if (cpu_manager:GetTierLevel() > 2) then
		if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
			return
		end
	end

	if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then
		self:TryAttachSquadMelee()
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
end
