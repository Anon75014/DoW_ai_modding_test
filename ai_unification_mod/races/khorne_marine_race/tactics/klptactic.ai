class 'klpTactic' (BaseTactic)

klp = {}

function klpTactic:__init( base_ai ) super( base_ai )

	self:SetName("klp Tactic")
end

function klpTactic:InitAbilities()

	if (klp.iSoulshockID == nil) then
		klp.iSoulshockID = cpu_manager.stats:GetAbilityID( "khm_blood_pulse" )
	end
end

function klpTactic:DoAbilities()

	Ability.DoAbilityArea(self.base_ai, klp.iSoulshockID, Ability.Filters.CloseInfantryEnemy, 10, 1)
end
